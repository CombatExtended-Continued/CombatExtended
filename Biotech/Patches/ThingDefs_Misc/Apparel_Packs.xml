<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<!-- ========== Packs  ========== -->
	<Operation Class="PatchOperationAdd">
		<xpath>/Defs/ThingDef[
		defName="Apparel_PackControl" or
		defName="Apparel_PackBandwidth" or
		defName="Apparel_PackTox"
		]/apparel/bodyPartGroups</xpath>
		<value>
			<li>Shoulders</li>
		</value>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<xpath>/Defs/ThingDef[
		defName="Apparel_PackControl" or
		defName="Apparel_PackBandwidth" or
		defName="Apparel_PackTox"
		]/apparel/layers</xpath>
		<value>
			<li>Backpack</li>
		</value>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<xpath>
		/Defs/ThingDef[
			defName="Apparel_PackControl" or
			defName="Apparel_PackBandwidth" or
			defName="Apparel_PackTox"
		]/statBases
		</xpath>
		<value>
			<Bulk>10</Bulk>
			<WornBulk>2</WornBulk>
		</value>
	</Operation>

</Patch>
<?xml version="1.0" encoding="utf-8"?>
<Patch>

	<!-- ========== Add tribal grenadies ========== -->

	<Operation Class="PatchOperationAdd"><!-- Combat -->
		<xpath>Defs/FactionDef[defName="TribeRoughNeanderthal"]/pawnGroupMakers/li[1]/options</xpath>
		<value>
			<CE_Tribal_Grenadier>1</CE_Tribal_Grenadier>
			<CE_Tribal_Gunner>1</CE_Tribal_Gunner>
		</value>
	</Operation>


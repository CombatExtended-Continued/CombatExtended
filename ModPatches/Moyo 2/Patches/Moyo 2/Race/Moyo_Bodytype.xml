<?xml version="1.0" encoding="utf-8"?>
<Patch>

	<!--Arm Groups-->
	<Operation Class="PatchOperationAdd">
		<xpath>
			Defs/BodyDef[defName="Moyo2_MoyoBody"]//*[
			customLabel="left shoulder"
			]/groups
		</xpath>
		<value>
			<li>LeftShoulder</li>
		</value>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<xpath>
			Defs/BodyDef[defName="Moyo2_MoyoBody"]//*[
			customLabel="right shoulder"
			]/groups
		</xpath>
		<value>
			<li>RightShoulder</li>
		</value>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<xpath>
			Defs/BodyDef[defName="Moyo2_MoyoBody"]//*[
			customLabel="left arm"
			]/groups
		</xpath>
		<value>
			<li>LeftArm</li>
		</value>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<xpath>
			Defs/BodyDef[defName="Moyo2_MoyoBody"]//*[
			customLabel="right arm"
			]/groups
		</xpath>
		<value>
			<li>RightArm</li>
		</value>
	</Operation>

	<!--Natural Armor-->
	<Operation Class="PatchOperationAdd">
		<xpath>
			Defs/BodyDef[defName="Moyo2_MoyoBody"]//*[
			def="Torso" or
			def="Neck" or
			def="Head" or
			def="Nose" or
			def="Jaw" or
			def="Shoulder" or
			def="Ear" or
			def="Arm" or
			def="Hand" or
			def="Finger" or
			def="Waist" or
			def="Leg" or
			def="Foot" or
			def="Toe" or
			def="Moyo2_Tail"
			]/groups
		</xpath>
		<value>
			<li>CoveredByNaturalArmor</li>
		</value>
	</Operation>
	
</Patch>
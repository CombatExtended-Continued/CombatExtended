	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="Moyo2_Abyssteel"]/statBases/StuffPower_Armor_Sharp</xpath>
		<value>
			<StuffPower_Armor_Sharp>2.25</StuffPower_Armor_Sharp>

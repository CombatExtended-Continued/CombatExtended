										<scale>1.3</scale>
										<defaultData>
											<layer>80</layer>
										</defaultData>
										<dataEast>
											<layer>-5</layer>
											<offset>(0.35, 0, 0.2)</offset>
											<rotationOffset>30</rotationOffset>
										</dataEast>
										<dataWest>

						<li Class="CombatExtended.ShieldDefExtension">
							<shieldCoverage>
								<li>Hands</li>
								<li>Arms</li>
								<li>Shoulders</li>
								<li>Torso</li>
								<li>Neck</li>
							</shieldCoverage>
						</li>
					</value>
				</li>


					<cooldownTime>2</cooldownTime>
					<linkedBodyPartsGroup>AA_BladeAttackTool</linkedBodyPartsGroup>
					<alwaysTreatAsWeapon>true</alwaysTreatAsWeapon>
					<surpriseAttack>
						<extraMeleeDamages>
							<li>
								<def>Stun</def>
								<amount>20</amount>

<?xml version="1.0" encoding="utf-8"?>
<Patch>

	<!-- Shuttle -->

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/Vehicles.VehicleDef[defName="ColonialShuttle"]/components/li/reactors/li[@Class="Vehicles.Reactor_Explosive"]/damageDef</xpath>
		<value>
			<damageDef>Bomb</damageDef>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/Vehicles.VehicleDef[defName="ColonialShuttle"]/statBases/ArmorRating_Blunt</xpath>
		<value>
			<ArmorRating_Blunt>16</ArmorRating_Blunt>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/Vehicles.VehicleDef[defName="ColonialShuttle"]/statBases/ArmorRating_Sharp</xpath>
		<value>
			<ArmorRating_Sharp>8</ArmorRating_Sharp>
		</value>
	</Operation>
	
</Patch>
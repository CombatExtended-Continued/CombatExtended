<?xml version="1.0" encoding="utf-8"?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Biotech</li>
		</mods>

		<match Class="PatchOperationSequence">
			<operations>

				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="TSFApparel_KidKamon" or defName="TSFApparel_KidGi"]/statBases/StuffEffectMultiplierArmor</xpath>
					<value>
						<StuffEffectMultiplierArmor>2</StuffEffectMultiplierArmor>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="TSFApparel_KidKamon"]/statBases/Mass</xpath>
					<value>
						<Mass>0.8</Mass>
					</value>
				</li>

			</operations>
		</match>
		
	</Operation>

</Patch>
<?xml version="1.0" encoding="utf-8"?>
<Patch>

	<!-- Soul Size -->
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/HediffDef[defName="BS_SoulSize"]/stages/li/statFactors/CarryingCapacity</xpath>
		<value>
			<CarryWeight>1.5</CarryWeight>
		</value>
	</Operation>

	<!-- Angelic Form -->
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/HediffDef[defName="BS_TrueForm_Angelic"]/stages/li/statOffsets/ArmorRating_Sharp</xpath>
		<value>
        	<ArmorRating_Sharp>0.5</ArmorRating_Sharp>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/HediffDef[defName="BS_TrueForm_Angelic"]/stages/li/statOffsets/ArmorRating_Blunt</xpath>
		<value>
        	<ArmorRating_Blunt>1.25</ArmorRating_Blunt>
		</value>
	</Operation>

	<!-- Demonic Form -->
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/HediffDef[@Name="BS_TrueForm_HemoDemonic"]/comps/li[@Class="HediffCompProperties_VerbGiver"]/tools</xpath>
		<value>
			<tools>
				<li Class="CombatExtended.ToolCE">
					<label>talons</label>
					<capacities>
						<li>Cut</li>
					</capacities>
					<power>8</power>
					<cooldownTime>1.5</cooldownTime>
					<armorPenetrationSharp>2.75</armorPenetrationSharp>
					<armorPenetrationBlunt>3.4</armorPenetrationBlunt>
				</li>
			</tools>
		</value>
	</Operation>

	<!-- Goliath Form -->
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/HediffDef[defName="BS_TrueForm_Goliath"]/comps/li[@Class="HediffCompProperties_VerbGiver"]/tools</xpath>
		<value>
			<tools>
				<li Class="CombatExtended.ToolCE">
					<label>stone fist</label>
					<capacities>
						<li>Blunt</li>
					</capacities>
					<power>5</power>
					<cooldownTime>1.8</cooldownTime>
					<armorPenetrationBlunt>3</armorPenetrationBlunt>
				</li>
			</tools>
		</value>
	</Operation>
 
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/HediffDef[defName="BS_TrueForm_Goliath"]/stages/li/statOffsets/ArmorRating_Sharp</xpath>
		<value>
        	<ArmorRating_Sharp>0.5</ArmorRating_Sharp>
		</value>
	</Operation>

	<!-- Weerewolf Form -->
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/HediffDef[defName="BS_WerewolfForm"]/stages/li/statOffsets/ArmorRating_Sharp</xpath>
		<value>
        	<ArmorRating_Sharp>2</ArmorRating_Sharp>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/HediffDef[defName="BS_WerewolfForm"]/stages/li/statOffsets/ArmorRating_Blunt</xpath>
		<value>
        	<ArmorRating_Blunt>4</ArmorRating_Blunt>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/HediffDef[defName="BS_WerewolfForm"]/comps/li[@Class="HediffCompProperties_VerbGiver"]/tools</xpath>
		<value>
			<tools>
				<li Class="CombatExtended.ToolCE">
					<label>talons</label>
					<capacities>
						<li>Cut</li>
					</capacities>
					<power>6</power>
					<cooldownTime>1.5</cooldownTime>
					<armorPenetrationSharp>2</armorPenetrationSharp>
					<armorPenetrationBlunt>3</armorPenetrationBlunt>
				</li>
			</tools>
		</value>
	</Operation>

</Patch>
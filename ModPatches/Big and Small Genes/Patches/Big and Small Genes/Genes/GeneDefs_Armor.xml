<?xml version="1.0" encoding="utf-8"?>
<Patch>

	<!-- Tough Skin -->
	<Operation Class="PatchOperationAdd">
		<xpath>Defs/GeneDef[defName="BS_ToughSkin"]</xpath>
		<value>
			<customEffectDescriptions>
				<li>+0.5 mm natural sharp armor</li>
				<li>+1.0 mPA natural blunt armor</li>
			</customEffectDescriptions>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/GeneDef[defName="BS_ToughSkin"]/statOffsets/ArmorRating_Blunt</xpath>
		<value>
			<ArmorRating_Blunt>1</ArmorRating_Blunt>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/GeneDef[defName="BS_ToughSkin"]/statOffsets/ArmorRating_Sharp</xpath>
		<value>
			<ArmorRating_Sharp>0.5</ArmorRating_Sharp>
		</value>
	</Operation>

	<!-- Natural Armor -->
	<Operation Class="PatchOperationAdd">
		<xpath>Defs/GeneDef[defName="BS_NaturalArmor"]</xpath>
		<value>
			<customEffectDescriptions>
				<li>+2 mm natural sharp armor</li>
				<li>+4 mPA natural blunt armor</li>
			</customEffectDescriptions>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/GeneDef[defName="BS_NaturalArmor"]/statOffsets/ArmorRating_Blunt</xpath>
		<value>
			<ArmorRating_Blunt>4</ArmorRating_Blunt>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/GeneDef[defName="BS_NaturalArmor"]/statOffsets/ArmorRating_Sharp</xpath>
		<value>
			<ArmorRating_Sharp>2</ArmorRating_Sharp>
		</value>
	</Operation>

	<!-- Greater Natural Armor -->
	<Operation Class="PatchOperationAdd">
		<xpath>Defs/GeneDef[defName="BS_NaturalArmor_Great"]</xpath>
		<value>
			<customEffectDescriptions>
				<li>+3 mm natural sharp armor</li>
				<li>+9 mPA natural blunt armor</li>
			</customEffectDescriptions>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/GeneDef[defName="BS_NaturalArmor_Great"]/statOffsets/ArmorRating_Blunt</xpath>
		<value>
			<ArmorRating_Blunt>9</ArmorRating_Blunt>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/GeneDef[defName="BS_NaturalArmor_Great"]/statOffsets/ArmorRating_Sharp</xpath>
		<value>
			<ArmorRating_Sharp>3</ArmorRating_Sharp>
		</value>
	</Operation>

</Patch>
<Defs>

	<!-- === Tools === -->
	<ThingDef ParentName="BasePilumProjectile">
		<defName>Projectile_GiantThrown</defName>
		<label>giant javelin (thrown)</label>
		<graphicData>
			<texPath>Item/GiantJavelin_Projectile</texPath>

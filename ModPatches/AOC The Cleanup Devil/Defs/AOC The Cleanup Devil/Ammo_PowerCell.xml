	</ThingCategoryDef>

	<!-- ==================== AmmoSet ========================== -->

	<CombatExtended.AmmoSetDef>
		<defName>AmmoSet_AOCPowerCell</defName>
		<label>AOC POWER CELL</label>
		<ammoTypes>
			<Ammo_AOCPowerCell_HEAT>Bullet_AOCPowerCell_HEAT</Ammo_AOCPowerCell_HEAT>
			<Ammo_AOCPowerCell_Thermobaric>Bullet_AOCPowerCell_Thermobaric</Ammo_AOCPowerCell_Thermobaric>
			<Ammo_AOCPowerCell_EMP>Bullet_AOCPowerCell_EMP</Ammo_AOCPowerCell_EMP>
		</ammoTypes>
	</CombatExtended.AmmoSetDef>

	<!-- ==================== Ammo ========================== -->

	<ThingDef Class="CombatExtended.AmmoDef" Name="AOCPowerCellBase" ParentName="SpacerMediumAmmoBase" Abstract="True">
		<description>Power cells used as ammunition for the AOC Suvi Buster.</description>
		<statBases>
			<MaxHitPoints>100</MaxHitPoints>
		</statBases>
		<tradeTags>
			<li>CE_AutoEnableTrade</li>
			<li MayRequire="Ludeon.RimWorld.Biotech">CE_AutoEnableCrafting_FabricationBench</li>
		</tradeTags>
		<thingCategories>
			<li>AmmoAOCPowerCell</li>
		</thingCategories>
		<stackLimit>40</stackLimit>
		<cookOffFlashScale>40</cookOffFlashScale>
		<cookOffSound>MortarBomb_Explode</cookOffSound>
	</ThingDef>

	<ThingDef Class="CombatExtended.AmmoDef" ParentName="AOCPowerCellBase">
		<defName>Ammo_AOCPowerCell_HEAT</defName>
		<label>AOC PowerCell (HEAT)</label>
		<graphicData>
			<texPath>Things/Ammo/AOCPowerCell/HEAT</texPath>
			<graphicClass>Graphic_StackCount</graphicClass>
		</graphicData>
		<statBases>
			<Mass>0.5</Mass>
			<Bulk>0.5</Bulk>
		</statBases>
		<ammoClass>RocketHEAT</ammoClass>
		<detonateProjectile>Bullet_AOCPowerCell_HEAT</detonateProjectile>
	</ThingDef>

	<ThingDef Class="CombatExtended.AmmoDef" ParentName="AOCPowerCellBase">

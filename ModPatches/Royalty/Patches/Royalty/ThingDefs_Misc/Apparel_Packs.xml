<?xml version="1.0" encoding="utf-8"?>
<Patch>

	<!-- ========== Broadshield Pack ========== -->

	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName="Apparel_PackBroadshield"]/statBases</xpath>
		<value>
			<Bulk>8</Bulk>
			<WornBulk>3</WornBulk>
		</value>
	</Operation>

	<!-- ========== Jumppack ========== -->

	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName="Apparel_PackJump"]/statBases</xpath>
		<value>
			<Bulk>8</Bulk>
			<WornBulk>3</WornBulk>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="Apparel_PackJump"]/statBases/JumpRange</xpath>
		<value>
			<JumpRange>30</JumpRange>
		</value>
	</Operation>

</Patch>
<?xml version="1.0" encoding="utf-8"?>
<Patch>

	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/PawnKindDef[@Name="SpacerCommonerBase"]</xpath>
		<value>
			<li Class="CombatExtended.LoadoutPropertiesExtension">
				<primaryMagazineCount>
					<min>4</min>
					<max>6</max>
				</primaryMagazineCount>
				<sidearms>
					<li>
						<generateChance>0.3</generateChance>
						<sidearmMoney>
							<min>20</min>
							<max>140</max>
						</sidearmMoney>
						<weaponTags>
							<li>CE_Sidearm_Melee</li>
						</weaponTags>
					</li>
				</sidearms>
			</li>
		</value>
	</Operation>

	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/PawnKindDef[@Name="SpacerFighterBase" or
			@Name="SpacerRangerBase" or
			@Name="VanguardBase"]</xpath>
		<value>
			<li Class="CombatExtended.LoadoutPropertiesExtension">
				<primaryMagazineCount>
					<min>5</min>
					<max>8</max>
				</primaryMagazineCount>
				<sidearms>
					<li>
						<generateChance>0.5</generateChance>
						<sidearmMoney>
							<min>300</min>
							<max>500</max>
						</sidearmMoney>
						<weaponTags>
							<li>CE_Sidearm_Melee</li>
						</weaponTags>
					</li>
					<li>
						<generateChance>0.1</generateChance>
						<sidearmMoney>
							<min>10</min>
							<max>100</max>
						</sidearmMoney>
						<weaponTags>
							<li>GrenadeSmoke</li>
						</weaponTags>
						<magazineCount>
							<min>1</min>
							<max>2</max>
						</magazineCount>
					</li>
					<li>
						<generateChance>0.1</generateChance>
						<sidearmMoney>
							<min>80</min>
							<max>160</max>
						</sidearmMoney>
						<weaponTags>
							<li>CE_FlareLauncher</li>
						</weaponTags>
						<magazineCount>
							<min>1</min>
							<max>3</max>
						</magazineCount>
					</li>
				</sidearms>
			</li>
		</value>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<xpath>Defs/PawnKindDef[@Name="SpacerFighterBase" or @Name="VanguardBase"]</xpath>
		<value>
			<specificApparelRequirements>
				<li>
					<bodyPartGroup>Shoulders</bodyPartGroup>
					<apparelLayer>Backpack</apparelLayer>
					<stuff>Synthread</stuff>
					<color>(10, 10, 10)</color>
				</li>
			</specificApparelRequirements>
		</value>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<xpath>Defs/PawnKindDef[ @Name="SpacerRangerBase"]/specificApparelRequirements</xpath>
		<value>
			<li>
				<bodyPartGroup>Shoulders</bodyPartGroup>
				<apparelLayer>Backpack</apparelLayer>
				<stuff>Synthread</stuff>
				<color>(10, 10, 10)</color>
			</li>
		</value>
	</Operation>

</Patch>
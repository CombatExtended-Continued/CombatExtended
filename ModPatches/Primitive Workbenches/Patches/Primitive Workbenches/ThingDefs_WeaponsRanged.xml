<?xml version="1.0" encoding="utf-8"?>
<Patch>


<!-- === Boomerang === -->
	<!-- == Projectile == -->
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="VBY_BoomerangProjectile"]</xpath>
		<value>
			<ThingDef ParentName="BasePilumProjectile">
				<defName>VBY_BoomerangProjectile</defName>
				<label>boomerang</label>
				<graphicData>
					<texPath>Things/Projectile/HDM_Boomerang_Projectile</texPath>
					<graphicClass>Graphic_Single</graphicClass>
				</graphicData>
				<projectile Class="CombatExtended.ProjectilePropertiesCE">
					<damageDef>Blunt</damageDef>
					<damageAmountBase>16</damageAmountBase>
					<flyOverhead>false</flyOverhead>
					<speed>12</speed>
					<armorPenetrationBlunt>14.58</armorPenetrationBlunt>
					<armorPenetrationSharp>0</armorPenetrationSharp>
					<preExplosionSpawnChance>0.90</preExplosionSpawnChance>
					<preExplosionSpawnThingDef>VBY_Boomerang</preExplosionSpawnThingDef>
				</projectile>
			</ThingDef>
		</value>
	</Operation>
	
	
	<!-- == Weapon == -->
	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName="VBY_Boomerang"]</xpath>
		<value>
			<stackLimit>25</stackLimit>
		</value>
	</Operation>
	
	<Operation Class="PatchOperationAttributeSet">
		<xpath>Defs/ThingDef[defName="VBY_Boomerang"]</xpath>
		<attribute>Class</attribute>
		<value>CombatExtended.AmmoDef</value>
	</Operation>
	
	<Operation Class="PatchOperationAttributeSet">
		<xpath>Defs/ThingDef[defName="VBY_Boomerang"]/graphicData</xpath>
		<attribute>graphicClass</attribute>
		<value>Graphic_StackCount</value>
	</Operation>
	
	<Operation Class="CombatExtended.PatchOperationMakeGunCECompatible">
		<defName>VBY_Boomerang</defName>
		<statBases>
			<SightsEfficiency>0.6</SightsEfficiency>
			<Bulk>0.38</Bulk>
			<Mass>2</Mass>
			<RangedWeapon_Cooldown>1.50</RangedWeapon_Cooldown>
		</statBases>
		<Properties>
			<label>Throw boomerang</label>
			<verbClass>CombatExtended.Verb_ShootCEOneUse</verbClass>
			<hasStandardCommand>true</hasStandardCommand>
			<defaultProjectile>VBY_BoomerangProjectile</defaultProjectile>
			<warmupTime>1</warmupTime>
			<range>20</range>
			<soundCast>ThrowMolotovCocktail</soundCast>
			<ai_IsBuildingDestroyer>false</ai_IsBuildingDestroyer>
		</Properties>
		<FireModes>
			<aiAimMode>Snapshot</aiAimMode>
		</FireModes>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="VBY_Boomerang"]/tools</xpath>
		<value>
			<tools>
				<li Class="CombatExtended.ToolCE">
					<label>boomerang</label>
					<capacities>
						<li>Poke</li>
					</capacities>
					<power>8</power>
					<cooldownTime>2.5</cooldownTime>
					<armorPenetrationBlunt>0.250</armorPenetrationBlunt>
					<linkedBodyPartsGroup>Handle</linkedBodyPartsGroup>
				</li>
			</tools>
		</value>
	</Operation>



	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="BMT_Jellypot"]/statBases/ArmorRating_Sharp</xpath>
		<value>
			<ArmorRating_Sharp>4</ArmorRating_Sharp>

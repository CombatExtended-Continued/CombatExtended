	</Operation>

	<!-- EMP Shell -->
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/AbilityDef[defName="DetonateImplantedEMP"]/comps/li[@Class="LTS_Implants.CompProperties_DetonateImplantedBomb"]/item</xpath>
		<value>

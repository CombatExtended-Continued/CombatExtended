		</value>
	</Operation>

	<!-- Tox Shell -->
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/AbilityDef[defName="DetonateImplantedToxic"]/comps/li[@Class="LTS_Implants.CompProperties_DetonateImplantedBomb"]/item</xpath>
		<value>

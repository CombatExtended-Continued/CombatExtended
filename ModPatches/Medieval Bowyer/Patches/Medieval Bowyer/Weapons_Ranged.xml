	</Operation>

	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/ThingDef[defName="MB_Bow_CarvedLongBow"]</xpath>
		<value>
			<li Class="CombatExtended.GunDrawExtension">
				<DrawOffset>0.0,0.25</DrawOffset>
			</li>
		</value>
	</Operation>


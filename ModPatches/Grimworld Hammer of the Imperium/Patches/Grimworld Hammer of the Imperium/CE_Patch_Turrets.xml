<Patch>

	<!-- Adjust turret fill percent. -->

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[
			defName="GW_Building_HeavyBolter" or 
			defName="GW_Building_Autocannon" or 
			defName="GW_Building_TarantulaHeavyBolter"]/fillPercent</xpath>
		<value>
			<fillPercent>0.85</fillPercent>
		</value>
	</Operation>
	
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="GW_Building_Lascannon" or defName="GW_Building_TarantulaLascannon"]/fillPercent</xpath>

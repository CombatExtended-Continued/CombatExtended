<?xml version="1.0" encoding="utf-8"?>
<Patch>

	<Operation Class="PatchOperationFindMod">
        <mods>
            <li>Vanilla Factions Expanded - Empire</li>
        </mods>
		<match Class="PatchOperationSequence">
			<operations>
				
				<li Class="PatchOperationReplace">
					<xpath>Defs/RoyalTitlePermitDef[defName="VFEI_HEShellsDrop"]/label</xpath>
					<value>
						<label>Ballista bolts drop</label>
					</value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>Defs/RoyalTitlePermitDef[defName="VFEI_HEShellsDrop"]/description</xpath>
					<value>
						<description>Call for a drop of 20 balista bolts.</description>
					</value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>Defs/RoyalTitlePermitDef[defName="VFEI_HEShellsDrop"]/royalAid/itemsToDrop</xpath>
					<value>
						<itemsToDrop>
							<Pila>20</Pila>
						</itemsToDrop>
					</value>
				</li>
				
				<li Class="PatchOperationReplace">
					<xpath>Defs/RoyalTitlePermitDef[defName="VFEI_NobleFoodDrop"]/label</xpath>
					<value>
						<label>Ballista bolts drop</label>
					</value>
				</li>

			</operations>
		</match>
	</Operation>

</Patch>
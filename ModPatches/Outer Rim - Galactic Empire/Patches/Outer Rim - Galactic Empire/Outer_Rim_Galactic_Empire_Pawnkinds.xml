<?xml version="1.0" encoding="utf-8"?>
<Patch>

	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/PawnKindDef[@Name="OuterRim_ImperialArmyTroopBase"]</xpath>
		<value>
			<li Class="CombatExtended.LoadoutPropertiesExtension">
				<primaryMagazineCount>
					<min>3</min>
					<max>5</max>
				</primaryMagazineCount>
			</li>
		</value>
	</Operation>

	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/PawnKindDef[@Name="OuterRim_EMPStormBase"]</xpath>
		<value>
			<li Class="CombatExtended.LoadoutPropertiesExtension">
				<primaryMagazineCount>
					<min>4</min>
					<max>6</max>
				</primaryMagazineCount>
			</li>
		</value>
	</Operation>

	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/PawnKindDef[
		defName="OuterRim_Stormtrooper_PlayerNoHelmet" or
		defName="OuterRim_Stormtrooper_PlayerRecruit" or
		defName="OuterRim_ImperialArmy_PlayerStarter" or
		defName="OuterRim_ImperialArmy_PlayerRecruit"
		]</xpath>
		<value>
			<li Class="CombatExtended.LoadoutPropertiesExtension">
				<primaryMagazineCount>
					<min>3</min>
					<max>5</max>
				</primaryMagazineCount>
			</li>
		</value>
	</Operation>

</Patch>
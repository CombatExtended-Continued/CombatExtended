<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<!-- Tribal Pawn -->
	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/PawnKindDef[defName="RBSF_Fae"]</xpath>
		<value>
			<li Class="CombatExtended.LoadoutPropertiesExtension">
				<primaryMagazineCount>
					<min>20</min>
					<max>40</max>
				</primaryMagazineCount>
				<forcedSidearm>
					<sidearmMoney>
						<min>20</min>
						<max>100</max>
					</sidearmMoney>
					<weaponTags>
						<li>NeolithicMeleeBasic</li>
					</weaponTags>
				</forcedSidearm>
			</li>
		</value>
	</Operation>

	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/PawnKindDef[defName="RBSF_FaeThief" or defName="RBSF_FaeArcher"]</xpath>
		<value>
			<li Class="CombatExtended.LoadoutPropertiesExtension">
				<primaryMagazineCount>
					<min>30</min>
					<max>40</max>
				</primaryMagazineCount>
				<forcedSidearm>
					<sidearmMoney>
						<min>100</min>
						<max>200</max>
					</sidearmMoney>
					<weaponTags>
						<li>NeolithicMeleeBasic</li>
						<li>MedievalMeleeDecent</li>
					</weaponTags>
				</forcedSidearm>
			</li>
		</value>
	</Operation>

	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/PawnKindDef[defName="RBSF_Jack-of-All-Trades"]</xpath>
		<value>
			<li Class="CombatExtended.LoadoutPropertiesExtension">
				<primaryMagazineCount>
					<min>3</min>
					<max>10</max>
				</primaryMagazineCount>
				<forcedSidearm>
					<sidearmMoney>
						<min>100</min>
						<max>200</max>
					</sidearmMoney>
					<weaponTags>
						<li>MedievalMeleeDecent</li>
					</weaponTags>
				</forcedSidearm>
			</li>
		</value>
	</Operation>

	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/PawnKindDef[defName="RBSF_FaeGuardian"]</xpath>
		<value>
			<li Class="CombatExtended.LoadoutPropertiesExtension">
				<primaryMagazineCount>
					<min>30</min>
					<max>40</max>
				</primaryMagazineCount>
				<forcedSidearm>
					<sidearmMoney>
						<min>150</min>
						<max>300</max>
					</sidearmMoney>
					<weaponTags>
						<li>NeolithicMeleeAdvanced</li>
						<li>MedievalMeleeDecent</li>
					</weaponTags>
				</forcedSidearm>
			</li>
		</value>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<xpath>Defs/PawnKindDef[defName="RBSF_Fae" or defName="RBSF_FaeThief" or defName="RBSF_FaeArcher"]/apparelRequired</xpath>
		<value>
			<li>CE_Apparel_TribalBackpack</li>
		</value>
	</Operation>

</Patch>
<?xml version="1.0" encoding="utf-8"?>
<Patch>

	<!-- ========== Kid Romper ========== -->

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="Apparel_KidRomper"]/statBases/StuffEffectMultiplierArmor</xpath>
		<value>
			<StuffEffectMultiplierArmor>1.5</StuffEffectMultiplierArmor>
			<Bulk>1</Bulk>
		</value>
	</Operation>

	<!-- ========== Kid Shirt & Pants ========== -->

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="Apparel_KidShirt" or defName="Apparel_KidPants"]/statBases/StuffEffectMultiplierArmor</xpath>
		<value>
			<StuffEffectMultiplierArmor>0.8</StuffEffectMultiplierArmor>
			<Bulk>0.75</Bulk>
		</value>
	</Operation>

	<!-- ========== Kid Parka ========== -->

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="Apparel_KidParka"]/statBases/StuffEffectMultiplierArmor</xpath>
		<value>
			<StuffEffectMultiplierArmor>3</StuffEffectMultiplierArmor>
		</value>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName="Apparel_KidParka"]/statBases</xpath>
		<value>
			<Bulk>5</Bulk>
			<WornBulk>2.5</WornBulk>
		</value>
	</Operation>

	<!-- ========== Kid Tribalwear ========== -->

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="Apparel_KidTribal"]/statBases/StuffEffectMultiplierArmor</xpath>
		<value>
			<StuffEffectMultiplierArmor>2</StuffEffectMultiplierArmor>
		</value>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName="Apparel_KidTribal"]/statBases</xpath>
		<value>
			<Bulk>0.75</Bulk>
		</value>
	</Operation>

	<!-- ========== Kid Helmet ========== -->

	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName="Apparel_KidHelmet"]/statBases</xpath>
		<value>
			<Bulk>3</Bulk>
			<WornBulk>0.75</WornBulk>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="Apparel_KidHelmet"]/statBases/StuffEffectMultiplierArmor</xpath>
		<value>
			<StuffEffectMultiplierArmor>2.5</StuffEffectMultiplierArmor>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="Apparel_KidHelmet"]/stuffCategories/li[.="Metallic"]</xpath>
		<value>
			<li>Steeled</li>
		</value>
	</Operation>

</Patch>
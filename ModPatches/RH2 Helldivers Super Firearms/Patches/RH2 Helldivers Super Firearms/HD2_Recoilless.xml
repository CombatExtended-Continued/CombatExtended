<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<!--Melee Attacks for Guns-->
	<Operation Class="PatchOperationReplace">
		<xpath>
			Defs/ThingDef[
			defName="RNGun_GR8_RecoillessRifle"
			]/tools
		</xpath>
		<value>
			<tools>
				<li Class="CombatExtended.ToolCE">
					<label>barrel</label>
					<capacities>
						<li>Blunt</li>
					</capacities>
					<power>5</power>
					<cooldownTime>2.02</cooldownTime>
					<armorPenetrationBlunt>1.63</armorPenetrationBlunt>
					<linkedBodyPartsGroup>Barrel</linkedBodyPartsGroup>
				</li>
				<li Class="CombatExtended.ToolCE">
					<label>stock</label>
					<capacities>
						<li>Blunt</li>
					</capacities>
					<power>8</power>
					<cooldownTime>1.55</cooldownTime>
					<chanceFactor>1.5</chanceFactor>
					<armorPenetrationBlunt>2.755</armorPenetrationBlunt>
					<linkedBodyPartsGroup>Stock</linkedBodyPartsGroup>
				</li>
			</tools>
		</value>
	</Operation>

	<!-- ============ Recoilless Rifle... it's GR-8! ============ -->
	
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="RNGun_GR8_RecoillessRifle"]/description</xpath>
		<value>
			<description>The GR-8 Recoilless Rifle is a portable, shoulder-fired heavy weapon designed for anti-armor and fortification breaching. Widely believed to be a descendant of the venerable 'Carl Gustav', it fires powerful 84x246mmR shells. Whilst typically loaded with HEAT (High-Explosive Anti-Tank) ammunition for engaging hostile armor (especially Automaton Tanks), it can also be loaded with many other ammunition types, making it as versatile as it is devastating.</description>
		</value>
	</Operation>
	
	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName="RNGun_GR8_RecoillessRifle"]</xpath>
		<value>
			<equippedStatOffsets>
				<AimingAccuracy>0.10</AimingAccuracy>
				<AimingDelayFactor>-0.10</AimingDelayFactor>
			</equippedStatOffsets>
		</value>
	</Operation>
	
	<Operation Class="CombatExtended.PatchOperationMakeGunCECompatible">
		<defName>RNGun_GR8_RecoillessRifle</defName>
		<statBases>
			<WorkToMake>29000</WorkToMake>
			<SightsEfficiency>2.18</SightsEfficiency>
			<ShotSpread>0.2</ShotSpread>
			<SwayFactor>1.61</SwayFactor>
			<Bulk>10.50</Bulk>
			<Mass>6.6</Mass>
			<RangedWeapon_Cooldown>1.5</RangedWeapon_Cooldown>
		</statBases>
		<Properties>
			<verbClass>CombatExtended.Verb_ShootCE</verbClass>
			<hasStandardCommand>true</hasStandardCommand>
			<defaultProjectile>Bullet_84x246mmR_HEAT</defaultProjectile>
			<ai_AvoidFriendlyFireRadius>5</ai_AvoidFriendlyFireRadius>
			<warmupTime>2.05</warmupTime>
			<range>55</range>
			<soundCast>RNShot_GR8RecoillessRifleShot</soundCast>
			<soundCastTail>GunTail_Heavy</soundCastTail>
			<muzzleFlashScale>15</muzzleFlashScale>
			<recoilAmount>2.34</recoilAmount>
			<ai_IsBuildingDestroyer>true</ai_IsBuildingDestroyer>
			<targetParams>
				<canTargetLocations>true</canTargetLocations>
			</targetParams>
		</Properties>
		<AmmoUser>
			<magazineSize>1</magazineSize>
			<reloadTime>4</reloadTime>
			<ammoSet>AmmoSet_84x246mmR</ammoSet>
		</AmmoUser>
		<FireModes>
			<aiUseBurstMode>FALSE</aiUseBurstMode>
			<aiAimMode>AimedShot</aiAimMode>
		</FireModes>
	</Operation>

</Patch>

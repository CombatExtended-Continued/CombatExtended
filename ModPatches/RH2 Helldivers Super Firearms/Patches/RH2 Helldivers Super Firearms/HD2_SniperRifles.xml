<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<!--Melee Attacks for Guns-->
	<Operation Class="PatchOperationReplace">
		<xpath>
			Defs/ThingDef[
			defName="RNGun_R63Diligence_DMR" or
			defName="RNGun_R63CSDiligenceCounterSniper_DMR" or
			defName="RNGun_APW1_AMR"
			]/tools
		</xpath>
		<value>
			<tools>
				<li Class="CombatExtended.ToolCE">
					<label>barrel</label>
					<capacities>
						<li>Blunt</li>
					</capacities>
					<power>5</power>
					<cooldownTime>2.02</cooldownTime>
					<armorPenetrationBlunt>1.63</armorPenetrationBlunt>
					<linkedBodyPartsGroup>Barrel</linkedBodyPartsGroup>
				</li>
				<li Class="CombatExtended.ToolCE">
					<label>stock</label>
					<capacities>
						<li>Blunt</li>
					</capacities>
					<power>8</power>
					<cooldownTime>1.55</cooldownTime>
					<chanceFactor>1.5</chanceFactor>
					<armorPenetrationBlunt>2.755</armorPenetrationBlunt>
					<linkedBodyPartsGroup>Stock</linkedBodyPartsGroup>
				</li>
			</tools>
		</value>
	</Operation>

	<!-- ============ Standard ============ -->
	
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="RNGun_R63Diligence_DMR"]/description</xpath>
		<value>
			<description>The R-63 Diligence is a semi-automatic marksman rifle designed for mid-to-long-range engagements. Chambered in high-velocity 9x70mm, it delivers a balance of precision and firepower, making it effective against lightly armored targets. With a 25-round magazine and a fire rate of 350 RPM, it allows for sustained accurate fire. Its manageable recoil and reliable performance make it a favored choice among Helldivers for versatile combat scenarios.</description>
		</value>
	</Operation>
	
	<Operation Class="CombatExtended.PatchOperationMakeGunCECompatible">
		<defName>RNGun_R63Diligence_DMR</defName>
		<statBases>
			<Mass>4.3</Mass>
			<RangedWeapon_Cooldown>0.37</RangedWeapon_Cooldown>
			<SightsEfficiency>2.24</SightsEfficiency>
			<ShotSpread>0.01</ShotSpread>
			<SwayFactor>1.7</SwayFactor>
			<Bulk>12.25</Bulk>
			<WorkToMake>28000</WorkToMake>
		</statBases>
		<Properties>
			<verbClass>CombatExtended.Verb_ShootCE</verbClass>
			<hasStandardCommand>true</hasStandardCommand>
			<defaultProjectile>Bullet_9x70mmDiligent_FMJ</defaultProjectile>
			<warmupTime>1.3</warmupTime>
			<range>75</range>
			<soundCast>RNShot_R63CSDiligence</soundCast>
			<soundCastTail>GunTail_Medium</soundCastTail>
			<muzzleFlashScale>9</muzzleFlashScale>
			<recoilAmount>1.94</recoilAmount>
			<targetParams>
				<canTargetLocations>true</canTargetLocations>
			</targetParams>
		</Properties>
		<AmmoUser>
			<magazineSize>25</magazineSize>
			<reloadTime>3</reloadTime>
			<ammoSet>AmmoSet_9x70mmDiligent</ammoSet>
		</AmmoUser>
		<weaponTags>
			<li>Bipod_DMR</li>
		</weaponTags>
	</Operation>

	<!-- ============ CS ============ -->
	
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="RNGun_R63CSDiligenceCounterSniper_DMR"]/description</xpath>
		<value>
			<description>The R-63CS Diligence Counter Sniper is a precision marksman rifle designed to neutralize enemy snipers and high-value targets at long range. Whilst it utilizes the same 9x70mm round as the standard Diligence, the Counter Sniper is built for superior precision at longer ranges, trading handling and rate of fire for a greater chance at securing kills a single shot.</description>
		</value>
	</Operation>
	
	<Operation Class="CombatExtended.PatchOperationMakeGunCECompatible">
		<defName>RNGun_R63CSDiligenceCounterSniper_DMR</defName>
		<statBases>
			<Mass>4.4</Mass>

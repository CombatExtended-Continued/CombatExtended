<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<!--Melee Attacks for Guns-->
	<Operation Class="PatchOperationReplace">
		<xpath>
			Defs/ThingDef[
			defName="RNGun_SG225IEBreakerIncendiary_Shotgun" or
			defName="RNGun_SG8Punisher_Shotgun" or
			defName="RNGun_SG20Halt_Shotgun"
			]/tools
		</xpath>
		<value>
			<tools>
				<li Class="CombatExtended.ToolCE">
					<label>barrel</label>
					<capacities>
						<li>Blunt</li>
					</capacities>
					<power>5</power>
					<cooldownTime>2.02</cooldownTime>
					<armorPenetrationBlunt>1.63</armorPenetrationBlunt>
					<linkedBodyPartsGroup>Barrel</linkedBodyPartsGroup>
				</li>
				<li Class="CombatExtended.ToolCE">
					<label>stock</label>
					<capacities>
						<li>Blunt</li>
					</capacities>
					<power>8</power>
					<cooldownTime>1.55</cooldownTime>
					<chanceFactor>1.5</chanceFactor>
					<armorPenetrationBlunt>2.755</armorPenetrationBlunt>
					<linkedBodyPartsGroup>Stock</linkedBodyPartsGroup>
				</li>
			</tools>
		</value>
	</Operation>

	<!-- ============ 12g Auto ============ -->
	
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="RNGun_SG225IEBreakerIncendiary_Shotgun"]/description</xpath>
		<value>
			<description>The SG-225 Breaker is a fully-automatic shotgun specialized for close-quarters combat. This is the distinctive orange 'Incendiary' model, usually used to denote that it is kept loaded with incendiary ammunition - but it's perfectly capable of firing any other kind of 12-gauge round if need be. It may not have the punch of the Punisher or Halt, but it excels in sweeping away chaff thanks to its large magazine.</description>
		</value>
	</Operation>
	
	<Operation Class="CombatExtended.PatchOperationMakeGunCECompatible">
		<defName>RNGun_SG225IEBreakerIncendiary_Shotgun</defName>
		<statBases>
			<Mass>3.5</Mass>
			<RangedWeapon_Cooldown>0.39</RangedWeapon_Cooldown>
			<SightsEfficiency>1</SightsEfficiency>
			<ShotSpread>0.15</ShotSpread>
			<SwayFactor>1.26</SwayFactor>
			<Bulk>6.7</Bulk>
			<WorkToMake>22500</WorkToMake>
		</statBases>
		<Properties>
			<verbClass>CombatExtended.Verb_ShootCE</verbClass>
			<hasStandardCommand>true</hasStandardCommand>
			<defaultProjectile>Bullet_12Gauge_Buck</defaultProjectile>
			<warmupTime>0.6</warmupTime>
			<range>16</range>
			<burstShotCount>3</burstShotCount>
			<soundCast>RNShot_SG225IEBreakerIncendiary</soundCast>
			<soundCastTail>GunTail_Medium</soundCastTail>
			<muzzleFlashScale>9</muzzleFlashScale>
			<recoilAmount>2.92</recoilAmount>
			<ticksBetweenBurstShots>12</ticksBetweenBurstShots>
			<targetParams>
				<canTargetLocations>true</canTargetLocations>
			</targetParams>
		</Properties>
		<AmmoUser>
			<magazineSize>25</magazineSize>
			<reloadTime>2.5</reloadTime>
			<ammoSet>AmmoSet_12Gauge</ammoSet>
		</AmmoUser>
		<FireModes>
			<aimedBurstShotCount>2</aimedBurstShotCount>
			<aiUseBurstMode>FALSE</aiUseBurstMode>
			<aiAimMode>SuppressFire</aiAimMode>
		</FireModes>
	</Operation>

	<!-- ============ 10g Pump Basic ============ -->
	
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="RNGun_SG8Punisher_Shotgun"]/description</xpath>
		<value>
			<description>The SG-8 Punisher is a pump-action shotgun designed for devastating close-range encounters. Built with rugged reliability, it delivers powerful blasts capable of staggering medium-sized foes. Its precision and raw stopping power make it a staple for Helldivers in tight combat scenarios. The use of 10-gauge shells makes it a little more formidable than the average pump-action shotgun.</description>
		</value>
	</Operation>
	
	<Operation Class="CombatExtended.PatchOperationMakeGunCECompatible">
		<defName>RNGun_SG8Punisher_Shotgun</defName>
		<statBases>
			<Mass>3.1</Mass>
			<RangedWeapon_Cooldown>1.0</RangedWeapon_Cooldown>
			<SightsEfficiency>1</SightsEfficiency>
			<ShotSpread>0.14</ShotSpread>
			<SwayFactor>0.97</SwayFactor>
			<Bulk>6.6</Bulk>
			<WorkToMake>14500</WorkToMake>
		</statBases>
		<Properties>
			<verbClass>CombatExtended.Verb_ShootCE</verbClass>
			<hasStandardCommand>true</hasStandardCommand>
			<defaultProjectile>Bullet_10Gauge_Buck</defaultProjectile>
			<warmupTime>0.6</warmupTime>
			<range>16</range>
			<soundCast>RNShot_SG8Punisher</soundCast>
			<soundCastTail>GunTail_Medium</soundCastTail>
			<muzzleFlashScale>9</muzzleFlashScale>
			<recoilAmount>3.1</recoilAmount>
			<ticksBetweenBurstShots>7</ticksBetweenBurstShots>
			<targetParams>
				<canTargetLocations>true</canTargetLocations>
			</targetParams>
		</Properties>
		<AmmoUser>
			<magazineSize>16</magazineSize>
			<reloadOneAtATime>true</reloadOneAtATime>
			<reloadTime>0.8</reloadTime>
			<ammoSet>AmmoSet_10Gauge</ammoSet>
		</AmmoUser>
		<FireModes>
			<aiUseBurstMode>FALSE</aiUseBurstMode>
		</FireModes>
	</Operation>

	<!-- ============ 10g Pump Switch-Tube ============ -->
	
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="RNGun_SG20Halt_Shotgun"]/description</xpath>
		<value>
			<description>A distant descendant of the SG-8 Punisher, the SG-20 Halt is a similar dual-tube shotgun, though it is primarily used by those assigned to the Truth Enforcers; these users favour loading one tube with flechette rounds and the other with stun rounds, as it allows them to efficiently deal with most battlefield threats.</description>
		</value>
	</Operation>
	
	<Operation Class="CombatExtended.PatchOperationMakeGunCECompatible">
		<defName>RNGun_SG20Halt_Shotgun</defName>
		<statBases>
			<Mass>3.1</Mass>
			<RangedWeapon_Cooldown>1.0</RangedWeapon_Cooldown>
			<SightsEfficiency>1</SightsEfficiency>
			<ShotSpread>0.14</ShotSpread>
			<SwayFactor>0.97</SwayFactor>
			<Bulk>6.6</Bulk>
			<WorkToMake>14500</WorkToMake>
		</statBases>
		<Properties>
			<verbClass>CombatExtended.Verb_ShootCE</verbClass>
			<hasStandardCommand>true</hasStandardCommand>
			<defaultProjectile>Bullet_10Gauge_Buck</defaultProjectile>
			<warmupTime>0.6</warmupTime>
			<range>16</range>
			<soundCast>RNShot_SG20Halt</soundCast>
			<soundCastTail>GunTail_Medium</soundCastTail>
			<muzzleFlashScale>9</muzzleFlashScale>
			<recoilAmount>3.1</recoilAmount>
			<ticksBetweenBurstShots>7</ticksBetweenBurstShots>
			<targetParams>
				<canTargetLocations>true</canTargetLocations>
			</targetParams>
		</Properties>
		<AmmoUser>
			<magazineSize>8</magazineSize>
			<reloadTime>0.8</reloadTime>
			<reloadOneAtATime>true</reloadOneAtATime>
			<ammoSet>AmmoSet_10Gauge</ammoSet>
		</AmmoUser>
		<FireModes>
			<aiUseBurstMode>FALSE</aiUseBurstMode>
		</FireModes>
	</Operation>
	
	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName="RNGun_SG20Halt_Shotgun"]/comps</xpath>
		<value>
			<li Class="CombatExtended.CompProperties_UnderBarrel">
				<propsUnderBarrel>
					<magazineSize>8</magazineSize>
					<reloadOneAtATime>true</reloadOneAtATime>
					<reloadTime>0.8</reloadTime>
					<ammoSet>AmmoSet_10Gauge_HALT_ALT</ammoSet>
				</propsUnderBarrel>
				<verbPropsUnderBarrel>
					<recoilAmount>3.10</recoilAmount>
					<verbClass>CombatExtended.Verb_ShootCE</verbClass>
					<hasStandardCommand>true</hasStandardCommand>
					<defaultProjectile>Bullet_10Gauge_Buck</defaultProjectile>
					<warmupTime>0.6</warmupTime>
					<range>16</range>
					<soundCast>RNShot_SG20Halt</soundCast>
					<soundCastTail>GunTail_Medium</soundCastTail>
					<muzzleFlashScale>9</muzzleFlashScale>
				</verbPropsUnderBarrel>
				<propsFireModesUnderBarrel>
					<aiUseBurstMode>FALSE</aiUseBurstMode>
					<aiAimMode>Snapshot</aiAimMode>
					<aimedBurstShotCount>1</aimedBurstShotCount>
				</propsFireModesUnderBarrel>
			</li>
		</value>
	</Operation>

</Patch>

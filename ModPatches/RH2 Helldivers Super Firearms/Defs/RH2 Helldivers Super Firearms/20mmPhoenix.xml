<?xml version="1.0" encoding="utf-8"?>
<Defs>

	<ThingCategoryDef>
		<defName>Ammo_20mmPhoenix</defName>
		<label>20mm JAR Phoenix</label>
		<parent>AmmoHighCaliber</parent>
		<iconPath>UI/Icons/ThingCategories/CaliberHighCaliber</iconPath>
	</ThingCategoryDef>

	<!-- ==================== AmmoSet ========================== -->

	<CombatExtended.AmmoSetDef>
		<defName>AmmoSet_20mmPhoenix</defName>
		<label>20mm Phoenix</label>
		<ammoTypes>
			<Ammo_20mmPhoenix>Bullet_20mmPhoenix</Ammo_20mmPhoenix>
		</ammoTypes>
		<similarTo>AmmoSet_AntiMateriel</similarTo>
	</CombatExtended.AmmoSetDef>

	<!-- ==================== Ammo ========================== -->

	<ThingDef Class="CombatExtended.AmmoDef" Name="Ammo20mmPhoenixBase" ParentName="SpacerMediumAmmoBase" Abstract="True">
		<description>Fin-stabilized rocket-propelled tungsten carbide penetrator with explosive core, designed for special purpose weapons.</description>
		<statBases>
			<Mass>0.051</Mass>
			<Bulk>0.04</Bulk>
		</statBases>
		<tradeTags>
			<li>CE_AutoEnableTrade</li>
			<li>CE_AutoEnableCrafting</li>
		</tradeTags>
		<thingCategories>
			<li>Ammo_20mmPhoenix</li>
		</thingCategories>
		<stackLimit>200</stackLimit>
	</ThingDef>

	<ThingDef Class="CombatExtended.AmmoDef" ParentName="Ammo20mmPhoenixBase">
		<defName>Ammo_20mmPhoenix</defName>
		<label>20mm Phoenix</label>
		<graphicData>
			<texPath>Things/Ammo/Railgun/HighCaliber</texPath>
			<graphicClass>CombatExtended.Graphic_StackCountRanged</graphicClass>
		</graphicData>
		<ammoClass>MiniRocketFrag</ammoClass>
	</ThingDef>

	<!-- ================== Projectiles ================== -->

	<ThingDef Name="Base20mmPhoenixBullet" ParentName="BaseBulletCE" Abstract="true">
		<graphicData>
			<texPath>Things/Projectile/Bullet_Big</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<projectile Class="CombatExtended.ProjectilePropertiesCE">
			<damageDef>Bullet</damageDef>
			<speed>114</speed>
			<dropsCasings>false</dropsCasings>
		</projectile>
	</ThingDef>

	<ThingDef ParentName="Base20mmPhoenixBullet">
		<defName>Bullet_20mmPhoenix</defName>
		<label>20mm JAR Phoenix</label>
		<projectile Class="CombatExtended.ProjectilePropertiesCE">
			<damageDef>Bullet</damageDef>
			<damageAmountBase>21</damageAmountBase>
			<armorPenetrationSharp>35</armorPenetrationSharp>
			<armorPenetrationBlunt>908.38</armorPenetrationBlunt>
			<speed>50</speed>
		</projectile>
		<comps>
			<li Class="CombatExtended.CompProperties_ExplosiveCE">
				<damageAmountBase>31</damageAmountBase>
				<explosiveDamageType>Bomb</explosiveDamageType>
				<explosiveRadius>3.5</explosiveRadius>
				<explosionSound>MortarBomb_Explode</explosionSound>
				<applyDamageToExplosionCellsNeighbors>true</applyDamageToExplosionCellsNeighbors>
			</li>
			<li Class="CombatExtended.CompProperties_Fragments">
				<fragments>
					<Fragment_Small>30</Fragment_Small>
				</fragments>
			</li>
		</comps>
	</ThingDef>

	<!-- ==================== Recipes ========================== -->

	<RecipeDef ParentName="AmmoRecipeBase">
		<defName>MakeAmmo_20mmPhoenix</defName>
		<label>make 20mm Phoenix x50</label>
		<description>Craft 50 20mm Phoenix rounds.</description>
		<jobString>Making 20mm Phoenix rounds.</jobString>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Steel</li>
					</thingDefs>
				</filter>
				<count>2</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>FSX</li>
					</thingDefs>
				</filter>
				<count>10</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>ComponentIndustrial</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Steel</li>
				<li>Uranium</li>
				<li>ComponentIndustrial</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<Ammo_RS422RailgunSpike>50</Ammo_RS422RailgunSpike>
		</products>
		<workAmount>2000</workAmount>
	</RecipeDef>

</Defs>
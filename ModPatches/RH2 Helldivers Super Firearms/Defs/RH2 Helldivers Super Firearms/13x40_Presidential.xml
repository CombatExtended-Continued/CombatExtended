		<statBases>
			<Mass>0.035</Mass>
			<Bulk>0.03</Bulk>
		</statBases>
		<tradeTags>
			<li>CE_AutoEnableTrade</li>
			<li>CE_AutoEnableCrafting</li>
		</tradeTags>
		<thingCategories>
			<li>Ammo13x40Prez</li>
		</thingCategories>
	</ThingDef>


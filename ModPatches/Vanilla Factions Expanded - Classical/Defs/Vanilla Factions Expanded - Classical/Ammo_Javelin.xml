		<defName>MakeAmmo_VFEC_Javelin</defName>
		<label>make javelins x5</label>
		<description>Craft 5 javelins.</description>
		<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
		<workSkill>Crafting</workSkill>
		<recipeUsers>
			<li>ElectricSmithy</li>
			<li>FueledSmithy</li>
			<li>CraftingSpot</li>
		</recipeUsers>

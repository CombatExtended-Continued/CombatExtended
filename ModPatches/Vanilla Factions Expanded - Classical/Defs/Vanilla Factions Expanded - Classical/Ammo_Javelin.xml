			<damageAmountBase>29</damageAmountBase>
			<speed>30</speed>
			<armorPenetrationBlunt>48.12</armorPenetrationBlunt>
			<armorPenetrationSharp>10</armorPenetrationSharp>
			<secondaryDamage>
				<li>
					<def>VFEC_ApparelDamage</def>

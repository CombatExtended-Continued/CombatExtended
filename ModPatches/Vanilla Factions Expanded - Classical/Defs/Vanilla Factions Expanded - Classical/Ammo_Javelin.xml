		<unfinishedThingDef>UnfinishedWeapon</unfinishedThingDef>
		<workAmount>2700</workAmount>
		<jobString>Making javelins.</jobString>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>WoodLog</li>
					</thingDefs>
				</filter>

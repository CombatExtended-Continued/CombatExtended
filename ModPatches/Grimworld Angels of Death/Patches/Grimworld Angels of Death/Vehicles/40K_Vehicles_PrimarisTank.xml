	<Operation Class="PatchOperationReplace">
		<xpath>Defs/Vehicles.VehicleTurretDef[defName="GW_PrimarisTank_Lasgun"]/magazineCapacity</xpath>
		<value>
			<magazineCapacity>600</magazineCapacity>
		</value>

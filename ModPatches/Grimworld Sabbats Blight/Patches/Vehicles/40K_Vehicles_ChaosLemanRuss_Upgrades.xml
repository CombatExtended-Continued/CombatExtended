<?xml version="1.0" encoding="utf-8"?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Vehicle Framework</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>

				<!-- Battle Cannon Turret, Spikey -->
				<li Class="PatchOperationReplace">
					<xpath>Defs/Vehicles.VehicleTurretDef[defName="BP_LemanRuss_MainTurret_Spikes"]/projectile</xpath>
					<value>
						<projectile>Bullet_120mmCannonShell_HE</projectile>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/Vehicles.VehicleTurretDef[defName="BP_LemanRuss_MainTurret_Spikes"]/reloadTimer</xpath>
					<value>
						<reloadTimer>7.2</reloadTimer>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/Vehicles.VehicleTurretDef[defName="BP_LemanRuss_MainTurret_Spikes"]/warmUpTimer</xpath>
					<value>
						<warmUpTimer>2.8</warmUpTimer>
					</value>
				</li>

				<li Class="PatchOperationRemove">
					<xpath>Defs/Vehicles.VehicleTurretDef[defName="BP_LemanRuss_MainTurret_Spikes"]/chargePerAmmoCount</xpath>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/Vehicles.VehicleTurretDef[defName="BP_LemanRuss_MainTurret_Spikes"]/genericAmmo</xpath>
					<value>
						<genericAmmo>false</genericAmmo>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/Vehicles.VehicleTurretDef[defName="BP_LemanRuss_MainTurret_Spikes"]/maxRange</xpath>
					<value>
						<maxRange>86</maxRange>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/Vehicles.VehicleTurretDef[defName="BP_LemanRuss_MainTurret_Spikes"]/ammunition/thingDefs</xpath>
					<value>
						<thingDefs>
							<li>Ammo_120mmCannonShell_HEAT</li>
							<li>Ammo_120mmCannonShell_HE</li>
						</thingDefs>
					</value>
				</li>

				<li Class="PatchOperationAddModExtension">
					<xpath>Defs/Vehicles.VehicleTurretDef[defName="BP_LemanRuss_MainTurret_Spikes"]</xpath>
					<value>
						<li Class="Vehicles.CETurretDataDefModExtension">
							<ammoSet>AmmoSet_120mmCannonShell</ammoSet>
							<shotHeight>2</shotHeight>
							<speed>96</speed>
							<sway>1.0</sway>
							<spread>0.05</spread>
						</li>
					</value>
				</li>
				<!-- Battle Cannon Turret, Spikey + Barbwired-->
				<li Class="PatchOperationReplace">
					<xpath>Defs/Vehicles.VehicleTurretDef[defName="BP_LemanRuss_MainTurret_SpikesBarbed"]/projectile</xpath>
					<value>
						<projectile>Bullet_120mmCannonShell_HE</projectile>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/Vehicles.VehicleTurretDef[defName="BP_LemanRuss_MainTurret_SpikesBarbed"]/reloadTimer</xpath>
					<value>
						<reloadTimer>7.2</reloadTimer>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/Vehicles.VehicleTurretDef[defName="BP_LemanRuss_MainTurret_SpikesBarbed"]/warmUpTimer</xpath>
					<value>
						<warmUpTimer>2.8</warmUpTimer>
					</value>
				</li>

				<li Class="PatchOperationRemove">
					<xpath>Defs/Vehicles.VehicleTurretDef[defName="BP_LemanRuss_MainTurret_SpikesBarbed"]/chargePerAmmoCount</xpath>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/Vehicles.VehicleTurretDef[defName="BP_LemanRuss_MainTurret_SpikesBarbed"]/genericAmmo</xpath>
					<value>
						<genericAmmo>false</genericAmmo>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/Vehicles.VehicleTurretDef[defName="BP_LemanRuss_MainTurret_SpikesBarbed"]/maxRange</xpath>
					<value>
						<maxRange>86</maxRange>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/Vehicles.VehicleTurretDef[defName="BP_LemanRuss_MainTurret_SpikesBarbed"]/ammunition/thingDefs</xpath>
					<value>
						<thingDefs>
							<li>Ammo_120mmCannonShell_HEAT</li>
							<li>Ammo_120mmCannonShell_HE</li>
						</thingDefs>
					</value>
				</li>

				<li Class="PatchOperationAddModExtension">
					<xpath>Defs/Vehicles.VehicleTurretDef[defName="BP_LemanRuss_MainTurret_SpikesBarbed"]</xpath>
					<value>
						<li Class="Vehicles.CETurretDataDefModExtension">
							<ammoSet>AmmoSet_120mmCannonShell</ammoSet>
							<shotHeight>2</shotHeight>
							<speed>96</speed>
							<sway>1.0</sway>
							<spread>0.05</spread>
						</li>
					</value>
				</li>

			</operations>
		</match>
	</Operation>

</Patch>
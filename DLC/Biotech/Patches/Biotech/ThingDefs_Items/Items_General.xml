<?xml version="1.0" encoding="utf-8"?>
<Patch>

	<!-- Mech boss drops explosion resistance -->
	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[@Name="MechResourceBase"]</xpath>
		<value>
			<damageMultipliers>
				<li>
					<damageDef>Bomb</damageDef>
					<multiplier>0.25</multiplier>
				</li>
				<li>
					<damageDef>Thermobaric</damageDef>
					<multiplier>0.1</multiplier>
				</li>
				<li>
					<damageDef>Thump</damageDef>
					<multiplier>0.5</multiplier>
				</li>
			</damageMultipliers>
		</value>
	</Operation>

	<!-- Food -->
	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName="HemogenPack"]/statBases</xpath>
		<value>
			<Bulk>0.25</Bulk>
		</value>
	</Operation>

	<!-- Various -->
	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName="Xenogerm"]/statBases</xpath>
		<value>
			<Bulk>1</Bulk>
		</value>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[@Name="GeneSetHolderBase"]/statBases</xpath>
		<value>
			<Bulk>0.5</Bulk>
		</value>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName="ArchiteCapsule"]/statBases</xpath>
		<value>
			<Bulk>0.5</Bulk>
		</value>
	</Operation>

	<!-- Manufactured -->
	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName="Wastepack"]/statBases</xpath>
		<value>
			<Bulk>10</Bulk>
		</value>
	</Operation>

</Patch>
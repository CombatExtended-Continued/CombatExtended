<?xml version="1.0" encoding="utf-8"?>
<Patch>

	<!-- ========== Mechlord Suit ========== -->
	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName="Apparel_MechlordSuit"]/statBases</xpath>
		<value>
			<Bulk>90</Bulk>
			<WornBulk>13</WornBulk>
			<Mass>40</Mass>
			<MaxHitPoints>450</MaxHitPoints>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="Apparel_MechlordSuit"]/statBases/ArmorRating_Sharp</xpath>
		<value>
			<ArmorRating_Sharp>16</ArmorRating_Sharp>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="Apparel_MechlordSuit"]/statBases/ArmorRating_Blunt</xpath>
		<value>
			<ArmorRating_Blunt>34</ArmorRating_Blunt>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="Apparel_MechlordSuit"]/costList/Plasteel</xpath>
		<value>
			<Plasteel>150</Plasteel>
			<DevilstrandCloth>40</DevilstrandCloth>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="Apparel_MechlordSuit"]/equippedStatOffsets/ShootingAccuracyPawn</xpath>
		<value>
			<CarryWeight>65</CarryWeight>
			<CarryBulk>10</CarryBulk>
		</value>
	</Operation>

	<Operation Class="PatchOperationRemove">
		<xpath>Defs/ThingDef[defName="Apparel_MechlordSuit"]/equippedStatOffsets/MeleeHitChance</xpath>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName="Apparel_MechlordSuit"]</xpath>
		<value>
			<modExtensions Inherit="False">
				<li Class="CombatExtended.PartialArmorExt">
					<stats>
						<li>
							<ArmorRating_Sharp>0.60</ArmorRating_Sharp>
							<parts>
								<li>Neck</li>
								<li>Hand</li>
							</parts>
						</li>
						<li>
							<ArmorRating_Blunt>0.60</ArmorRating_Blunt>
							<parts>
								<li>Neck</li>
								<li>Hand</li>
							</parts>
						</li>
						<li>
							<ArmorRating_Sharp>0.90</ArmorRating_Sharp>
							<parts>
								<li>Leg</li>
							</parts>
						</li>
						<li>
							<ArmorRating_Blunt>0.90</ArmorRating_Blunt>
							<parts>
								<li>Leg</li>
							</parts>
						</li>
						<li>
							<ArmorRating_Sharp>0.80</ArmorRating_Sharp>
							<parts>
								<li>Arm</li>
							</parts>
						</li>
						<li>
							<ArmorRating_Blunt>0.80</ArmorRating_Blunt>
							<parts>
								<li>Arm</li>
							</parts>
						</li>
					</stats>
				</li>
			</modExtensions>
		</value>
	</Operation>

	<!-- ========== Bandolier ========== -->
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="Apparel_Bandolier"]/costStuffCount</xpath>
		<value>
			<costStuffCount>45</costStuffCount>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="Apparel_Bandolier"]/statBases/MaxHitPoints</xpath>
		<value>
			<MaxHitPoints>75</MaxHitPoints>
			<Bulk>3</Bulk>
			<WornBulk>1</WornBulk>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="Apparel_Bandolier"]/equippedStatOffsets</xpath>
		<value>
			<equippedStatOffsets>
				<CarryBulk>10</CarryBulk>
				<ReloadSpeed>0.1</ReloadSpeed>
			</equippedStatOffsets>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="Apparel_Bandolier"]/statBases/StuffEffectMultiplierArmor</xpath>
		<value>
			<StuffEffectMultiplierArmor>1</StuffEffectMultiplierArmor>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="Apparel_Bandolier"]/thingCategories</xpath>
		<value>
			<thingCategories>
				<li>Loadout</li>
			</thingCategories>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="Apparel_Bandolier"]/apparel/layers</xpath>
		<value>
			<layers>
				<li>Webbing</li>
			</layers>
		</value>
	</Operation>

	<!-- ========== Sash ========== -->
	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName="Apparel_Sash"]/statBases</xpath>
		<value>
			<Bulk>1</Bulk>
			<WornBulk>0.5</WornBulk>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="Apparel_Sash"]/statBases/StuffEffectMultiplierArmor</xpath>
		<value>
			<StuffEffectMultiplierArmor>1</StuffEffectMultiplierArmor>
		</value>
	</Operation>

</Patch>
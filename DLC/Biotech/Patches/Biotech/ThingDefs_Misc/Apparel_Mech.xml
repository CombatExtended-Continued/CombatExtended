<?xml version="1.0" encoding="utf-8"?>
<Patch>

	<!-- ========== Heavy Shield Unit ========== -->

	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName="Apparel_HeavyShield"]/statBases</xpath>
		<value>
			<Bulk>5</Bulk>
			<WornBulk>2.5</WornBulk>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="Apparel_HeavyShield"]/statBases/EnergyShieldRechargeRate</xpath>
		<value>
			<EnergyShieldRechargeRate>0.0195</EnergyShieldRechargeRate>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="Apparel_HeavyShield"]/statBases/EnergyShieldEnergyMax</xpath>
		<value>
			<EnergyShieldEnergyMax>6</EnergyShieldEnergyMax>
		</value>
	</Operation>

</Patch>
<?xml version="1.0" encoding="utf-8"?>
<Patch>

	<!-- Mastodon & Hippo Leather -->

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="Leather_Mastodon" or defName="Leather_Hippo"]/statBases/StuffPower_Armor_Sharp</xpath>
		<value>
			<StuffPower_Armor_Sharp>0.08</StuffPower_Armor_Sharp>
		</value>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName="Leather_Mastodon" or defName="Leather_Hippo"]/statBases</xpath>
		<value>
			<StuffPower_Armor_Blunt>0.064</StuffPower_Armor_Blunt>
		</value>
	</Operation>

	<!-- AlphaThrumbo Leather -->

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="Leather_AlphaThrumbo"]/statBases/StuffPower_Armor_Sharp</xpath>
		<value>
			<StuffPower_Armor_Sharp>0.77</StuffPower_Armor_Sharp>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="Leather_AlphaThrumbo"]/statBases/StuffPower_Armor_Blunt</xpath>
		<value>
			<StuffPower_Armor_Blunt>0.12</StuffPower_Armor_Blunt>
		</value>
	</Operation>

	<Operation Class="PatchOperationConditional">
		<xpath>Defs/ThingDef[defName="Leather_AlphaThrumbo"]/stuffProps/categories</xpath>
		<nomatch Class="PatchOperationAdd">
			<xpath>Defs/ThingDef[defName="Leather_AlphaThrumbo"]/stuffProps</xpath>
			<value>
				<categories>
					<li>SoftArmor</li>
				</categories>
			</value>
		</nomatch>
		<match Class="PatchOperationAdd">
			<xpath>Defs/ThingDef[defName="Leather_AlphaThrumbo"]/stuffProps/categories</xpath>
			<value>
				<li>SoftArmor</li>
			</value>
		</match>
	</Operation>

	<!-- Mink Leather -->

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="Leather_Mink"]/statBases/StuffPower_Armor_Sharp</xpath>
		<value>
			<StuffPower_Armor_Sharp>0.03</StuffPower_Armor_Sharp>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="Leather_Mink"]/statBases/StuffPower_Armor_Blunt</xpath>
		<value>
			<StuffPower_Armor_Blunt>0.024</StuffPower_Armor_Blunt>
		</value>
	</Operation>

	<!-- Armadillo Leather -->

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="Leather_Armadillo"]/statBases/StuffPower_Armor_Sharp</xpath>
		<value>
			<StuffPower_Armor_Sharp>0.09</StuffPower_Armor_Sharp>
		</value>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName="Leather_Armadillo"]/statBases</xpath>
		<value>
			<StuffPower_Armor_Blunt>0.064</StuffPower_Armor_Blunt>
		</value>
	</Operation>

</Patch>
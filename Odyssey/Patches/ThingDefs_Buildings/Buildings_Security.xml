<?xml version="1.0" encoding="utf-8"?>
<Patch>


	<!-- ========== Ancient Armored Turret ========== -->

	<Operation Class="PatchOperationRemove">
		<xpath>Defs/ThingDef[defName="Turret_AncientArmoredTurret"]/comps/li[@Class="CompProperties_Stunnable"]/affectedDamageDefs/li[.="Stun"]</xpath>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="Turret_AncientArmoredTurret"]/thingClass</xpath>
		<value>
			<thingClass>CombatExtended.Building_TurretGunCE</thingClass>
		</value>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName="Turret_AncientArmoredTurret"]/statBases</xpath>
		<value>
			<AimingAccuracy>0.25</AimingAccuracy>
			<ShootingAccuracyTurret>0.5</ShootingAccuracyTurret>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="Turret_AncientArmoredTurret"]/statBases/Mass</xpath>
		<value>
			<Mass>20</Mass>
			<Bulk>20</Bulk>
		</value>
	</Operation>

	<Operation Class="PatchOperationRemove">
		<xpath>Defs/ThingDef[defName="Turret_AncientArmoredTurret"]/comps/li[@Class="CompProperties_Explosive"]</xpath>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="Turret_AncientArmoredTurret"]/fillPercent</xpath>
		<value>
			<fillPercent>0.85</fillPercent>
			<damageMultipliers>
			<li>
				<damageDef>Bomb</damageDef>
				<multiplier>0.8</multiplier>
			</li>
			<li>
				<damageDef>Bomb_Secondary</damageDef>
				<multiplier>0.8</multiplier>
			</li>
			<li>
				<damageDef>Bullet</damageDef>
				<multiplier>0.8</multiplier>
			</li>
			</damageMultipliers>			
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="Turret_AncientArmoredTurret"]/building/turretBurstCooldownTime</xpath>
		<value>
			<turretBurstCooldownTime>1.0</turretBurstCooldownTime>
		</value>
	</Operation>

	<!-- ========== Ancient Armored Turret - Gun ========== -->

	<Operation Class="CombatExtended.PatchOperationMakeGunCECompatible">
		<defName>Gun_AncientArmoredTurret</defName>
		<statBases>
			<RangedWeapon_Cooldown>0.36</RangedWeapon_Cooldown>
			<SightsEfficiency>1</SightsEfficiency>
			<ShotSpread>0.07</ShotSpread>
			<SwayFactor>0.67</SwayFactor>
			<Mass>4</Mass>
		</statBases>
		<Properties>
			<recoilAmount>1.02</recoilAmount>
			<verbClass>CombatExtended.Verb_ShootCE</verbClass>
			<hasStandardCommand>true</hasStandardCommand>
			<defaultProjectile>Bullet_556x45mmNATO_FMJ_SB</defaultProjectile>
			<warmupTime>1.3</warmupTime>
			<range>48</range>
			<ticksBetweenBurstShots>5</ticksBetweenBurstShots>
			<burstShotCount>10</burstShotCount>
			<soundCast>GunShotA</soundCast>
			<soundCastTail>GunTail_Light</soundCastTail>
			<muzzleFlashScale>9</muzzleFlashScale>
			<recoilPattern>Mounted</recoilPattern>
		</Properties>
		<AmmoUser>
			<magazineSize>200</magazineSize>
			<reloadTime>7.8</reloadTime>
			<ammoSet>AmmoSet_556x45mmNATO_SB</ammoSet>
		</AmmoUser>
		<FireModes>
			<aiAimMode>AimedShot</aiAimMode>
			<noSnapshot>true</noSnapshot>
			<noSingleShot>true</noSingleShot>
		</FireModes>
	</Operation>

</Patch>
	<!-- Glitter Tech Fix -->

	<Operation Class="PatchOperationConditional">
    		<xpath>Defs/ThingDef[defName="Artillery_AutoMortar"]/statBases</xpath>
		<nomatch Class="PatchOperationAdd">

<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<JobDef>
		<defName>Setup</defName>
		<driverClass>CombatExtended.SetUpBipod</driverClass>
		<reportString>Setting up a bipod. Bipod</reportString>
		<casualInterruptible>true</casualInterruptible>
	</JobDef>
    <ThingDef ParentName="BaseMakeableGun">
    <defName>CECECE_Gun_FNFAL</defName>
    <label>FN FAL</label>
    <description>Ancient military assault rifle firing a full-power rifle cartridge.</description>
    <graphicData>
      <texPath>Things/Weapons/FNFAL</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_Rifle</soundInteract>
    <tickerType>Normal</tickerType>
    <statBases>
      <WorkToMake>28000</WorkToMake>
      <SightsEfficiency>1</SightsEfficiency>
      <ShotSpread>0.06</ShotSpread>
      <SwayFactor>1.52</SwayFactor>
      <Bulk>10.90</Bulk>
      <Mass>4.30</Mass>
      <RangedWeapon_Cooldown>0.37</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>55</Steel>
      <ComponentIndustrial>5</ComponentIndustrial>
      <WoodLog>10</WoodLog>
    </costList>
    <verbs>
      <li Class="CombatExtended.VerbPropertiesCE">
        <recoilAmount>2.07</recoilAmount>
        <verbClass>CombatExtended.Biped</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_762x51mmNATO_FMJ</defaultProjectile>
        <burstShotCount>6</burstShotCount>
        <ticksBetweenBurstShots>5</ticksBetweenBurstShots>
        <warmupTime>1.1</warmupTime>
        <range>48</range>
        <soundCast>Shot_AssaultRifle</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <comps>
      <li Class="CombatExtended.CompProperties_AmmoUser">
        <magazineSize>20</magazineSize>
        <reloadTime>4</reloadTime>
        <ammoSet>AmmoSet_762x51mmNATO</ammoSet>
      </li>
      <li Class="CombatExtended.CompProperties_FireModes">
        <aiUseBurstMode>TRUE</aiUseBurstMode>
        <aiAimMode>AimedShot</aiAimMode>
        <aimedBurstShotCount>3</aimedBurstShotCount>
        <!--Ignore this-->
          <setup>Setup</setup>
        <!--Additional shots in burst mode on bipod-->
        <bipodBurst>1</bipodBurst>
        <!--Additional shots in automatic mode on bipod-->
        <bipodAuto>2</bipodAuto>
        <!--Recoil values on bipod. It is the exact value which is set, so like if it's 5 normally it's this value when bipod is set up-->
        <Recoilchange>1</Recoilchange>
        <!--in ticks, 60 ticks is one second-->
        <BipodSetUpTime>200</BipodSetUpTime>
        <!-- Decrease in sway on the bipod. This value will be substracted from total accuracy, influenced by some other stuff too -->
        <SwayChange>0</SwayChange>
        <!-- Should just be included if you're making the gun include a bipod.-->
        <IsBipodGun>true</IsBipodGun>
      </li>
    
    </comps>
    <recipeMaker>
      <researchPrerequisite>PrecisionRifling</researchPrerequisite>
    </recipeMaker>
    <tools>
      <li Class="CombatExtended.ToolCE">
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>8</power>
        <cooldownTime>1.55</cooldownTime>
        <chanceFactor>1.5</chanceFactor>
        <armorPenetrationBlunt>2.755</armorPenetrationBlunt>
        <linkedBodyPartsGroup>Stock</linkedBodyPartsGroup>
      </li>
      <li Class="CombatExtended.ToolCE">
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>5</power>
        <cooldownTime>2.02</cooldownTime>
        <armorPenetrationBlunt>1.630</armorPenetrationBlunt>
        <linkedBodyPartsGroup>Barrel</linkedBodyPartsGroup>
      </li>
      <li Class="CombatExtended.ToolCE">
        <label>muzzle</label>
        <capacities>
          <li>Poke</li>
        </capacities>
        <power>8</power>
        <cooldownTime>1.55</cooldownTime>
        <armorPenetrationBlunt>2.755</armorPenetrationBlunt>
        <linkedBodyPartsGroup>Muzzle</linkedBodyPartsGroup>
      </li>
    </tools>
    <modExtensions>
      <li Class="CombatExtended.GunDrawExtension">
        <DrawSize>1.25,1.33</DrawSize>
        <DrawOffset>0.12,-0.10</DrawOffset>
      </li>
    </modExtensions>
  </ThingDef>
</Defs>
  <!-- ====== Muzzle ====== -->

  <CombatExtended.AttachmentDef Name="CE_Attachment_Muzzle_FlashHider" ParentName="CE_MuzzleIndustrialBase">
    <defName>CE_Attachment_Muzzle_FlashHider</defName>
    <label>Flash Hider</label>
    <description>An attachment fitted to the end of the barrel to conceal the muzzle flash, masking the shooter's position when firing in the dark.</description>
    <statMultipliers>
      <MuzzleFlash>0.5</MuzzleFlash>
    </statMultipliers>
  </CombatExtended.AttachmentDef>

  <CombatExtended.AttachmentDef Name="CE_Attachment_Muzzle_Suppressor" ParentName="CE_MuzzleIndustrialBase">
    <defName>CE_Attachment_Muzzle_Compensator</defName>
    <label>Compensator</label>
    <description>A attachment fitted to the end of the barrel that directs escaping gases to counter muzzle climb from recoil.</description>
    <statMultipliers>
      <SwayFactor>0.95</SwayFactor>
    </statMultipliers>
  </CombatExtended.AttachmentDef>

  <CombatExtended.AttachmentDef Name="CE_Attachment_Muzzle_Choke" ParentName="CE_MuzzleIndustrialBase">
    <defName>CE_Attachment_Muzzle_Choke</defName>
    <label>Choke</label>
    <description>A choke for shotguns, reducing the spread and producing a tighter shot pattern.</description>
    <statMultipliers>
      <SwayFactor>0.5</SwayFactor>
      <BurstShotCount>0.5</BurstShotCount>
      <Recoil>0.9</Recoil>
    </statMultipliers>
  </CombatExtended.AttachmentDef>


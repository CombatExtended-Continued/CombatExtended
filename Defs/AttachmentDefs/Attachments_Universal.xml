  <CombatExtended.AttachmentDef Name="CE_Attachment_Underbarrel_M320GrenadeLauncher" ParentName="CE_UnderbarrelIndustrialBase">
    <defName>CE_Attachment_Underbarrel_M320GrenadeLauncher</defName>
    <label>40mm Grenade Launcher</label>
    <description>An underslung grenade launcher capable of firing 40mm grenades, providing enhanced firepower.</description>
    <slotTags>
      <li>Bayonet</li> <!-- Can't be used with bayonets -->
    </slotTags>
    <statMultipliers>
      <Bulk>1.2</Bulk>
    </statMultipliers>
    <attachmentVerb>
      <verb Class="CombatExtended.VerbPropertiesCE">
        <verbClass>CombatExtended.Verb_ShootUseAttachment</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_40x46mmGrenade_HE</defaultProjectile>
        <ai_IsBuildingDestroyer>true</ai_IsBuildingDestroyer>
        <warmupTime>2.1</warmupTime>
        <range>44</range>
        <minRange>5</minRange>
        <soundCast>InfernoCannon_Fire</soundCast>
        <muzzleFlashScale>9</muzzleFlashScale>
        <ignorePartialLoSBlocker>true</ignorePartialLoSBlocker>
        <targetParams>
          <canTargetLocations>true</canTargetLocations>
        </targetParams>
      </verb>
      <ammo>
        <magazineSize>1</magazineSize>
        <reloadTime>4</reloadTime>
        <ammoSet>AmmoSet_40x46mmGrenade</ammoSet>
      </ammo>
    </attachmentVerb>
    <attachmentGraphicData>
      <texPath>Things/Attachments/Underbarrel/GrenadeLauncher</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </attachmentGraphicData>
    <outlineGraphicData>
      <texPath>Things/Attachments/Underbarrel/GrenadeLauncherO</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </outlineGraphicData>
  </CombatExtended.AttachmentDef>

  <CombatExtended.AttachmentDef Name="CE_Attachment_Underbarrel_M26Shotgun" ParentName="CE_UnderbarrelIndustrialBase">
    <defName>CE_Attachment_Underbarrel_M26Shotgun</defName>
    <label>M26 Shotgun</label>
    <description>A short-barreled, undermounted shotgun. While limited in range, it offers devestating firepower in close quarters.</description>
    <slotTags>
      <li>Bayonet</li> <!-- Can't be used with bayonets -->
    </slotTags>
    <statMultipliers>
      <Bulk>1.2</Bulk>
    </statMultipliers>
    <attachmentVerb>
      <verb Class="CombatExtended.VerbPropertiesCE">
        <verbClass>CombatExtended.Verb_ShootUseAttachment</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_12Gauge_Buck</defaultProjectile>
        <warmupTime>0.6</warmupTime>
        <range>20</range>
        <ticksBetweenBurstShots>15</ticksBetweenBurstShots>
        <soundCast>Shot_Shotgun</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
        <targetParams>
          <canTargetLocations>true</canTargetLocations>
        </targetParams>
      </verb>
      <ammo>
        <magazineSize>5</magazineSize>
        <reloadTime>4</reloadTime>
        <ammoSet>AmmoSet_12Gauge</ammoSet>
      </ammo>
    </attachmentVerb>
  </CombatExtended.AttachmentDef>


<?xml version="1.0" encoding="UTF-8"?>
<Patch>
<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Royal Arsenal: Specialty Weapons</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
			
				<li Class="PatchOperationAdd">
					<xpath>Defs</xpath>
					<value>

	<!-- Pilum-specific base (both ammo and weapon) -->
	<ThingDef ParentName="AmmoBase" Name="BaseThunderJavelins" Abstract="True">
		<equipmentType>Primary</equipmentType>
		<pathCost>10</pathCost>
		<graphicData>
			<onGroundRandomRotateAngle>35</onGroundRandomRotateAngle>
		</graphicData>
		<statBases>
			<MaxHitPoints>100</MaxHitPoints>
			<Flammability>0</Flammability>
			<DeteriorationRate>1</DeteriorationRate>
			<SellPriceFactor>1</SellPriceFactor>
		</statBases>
		<techLevel>Spacer</techLevel>
		<menuHidden>False</menuHidden>
		<destroyOnDrop>False</destroyOnDrop>
		<weaponTags />
		<thingCategories>
			<li>WeaponsRanged</li>
		</thingCategories>
		<comps>
			<li>
				<compClass>CompEquippable</compClass>
			</li>
		</comps>
	</ThingDef>

	<!-- ========================== SPECIFICS ============================== -->

	<ThingDef Class="CombatExtended.AmmoDef" ParentName="BaseThunderJavelins">
		<defName>RA_ThunderJavelins</defName>
		<label>thunder javelin</label>
		<description>An advanced javelin fitted with a high-explosive shaped charge that will detonate on impact. Specialized fins work with onboard sensors to track down targets, increasing accuracy significantly. While less utilized than other royal weapon designs, these types of javelins can be devastating at close range.</description>
        <graphicData>
			<texPath>ThirdParty/RoyalArsenal/ThunderJavelin</texPath>
			<graphicClass>Graphic_StackCount</graphicClass>
			<onGroundRandomRotateAngle>0</onGroundRandomRotateAngle>
		</graphicData>
		<soundInteract>Interact_BeatFire</soundInteract>
		<statBases>
			<MarketValue>50</MarketValue>
			<SightsEfficiency>2</SightsEfficiency>
			<ShotSpread>0.5</ShotSpread>
			<SwayFactor>1</SwayFactor>
			<Bulk>3.5</Bulk>
			<Mass>2.00</Mass>
			<RangedWeapon_Cooldown>1</RangedWeapon_Cooldown>
		</statBases>
		<equippedAngleOffset>30</equippedAngleOffset>
		<stackLimit>25</stackLimit>
		<weaponTags>
			<li>Ultratech</li>
		</weaponTags>
		<tradeability>All</tradeability>
		<verbs>
			<li Class="CombatExtended.VerbPropertiesCE">
				<verbClass>CombatExtended.Verb_ShootCEOneUse</verbClass>
				<hasStandardCommand>true</hasStandardCommand>
				<defaultProjectile>ThunderJavelin_Thrown</defaultProjectile>
				<warmupTime>0.8</warmupTime>
				<range>20</range>
			</li>
		</verbs>
		<tools>
			<li Class="CombatExtended.ToolCE">
				<label>shaft</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>7</power>
				<cooldownTime>1.35</cooldownTime>
				<armorPenetrationBlunt>2.25</armorPenetrationBlunt>
				<linkedBodyPartsGroup>Shaft</linkedBodyPartsGroup>
			</li>
		</tools>
		<ammoClass>Javelin</ammoClass>
	</ThingDef>
          </value>
</li>
			</operations>
		</match>
	</Operation>
</Patch>

        <li>Steel</li>
        <li>FSX</li>
        <li>ComponentIndustrial</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <Ammo_40x47mmGrenade_HE>100</Ammo_40x47mmGrenade_HE>
    </products>
    <workAmount>9600</workAmount>    

    <defName>MakeAmmo_10Gauge_ElectroSlug</defName>
    <label>make 10 gauge (EMP) shell x200</label>
    <description>Craft 200 10 gauge (EMP) shells.</description>
    <jobString>Making 10 gauge (EMP) shells.</jobString>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Steel</li>
          </thingDefs>
        </filter>

		<defName>MakeAmmo_MechShell_Demo</defName>
		<label>make Mech Shell (Demo) x5</label>
		<description>Craft 5 Mech Shells (Demo).</description>
		<jobString>Making Mech Shells (Demo).</jobString>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>FSX</li>
					</thingDefs>
				</filter>
				<count>3</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Steel</li>
					</thingDefs>
				</filter>
				<count>10</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>ComponentIndustrial</li>

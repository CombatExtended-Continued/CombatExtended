      <li>
        <filter>
          <thingDefs>
            <li>Chemfuel</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>		  
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Steel</li>
        <li>Uranium</li>
        <li>Chemfuel</li>		
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <Ammo_RifleMagnum_Sabot>80</Ammo_RifleMagnum_Sabot>
    </products>
    <workAmount>2400</workAmount>
  </RecipeDef>

</Defs>

  <RecipeDef ParentName="AdvancedAmmoRecipeBase">
    <defName>MakeAmmo_RifleMagnum_Sabot</defName>
    <label>make magnum rifle (Sabot) cartridge x80</label>
    <description>Craft 80 magnum rifle (Sabot) cartridges.</description>
    <jobString>Making magnum rifle (Sabot) cartridges.</jobString>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Steel</li>
          </thingDefs>
        </filter>
        <count>7</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Uranium</li>
          </thingDefs>
        </filter>

      </li>
      <li>
        <filter>
          <thingDefs>
            <li>FSX</li>
          </thingDefs>
        </filter>
        <count>2</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Steel</li>
        <li>FSX</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <Ammo_RifleMagnum_HE>80</Ammo_RifleMagnum_HE>

	<!-- ==================== AmmoSet ========================== -->

  <CombatExtended.AmmoSetDef>
    <defName>AmmoSet_LauncherGrenade</defName>
    <label>launcher grenade</label>
    <ammoTypes>
      <Ammo_LauncherGrenade_HE>Bullet_40x53mmGrenade_HE</Ammo_LauncherGrenade_HE>

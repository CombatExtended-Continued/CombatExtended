<?xml version="1.0" encoding="UTF-8"?>
<Defs>
	
	<ThingDef ParentName="BaseFragment">
		<defName>Fragment_Large</defName>
		<label>large fragments</label>
		<graphicData>
			<texPath>Things/Projectile/Fragments/Fragment_Large</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<projectile Class="CombatExtended.ProjectilePropertiesCE">
			<damageDef>Fragment</damageDef>
			<damageAmountBase>21</damageAmountBase>
			<speed>60</speed>
			<armorPenetrationSharp>4.5</armorPenetrationSharp>
			<armorPenetrationBlunt>62.5</armorPenetrationBlunt>
			<gravityFactor>5</gravityFactor>
		</projectile>
	</ThingDef>

	<ThingDef ParentName="BaseFragment">
		<defName>Fragment_Medium</defName>
		<label>medium fragments</label>

<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <ThingCategoryDef>
    <defName>Ammo90mmRecoilless</defName>
    <label>90mm recoilless rockets</label>
    <parent>AmmoRockets</parent>
    <iconPath>UI/Icons/ThingCategories/CaliberRocket</iconPath>
  </ThingCategoryDef>

  <!-- ==================== AmmoSet ========================== -->

  <CombatExtended.AmmoSetDef>
    <defName>AmmoSet_90mmRecoilless</defName>
    <label>90mm Recoilless Rockets</label>
    <ammoTypes>
      <Ammo_90mmRCR_HEAT>Bullet_90mmRCR_HEAT</Ammo_90mmRCR_HEAT>
      <Ammo_90mmRCR_CAN>Bullet_90mmRCR_CAN</Ammo_90mmRCR_CAN>
    </ammoTypes>
  </CombatExtended.AmmoSetDef>

  <!-- ==================== Ammo ==================== -->

  <ThingDef Class="CombatExtended.AmmoDef" Name="Base90mmRecoillessAmmo" ParentName="AmmoBase" Abstract="True">
    <description>Rocket-propelled ammunition desinged for use with the M67 recoilless rifle</description>
    <statBases>
      <MaxHitPoints>150</MaxHitPoints>
    </statBases>
    <tradeTags>
      <li>CE_AutoEnableTrade</li>
      <li>CE_AutoEnableCrafting_TableMachining</li>
    </tradeTags>
    <thingCategories>
      <li>Ammo90mmRecoilless</li>
    </thingCategories>
    <stackLimit>25</stackLimit>
    <cookOffFlashScale>40</cookOffFlashScale>
    <cookOffSound>MortarBomb_Explode</cookOffSound>
  </ThingDef>

  <ThingDef Class="CombatExtended.AmmoDef" ParentName="Base90mmRecoillessAmmo">
    <defName>Ammo_90mmRCR_HEAT</defName>
    <label>90mm recoilless rifle round (HEAT)</label>
    <graphicData>
      <texPath>Things/Ammo/Rocket/90mmHEAT</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>55.86</MarketValue>
      <Mass>4.196</Mass>
      <Bulk>13.63</Bulk>
    </statBases>
    <ammoClass>RocketHEAT</ammoClass>
    <detonateProjectile>Bullet_90mmRCR_HEAT</detonateProjectile>
  </ThingDef>

  <ThingDef Class="CombatExtended.AmmoDef" ParentName="Base90mmRecoillessAmmo">
    <defName>Ammo_90mmRCR_CAN</defName>
    <label>90mm recoilless rifle round (CAN)</label>
    <graphicData>
      <texPath>Things/Ammo/Rocket/90mmCanister</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>25.7</MarketValue>
      <Mass>3.08</Mass>
      <Bulk>9.3</Bulk>
    </statBases>
    <ammoClass>Grapeshot</ammoClass>
    <detonateProjectile>Bullet_90mmRCR_CAN</detonateProjectile>
  </ThingDef>

  <!-- ================== Projectiles ================== -->

  <ThingDef Name="Base90mmRecoillessBullet" ParentName="BaseBullet" Abstract="true">
    <graphicData>
      <shaderType>TransparentPostLight</shaderType>
    </graphicData>
    <projectile Class="CombatExtended.ProjectilePropertiesCE">
      <speed>43</speed>
      <soundAmbient>RocketPropelledLoop_Small</soundAmbient>
    </projectile>
  </ThingDef>

  <ThingDef ParentName="Base90mmRecoillessBullet">
    <defName>Bullet_90mmRCR_HEAT</defName>
    <label>90mm recoilless rocket (HEAT)</label>
    <graphicData>
      <texPath>Things/Projectile/RPG/HEAT</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile Class="CombatExtended.ProjectilePropertiesCE">
      <damageDef>Bullet</damageDef>
      <damageAmountBase>239</damageAmountBase>
      <armorPenetrationSharp>350</armorPenetrationSharp>
      <armorPenetrationBlunt>31.885</armorPenetrationBlunt>
    </projectile>
    <comps>
      <li Class="CombatExtended.CompProperties_ExplosiveCE">
        <damageAmountBase>106</damageAmountBase>
        <explosiveDamageType>Bomb</explosiveDamageType>
        <explosiveRadius>1</explosiveRadius>
        <explosionSound>MortarBomb_Explode</explosionSound>
        <applyDamageToExplosionCellsNeighbors>true</applyDamageToExplosionCellsNeighbors>
      </li>
      <li Class="CombatExtended.CompProperties_Fragments">
        <fragments>
          <Fragment_Large>8</Fragment_Large>
          <Fragment_Small>20</Fragment_Small>
        </fragments>
      </li>
    </comps>
  </ThingDef>

  <ThingDef ParentName="BaseBullet">
    <defName>Bullet_90mmRCR_CAN</defName>
    <label>Flechette</label>
    <graphicData>
      <texPath>Things/Projectile/Shotgun_Pellet</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile Class="CombatExtended.ProjectilePropertiesCE">
      <speed>77</speed>
      <damageAmountBase>27</damageAmountBase>
      <pelletCount>120</pelletCount>       <!-- Originally 2400 flechettes are present, changed to 120 buffed projectile -->
      <armorPenetrationSharp>5</armorPenetrationSharp>
      <armorPenetrationBlunt>14.52</armorPenetrationBlunt>
      <spreadMult>35.6</spreadMult>       <!-- x4 the normal spread -->
    </projectile>
  </ThingDef>

  <!-- ==================== Recipes ========================== -->

  <RecipeDef ParentName="LauncherAmmoRecipeBase">
    <defName>MakeAmmo_90mmRCR_HEAT</defName>
    <label>make 90mm recoilless HEAT rockets x5</label>
    <description>Craft 5 90mm recoilless HEAT rockets.</description>
    <jobString>Making 90mm recoilless HEAT rockets.</jobString>
    <workAmount>9200</workAmount>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Steel</li>
          </thingDefs>
        </filter>
        <count>44</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>FSX</li>
          </thingDefs>
        </filter>
        <count>6</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>ComponentIndustrial</li>
          </thingDefs>
        </filter>
        <count>4</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Steel</li>
        <li>FSX</li>
        <li>ComponentIndustrial</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <Ammo_90mmRCR_HEAT>5</Ammo_90mmRCR_HEAT>
    </products>
  </RecipeDef>

  <RecipeDef ParentName="LauncherAmmoRecipeBase">
    <defName>MakeAmmo_90mmRCR_CAN</defName>
    <label>Make 90mm recoilless canister shells x5</label>
    <description>Craft 90mm recoilless canister shells.</description>
    <jobString>Making 90mm recoilless canister shells.</jobString>
    <workAmount>7400</workAmount>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Steel</li>
          </thingDefs>
        </filter>
        <count>32</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>ComponentIndustrial</li>
          </thingDefs>
        </filter>
        <count>2</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Steel</li>
        <li>ComponentIndustrial</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <Ammo_90mmRCR_CAN>5</Ammo_90mmRCR_CAN>
    </products>
  </RecipeDef>

</Defs>

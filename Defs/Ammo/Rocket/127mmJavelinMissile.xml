		<label>make Javelin launch tube assembly x5</label>
		<description>Craft 5 Javelin launch tube assemblies.</description>
		<jobString>Making Javelin launch tube assemblies.</jobString>
		<researchPrerequisite>CE_AdvancedLaunchers</researchPrerequisite>
		<workAmount>61000</workAmount>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Steel</li>
					</thingDefs>
				</filter>
				<count>162</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>FSX</li>
					</thingDefs>
				</filter>
				<count>91</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>ComponentIndustrial</li>
					</thingDefs>
				</filter>
				<count>14</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Steel</li>
				<li>FSX</li>
				<li>ComponentIndustrial</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<Ammo_127mmJavelinMissile>5</Ammo_127mmJavelinMissile>
		</products>
	</RecipeDef>


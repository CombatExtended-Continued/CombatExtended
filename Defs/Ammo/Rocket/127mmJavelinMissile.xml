<?xml version="1.0" encoding="utf-8"?>
<Defs>

	<ThingCategoryDef>
		<defName>Ammo127mmJavelinMissile</defName>
		<label>Javelin Missile</label>
		<parent>AmmoRockets</parent>
		<iconPath>UI/Icons/ThingCategories/CaliberRocket</iconPath>
	</ThingCategoryDef>

	<!-- ==================== AmmoSet ========================== -->

	<CombatExtended.AmmoSetDef>
		<defName>AmmoSet_127mmJavelinMissile</defName>
		<label>Javelin Missile</label>
		<ammoTypes>
			<Ammo_127mmJavelinMissile>Bullet_127mmJavelinMissile</Ammo_127mmJavelinMissile>
		</ammoTypes>
	</CombatExtended.AmmoSetDef>
	
	<!-- ==================== Ammo ========================== -->

	<ThingDef Class="CombatExtended.AmmoDef" ParentName="MediumAmmoBase" >
		<defName>Ammo_127mmJavelinMissile</defName>
		<label>Javelin launch tube assembly</label>
		<description>A guided 127mm anti-tank missile, designed to be mounted onto a compatible command launch unit and capable of defeating even the heaviest armor. The tube is disposed of after use.</description>
		<graphicData>
			<texPath>Things/Ammo/Missile/Javelin</texPath>
			<graphicClass>Graphic_StackCount</graphicClass>
		</graphicData>
		<statBases>
			<MaxHitPoints>150</MaxHitPoints>
			<Mass>15.9</Mass>
			<Bulk>11.98</Bulk>
		</statBases>
		<tradeTags>
			<li>CE_AutoEnableTrade</li>
			<li>CE_AutoEnableCrafting_TableMachining</li>
		</tradeTags>
		<thingCategories>
			<li>Ammo127mmJavelinMissile</li>
		</thingCategories>
		<stackLimit>25</stackLimit>
		<cookOffFlashScale>40</cookOffFlashScale>
		<cookOffSound>MortarBomb_Explode</cookOffSound>
		<ammoClass>RocketHEAT</ammoClass>
		<detonateProjectile>Bullet_127mmJavelinMissile</detonateProjectile>
	</ThingDef>

	<!-- ================== Projectiles ================== -->

	<ThingDef ParentName="BaseRPG7Grenade">
		<defName>Bullet_127mmJavelinMissile</defName>
		<label>127mm Javelin missile</label>
		<graphicData>
			<texPath>Things/Projectile/Missile/Javelin</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shaderType>TransparentPostLight</shaderType>
		</graphicData>
		<projectile Class="CombatExtended.ProjectilePropertiesCE">
			<damageDef>Bullet</damageDef>
			<damageAmountBase>363</damageAmountBase>
			<armorPenetrationSharp>760</armorPenetrationSharp>
			<armorPenetrationBlunt>175.402</armorPenetrationBlunt>
			<trajectoryWorker>CombatExtended.SmartRocketTrajectoryWorker</trajectoryWorker>
			<speed>30</speed>
			<speedGain>16</speedGain>
			<soundAmbient>RocketPropelledLoop_Small</soundAmbient>
		</projectile>
		<comps>
			<li Class="CombatExtended.CompProperties_ExplosiveCE">
				<damageAmountBase>585</damageAmountBase>
				<explosiveDamageType>Bomb</explosiveDamageType>
				<explosiveRadius>3</explosiveRadius>
				<applyDamageToExplosionCellsNeighbors>true</applyDamageToExplosionCellsNeighbors>
				<explosionSound>MortarBomb_Explode</explosionSound>
			</li>
			<li Class="CombatExtended.CompProperties_Fragments">
				<fragments>
					<Fragment_Large>2</Fragment_Large>
					<Fragment_Small>80</Fragment_Small>
				</fragments>
			</li>
		</comps>
	</ThingDef>

	<!-- ==================== Recipes ========================== -->


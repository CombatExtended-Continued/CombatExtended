	</ThingCategoryDef>

	<!-- ==================== AmmoSet ========================== -->

	<CombatExtended.AmmoSetDef>
		<defName>AmmoSet_45ACP_Punched</defName>
		<label>Punched .45 ACP</label>
		<ammoTypes>
			<Ammo_45ACP_FMJ_Punched>Bullet_45ACP_FMJ_Punched</Ammo_45ACP_FMJ_Punched>

<?xml version="1.0" encoding="utf-8" ?>
<Defs>
 
	<ThingDef Name="Raygun2Bullet" ParentName="BaseBullet" Abstract="true">
		<graphicData>
			<texPath>Things/Projectile/Bullet_Small</texPath>
			<graphicClass>Graphic_Single</graphicClass>

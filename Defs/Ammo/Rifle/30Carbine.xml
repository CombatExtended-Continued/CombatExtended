		<jobString>Making .30 Carbine (FMJ) cartridges.</jobString>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Steel</li>
					</thingDefs>
				</filter>
				<count>9</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Steel</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<Ammo_30Carbine_FMJ>500</Ammo_30Carbine_FMJ>
		</products>
    <workAmount>2500</workAmount>
	</RecipeDef>


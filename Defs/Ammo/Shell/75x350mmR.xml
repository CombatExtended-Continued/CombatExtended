	<!-- ==================== AmmoSet ========================== -->

	<CombatExtended.AmmoSetDef>
		<defName>AmmoSet_75x350mmR</defName>
		<label>75x350mmR</label>
		<ammoTypes>
			<Ammo_75x350mmR_AP>Bullet_75x350mmR_AP</Ammo_75x350mmR_AP>
			<Ammo_75x350mmR_HE>Bullet_75x350mmR_HE</Ammo_75x350mmR_HE>

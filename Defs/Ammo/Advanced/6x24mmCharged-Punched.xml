      <damageAmountBase>26</damageAmountBase>
      <secondaryDamage>
        <li>
          <def>Bomb_Secondary</def>
          <amount>8</amount>
        </li>
      </secondaryDamage>
      <armorPenetrationSharp>15</armorPenetrationSharp>
      <armorPenetrationBlunt>25.6</armorPenetrationBlunt>
    </projectile>
  </ThingDef>

  <ThingDef ParentName="Punched6x24mmChargedBullet">

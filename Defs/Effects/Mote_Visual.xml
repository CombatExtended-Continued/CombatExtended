<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!--=============== Bases ==============-->

  <ThingDef Name="MoteBase" Abstract="True">
    <thingClass>MoteThrown</thingClass>
    <label>Mote</label>
    <category>Mote</category>
    <graphicData>
      <graphicClass>Graphic_Mote</graphicClass>
      <shaderType>Mote</shaderType>
    </graphicData>
    <altitudeLayer>MoteLow</altitudeLayer>
    <tickerType>Normal</tickerType>
    <useHitPoints>false</useHitPoints>
    <isSaveable>false</isSaveable>
    <rotatable>false</rotatable>
  </ThingDef>
  
  <EffecterDef Name="HEImpact">
    <defName>HEImpact</defName>
    <children>
      <li>
        <subEffecterClass>SubEffecter_SprayerTriggered</subEffecterClass>
        <moteDef>Mote_YellowSparkFlash</moteDef>
        <positionLerpFactor>0.6</positionLerpFactor>
        <chancePerTick>0.2</chancePerTick>
        <scale>
          <min>2.5</min>
          <max>4.5</max>
        </scale>
        <spawnLocType>OnSource</spawnLocType>
      </li>
      <li>
        <subEffecterClass>SubEffecter_SprayerTriggered</subEffecterClass>
        <positionRadius>0.2</positionRadius>
        <moteDef>Mote_AirPuff</moteDef>
        <burstCount>
          <min>4</min>
          <max>5</max>
        </burstCount>
        <speed>
          <min>0.4</min>
          <max>0.8</max>
        </speed>
        <scale>
          <min>0.5</min>
          <max>0.8</max>
        </scale>
        <spawnLocType>OnSource</spawnLocType>
      </li>
      <li>
        <subEffecterClass>SubEffecter_SprayerTriggered</subEffecterClass>
        <positionRadius>0.1</positionRadius>
        <moteDef>Mote_YellowSparkFlash</moteDef>
        <burstCount>
          <min>1</min>
          <max>1</max>
        </burstCount>
        <scale>
          <min>0.9</min>
          <max>1.3</max>
        </scale>
        <spawnLocType>OnSource</spawnLocType>
      </li>
    </children>
    <offsetTowardsTarget><min>0.0</min><max>0.0</max></offsetTowardsTarget>
    <positionRadius>0.01</positionRadius>
  </EffecterDef>

  <ThingDef ParentName="MoteBase">
    <defName>Mote_Blood_Puff</defName>
    <graphicData>
      <texPath>Things/Mote/BodyImpact</texPath>
    </graphicData>
    <altitudeLayer>MoteOverhead</altitudeLayer>
    <mote>
      <fadeInTime>0.04</fadeInTime>
      <solidTime>0.25</solidTime>
      <fadeOutTime>0.1</fadeOutTime>
    </mote>
  </ThingDef>

</Defs>

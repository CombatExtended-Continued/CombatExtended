<?xml version="1.0" encoding="utf-8"?>
<Defs>
	
	 <!-- copies of vanilla flecks without fadeIn time -->
	<FleckDef ParentName="FleckBase_Thrown">
		<defName>Fleck_ElectricGlow_EMP</defName>
		<graphicData>
			<texPath>Things/Mote/LightningGlow</texPath>
			<shaderType>MoteGlow</shaderType>
		</graphicData>
		<altitudeLayer>MoteOverhead</altitudeLayer>
		<solidTime>0.1</solidTime>
		<fadeOutTime>0.1</fadeOutTime>
	</FleckDef>

	  <FleckDef ParentName="FleckBase_Thrown">
		<defName>Fleck_HeatGlow_API</defName>
		<graphicData>
			<texPath>Things/Mote/HeatGlow</texPath>
			<shaderType>MoteGlow</shaderType>
		</graphicData>
		<altitudeLayer>MoteOverhead</altitudeLayer>
		<solidTime>0.15</solidTime>
		<fadeOutTime>0.2</fadeOutTime>
	</FleckDef>

	<!-- Fleck instead of vanilla-used mote -->
	  <FleckDef ParentName="FleckBase_Thrown">
		<defName>Fleck_SparkThrownFast</defName>
		<graphicData>
			<texPath>Things/Mote/SparkThrown</texPath>
		</graphicData>
		<altitudeLayer>Projectile</altitudeLayer>
		<solidTime>0.15</solidTime>
		<fadeOutTime>0.1</fadeOutTime>
		<collide>true</collide>
	</FleckDef>

	<!-- bullethole left on buildings and hard floors by bullets and arrows -->

	  <FleckDef ParentName="FleckBase">
		<defName>Fleck_BulletHole</defName>
		<graphicData>
			<texPath>Things/Flecks/Fleck_BulletHole</texPath>
			<renderInstanced>true</renderInstanced>
		</graphicData>
		<altitudeLayer>BuildingOnTop</altitudeLayer>
		<solidTime>5</solidTime>
		<fadeOutTime>2</fadeOutTime>
	</FleckDef>

</Defs>
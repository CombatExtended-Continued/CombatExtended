  <thingClass>CombatExtended.Lasers.LaserBeamCE</thingClass>
  <defName>OGI_Bullet_LasGun</defName>
  <graphicData>
      <graphicClass>Graphic_Single</graphicClass>
      <texPath>Things/Projectile/LasShotLrg</texPath>

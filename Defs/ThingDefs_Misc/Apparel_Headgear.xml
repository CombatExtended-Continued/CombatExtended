<Defs>

    <ThingDef ParentName="ArmorHelmetMakeableBase">
        <defName>Apparel_Bascinet</defName>
        <label>bascinet</label>
        <description>A medieval helmet that provides full coverage of the head. Somewhat protective, but restricts the wearer's field of view which affects attack accuracy.</description>
        <graphicData>
            <texPath>Things/Apparel/Bascinet/Bascinet</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <stuffCategories>
            <li>Steeled</li>
        </stuffCategories>
        <costStuffCount>65</costStuffCount>
        <statBases>
            <WorkToMake>8000</WorkToMake>
            <MaxHitPoints>120</MaxHitPoints>
            <Mass>3.5</Mass>
            <Bulk>5</Bulk>
            <WornBulk>1</WornBulk>
            <StuffEffectMultiplierArmor>3.5</StuffEffectMultiplierArmor>
            <StuffEffectMultiplierInsulation_Cold>0.15</StuffEffectMultiplierInsulation_Cold>
            <StuffEffectMultiplierInsulation_Heat>0</StuffEffectMultiplierInsulation_Heat>
            <EquipDelay>4</EquipDelay>
        </statBases>
        <equippedStatOffsets>
			<AimingAccuracy>-0.4</AimingAccuracy>
            <MeleeHitChance>-2</MeleeHitChance>
		</equippedStatOffsets>
        <recipeMaker>
            <recipeUsers>
                <li>ElectricSmithy</li>
                <li>FueledSmithy</li>
            </recipeUsers>
            <researchPrerequisite>PlateArmor</researchPrerequisite>
            <skillRequirements>
                <Crafting>8</Crafting>
            </skillRequirements>
        </recipeMaker>
        <apparel>
            <bodyPartGroups>
                <li>FullHead</li>
            </bodyPartGroups>
            <wornGraphicPath>Things/Apparel/Bascinet/Bascinet</wornGraphicPath>
            <layers>
                <li>Overhead</li>
            </layers>
            <tags>
                <li>MedievalMilitary</li>                
            </tags>
            <defaultOutfitTags>
                <li>Soldier</li>
            </defaultOutfitTags>
        </apparel>
		<modExtensions>
			<li Class="CombatExtended.PartialArmorExt">
				<stats>
					<li>
						<ArmorRating_Sharp>0.60</ArmorRating_Sharp>
						<parts>
							<li>Eye</li>
						</parts>
					</li>			  
				</stats>
			</li>
		</modExtensions>
    </ThingDef>

    <ThingDef ParentName="ArmorHelmetMakeableBase">
        <defName>Apparel_GasMask</defName>
        <label>gas mask</label>
        <description>Sealed rubber mask with a filter attached. Will protect against smoke inhalation and airborne toxins.</description>
        <graphicData>
            <texPath>Things/Apparel/GasMask/CE_GasMask</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
		<techLevel>Industrial</techLevel>
		<generateAllowChance>0.2</generateAllowChance>
		<recipeMaker>
		  <unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
		  <skillRequirements>
			<Crafting>8</Crafting>
		  </skillRequirements>
		</recipeMaker>
		<costList>
		  <ComponentIndustrial>2</ComponentIndustrial>
		  <Chemfuel>10</Chemfuel>
		</costList>
        <statBases>
            <WorkToMake>8000</WorkToMake>
            <MaxHitPoints>100</MaxHitPoints>
            <Mass>0.5</Mass>
            <Bulk>3</Bulk>
            <WornBulk>1</WornBulk>
            <EquipDelay>0.5</EquipDelay>
        </statBases>
        <equippedStatOffsets>
            <ToxicSensitivity>-0.5</ToxicSensitivity>
            <SmokeSensitivity>-1</SmokeSensitivity>
        </equippedStatOffsets>
        <apparel>
            <countsAsClothingForNudity>false</countsAsClothingForNudity>
            <bodyPartGroups>
                <li>Eyes</li>
                <li>Teeth</li>
            </bodyPartGroups>
            <wornGraphicPath>Things/Apparel/GasMask/CE_GasMask</wornGraphicPath>
            <layers>
                <li>StrappedHead</li>
            </layers>
            <tags>
                <li>IndustrialMilitaryAdvanced</li>
                <li>GasMask</li>
            </tags>
            <defaultOutfitTags>
                <li>Soldier</li>
            </defaultOutfitTags>
              <hatRenderedFrontOfFace>false</hatRenderedFrontOfFace>
        </apparel>
        <modExtensions>
            <li Class="CombatExtended.ApparelHediffExtension">
                <hediff>WearingGasMask</hediff>
            </li>
            <li Class="CombatExtended.ApperalRenderingExtension">
                <HideHair>false</HideHair>
                <HideBeard>true</HideBeard>
            </li>
        </modExtensions>
        <thingCategories Inherit="false">
            <li>Headgear</li>
        </thingCategories>
    </ThingDef>


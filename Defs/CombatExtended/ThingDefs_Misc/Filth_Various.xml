<?xml version="1.0" encoding="utf-8"?>
<Defs>

	<ThingDef ParentName="BaseFilth">
		<defName>FilthPrometheum</defName>
		<label>prometheum puddle</label>
		<description>A puddle of pyrophoric Prometheum.</description>
		<thingClass>CombatExtended.IncendiaryFuel</thingClass>
		<useHitPoints>true</useHitPoints>
		<tickerType>Normal</tickerType>
		<statBases>
			<Beauty>-30</Beauty>
			<Cleanliness>-30</Cleanliness>
			<MaxHitPoints>75</MaxHitPoints>
			<Flammability>5.0</Flammability>
		</statBases>
		<graphicData>
			<texPath>Things/Filth/LiquidFuel</texPath>
		</graphicData>
		<filth>
			<cleaningWorkToReduceThickness>70</cleaningWorkToReduceThickness>
			<canFilthAttach>true</canFilthAttach>
			<maxThickness>1</maxThickness>
		</filth>
	</ThingDef>

	<ThingDef ParentName="BaseFilth">
		<defName>Filth_StabilizeMedicineIndustrial</defName>
		<label>used medkits</label>
		<description>Trash from administering first aid.</description>
		<useHitPoints>true</useHitPoints>
		<statBases>
			<Beauty>-15</Beauty>
			<Cleanliness>-5</Cleanliness>
		</statBases>
		<graphicData>
			<texPath>Things/Filth/Filth_StabilizeMedicine</texPath>
		</graphicData>
		<filth>
			<disappearsInDays>45~50</disappearsInDays>
			<cleaningWorkToReduceThickness>30</cleaningWorkToReduceThickness>
			<canFilthAttach>true</canFilthAttach>
			<maxThickness>1</maxThickness>
		</filth>
	</ThingDef>

	<ThingDef ParentName="BaseFilth">
		<defName>Filth_StabilizeMedicineHerbal</defName>
		<label>scattered herbs</label>
		<description>Trash from administering first aid.</description>
		<useHitPoints>true</useHitPoints>
		<statBases>
			<Beauty>-10</Beauty>
			<Cleanliness>-7</Cleanliness>
		</statBases>
		<graphicData>
			<texPath>Things/Filth/Filth_StabilizeMedicineHerbal</texPath>
		</graphicData>
		<filth>
			<rainWashes>true</rainWashes>
			<cleaningWorkToReduceThickness>45</cleaningWorkToReduceThickness>
			<canFilthAttach>true</canFilthAttach>
			<maxThickness>1</maxThickness>
			<disappearsInDays>5~15</disappearsInDays>
		</filth>
	</ThingDef>

</Defs>
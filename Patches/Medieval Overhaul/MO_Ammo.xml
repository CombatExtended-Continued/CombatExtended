                        </ammoTypes>
                    </CombatExtended.AmmoSetDef>

                    <ThingDef Class="CombatExtended.AmmoDef" ParentName="BaseCrossbowBoltProjectile">
                        <defName>Projectile_DankPyonCrossbowBolt_Stone</defName>

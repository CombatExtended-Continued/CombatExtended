				<xpath>Defs/AlienRace.ThingDef_AlienRace[defName="HAR_Saclean"]/tools</xpath> 
				<value>
					<tools>
						<li Class="CombatExtended.ToolCE">
							<label>left fist</label>
							<capacities>

			<operations>

				<!-- === Tools === -->
				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName = "DV_ImpactStubber"]/tools</xpath>
					<value>
						<tools>
							<li Class="CombatExtended.ToolCE">
								<label>grip</label>
								<capacities>
									<li>Blunt</li>
								</capacities>

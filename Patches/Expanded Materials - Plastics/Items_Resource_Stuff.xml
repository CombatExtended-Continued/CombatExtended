				</value>				
			</li>

			<!-- === Smoke === -->			
			<li Class="PatchOperationAdd">
				<xpath>/Defs/RecipeDef[defName="VMEu_MakePolymerShell_Smoke"]/fixedIngredientFilter/thingDefs</xpath>
				<value>
					<li>Prometheum</li>
					<li>ComponentIndustrial</li>

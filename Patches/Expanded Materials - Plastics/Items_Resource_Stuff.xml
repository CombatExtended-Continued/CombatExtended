						<count>2</count>
					</li>
				</value>
			</li>

			<!-- === Anti-Grain === -->			
			<li Class="PatchOperationReplace">
				<xpath>/Defs/RecipeDef[defName="VMEu_MakeAntigrainWarhead"]/workAmount</xpath>
				<value>
					<workAmount>4750</workAmount>
				</value>				
			</li>


			</operations>
		</match>
	</Operation>

</Patch>
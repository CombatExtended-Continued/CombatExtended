<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Alpha Genes</li>
		</mods>

			<match Class="PatchOperationSequence">
				<operations>

					<!-- ======= Reactive Armour ======= -->

					<li Class="PatchOperationReplace">
						<xpath>Defs/HediffDef[defName="AG_ReactiveArmourHediff"]/stages/li[1]/statOffsets</xpath>
						<value>
							<statOffsets>
								<ArmorRating_Blunt>0.5</ArmorRating_Blunt>
								<ArmorRating_Sharp>0.75</ArmorRating_Sharp>
							</statOffsets>
						</value>
					</li>

					<li Class="PatchOperationReplace">
						<xpath>Defs/HediffDef[defName="AG_ReactiveArmourHediff"]/stages/li[2]/statOffsets</xpath>
						<value>
							<statOffsets>
								<ArmorRating_Blunt>2.0</ArmorRating_Blunt>
								<ArmorRating_Sharp>3.0</ArmorRating_Sharp>
							</statOffsets>
						</value>
					</li>

					<li Class="PatchOperationReplace">
						<xpath>Defs/HediffDef[defName="AG_ReactiveArmourHediff"]/stages/li[3]/statOffsets</xpath>
						<value>
							<statOffsets>
								<ArmorRating_Blunt>4.0</ArmorRating_Blunt>
								<ArmorRating_Sharp>6.0</ArmorRating_Sharp>
							</statOffsets>
						</value>
					</li>

					<li Class="PatchOperationReplace">
						<xpath>Defs/HediffDef[defName="AG_ReactiveArmourHediff"]/stages/li[4]/statOffsets</xpath>
						<value>
							<statOffsets>
								<ArmorRating_Blunt>8.0</ArmorRating_Blunt>
								<ArmorRating_Sharp>12.0</ArmorRating_Sharp>
							</statOffsets>
						</value>
					</li>

				</operations>
			</match>
	</Operation>

</Patch>

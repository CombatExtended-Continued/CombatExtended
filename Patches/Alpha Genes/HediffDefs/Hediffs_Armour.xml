<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Alpha Genes</li>
		</mods>

			<match Class="PatchOperationSequence">
				<operations>

					<li Class="PatchOperationReplace">
						<xpath>Defs/HediffDef[defName="AG_FungalSkin"]/stages/li/statOffsets</xpath>
						<value>
							<statOffsets>
								<ArmorRating_Blunt>3.0</ArmorRating_Blunt>
								<ArmorRating_Sharp>4.5</ArmorRating_Sharp>
								<InjuryHealingFactor>0.25</InjuryHealingFactor>
							</statOffsets>
						</value>
					</li>

					<li Class="PatchOperationReplace">
						<xpath>Defs/HediffDef[defName="AG_ArmourMinor"]/stages/li/statOffsets</xpath>
						<value>
							<statOffsets>
								<ArmorRating_Blunt>1.0</ArmorRating_Blunt>
								<ArmorRating_Sharp>1.5</ArmorRating_Sharp>
							</statOffsets>
						</value>
					</li>

					<li Class="PatchOperationReplace">
						<xpath>Defs/HediffDef[defName="AG_ArmourMedium"]/stages/li/statOffsets</xpath>
						<value>
							<statOffsets>
								<ArmorRating_Blunt>2.0</ArmorRating_Blunt>
								<ArmorRating_Sharp>3.0</ArmorRating_Sharp>
							</statOffsets>
						</value>
					</li>

					<li Class="PatchOperationReplace">
						<xpath>Defs/HediffDef[defName="AG_ArmourMajor"]/stages/li/statOffsets</xpath>
						<value>
							<statOffsets>
								<ArmorRating_Blunt>2.5</ArmorRating_Blunt>
								<ArmorRating_Sharp>3.75</ArmorRating_Sharp>
							</statOffsets>
						</value>
					</li>

				</operations>
			</match>
	</Operation>

</Patch>

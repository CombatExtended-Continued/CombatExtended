<?xml version="1.0" encoding="utf-8"?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Alpha Genes</li>
		</mods>

		<match Class="PatchOperationSequence">
			<operations>

				<li Class="PatchOperationReplace">
					<xpath>Defs/GeneDef[defName="AG_FungalSkin"]/customEffectDescriptions</xpath>
					<value>
						<customEffectDescriptions>
							<li>+3/4.5 blunt/sharp natural armour. +25% injury healing factor.</li>
							<li>Fires will cause permanent wounds.</li>
						</customEffectDescriptions>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/GeneDef[defName="AG_ArmourMinor"]/customEffectDescriptions</xpath>
					<value>
						<customEffectDescriptions>
							<li>+1/1.5 blunt/sharp natural armour.</li>
						</customEffectDescriptions>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/GeneDef[defName="AG_ArmourMedium"]/customEffectDescriptions</xpath>
					<value>
						<customEffectDescriptions>
							<li>+2/3 blunt/sharp natural armour.</li>
						</customEffectDescriptions>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/GeneDef[defName="AG_ArmourMajor"]/customEffectDescriptions</xpath>
					<value>
						<customEffectDescriptions>
							<li>+2.5/3.75 blunt/sharp natural armour.</li>
						</customEffectDescriptions>
					</value>
				</li>

			</operations>
		</match>
	</Operation>

</Patch>
      <li>FCP Raider Armor and Apparel Teaser</li>
    </mods>

    <match Class="PatchOperationSequence">
      <operations>

      <!-- === Gasmask === -->
      <li Class="PatchOperationAdd">
        <xpath>/Defs/ThingDef[defName="FCP_Apparel_Assualt_Gas_Mask"]/statBases</xpath>
        <value>
          <Bulk>4</Bulk>
          <WornBulk>1</WornBulk>
        </value>
      </li>

      <li Class="PatchOperationReplace">
        <xpath>/Defs/ThingDef[defName="FCP_Apparel_Assualt_Gas_Mask"]/equippedStatOffsets</xpath>

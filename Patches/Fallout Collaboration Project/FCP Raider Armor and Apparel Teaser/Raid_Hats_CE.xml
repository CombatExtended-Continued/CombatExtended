        </li>

        <li Class="PatchOperationAdd">
          <xpath>/Defs/ThingDef[defName="FCP_Apparel_Gas_Mask_With_Goggles"]/apparel/layers</xpath>
          <value>
            <li>StrappedHead</li>
          </value>
        </li>

      <li Class="PatchOperationAddModExtension">
	<xpath>Defs/ThingDef[defName = "FCP_Apparel_Gas_Mask_With_Goggles"]</xpath>
	<value>
		<li Class="CombatExtended.ApparelHediffExtension">
			<hediff>WearingGasMask</hediff>
		</li>
	</value>
  </li>

      <!-- === Fiend === -->

      <li Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[defName="FCP_Apparel_Fiend_Warrior_Helmet"]/statBases/ArmorRating_Sharp</xpath>
        <value>
          <ArmorRating_Sharp>0.5</ArmorRating_Sharp>
          <Bulk>5</Bulk>
          <WornBulk>1</WornBulk>
        </value>
      </li>

      <li Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[defName="FCP_Apparel_Fiend_Warrior_Helmet"]/statBases/ArmorRating_Blunt</xpath>
        <value>
          <ArmorRating_Blunt>0.4</ArmorRating_Blunt>
        </value>
      </li>

      <li Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[defName="FCP_Apparel_Fiend_Warrior_Helmet"]/statBases/ArmorRating_Heat</xpath>
        <value>
          <ArmorRating_Heat>0.2</ArmorRating_Heat>
        </value>
      </li>

      <li Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[defName="FCP_Apparel_Fiend_Battle_Helmet"]/statBases/ArmorRating_Sharp</xpath>
        <value>
          <ArmorRating_Sharp>0.6</ArmorRating_Sharp>
          <Bulk>5</Bulk>
          <WornBulk>1</WornBulk>
        </value>
      </li>

      <li Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[defName="FCP_Apparel_Fiend_Battle_Helmet"]/statBases/ArmorRating_Blunt</xpath>
        <value>
          <ArmorRating_Blunt>0.5</ArmorRating_Blunt>
        </value>
      </li>

      <li Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[defName="FCP_Apparel_Fiend_Battle_Helmet"]/statBases/ArmorRating_Heat</xpath>
        <value>
          <ArmorRating_Heat>0.3</ArmorRating_Heat>
        </value>
      </li>

      <!-- === Sack Hood === -->
      <li Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[defName="FCP_Apparel_Fiend_Battle_Helmet"]/statBases/ArmorRating_Sharp</xpath>
        <value>
          <ArmorRating_Sharp>0.07</ArmorRating_Sharp>
          <Bulk>2</Bulk>
          <WornBulk>0.5</WornBulk>
        </value>
      </li>

      </operations>
    </match>
  </Operation>

</Patch>

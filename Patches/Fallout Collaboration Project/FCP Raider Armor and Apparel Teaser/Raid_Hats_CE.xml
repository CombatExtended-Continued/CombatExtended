        <equippedStatOffsets>
            <ToxicSensitivity>-0.6</ToxicSensitivity>
            <SmokeSensitivity>-1</SmokeSensitivity>
            <PainShockThreshold>0.05</PainShockThreshold>
        </equippedStatOffsets>
        </value>
      </li>

      <li Class="PatchOperationAdd">
        <xpath>/Defs/ThingDef[defName="FCP_Apparel_Assualt_Gas_Mask"]/apparel/layers</xpath>
        <value>
          <li>StrappedHead</li>
        </value>
      </li>

      <li Class="PatchOperationAddModExtension">
        <xpath>Defs/ThingDef[defName = "FCP_Apparel_Assualt_Gas_Mask"]</xpath>
        <value>
          <li Class="CombatExtended.ApparelHediffExtension">
            <hediff>WearingGasMask</hediff>

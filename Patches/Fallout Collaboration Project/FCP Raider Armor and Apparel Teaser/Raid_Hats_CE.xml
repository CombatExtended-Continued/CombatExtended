<?xml version="1.0" encoding="utf-8" ?>
<Patch>

  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>FCP Raider Armor and Apparel Teaser</li>
    </mods>

    <match Class="PatchOperationSequence">
      <operations>
        <!-- === Gasmask === -->
        <li Class="PatchOperationAdd">
          <xpath>/Defs/ThingDef[defName="FCP_Apparel_Assualt_Gas_Mask"]/statBases</xpath>
          <value>
            <Bulk>4</Bulk>
            <WornBulk>1</WornBulk>
          </value>
        </li>

        <li Class="PatchOperationReplace">
          <xpath>/Defs/ThingDef[defName="FCP_Apparel_Assualt_Gas_Mask"]/equippedStatOffsets</xpath>
          <value>
          <equippedStatOffsets>
              <ToxicSensitivity>-0.6</ToxicSensitivity>
              <SmokeSensitivity>-1</SmokeSensitivity>
              <PainShockThreshold>0.05</PainShockThreshold>
          </equippedStatOffsets>
          </value>
        </li>

        <li Class="PatchOperationAdd">
          <xpath>/Defs/ThingDef[defName="FCP_Apparel_Assualt_Gas_Mask"]/apparel/layers</xpath>
          <value>
            <li>StrappedHead</li>
          </value>
        </li>

				<li Class="PatchOperationAddModExtension">
					<xpath>Defs/ThingDef[defName = "FCP_Apparel_Assualt_Gas_Mask"]</xpath>
					<value>
						<li Class="CombatExtended.ApparelHediffExtension">
							<hediff>WearingGasMask</hediff>
						</li>
					</value>
				</li>

      <!-- === Wastehound === -->
      <li Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[defName="FCP_Apparel_Raider_Wastehound_Helmet"]/statBases/ArmorRating_Sharp</xpath>
        <value>
          <ArmorRating_Sharp>0.75</ArmorRating_Sharp>
          <Bulk>5</Bulk>
          <WornBulk>1</WornBulk>
        </value>
      </li>

      <li Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[defName="FCP_Apparel_Raider_Wastehound_Helmet"]/statBases/ArmorRating_Blunt</xpath>
        <value>
          <ArmorRating_Blunt>0.5</ArmorRating_Blunt>
          <ArmorRating_Heat>0.18</ArmorRating_Heat>
        </value>
      </li>

      <li Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[defName="FCP_Apparel_Raider_Wastehound_Helmet"]/costList</xpath>
        <value>
        <costList>
      <Steel>5</Steel>
      <Leather_Plain>25</Leather_Plain>
        </costList>
        </value>
      </li>

      <li Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[defName="FCP_Apparel_Raider_Wastehound_Helmet"]/bodyPartGroups</xpath>
        <value>
        <costList>
      	<bodyPartGroups>
        		<li>FullHead</li>
      	</bodyPartGroups>
        </costList>
        </value>
      </li>

      <!-- === BlastMasta === -->
      <li Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[defName="FCP_Apparel_Blastmaster_Helmet"]/statBases/ArmorRating_Sharp</xpath>
        <value>
          <ArmorRating_Sharp>3.25</ArmorRating_Sharp>
          <Bulk>5</Bulk>
          <WornBulk>1</WornBulk>
        </value>
      </li>

      <li Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[defName="FCP_Apparel_Blastmaster_Helmet"]/statBases/ArmorRating_Blunt</xpath>
        <value>
          <ArmorRating_Blunt>4.5</ArmorRating_Blunt>
          <ArmorRating_Heat>0.21</ArmorRating_Heat>
        </value>
      </li>


        <li Class="PatchOperationReplace">
          <xpath>/Defs/ThingDef[defName="FCP_Apparel_Blastmaster_Helmet"]/equippedStatOffsets</xpath>
          <value>
          <equippedStatOffsets>
              <ToxicSensitivity>-0.75</ToxicSensitivity>
              <PainShockThreshold>0.08</PainShockThreshold>
              <SmokeSensitivity>-1</SmokeSensitivity>
          </equippedStatOffsets>
          </value>
        </li>

        <li Class="PatchOperationAdd">
          <xpath>/Defs/ThingDef[defName="FCP_Apparel_Blastmaster_Helmet"]/apparel/layers</xpath>
          <value>
            <li>StrappedHead</li>
          </value>
        </li>

      <li Class="PatchOperationAddModExtension">
	<xpath>Defs/ThingDef[defName = "FCP_Apparel_Blastmaster_Helmet"]</xpath>
	<value>
		<li Class="CombatExtended.ApparelHediffExtension">
			<hediff>WearingGasMask</hediff>
		</li>
	</value>
  </li>


      <!-- === Psycho === -->
      <li Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[defName="FCP_Apparel_Raider_Psycho_Tic_Helmet"]/statBases/ArmorRating_Sharp</xpath>
        <value>
          <ArmorRating_Sharp>0.5</ArmorRating_Sharp>
          <Bulk>5</Bulk>
          <WornBulk>1</WornBulk>
        </value>
      </li>

      <li Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[defName="FCP_Apparel_Raider_Psycho_Tic_Helmet"]/statBases/ArmorRating_Blunt</xpath>
        <value>
          <ArmorRating_Blunt>0.75</ArmorRating_Blunt>
          <ArmorRating_Heat>0.18</ArmorRating_Heat>
        </value>
      </li>


      <!-- === Arclight Helmet === -->
      <li Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[defName="FCP_Apparel_Raider_Archlight_Helmet"]/statBases/ArmorRating_Sharp</xpath>
        <value>
          <ArmorRating_Sharp>1.75</ArmorRating_Sharp>
          <Bulk>8</Bulk>
          <WornBulk>1</WornBulk>
        </value>
      </li>

      <li Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[defName="FCP_Apparel_Raider_Archlight_Helmet"]/statBases/ArmorRating_Blunt</xpath>
        <value>
          <ArmorRating_Blunt>2.75</ArmorRating_Blunt>
        </value>
      </li>

      <li Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[defName="FCP_Apparel_Raider_Archlight_Helmet"]/equippedStatOffsets</xpath>
        <value>
        <equippedStatOffsets>
                			<PainShockThreshold>0.05</PainShockThreshold>
			<AimingAccuracy>-0.4</AimingAccuracy>
            			<MeleeHitChance>-2</MeleeHitChance>
      </equippedStatOffsets>
        </value>
      </li>

       <!-- === Gasmask === -->
        <li Class="PatchOperationAdd">
          <xpath>/Defs/ThingDef[defName="FCP_Apparel_Gas_Mask_With_Goggles"]/statBases</xpath>
          <value>
            <Bulk>5</Bulk>
            <WornBulk>1</WornBulk>
          </value>
        </li>

        <li Class="PatchOperationReplace">
          <xpath>/Defs/ThingDef[defName="FCP_Apparel_Gas_Mask_With_Goggles"]/equippedStatOffsets</xpath>
          <value>
          <equippedStatOffsets>
              <ToxicSensitivity>-0.6</ToxicSensitivity>
              <SmokeSensitivity>-1</SmokeSensitivity>
          </equippedStatOffsets>

<?xml version="1.0" encoding="utf-8"?>
<Patch>
	<Operation Class="PatchOperationSequence">
		
		<operations>
			<li Class="PatchOperationFindMod">
			<mods>
				<li>Mass Effect - Playable Geth</li>
			</mods>
			<match Class="PatchOperationSequence">
			<operations>
			
			<li Class="PatchOperationAddModExtension">
				<xpath>Defs/PawnKindDef[
					defName="BaseTraderGeth" or
					defName="GethTrooper" or
					defName="GethHunter" or
					defName="GethHeretic" or
					defName="GethHereticTrooper" or
					defName="GethHereticHunter" or
					defName="GethHereticPyro" or
					defName="GethPyro"
					]</xpath>
				<value>	
					<li Class="CombatExtended.LoadoutPropertiesExtension">	
						<primaryMagazineCount>
							<min>1</min>
							<max>3</max>
						</primaryMagazineCount>
						<sidearms>
							<li>
								<generateChance>0.33</generateChance>
								<sidearmMoney>
									<min>20</min>
									<max>120</max>
								</sidearmMoney>
								<weaponTags>
									<li>CE_Sidearm_Melee</li>
								</weaponTags>
							</li>
						</sidearms>
					</li>
				</value>
			</li>

			<li Class="PatchOperationAddModExtension">
				<xpath>Defs/PawnKindDef[
					defName="GethPrime" or
					defName="GethHereticPrime"
					]</xpath>
				<value>	
					<li Class="CombatExtended.LoadoutPropertiesExtension">	
						<primaryMagazineCount>
							<min>2</min>
							<max>3</max>
						</primaryMagazineCount>
					</li>
				</value>
			</li>
			
			<li Class="PatchOperationAddModExtension">
				<xpath>Defs/PawnKindDef[
					defName="GethInfiltrator" or
					defName="GethHereticInfiltrator"
					]</xpath>
				<value>	
					<li Class="CombatExtended.LoadoutPropertiesExtension">	
						<primaryMagazineCount>
							<min>12</min>
							<max>20</max>
						</primaryMagazineCount>
					</li>
				</value>
			</li>

			<li Class="PatchOperationAddModExtension">
				<xpath>Defs/PawnKindDef[
					defName="BaseLegion"
					]</xpath>
				<value>	
					<li Class="CombatExtended.LoadoutPropertiesExtension">	
						<primaryMagazineCount>
							<min>9</min>
							<max>16</max>
						</primaryMagazineCount>
					</li>
				</value>
			</li>

			<li Class="PatchOperationAddModExtension">
				<xpath>Defs/PawnKindDef[
					defName="GethRocketTrooper" or
					defName="GethHereticRocketTrooper"
					]</xpath>
				<value>	
					<li Class="CombatExtended.LoadoutPropertiesExtension">	
						<primaryMagazineCount>
							<min>4</min>
							<max>7</max>
						</primaryMagazineCount>
					</li>
				</value>
			</li>



            <!-- ======= Combat Power ======= -->

            <!-- Trooper -->
            <li Class="PatchOperationReplace">
			<xpath>Defs/PawnKindDef[
            defName="BaseTraderGeth" or
            defName="GethTrooper" or
            defName="GethHereticTrooper" or
            defName="GethHunter" or
            defName="GethHereticHunter"
            ]/combatPower</xpath>
				<value>
					<combatPower>180</combatPower>
				</value>
			</li>

            <!-- Infiltrator -->
            <li Class="PatchOperationReplace">
			<xpath>Defs/PawnKindDef[
            defName="GethInfiltrator" or
            defName="GethHereticInfiltrator"
            ]/combatPower</xpath>
				<value>
					<combatPower>200</combatPower>
				</value>
			</li>


            <!-- Special -->
            <li Class="PatchOperationReplace">
			<xpath>Defs/PawnKindDef[
            defName="GethHereticPyro" or
            defName="GethPyro" or
            defName="GethRocketTrooper" or
            defName="GethHereticRocketTrooper"
            ]/combatPower</xpath>
				<value>
					<combatPower>200</combatPower>
				</value>
			</li>

            <!-- Prime -->
            <li Class="PatchOperationReplace">
			<xpath>Defs/PawnKindDef[
            defName="GethPrime" or
            defName="BaseLegion" or
            defName="GethHereticPrime"
            ]/combatPower</xpath>
				<value>
					<combatPower>300</combatPower>
				</value>
			</li>

            <!-- Defender Series -->
            <li Class="PatchOperationReplace">
			<xpath>Defs/PawnKindDef[
            defName="BaseGethColossus" or
            defName="BaseGethColossusHeretic"
            ]/combatPower</xpath>
				<value>
					<combatPower>500</combatPower>
				</value>
			</li>
			
			</operations>
			</match>
			</li>
		</operations>
	</Operation>
</Patch>

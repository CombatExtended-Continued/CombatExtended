<?xml version="1.0" encoding="utf-8" ?>
<Patch>
<Operation Class="PatchOperationFindMod">
    <mods>
		<li>Gas Traps And Shells</li>
    </mods>
	<match Class="PatchOperationSequence">		
		<operations>
		
		<!-- Change Mechanoid Virus to [pending], and make descriptions less cringy... -->
		
		<li Class="PatchOperationReplace">
				<xpath>Defs/HediffDef[defName="ToxicGas"]/description</xpath>
				<value>
				<description>Potent nerve agent in the lungs. Affects consciousness and most bodily functions. Can cause dementia and carcinoma at moderate doses, and death at extreme doses.</description>
				</value>
			</li>
			
			<li Class="PatchOperationReplace">
				<xpath>Defs/HediffDef[defName="RageGas"]/description</xpath>
				<value>
				<description>Induces a blind, uncontrollable rage at moderate doses. Moderately affects bodily functions.</description>
				</value>
			</li>
			
			<li Class="PatchOperationReplace">
				<xpath>Defs/HediffDef[defName="TearGas"]/description</xpath>
				<value>
				<description>Specialized airbone agent that attacks the sensitive membranes of the eyes and nose, making it difficult to see or breathe.</description>
				</value>
			</li>
			
			<li Class="PatchOperationReplace">
				<xpath>Defs/HediffDef[defName="SleepGas"]/description</xpath>
				<value>
				<description>Powerful sedative in the lungs, affects consciousness.</description>
				</value>
			</li>
			
			<li Class="PatchOperationReplace">
				<xpath>Defs/HediffDef[defName="FearGas"]/description</xpath>
				<value>
				<description>Induces an extremely strong feeling of dread and terror.</description>
				</value>
			</li>
			
			<li Class="PatchOperationReplace">
				<xpath>Defs/HediffDef[defName="AcidGas"]/description</xpath>
				<value>
				<description>Severely irritate and dissolves the lungs. Causes excrutiating pain, vomiting, and death.</description>
				</value>
			</li>
			
			<li Class="PatchOperationReplace">
				<xpath>Defs/HediffDef[defName="MechanoidVirus"]/description</xpath>
				<value>
				<description>A special blend of mechanites nanomachines that cause chaos inside mechanoids. Causes various and unpredictable effects on mechanoids. Otherwise useless.</description>
				</value>
			</li>
			
			<li Class="PatchOperationReplace">
				<xpath>Defs/HediffDef[defName="MechanoidVirus"]/label</xpath>
				<value>
				<label>Nanomachine invasion</label>
				</value>
			</li>
			
			<li Class="PatchOperationReplace">
				<xpath>Defs/HediffDef[defName="MechStunLoop"]/description</xpath>
				<value>
				<description>A failure in the power core is causing this mechanoid to reboot constantly.</description>
				</value>
			</li>
			
			<li Class="PatchOperationReplace">
				<xpath>Defs/HediffDef[defName="MechStunLoop"]/label</xpath>
				<value>
				<label>Power core failure</label>
				</value>
			</li>
			
			<li Class="PatchOperationReplace">
				<xpath>Defs/HediffDef[defName="AntiBugPoison"]/description</xpath>
				<value>
				<description>Powerful neurotoxin specifically designed to progessively destroy all bodily functions of insectoids.</description>
				</value>
			</li>
		
		</operations>
	</match>
</Operation>
</Patch>
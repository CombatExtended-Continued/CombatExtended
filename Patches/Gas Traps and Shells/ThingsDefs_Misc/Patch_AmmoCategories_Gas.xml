<?xml version="1.0" encoding="utf-8" ?>
<Patch>
<Operation Class="PatchOperationFindMod">
    <mods>
		<li>Gas Traps And Shells</li>
    </mods>
	<match Class="PatchOperationSequence">		
	<success>Always</success>
		<operations>
			
			<!-- Change gas colors to better fit gaz type/texture colors... -->
		
			<li Class="PatchOperationReplace">
			<xpath>Defs/ThingDef[defName="MechanoidVirusGas"]/graphicData/color</xpath>
			<value>
				<color>(0.6,0.7,0.7,0.3)</color>
			</value>
			</li>
			
			<li Class="PatchOperationReplace">
			<xpath>Defs/ThingDef[defName="AntiBugGas"]/graphicData/color</xpath>
			<value>
				<color>(0.7,0.6,0.0,0.3)</color>
			</value>
			</li>
			
			<li Class="PatchOperationReplace">
			<xpath>Defs/ThingDef[defName="ToxicGas"]/graphicData/color</xpath>
			<value>
				<color>(0.2,0.4,0.2,0.3)</color>
			</value>
			</li>
			
			<li Class="PatchOperationReplace">
			<xpath>Defs/ThingDef[defName="SleepGas"]/graphicData/color</xpath>
			<value>
				<color>(0.4,0.3,0.9,0.3)</color>
			</value>
			</li>
			
			<li Class="PatchOperationReplace">
			<xpath>Defs/ThingDef[defName="RageGas"]/graphicData/color</xpath>
			<value>
				<color>(1.0,0.3,0.4,0.3)</color>
			</value>
			</li>
			
			<li Class="PatchOperationReplace">
			<xpath>Defs/ThingDef[defName="AcidGas"]/graphicData/color</xpath>
			<value>
				<color>(0.6,0.8,0.1,0.3)</color>
			</value>
			</li>
			
			<li Class="PatchOperationReplace">
			<xpath>Defs/ThingDef[defName="FearGas"]/graphicData/color</xpath>
			<value>
				<color>(0.7,0.3,0.3,0.3)</color>
			</value>
			</li>
			
			<li Class="PatchOperationReplace">
			<xpath>Defs/ThingDef[defName="TearGas"]/graphicData/color</xpath>
			<value>
				<color>(0.6,0.2,0.9,0.3)</color>
			</value>
			</li>
			
			<!-- Change damage type of certain shells, to be used in sieges -->
			
			<li Class="PatchOperationReplace">
			<xpath>Defs/ThingDef[defName="Bullet_Shell_GasToxic"]/projectile/damageDef</xpath>
			<value>
				<damageDef>Bomb</damageDef>
			</value>
			</li>
			
			<li Class="PatchOperationReplace">
			<xpath>Defs/ThingDef[defName="Bullet_Shell_GasAcid"]/projectile/damageDef</xpath>
			<value>
				<damageDef>Bomb</damageDef>
			</value>
			</li>
			
			<!-- Change shell textures -->
			
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="Shell_GasToxic"]/graphicData/texPath</xpath>
				<value>
				<texPath>Things/Ammo/Mortar/Toxic</texPath>
				</value>
			</li>
		
			<li Class="PatchOperationReplace">
			<xpath>Defs/ThingDef[defName="Shell_GasRage"]/graphicData/texPath</xpath>
			<value>
				<texPath>Things/Ammo/Mortar/Rage</texPath>
			</value>
			</li>
		
			<li Class="PatchOperationReplace">
			<xpath>Defs/ThingDef[defName="Shell_GasTear"]/graphicData/texPath</xpath>
				<value>
			<texPath>Things/Ammo/Mortar/TearGas</texPath>
			</value>
			</li>
		
			<li Class="PatchOperationReplace">
			<xpath>Defs/ThingDef[defName="Shell_GasFear"]/graphicData/texPath</xpath>
			<value>
				<texPath>Things/Ammo/Mortar/Fear</texPath>
			</value>
			</li>
		
			<li Class="PatchOperationReplace">
			<xpath>Defs/ThingDef[defName="Shell_GasSleep"]/graphicData/texPath</xpath>
			<value>
				<texPath>Things/Ammo/Mortar/Sleep</texPath>
			</value>
			</li>
		
			<li Class="PatchOperationReplace">
			<xpath>Defs/ThingDef[defName="Shell_GasAcid"]/graphicData/texPath</xpath>
			<value>
				<texPath>Things/Ammo/Mortar/Acid</texPath>
			</value>
			</li>
		
			<li Class="PatchOperationReplace">
			<xpath>Defs/ThingDef[defName="Shell_MechVirus"]/graphicData/texPath</xpath>
			<value>
				<texPath>Things/Ammo/Mortar/MechVirus</texPath>
			</value>
			</li>
		
			<li Class="PatchOperationReplace">
			<xpath>Defs/ThingDef[defName="Shell_GasAntiBug"]/graphicData/texPath</xpath>
			<value>
				<texPath>Things/Ammo/Mortar/AntiBug</texPath>
			</value>
			</li>
			
			<!-- Change projectile textures -->
			
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="Bullet_Shell_GasToxic"]/graphicData/texPath</xpath>
				<value>
				<texPath>Things/Projectile/Mortar/Toxic</texPath>
				</value>
			</li>
		
			<li Class="PatchOperationReplace">
			<xpath>Defs/ThingDef[defName="Bullet_Shell_GasRage"]/graphicData/texPath</xpath>
			<value>
				<texPath>Things/Projectile/Mortar/Rage</texPath>
			</value>
			</li>
		
			<li Class="PatchOperationReplace">
			<xpath>Defs/ThingDef[defName="Bullet_Shell_GasTear"]/graphicData/texPath</xpath>
				<value>
			<texPath>Things/Projectile/Mortar/TearGas</texPath>
			</value>
			</li>
		
			<li Class="PatchOperationReplace">
			<xpath>Defs/ThingDef[defName="Bullet_Shell_GasFear"]/graphicData/texPath</xpath>
			<value>
				<texPath>Things/Projectile/Mortar/Fear</texPath>
			</value>
			</li>
		
			<li Class="PatchOperationReplace">
			<xpath>Defs/ThingDef[defName="Bullet_Shell_GasSleep"]/graphicData/texPath</xpath>
			<value>
				<texPath>Things/Projectile/Mortar/Sleep</texPath>
			</value>
			</li>
		
			<li Class="PatchOperationReplace">
			<xpath>Defs/ThingDef[defName="Bullet_Shell_GasAcid"]/graphicData/texPath</xpath>
			<value>
				<texPath>Things/Projectile/Mortar/Acid</texPath>

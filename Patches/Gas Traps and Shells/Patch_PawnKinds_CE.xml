<?xml version="1.0" encoding="utf-8" ?>
<Patch>
<Operation Class="PatchOperationFindMod">
    <mods>
		<li>Gas Traps And Shells</li>
    </mods>
	<match Class="PatchOperationSequence">		
	<success>Always</success>
		<operations>
		
		<!-- Mercenary chemical grenadier -->
		
		<li Class="PatchOperationAdd">
			<xpath>Defs</xpath>
			<value>
				<PawnKindDef ParentName="MercenaryGunnerBase">
				<defName>MercenaryChemGrenadier</defName>
				<label>mercenary chemical grenadier</label>
				<combatPower>60</combatPower>
				<canBeSapper>true</canBeSapper>
				<weaponTags Inherit="false">
					<li>GrenadeSmoke</li>
				</weaponTags>
				<initialResistanceRange>10~20</initialResistanceRange>
				<weaponMoney>500~500</weaponMoney>
				<apparelRequired>
					<li>Apparel_GasMask</li>
				</apparelRequired>
				<techHediffsTags>
					<li>Advanced</li>
				</techHediffsTags>
				<techHediffsChance>0.01</techHediffsChance>
				<modExtensions>
				  <li Class="CombatExtended.LoadoutPropertiesExtension">
					<primaryMagazineCount>
					  <min>10</min>
					  <max>30</max>
					</primaryMagazineCount>
					<forcedSidearm>
					  <sidearmMoney>
						<min>100</min>
						<max>200</max>
					  </sidearmMoney>
					  <weaponTags>
						<li>CE_Sidearm</li>
					  </weaponTags>
					</forcedSidearm>
				  </li>
				</modExtensions>
			  </PawnKindDef>
			</value>
			</li>
			
		<li Class="PatchOperationAdd">
			<xpath>Defs</xpath>
			<value>
			<PawnKindDef ParentName="PirateScavTierBase">
			<defName>Noxxer</defName>
			<label>scavenger noxxer</label>
			<combatPower>40</combatPower>
			<canBeSapper>true</canBeSapper>
			<apparelMoney>300~500</apparelMoney>
			<apparelRequired>
			  <li>Apparel_GasMask</li>
			</apparelRequired>
			<weaponMoney>200~300</weaponMoney>
			<weaponTags>
			  <li>GrenadeSmoke</li>
			</weaponTags>
			<initialResistanceRange>10~20</initialResistanceRange>
			<modExtensions>
				  <li Class="CombatExtended.LoadoutPropertiesExtension">
					<primaryMagazineCount>
					  <min>10</min>
					  <max>30</max>
					</primaryMagazineCount>
					<forcedSidearm>
					  <sidearmMoney>
						<min>100</min>
						<max>200</max>
					  </sidearmMoney>
					  <weaponTags>
						<li>CE_Sidearm_Melee</li>
					  </weaponTags>
					</forcedSidearm>
				  </li>
				</modExtensions>
			</PawnKindDef>
			</value>
		 </li>
		
		</operations>
	</match>
</Operation>
</Patch>
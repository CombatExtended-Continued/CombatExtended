<Patch>

	<Operation Class="PatchOperationFindMod">
    <mods>
		<li>Slime Rancher</li>
    </mods>
		<match Class="PatchOperationSequence">
		<operations>		

		<li Class="PatchOperationAdd">
		<xpath>Defs</xpath>
		<value>

	<!-- ==================== Recipes ========================== -->

    <RecipeDef>
        <defName>PressFirePlortCE</defName>
        <label>press fire plort</label>
        <description>Concentrate fire plorts into highly flammable compounds.</description>
        <jobString>Pressing fire plort</jobString>
        <workAmount>100</workAmount>
        <products>
            <Prometheum>1</Prometheum>
        </products>
        <ingredients>
        <li>
            <filter>
            <thingDefs>
                <li>FirePlort</li>
            </thingDefs>
            </filter>
            <count>3</count>
        </li>
        </ingredients>
        <fixedIngredientFilter>
            <thingDefs>
                <li>FirePlort</li>
            </thingDefs>
        </fixedIngredientFilter>

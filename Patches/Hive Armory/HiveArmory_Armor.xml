<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Hive Armory</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				<!--Hive Heavy Armor-->
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName = "Kenshi_HiverHeavyArmor"]/statBases</xpath>
					<value>
						<Bulk>100</Bulk>
						<WornBulk>12</WornBulk>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName = "Kenshi_HiverHeavyArmor"]/statBases/StuffEffectMultiplierArmor</xpath>
					<value>
						<StuffEffectMultiplierArmor>2.5</StuffEffectMultiplierArmor>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName = "Kenshi_HiverHeavyArmor"]/statBases/Mass</xpath>
					<value>
						<Mass>10</Mass>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName = "Kenshi_HiverHeavyArmor"]/equippedStatOffsets</xpath>
					<value>
						<equippedStatOffsets>
							<MeleeDodgeChance>-0.1</MeleeDodgeChance>
						</equippedStatOffsets>
					</value>
				</li>

				<!--Hive plate Helmet-->
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName = "Kenshi_HiverHelmet"]/statBases</xpath>
					<value>
						<Bulk>5</Bulk>
						<WornBulk>1</WornBulk>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName = "Kenshi_HiverHelmet"]/statBases/StuffEffectMultiplierArmor</xpath>
					<value>
						<StuffEffectMultiplierArmor>2.25</StuffEffectMultiplierArmor>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName = "Kenshi_HiverHelmet"]/statBases/Mass</xpath>
					<value>
						<Mass>2</Mass>
					</value>
				</li>


				<li Class="PatchOperationReplace">
					<xpath>/Defs/ThingDef[defName="Kenshi_HiverHelmet"]/costStuffCount</xpath>
					<value>
						<costStuffCount>50</costStuffCount>
					</value>
				</li>


				<!-- Hive Chain Vest -->
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName="Kenshi_HiverChainVest"]/statBases</xpath>
					<value>
						<Bulk>10</Bulk>
						<WornBulk>4</WornBulk>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>/Defs/ThingDef[defName="Kenshi_HiverChainVest"]/statBases/StuffEffectMultiplierArmor</xpath>
					<value>
						<StuffEffectMultiplierArmor>2</StuffEffectMultiplierArmor>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName = "Kenshi_HiverChainVest"]/statBases/Mass</xpath>
					<value>
						<Mass>6</Mass>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName = "Kenshi_HiverChainVest"]/statBases/WorkToMake</xpath>
					<value>
						<WorkToMake>12000</WorkToMake>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>/Defs/ThingDef[defName="Kenshi_HiverChainVest"]/costStuffCount</xpath>
					<value>
						<costStuffCount>75</costStuffCount>
					</value>
				</li>

				<li Class="PatchOperationRemove">
					<xpath>Defs/ThingDef[defName = "Kenshi_HiverChainVest"]/equippedStatOffsets</xpath>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>/Defs/ThingDef[defName="Kenshi_HiverChainVest" or defName="Kenshi_HiverLeatherVest"]/apparel/layers</xpath>
					<value>
						<layers>
							<li>Middle</li>
						</layers>
					</value>
				</li>

				<!-- Hive Leather Vest -->
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName="Kenshi_HiverLeatherVest"]/statBases</xpath>
					<value>
						<Bulk>6</Bulk>
						<WornBulk>2</WornBulk>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>/Defs/ThingDef[defName="Kenshi_HiverLeatherVest"]/statBases/StuffEffectMultiplierArmor</xpath>
					<value>
						<StuffEffectMultiplierArmor>5</StuffEffectMultiplierArmor>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName = "Kenshi_HiverLeatherVest"]/statBases/Mass</xpath>
					<value>
						<Mass>2.4</Mass>
					</value>
				</li>


				<li Class="PatchOperationReplace">
					<xpath>/Defs/ThingDef[defName="Kenshi_HiverLeatherVest"]/costStuffCount</xpath>
					<value>
						<costStuffCount>60</costStuffCount>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName = "Kenshi_HiverLeatherVest"]/statBases/WorkToMake</xpath>
					<value>
						<WorkToMake>8000</WorkToMake>
					</value>
				</li>

				<li Class="PatchOperationRemove">
					<xpath>Defs/ThingDef[defName = "Kenshi_HiverLeatherVest"]/equippedStatOffsets</xpath>
				</li>

			</operations>
		</match>
	</Operation>

</Patch>


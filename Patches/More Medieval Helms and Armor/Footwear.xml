<?xml version="1.0" encoding="utf-8"?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>More Medieval Helms and Armor</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>

				<!-- ========== Work Boots =========== -->
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="Domi_WorkBoots"]/statBases</xpath>
					<value>
						<Bulk>1.5</Bulk>
						<WornBulk>0.5</WornBulk>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="Domi_WorkBoots"]/statBases/StuffEffectMultiplierArmor</xpath>
					<value>
						<StuffEffectMultiplierArmor>2</StuffEffectMultiplierArmor>
					</value>
				</li>

				<!-- ========== Light Plate Boots =========== -->
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="Domi_LightPlateBoots"]/statBases</xpath>
					<value>
						<Bulk>3</Bulk>
						<WornBulk>1</WornBulk>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="Domi_LightPlateBoots"]/statBases/StuffEffectMultiplierArmor</xpath>
					<value>
						<StuffEffectMultiplierArmor>1.2</StuffEffectMultiplierArmor>
					</value>
				</li>

			</operations>
		</match>
	</Operation>

</Patch>
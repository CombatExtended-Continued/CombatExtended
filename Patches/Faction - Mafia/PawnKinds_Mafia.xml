<?xml version="1.0" encoding="utf-8" ?>
<Patch>

  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Faction : Mafia</li>
    </mods>

    <match Class="PatchOperationSequence">
      <operations>

        <!-- === Leader & Trader === -->
        <li Class="PatchOperationAddModExtension">
          <xpath>Defs/PawnKindDef[defName="Mafia_leader" or defName="Mafia_trader"]</xpath>
          <value>
            <li Class="CombatExtended.LoadoutPropertiesExtension">
              <primaryMagazineCount>
                <min>3</min>
                <max>5</max>
              </primaryMagazineCount>
              <sidearms>
                <li>
                  <generateChance>0.75</generateChance>
                  <sidearmMoney>
                    <min>100</min>
                    <max>200</max>
                  </sidearmMoney>
                  <weaponTags>
                    <li>Mafiamelee</li>
                  </weaponTags>
                </li>
              </sidearms>
            </li>
          </value>
        </li>

        <!-- === Molotov === -->
        <li Class="PatchOperationAddModExtension">
          <xpath>Defs/PawnKindDef[defName="Mafia_molotov"]</xpath>
          <value>
            <li Class="CombatExtended.LoadoutPropertiesExtension">
              <primaryMagazineCount>
                <min>3</min>
                <max>5</max>
              </primaryMagazineCount>
              <sidearms>
                <li>
                  <sidearmMoney>
                    <min>100</min>
                    <max>200</max>
                  </sidearmMoney>
                  <weaponTags>
                    <li>Mafiamelee</li>
                  </weaponTags>
                </li>
              </sidearms>
            </li>
          </value>
        </li>

        <!-- === Fusil & Pompe === -->
        <li Class="PatchOperationAddModExtension">
          <xpath>Defs/PawnKindDef[defName="Mafia_fusil" or defName="Mafia_pompe"]</xpath>
          <value>
            <li Class="CombatExtended.LoadoutPropertiesExtension">
              <primaryMagazineCount>
                <min>3</min>
                <max>5</max>
              </primaryMagazineCount>
              <sidearms>
                <li>
                  <generateChance>0.3</generateChance>
                  <sidearmMoney>
                    <min>100</min>
                    <max>200</max>
                  </sidearmMoney>
                  <weaponTags>
                    <li>Mafiamelee</li>
                  </weaponTags>
                </li>
              </sidearms>
            </li>
          </value>
        </li>

      </operations>
    </match>

  </Operation>

</Patch>
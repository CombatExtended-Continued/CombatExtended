<?xml version="1.0" encoding="utf-8" ?>

<Patch>
	<Operation Class="PatchOperationFindMod">
    <mods>
		<li>Tsar Armory</li>
    </mods>
		<match Class="PatchOperationSequence">
		 <operations>

		  <!-- ========== Tools ========== -->

		  <li Class="PatchOperationReplace">
			<xpath>Defs/ThingDef[defName="Gun_Nagant_TA"]/tools</xpath>

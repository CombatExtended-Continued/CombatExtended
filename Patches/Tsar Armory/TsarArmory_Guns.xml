		  <!-- ========== Fedorov Avtomat ========== -->

		  <li Class="CombatExtended.PatchOperationMakeGunCECompatible">
			<defName>Gun_Fedorov_TA</defName>
			<statBases>
			  <Mass>4.40</Mass>
			  <RangedWeapon_Cooldown>0.37</RangedWeapon_Cooldown>
			  <SightsEfficiency>1</SightsEfficiency>
			  <ShotSpread>0.03</ShotSpread>
			  <SwayFactor>1.49</SwayFactor>
			  <Bulk>10.45</Bulk>
			  <WorkToMake>18000</WorkToMake>
			</statBases>
			<costList>
				<Steel>80</Steel>
				<ComponentIndustrial>4</ComponentIndustrial>
				<WoodLog>10</WoodLog>
			</costList>
			<Properties>
			  <recoilAmount>1.78</recoilAmount>
			  <verbClass>CombatExtended.Verb_ShootCE</verbClass>
			  <hasStandardCommand>true</hasStandardCommand>
			  <defaultProjectile>Bullet_65x50mmSRArisaka_FMJ</defaultProjectile>
			  <warmupTime>1.1</warmupTime>
			  <range>51</range>
			  <burstShotCount>5</burstShotCount>
			  <ticksBetweenBurstShots>10</ticksBetweenBurstShots>
			  <soundCast>Shot_Fedorov</soundCast>
			  <soundCastTail>GunTail_Medium</soundCastTail>
			  <muzzleFlashScale>9</muzzleFlashScale>
			</Properties>
			<AmmoUser>
			  <magazineSize>25</magazineSize>
			  <reloadTime>4</reloadTime>
			  <ammoSet>AmmoSet_65x50mmSRArisaka</ammoSet>
			</AmmoUser>
			<FireModes>
			  <aiAimMode>AimedShot</aiAimMode>
			  <aimedBurstShotCount>3</aimedBurstShotCount>
			  <aiUseBurstMode>TRUE</aiUseBurstMode>
			</FireModes>
			<weaponTags>
				<li>IndustrialGunAdvanced</li>
			</weaponTags>
			<researchPrerequisite>Stage2b_TA</researchPrerequisite>
		  </li>

		  <!-- ========== Nagant 1895 ========== -->

	      <li Class="CombatExtended.PatchOperationMakeGunCECompatible">
	      	<defName>Gun_Nagant_TA</defName>
	      	<statBases>
	      	  <Mass>0.80</Mass>
	      	  <RangedWeapon_Cooldown>0.38</RangedWeapon_Cooldown>
	      	  <SightsEfficiency>0.7</SightsEfficiency>
	      	  <ShotSpread>0.17</ShotSpread>
	      	  <SwayFactor>1.05</SwayFactor>
	      	  <Bulk>2.35</Bulk>
	      	  <WorkToMake>10000</WorkToMake>
	      	</statBases>
	      	<costList>
			  <Steel>45</Steel>
			  <ComponentIndustrial>1</ComponentIndustrial>
			  <WoodLog>5</WoodLog>
	      	</costList>
	      	<Properties>
	      	  <verbClass>CombatExtended.Verb_ShootCE</verbClass>
	      	  <hasStandardCommand>true</hasStandardCommand>
	      	  <defaultProjectile>Bullet_762x38mmR_FMJ</defaultProjectile>
	      	  <warmupTime>0.6</warmupTime>
	      	  <range>12</range>
			  <soundCast>Shot_Nagant</soundCast>
			  <soundCastTail>GunTail_Medium</soundCastTail>
	      	  <muzzleFlashScale>9</muzzleFlashScale>
	      	</Properties>
	      	<AmmoUser>
	      	  <magazineSize>7</magazineSize>
			  <reloadOneAtATime>true</reloadOneAtATime>
			  <reloadTime>0.85</reloadTime>
	      	  <ammoSet>AmmoSet_762x38mmR</ammoSet>
	      	</AmmoUser>
	      	<FireModes>
	      	  <aiUseBurstMode>FALSE</aiUseBurstMode>
	      	</FireModes>
	      	<weaponTags>
			  <li>Gun</li>
	      	  <li>CE_OneHandedWeapon</li>
	      	</weaponTags>
	      	<researchPrerequisite>Stage0b_TA</researchPrerequisite>
	      </li>

      	  <!-- ========== Mosin 1891 ========== -->

		  <li Class="CombatExtended.PatchOperationMakeGunCECompatible">
			<defName>Gun_Mosin_TA</defName>
			<statBases>
			  <Mass>4.00</Mass>
			  <RangedWeapon_Cooldown>1.17</RangedWeapon_Cooldown>
			  <SightsEfficiency>1</SightsEfficiency>
			  <ShotSpread>0.03</ShotSpread>
			  <SwayFactor>1.63</SwayFactor>
			  <Bulk>12.32</Bulk>
			  <WorkToMake>6000</WorkToMake>
			</statBases>
			<costList>
				<Steel>50</Steel>
				<ComponentIndustrial>3</ComponentIndustrial>
				<WoodLog>20</WoodLog>
			</costList>
			<Properties>
			  <verbClass>CombatExtended.Verb_ShootCE</verbClass>
			  <hasStandardCommand>true</hasStandardCommand>
			  <defaultProjectile>Bullet_762x54mmR_FMJ</defaultProjectile>
			  <warmupTime>1.1</warmupTime>
			  <range>55</range>
			  <soundCast>Shot_Mosin</soundCast>
			  <soundCastTail>GunTail_Medium</soundCastTail>
			  <muzzleFlashScale>9</muzzleFlashScale>
			</Properties>
			<AmmoUser>
			  <magazineSize>5</magazineSize>
			  <reloadTime>4.3</reloadTime>
			  <ammoSet>AmmoSet_762x54mmR</ammoSet>
			</AmmoUser>
			<FireModes>
			  <aiAimMode>AimedShot</aiAimMode>
			</FireModes>
			<weaponTags>
				<li>IndustrialGunAdvanced</li>
			</weaponTags>
			<researchPrerequisite>Stage0b_TA</researchPrerequisite>
		  </li>

		  <!-- ========== Winchester M1895 ========== -->

		  <li Class="CombatExtended.PatchOperationMakeGunCECompatible">
			<defName>Gun_M1895_TA</defName>
			<statBases>
			  <Mass>4.20</Mass>
			  <RangedWeapon_Cooldown>0.77</RangedWeapon_Cooldown>
			  <SightsEfficiency>1</SightsEfficiency>
			  <ShotSpread>0.03</ShotSpread>
			  <SwayFactor>1.60</SwayFactor>
			  <Bulk>11.75</Bulk>
			  <WorkToMake>12000</WorkToMake>
			</statBases>
			<costList>
				<Steel>50</Steel>
				<ComponentIndustrial>3</ComponentIndustrial>
				<WoodLog>20</WoodLog>
			</costList>
			<Properties>
			  <verbClass>CombatExtended.Verb_ShootCE</verbClass>
			  <hasStandardCommand>true</hasStandardCommand>
			  <defaultProjectile>Bullet_762x54mmR_FMJ</defaultProjectile>

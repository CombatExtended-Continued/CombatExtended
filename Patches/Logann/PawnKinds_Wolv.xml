<?xml version="1.0" encoding="utf-8" ?>

<Patch>
	<Operation Class="PatchOperationFindMod">
    <mods>
		<li>Logann Race (Continued)</li>
    </mods>
		<match Class="PatchOperationSequence">
		 <operations>

			<!-- ========== Civilians ========== -->
			<li Class="PatchOperationAddModExtension">
				<xpath>/Defs/PawnKindDef[@Name="WolvxCivBase"]</xpath>
				<value>
				  <li Class="CombatExtended.LoadoutPropertiesExtension">
					<primaryMagazineCount>
					  <min>2</min>
					  <max>4</max>
					</primaryMagazineCount>
				  </li>
				</value>
			</li>

			<!-- ========== Security ========== -->			
			<li Class="PatchOperationAddModExtension">
				<xpath>/Defs/PawnKindDef[defName="WolvxSecurityGuard"]</xpath>
				<value>
				  <li Class="CombatExtended.LoadoutPropertiesExtension">
					<primaryMagazineCount>
					  <min>3</min>
					  <max>5</max>
					</primaryMagazineCount>
					<shieldMoney>
					  <min>500</min>
					  <max>1400</max>
					</shieldMoney>
					<shieldTags>
					  <li>OutlanderShield</li>
					</shieldTags>
					<shieldChance>0.2</shieldChance>
					<sidearms>
					  <li>
						<generateChance>0.5</generateChance>
						<sidearmMoney>
						  <min>100</min>
						  <max>300</max>
						</sidearmMoney>
						<weaponTags>
						  <li>CE_Sidearm_Melee</li>
						</weaponTags>
					  </li>
					</sidearms>
				  </li>
				</value>
			</li>

			<li Class="PatchOperationAddModExtension">
				<xpath>/Defs/PawnKindDef[@Name="WolvxMilBase"]</xpath>
				<value>
				  <li Class="CombatExtended.LoadoutPropertiesExtension">
					<primaryMagazineCount>
					  <min>4</min>
					  <max>6</max>
					</primaryMagazineCount>
					<shieldMoney>
					  <min>500</min>
					  <max>1400</max>
					</shieldMoney>
					<shieldTags>
					  <li>OutlanderShield</li>
					</shieldTags>
					<shieldChance>0.3</shieldChance>
					<sidearms>
					  <li>
						<generateChance>0.6</generateChance>
						<sidearmMoney>
						  <min>100</min>
						  <max>300</max>
						</sidearmMoney>
						<weaponTags>
						  <li>CE_Sidearm_Melee</li>
						</weaponTags>
					  </li>
					</sidearms>
				  </li>
				</value>
			</li>

			<li Class="PatchOperationAddModExtension">
				<xpath>/Defs/PawnKindDef[defName="WolvxNinja"]</xpath>
				<value>
				  <li Class="CombatExtended.LoadoutPropertiesExtension">
					<primaryMagazineCount>
					  <min>4</min>
					  <max>8</max>
					</primaryMagazineCount>
					<sidearms>
					  <li>
						<generateChance>0.5</generateChance>
						<sidearmMoney>
						  <min>100</min>
						  <max>300</max>
						</sidearmMoney>
						<weaponTags>
						  <li>CE_Sidearm_Melee</li>
						</weaponTags>
					  </li>
					</sidearms>
				  </li>
				</value>
			</li>
			
      </operations>
    </match>
  </Operation>
</Patch>			  
            <label>shield</label>
            <capacities>
              <li>Blunt</li>
            </capacities>
            <power>14</power>
            <extraMeleeDamages>
            <li>
                <def>Stun</def>
                <amount>10</amount>
                <chance>0.25</chance>
            </li>
            </extraMeleeDamages>            

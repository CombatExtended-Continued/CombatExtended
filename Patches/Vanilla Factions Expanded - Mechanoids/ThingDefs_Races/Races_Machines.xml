        <MoveSpeed>2.8</MoveSpeed>
      </value>
    </li>

    <li Class="PatchOperationReplace">
      <xpath>Defs/ThingDef[defName="VFE_Mechanoids_Raider"]/statBases/MoveSpeed</xpath>
      <value>
        <MoveSpeed>3.2</MoveSpeed>

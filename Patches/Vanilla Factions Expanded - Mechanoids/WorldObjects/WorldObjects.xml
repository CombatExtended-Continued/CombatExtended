						<li Class="CombatExtended.WorldObjects.WorldObjectCompProperties_Health">
							<healthModifier>2.6</healthModifier>
							<techLevelNoImpact>true</techLevelNoImpact>
							<chanceToNegateDamage>0.12</chanceToNegateDamage>
						</li>

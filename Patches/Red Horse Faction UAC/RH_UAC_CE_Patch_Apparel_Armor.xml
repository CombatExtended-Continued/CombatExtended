<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationFindMod">
    <mods>
		<li>[RH] Faction: UAC</li>
		<li>[RH] DOOM: UAC Kit</li>
    </mods>
		<match Class="PatchOperationSequence">
		 <operations>

			<!-- ========== UAC Phobos Armor ========== -->

			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="RHApparel_DOOM_PhobosSuit"]/statBases</xpath>
				<value>
					<Bulk>100</Bulk>
					<WornBulk>15</WornBulk>
				</value>
			</li>

			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="RHApparel_DOOM_PhobosSuit"]/equippedStatOffsets</xpath>
				<value>
					<CarryWeight>80</CarryWeight>
					<CarryBulk>20</CarryBulk>
					<ToxicSensitivity>-0.50</ToxicSensitivity>
				</value>
			</li>

			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="RHApparel_DOOM_PhobosSuit"]/statBases/ArmorRating_Sharp</xpath>
				<value>
					<ArmorRating_Sharp>25</ArmorRating_Sharp>
				</value>
			</li>

			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="RHApparel_DOOM_PhobosSuit"]/statBases/ArmorRating_Blunt</xpath>
				<value>
					<ArmorRating_Blunt>60</ArmorRating_Blunt>
				</value>
			</li>

			<!-- ========== UAC Power Armor ========== -->

			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[@Name="RH_UACPowerArmorBase"]/statBases</xpath>
				<value>
					<Bulk>100</Bulk>
					<WornBulk>15</WornBulk>
				</value>
			</li>

			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[@Name="RH_UACPowerArmorBase"]/equippedStatOffsets</xpath>
				<value>
					<CarryWeight>80</CarryWeight>
					<CarryBulk>20</CarryBulk>
					<ToxicSensitivity>-0.50</ToxicSensitivity>
				</value>
			</li>

			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[@Name="RH_UACPowerArmorBase"]/statBases/ArmorRating_Sharp</xpath>
				<value>
					<ArmorRating_Sharp>22</ArmorRating_Sharp>
				</value>
			</li>

			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[@Name="RH_UACPowerArmorBase"]/statBases/ArmorRating_Blunt</xpath>
				<value>
					<ArmorRating_Blunt>55</ArmorRating_Blunt>
				</value>
			</li>

			</operations>
			</match>
		</Operation>
	</Patch>
<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Arachne Race</li>
			<li>Arachne Race (Continued)</li>
		</mods>
		<match Class="PatchOperationSequence">
		<operations>
			
			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="Leather_Arachne"]/statBases</xpath>
				<value>
					<StuffPower_Armor_Blunt>0.30</StuffPower_Armor_Blunt>
				</value>
			</li>
			
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="Leather_Arachne"]/statBases/StuffPower_Armor_Sharp</xpath>
				<value>
					<StuffPower_Armor_Sharp>0.20</StuffPower_Armor_Sharp>
				</value>
			</li>
			
			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="Leather_Arachne"]/stuffProps</xpath>
				<value>
					<categories>
						<li>SoftArmor</li>
					</categories>	
				</value>
			</li>
		</operations>
		</match>
	</Operation>
</Patch>

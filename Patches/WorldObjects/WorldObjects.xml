<?xml version="1.0" encoding="utf-8"?>
<Patch>

	<Operation Class="PatchOperationAdd">
		<xpath>Defs/WorldObjectDef[defName="Settlement" or defName="Site"]/comps</xpath>
		<value>
			<li Class="CombatExtended.WorldObjects.WorldObjectCompProperties_Health" />
			<li Class="CombatExtended.WorldObjects.WorldObjectCompProperties_Hostility" />
		</value>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<xpath>Defs/WorldObjectDef[defName="PeaceTalks"]/comps</xpath>
		<value>
			<li Class="CombatExtended.WorldObjects.WorldObjectCompProperties_Health">
				<destoyedInstantly>true</destoyedInstantly>
			</li>
			<li Class="CombatExtended.WorldObjects.WorldObjectCompProperties_Hostility" />
		</value>
	</Operation>

</Patch>
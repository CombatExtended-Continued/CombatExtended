<?xml version="1.0" encoding="utf-8" ?>
<Patch>

  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Bastyon</li>
    </mods>

    <match Class="PatchOperationSequence">
      <operations>

      <!-- Natural Armor -->
      <!-- Bast_Critter -->
      <li Class="PatchOperationAdd">
        <xpath>
            Defs/BodyDef[defName="Bast_Critter"]//*[
            def="Body" or 
            def="Leg" or 
            def="Neck"]
          </xpath>
        <value>
          <groups />
        </value>
      </li>

      <li Class="PatchOperationAdd">
        <xpath>
          Defs/BodyDef[defName="Bast_Critter"]//*[
          def="Body" or 
          def="Neck" or
          def="AnimalJaw" or
          def="Leg" or
          def="Foot" or
          def="Head"]/groups
        </xpath>
        <value>
          <li>CoveredByNaturalArmor</li>
        </value>
      </li>

      <!-- Natural Armor -->
      <!-- Bast_SnippingSnail -->
      <li Class="PatchOperationAdd">
        <xpath>
            Defs/BodyDef[defName="Bast_SnippingSnail"]//*[
            def="Bast_SnailBody" or 
            def="Bast_GastropodShell"]
          </xpath>
        <value>
          <groups />
        </value>
      </li>

      <li Class="PatchOperationAdd">
        <xpath>
          Defs/BodyDef[defName="Bast_SnippingSnail"]//*[
          def="Bast_GastropodShell" or 
          def="Bast_BladedRightLeg" or
          def="Bast_BladedLeftLeg"]/groups
        </xpath>
        <value>
          <li>CoveredByNaturalArmor</li>
        </value>
      </li>


      <!-- Natural Armor -->
      <!-- Anty the vore ant -->
      <li Class="PatchOperationAdd">
        <xpath>
            Defs/BodyDef[defName="Bast_Ant"]//*[
            def="Body" or 
            def="Bast_Thorax" or 
            def="Pronotum" or 
            def="InsectNostril" or 
            def="Bast_Abdomen" or 
            def="Bast_Antennae"]
          </xpath>
        <value>
          <groups />
        </value>
      </li>

      <li Class="PatchOperationAdd">
        <xpath>
          Defs/BodyDef[defName="Bast_Ant"]//*[
          def="Body" or 
          def="Bast_Thorax" or 
          def="Pronotum" or 
          def="InsectNostril" or 
          def="InsectHead" or 
          def="Bast_InsectMouth" or 
          def="Bast_Antennae" or 
          def="Bast_Abdomen" or
          def="Bast_SmallInsectLeg"]/groups
        </xpath>
        <value>
          <li>CoveredByNaturalArmor</li>
        </value>
      </li>

      <!-- Bahlrin -->

      <li Class="PatchOperationAdd">
        <xpath>
            Defs/BodyDef[defName="Bast_BahlrinBody"]//*[
            def="Body" or 
            def="Tail" or 
            def="Neck" or 
            def="Bast_Wing"]
          </xpath>
        <value>
          <groups />
        </value>
      </li>

      <li Class="PatchOperationAdd">
        <xpath>
          Defs/BodyDef[defName="Bast_BahlrinBody"]//*[
          def="Body" or 
          def="Tail" or 
          def="Neck" or 
          def="AnimalJaw" or 
          def="Head" or 
          def="Bast_Wing"]/groups
        </xpath>
        <value>
          <li>CoveredByNaturalArmor</li>
        </value>
      </li>

      <!-- BastLimblessGelatinous -->

      <li Class="PatchOperationAdd">
        <xpath>
          Defs/BodyDef[defName="Bast_LimblessGelatinous"]//*[def="Body"]/groups
        </xpath>
        <value>
          <li>CoveredByNaturalArmor</li>
        </value>
      </li>


      <!-- Bast_LimblessHovering -->

      <li Class="PatchOperationAdd">
        <xpath>
            Defs/BodyDef[defName="Bast_LimblessHovering"]//*[
            def="Body"]
          </xpath>
        <value>
          <groups />
        </value>
      </li>

      <li Class="PatchOperationAdd">
        <xpath>
          Defs/BodyDef[defName="Bast_LimblessHovering"]//*[
          def="Body" or 
          def="Head"]/groups
        </xpath>
        <value>
          <li>CoveredByNaturalArmor</li>
        </value>
      </li>

      <!-- Bast_Spider -->
      <li Class="PatchOperationAdd">
        <xpath>
            Defs/BodyDef[defName="Bast_Spider"]//*[
            def="Body" or 
            def="Bast_Thorax" or 
            def="Pronotum" or 
            def="InsectNostril"]
          </xpath>
        <value>
          <groups />
        </value>
      </li>

      <li Class="PatchOperationAdd">
        <xpath>
          Defs/BodyDef[defName="Bast_Spider"]//*[
          def="Body" or 
          def="Bast_Thorax" or 
          def="Pronotum" or 
          def="InsectNostril" or 
          def="InsectHead" or 
          def="Bast_InsectMouth" or 
          def="InsectLeg"]/groups
        </xpath>
        <value>
          <li>CoveredByNaturalArmor</li>
        </value>
      </li>

      <li Class="PatchOperationAdd">
        <xpath>
          Defs/BodyDef[defName="Bast_SvarogBody"]//*[
          def="Bast_SavrogMainBody" or 
          def="Bast_SmolderingFist"]/groups
        </xpath>
        <value>
          <li>CoveredByNaturalArmor</li>
        </value>
      </li>

      <li Class="PatchOperationAdd">
        <xpath>
          Defs/BodyDef[defName="Bast_LightningElementalBody"]//*[
          def="Bast_LightningElementalMainBody" or 
          def="Bast_GalvanizedFist"]/groups
        </xpath>
        <value>
          <li>CoveredByNaturalArmor</li>
        </value>
      </li>

      </operations>
    </match>
  </Operation>

</Patch>

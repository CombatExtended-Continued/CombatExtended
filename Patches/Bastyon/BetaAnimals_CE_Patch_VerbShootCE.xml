<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
		<li>Bastyon</li>
		</mods>

			<match Class="PatchOperationSequence">
				<operations>

					<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="Bast_Alluvium"]/verbs</xpath>
					<value>
						<verbs>
							<li Class="CombatExtended.VerbPropertiesCE">
							<verbClass>CombatExtended.Verb_ShootCE</verbClass>
							<hasStandardCommand>true</hasStandardCommand>
							<defaultProjectile>Bast_AlluviumGoo</defaultProjectile>
							<warmupTime>1.5</warmupTime>
							<burstShotCount>2</burstShotCount>
							<ticksBetweenBurstShots>15</ticksBetweenBurstShots>
							<minRange>2</minRange>
							<range>12</range>
							<soundCast>Bast_AlluviumGoo</soundCast>
							<muzzleFlashScale>0</muzzleFlashScale>
							<commonality>0.8</commonality>
							</li>
						</verbs>
					</value>
					</li>

					<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="Bast_Critter"]/verbs</xpath>
					<value>
						<verbs>
							<li Class="CombatExtended.VerbPropertiesCE">
							<verbClass>CombatExtended.Verb_ShootCE</verbClass>
							<hasStandardCommand>true</hasStandardCommand>
							<defaultProjectile>Bast_CritterSpike</defaultProjectile>
							<warmupTime>2</warmupTime>
							<burstShotCount>1</burstShotCount>
							<ticksBetweenBurstShots>2</ticksBetweenBurstShots>
							<minRange>1.9</minRange>
							<range>10</range>
							<soundCast>Bast_CritterSpike</soundCast>
							<muzzleFlashScale>0</muzzleFlashScale>
							<label>critter spike</label>
							<commonality>0.8</commonality>
							</li>
						</verbs>
					</value>
					</li>

					<!-- Grey spider -->

					<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="Bast_Gray_Terror"]/verbs</xpath>
						<value>
							<verbs>
								<li Class="CombatExtended.VerbPropertiesCE">
								<verbClass>CombatExtended.Verb_ShootCE</verbClass>
								<hasStandardCommand>true</hasStandardCommand>
								<defaultProjectile>Bast_Web</defaultProjectile>
								<warmupTime>2</warmupTime>
								<burstShotCount>2</burstShotCount>
								<ticksBetweenBurstShots>25</ticksBetweenBurstShots>
								<minRange>2</minRange>
								<range>15</range>
								<soundCast>Bast_Web</soundCast>
								<label>spider web</label>
								<muzzleFlashScale>0</muzzleFlashScale>
								<commonality>0.5</commonality>
								</li>
							</verbs>
						</value>
					</li>

				<!-- Scire -->

					<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="Bast_Scire"]/verbs</xpath>
						<value>
							<verbs>
								<li Class="CombatExtended.VerbPropertiesCE">
								<verbClass>CombatExtended.Verb_ShootCE</verbClass>
								<hasStandardCommand>true</hasStandardCommand>
								<defaultProjectile>Bast_ScireFireBall</defaultProjectile>
								<warmupTime>2.5</warmupTime>
								<burstShotCount>3</burstShotCount>
								<ticksBetweenBurstShots>18</ticksBetweenBurstShots>
								<minRange>2</minRange>
								<range>16</range>
								<soundCast>Bast_ScireFireBall</soundCast>
								<muzzleFlashScale>0</muzzleFlashScale>
								<label>eternal fire</label>
								<commonality>0.75</commonality>
								</li>
							</verbs>
						</value>
					</li>

					<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="Bast_Snipping_Snail"]/verbs</xpath>
						<value>
							<verbs>
								<li Class="CombatExtended.VerbPropertiesCE">
								<verbClass>CombatExtended.Verb_ShootCE</verbClass>
								<hasStandardCommand>true</hasStandardCommand>
								<defaultProjectile>Bast_SnippingSnailAcid</defaultProjectile>
								<warmupTime>2.5</warmupTime>
								<burstShotCount>1</burstShotCount>
								<minRange>2</minRange>
								<range>8</range>
								<soundCast>Bast_SnippingSnailAcid</soundCast>
								<muzzleFlashScale>0</muzzleFlashScale>
								<label>acid stream</label>
								<commonality>0.8</commonality>
								</li>
							</verbs>
						</value>
					</li>

					<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="Bast_Soul_Eater"]/verbs</xpath>
					<value>
						<verbs>
							<li Class="CombatExtended.VerbPropertiesCE">
							<verbClass>CombatExtended.Verb_ShootCE</verbClass>
							<hasStandardCommand>true</hasStandardCommand>
							<defaultProjectile>Bast_BlisteringWind</defaultProjectile>
							<warmupTime>3</warmupTime>
							<burstShotCount>4</burstShotCount>
							<ticksBetweenBurstShots>2</ticksBetweenBurstShots>
							<minRange>1.9</minRange>
							<range>12</range>
							<soundCast>Bast_BlisteringWind</soundCast>
							<muzzleFlashScale>0</muzzleFlashScale>
							<label>blistering wind</label>
							<commonality>0.8</commonality>
							</li>
						</verbs>
					</value>
					</li>

					<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="Bast_Lightning_Elemental"]/verbs</xpath>
					<value>
						<verbs>
							<li Class="CombatExtended.VerbPropertiesCE">
							<verbClass>CombatExtended.Verb_ShootCE</verbClass>
			<hasStandardCommand>true</hasStandardCommand>
				<defaultProjectile>Bast_LightningBolt</defaultProjectile>
				<warmupTime>3</warmupTime>
				<burstShotCount>3</burstShotCount>
				<minRange>1.1</minRange>
				<range>36</range>
				<soundCast>Thunder_OnMap</soundCast>
				<muzzleFlashScale>0</muzzleFlashScale>
				<label>lightning bolt</label>
				<commonality>.5</commonality>
							</li>
						</verbs>
					</value>
					</li>

					<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="Bast_Svarog"]/verbs</xpath>
					<value>
        				<verbs>
						<li>
							<verbClass>Verb_Shoot</verbClass>
							<accuracyTouch>1</accuracyTouch>
							<accuracyShort>1</accuracyShort>
							<accuracyMedium>.85</accuracyMedium>
							<accuracyLong>.75</accuracyLong>
							<hasStandardCommand>true</hasStandardCommand>
							<defaultProjectile>Bast_SvarogFireStream</defaultProjectile>
							<warmupTime>3.5</warmupTime>
							<burstShotCount>2</burstShotCount>
							<minRange>3</minRange>
							<range>12</range>
							<soundCast>Bast_FireStream</soundCast>
							<muzzleFlashScale>0</muzzleFlashScale>
							<label>searing fire</label>
							<commonality>1</commonality>
						</li>
					</verbs>
					</value>
					</li>

				</operations>
			</match>
	</Operation>
</Patch>

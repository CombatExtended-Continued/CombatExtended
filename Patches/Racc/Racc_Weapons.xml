<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Racc Race</li>
		</mods>
		<match Class="PatchOperationSequence">
		<operations>
	  
      <!-- Walthracc PPK -->
      <li Class="CombatExtended.PatchOperationMakeGunCECompatible">
        <defName>Racc_WPPK</defName>
				<statBases>
					<Mass>0.45</Mass>
					<RangedWeapon_Cooldown>0.3</RangedWeapon_Cooldown>
					<SightsEfficiency>1</SightsEfficiency>
					<ShotSpread>0.30</ShotSpread>
					<SwayFactor>1</SwayFactor>
					<Bulk>1</Bulk>
					<WorkToMake>15000</WorkToMake>
				</statBases>
				<costList>
					<Steel>25</Steel>
					<ComponentIndustrial>6</ComponentIndustrial>
				</costList>
				<Properties>
					<recoilAmount>2</recoilAmount>
					<verbClass>CombatExtended.Verb_ShootCE</verbClass>
					<hasStandardCommand>true</hasStandardCommand>
					<defaultProjectile>Bullet_22LR_FMJ</defaultProjectile>
					<warmupTime>0.2</warmupTime>
					<range>12</range>
					<soundCast>Xen_SD</soundCast>
					<soundCastTail>GunTail_Light</soundCastTail>
					<muzzleFlashScale>1</muzzleFlashScale>
				</Properties>
				<AmmoUser>
					<magazineSize>7</magazineSize>
					<reloadTime>2</reloadTime>
					<ammoSet>AmmoSet_22LR</ammoSet>
				</AmmoUser>
				<FireModes />
				<weaponTags>
					<li>CE_Sidearm</li>
					<li>CE_AI_Pistol</li>
					<li>CE_OneHandedWeapon</li>
				</weaponTags>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="Racc_WPPK"]/tools</xpath>
				<value>
					<tools>
						<li Class="CombatExtended.ToolCE">
							<label>grip</label>
							<capacities>
								<li>Blunt</li>
							</capacities>
							<power>5</power>
							<cooldownTime>1</cooldownTime>
							<chanceFactor>1.5</chanceFactor>
							<armorPenetrationBlunt>0.555</armorPenetrationBlunt>
							<linkedBodyPartsGroup>Grip</linkedBodyPartsGroup>
						</li>
						<li Class="CombatExtended.ToolCE">
							
							<label>barrel</label>
							<capacities>
								<li>Blunt</li>
							</capacities>
							<power>2</power>
							<cooldownTime>0.5</cooldownTime>
							<armorPenetrationBlunt>0.555</armorPenetrationBlunt>
							<linkedBodyPartsGroup>Barrel</linkedBodyPartsGroup>
						</li>
						<li Class="CombatExtended.ToolCE">
							
							<label>muzzle</label>
							<capacities>
								<li>Poke</li>
							</capacities>
							<power>2</power>
							<cooldownTime>0.5</cooldownTime>
							<armorPenetrationBlunt>0.555</armorPenetrationBlunt>
							<linkedBodyPartsGroup>Muzzle</linkedBodyPartsGroup>
						</li>
					</tools>
				</value>
			</li>
	  
      <!-- etc.. -->
    </operations>
	</match>
  </Operation>
</Patch>	
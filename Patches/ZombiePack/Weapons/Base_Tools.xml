<?xml version="1.0" encoding="utf-8"?>
<Patch>
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Call of Duty: Pack A Punch</li>
            <li>Call of Duty: Zombies Pack</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>
            <!--===== Must construct additional tools =====-->
                <li Class="PatchOperationReplace">
                    <xpath>Defs/ThingDef[
                                            defName="CodZP_Gun_Revolver-PAP" or
                                            defName="CodZP_Gun_Autopistol-PAP" or 
                                            defName="CodZP_Gun_MachinePistol-PAP" or
                                            defName="CodZP_Gun_HeavySMG-PAP" or
                                            defName="CodZP_Gun_AssaultRifle-PAP"]/tools</xpath>
                    <value>
                        <tools>
                            <li Class="CombatExtended.ToolCE">
                                <label>grip</label>
                                <capacities>
                                    <li>Blunt</li>
                                </capacities>
                                <power>9</power>
                                <cooldownTime>2</cooldownTime>
                                <chanceFactor>1.5</chanceFactor>
                                <armorPenetrationBlunt>0.555</armorPenetrationBlunt>
                                <linkedBodyPartsGroup>Grip</linkedBodyPartsGroup>
                            </li>
                            <li Class="CombatExtended.ToolCE">
                                <label>barrel</label>
                                <capacities>
                                    <li>Blunt</li>
                                    <li>Poke</li>
                                </capacities>
                                <power>2</power>
                                <cooldownTime>2</cooldownTime>
                                <armorPenetrationBlunt>0.555</armorPenetrationBlunt>
                                <linkedBodyPartsGroup>Barrel</linkedBodyPartsGroup>
                            </li>
                        </tools>
                    </value>
                </li>
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[
                                            defName="CodZP_Gun_IncendiaryLauncher-PAP" or                    
                                            defName="CodZP_Gun_BoltActionRifle-PAP" or
                                            defName="CodZP_Gun_PumpShotgun-PAP" or
                                            defName="CodZP_Gun_ChainShotgun-PAP" or
                                            defName="CodZP_Gun_LMG-PAP" or
                                            defName="CodZP_Gun_SniperRifle-PAP" or
                                            defName="CodZP_Gun_ChargeRifle-PAP"]/tools</xpath>
                    <value>
                        <tools>
                            <li Class="CombatExtended.ToolCE">
                                <label>stock</label>
                                <capacities>
                                    <li>Blunt</li>
                                </capacities>
                                <power>9</power>
                                <cooldownTime>2</cooldownTime>
                                <chanceFactor>1.5</chanceFactor>
                                <armorPenetrationBlunt>2.755</armorPenetrationBlunt>
                                <linkedBodyPartsGroup>Stock</linkedBodyPartsGroup>
                            </li>
                            <li Class="CombatExtended.ToolCE">
                                <label>barrel</label>
                                <capacities>
                                    <li>Blunt</li>
                                </capacities>
                                <power>9</power>
                                <cooldownTime>2</cooldownTime>
                                <armorPenetrationBlunt>1.630</armorPenetrationBlunt>
                                <linkedBodyPartsGroup>Barrel</linkedBodyPartsGroup>
                            </li>
                        </tools>
                    </value>
                </li>
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[
                                            defName="CodZP_Gun_Minigun-PAP"]/tools</xpath>
                    <value>
                        <tools>
                            <li Class="CombatExtended.ToolCE">
                                <label>barrel</label>
                                <capacities>
                                    <li>Blunt</li>
                                </capacities>
                                <power>12</power>
                                <cooldownTime>2</cooldownTime>
                                <armorPenetrationBlunt>1.630</armorPenetrationBlunt>
                                <linkedBodyPartsGroup>Barrel</linkedBodyPartsGroup>
                            </li>
                        </tools>
                    </value>
                </li>
            </operations>
        </match>
    </Operation>
</Patch>
<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Call of Duty: Zombies Pack</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>

		<li Class="PatchOperationAdd">
			<xpath>Defs</xpath>
			<value>

<!--Buck-->
  <ThingDef ParentName="CODZP_BlunderBulletPunched">
    <defName>Bullet_Magmagat_Buck_Punched</defName>
    <label>buckshot pellet</label>
    <graphicData>
      <texPath>Things/Projectile/Shotgun_Pellet</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <color>(255, 100, 0)</color>
    </graphicData>
    <projectile Class="CombatExtended.ProjectilePropertiesCE">
      <damageAmountBase>22</damageAmountBase>
      <armorPenetrationSharp>4</armorPenetrationSharp>
      <armorPenetrationBlunt>9</armorPenetrationBlunt>
      <secondaryDamage>
				<li>
			  	<def>Flame_Secondary</def>
			  	<amount>10</amount>
				</li>
		  </secondaryDamage>
    </projectile>
  </ThingDef>

<!--Slug-->
  <ThingDef ParentName="CODZP_BlunderBulletPunched">
    <defName>Bullet_Magmagat_Slug_Punched</defName>
    <label>Slug shot</label>
    <graphicData>
      <texPath>Things/Projectile/Bullet_big</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <color>(255, 100, 0)</color>
    </graphicData>
    <projectile Class="CombatExtended.ProjectilePropertiesCE">
      <damageAmountBase>88</damageAmountBase>
      <pelletCount>1</pelletCount>
      <armorPenetrationSharp>4</armorPenetrationSharp>
      <armorPenetrationBlunt>9</armorPenetrationBlunt>
      <secondaryDamage>
				<li>
			  	<def>Flame_Secondary</def>
			  	<amount>16</amount>
				</li>
		  </secondaryDamage>
    </projectile>
  </ThingDef>
			</value>
			</li>

			</operations>
		</match>
	</Operation>

</Patch>
<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Call of Duty: Wonder Weapons</li>
			<li>Call of Duty: Zombies Pack</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>

		<li Class="PatchOperationAdd">
			<xpath>Defs</xpath>
			<value>

<!--Fire-->
	<ThingDef ParentName="BaseElementalStaffBullet">
		<defName>Bullet_Elemental_Staff_Fire</defName>
		<label>Fire Projectile</label>
		<graphicData>
			<color>(255,48,48)</color>
		</graphicData>
		<projectile Class="CombatExtended.ProjectilePropertiesCE">
			<pelletCount>3</pelletCount>
			<damageAmountBase>1</damageAmountBase>
			<armorPenetrationSharp>1</armorPenetrationSharp>
			<armorPenetrationBlunt>1</armorPenetrationBlunt>
			<spreadMult>45</spreadMult>
		</projectile>
		<comps>
			<li Class="CombatExtended.CompProperties_ExplosiveCE">
				<damageAmountBase>30</damageAmountBase>
				<explosiveDamageType>Bomb</explosiveDamageType>
				<explosiveRadius>1.9</explosiveRadius>
				<explosionSound>MortarBomb_Explode</explosionSound>
				<applyDamageToExplosionCellsNeighbors>true</applyDamageToExplosionCellsNeighbors>
			</li>
		</comps>
	</ThingDef>

<!--Wind-->
	<ThingDef ParentName="BaseElementalStaffBullet">
		<defName>Bullet_Elemental_Staff_Wind</defName>
		<label>Wind Projectile</label>
		<graphicData>
			<color>(0, 255, 0)</color>
		</graphicData>
		<projectile Class="CombatExtended.ProjectilePropertiesCE">
			<damageAmountBase>1</damageAmountBase>
			<armorPenetrationSharp>1</armorPenetrationSharp>
			<armorPenetrationBlunt>1</armorPenetrationBlunt>
		</projectile>
	</ThingDef>

<!--Ice-->
	<ThingDef ParentName="BaseElementalStaffBullet">
		<defName>Bullet_Elemental_Staff_Ice</defName>
		<label>Ice Projectile</label>
		<graphicData>
			<color>(220,243,255)</color>
		</graphicData>
		<projectile Class="CombatExtended.ProjectilePropertiesCE">
			<damageDef>CodZP_Frostbite</damageDef>
			<damageAmountBase>1</damageAmountBase>
			<armorPenetrationSharp>1</armorPenetrationSharp>
			<armorPenetrationBlunt>1</armorPenetrationBlunt>
		</projectile>
	</ThingDef>

<!--Lightning-->
	<ThingDef ParentName="BaseElementalStaffBullet">
		<defName>Bullet_Elemental_Staff_Lightning</defName>
		<label>Lightning Projectile</label>
		<graphicData>
			<shaderType>TransparentPostLight</shaderType>
			<color>(113, 4, 255)</color>
		</graphicData>
		<projectile Class="CombatExtended.ProjectilePropertiesCE">
			<damageDef>Electrical</damageDef>
			<pelletCount>2</pelletCount>
			<damageAmountBase>1</damageAmountBase>
			<armorPenetrationSharp>1</armorPenetrationSharp>
			<armorPenetrationBlunt>1</armorPenetrationBlunt>
			<spreadMult>10</spreadMult>
		</projectile>
	</ThingDef>

			</value>
			</li>

			</operations>
		</match>
	</Operation>

</Patch>
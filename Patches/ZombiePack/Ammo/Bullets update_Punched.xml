<?xml version="1.0" encoding="UTF-8"?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Call of Duty: Zombies Pack</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[
                                        defName="Bullet_Acidgat_Buck_Punched" or
                                        defName="Bullet_Acidgat_Slug_Punched"]/projectile/damageDef</xpath>
					<value>
						<damageDef>CodZP_Toxic_Burn</damageDef>
					</value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="Bullet_Winters_Cryo_Punched"]/projectile/damageDef</xpath>
					<value>
						<damageDef>CodZP_Frostbite</damageDef>
					</value>
				</li>
			</operations>
		</match>
	</Operation>
</Patch>
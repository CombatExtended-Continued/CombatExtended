<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Call of Duty: Wonder Weapons</li>
			<li>Call of Duty: Zombies Pack</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>

		<li Class="PatchOperationAdd">
			<xpath>Defs</xpath>
			<value>

  <ThingCategoryDef>
    <defName>CODZP_AmmoBlunder</defName>
    <label>Blunder</label>
    <parent>AmmoWonders</parent>
  </ThingCategoryDef>

  <!-- ==================== AmmoSet ========================== -->

  <CombatExtended.AmmoSetDef>
    <defName>CODZP_AmmoSet_Blunder</defName>
    <label>Blundergat</label>
    <ammoTypes>
      <Ammo_Blunder_Buck>Bullet_Blunder_Buck</Ammo_Blunder_Buck>
    </ammoTypes>
		<similarTo>AmmoSet_12Gauge</similarTo>
  </CombatExtended.AmmoSetDef>

  <CombatExtended.AmmoSetDef>
    <defName>CODZP_AmmoSet_Acidgat</defName>
    <label>Acidgat</label>
    <ammoTypes>
      <Ammo_Acidgat_Buck>Bullet_Acidgat_Buck</Ammo_Acidgat_Buck>
    </ammoTypes>
		<similarTo>CODZP_AmmoSet_Blunder</similarTo>
  </CombatExtended.AmmoSetDef>

  <CombatExtended.AmmoSetDef>
    <defName>CODZP_AmmoSet_Magmagat</defName>
    <label>Magmagat</label>
    <ammoTypes>
      <Ammo_Magmagat_Buck>Bullet_Magmagat_Buck</Ammo_Magmagat_Buck>
    </ammoTypes>
		<similarTo>CODZP_AmmoSet_Blunder</similarTo>
  </CombatExtended.AmmoSetDef>

  <!-- ==================== Ammo ========================== -->

  <ThingDef Class="CombatExtended.AmmoDef" Name="CODZP_BaseBlunderAmmo" ParentName="SmallAmmoBase" Abstract="True">
    <description>Extremely common shotgun caliber used in almost every application, from hunting over riot control to military firearms.</description>
    <statBases>
      <Mass>0.023</Mass>
      <Bulk>0.06</Bulk>
    </statBases>
    <tradeTags>
      <li>CE_AutoEnableCrafting</li>
    </tradeTags>
    <thingCategories>
      <li>CODZP_AmmoBlunder</li>
    </thingCategories>
    <stackLimit>5000</stackLimit>
  </ThingDef>

  <ThingDef Class="CombatExtended.AmmoDef" ParentName="CODZP_BaseBlunderAmmo">
    <defName>Ammo_Blunder_Buck</defName>
    <label>Blundergat shell (Buck) </label>
    <graphicData>
      <texPath>Things/Ammo/CodZP/CodZP_GatsAmmo</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>0.2</MarketValue>
    </statBases>
    <ammoClass>BuckShot</ammoClass>
    <cookOffProjectile>Bullet_Blunder_Buck</cookOffProjectile>
  </ThingDef>

  <ThingDef Class="CombatExtended.AmmoDef" ParentName="CODZP_BaseBlunderAmmo">
    <defName>Ammo_Acidgat_Buck</defName>
    <label>Acidgat shell (Buck) </label>
    <graphicData>
      <texPath>Things/Ammo/CodZP/CodZP_GatsAmmo</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
      <color>(50,255,50)</color>
    </graphicData>
    <statBases>
      <MarketValue>0.2</MarketValue>
    </statBases>
    <ammoClass>BuckShot</ammoClass>
    <cookOffProjectile>Bullet_Blunder_Buck</cookOffProjectile>
  </ThingDef>

  <ThingDef Class="CombatExtended.AmmoDef" ParentName="CODZP_BaseBlunderAmmo">
    <defName>Ammo_Magmagat_Buck</defName>
    <label>Magmagat shell (Buck) </label>
    <graphicData>
      <texPath>Things/Ammo/CodZP/CodZP_GatsAmmo</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
      <color>(255,50,50)</color>
    </graphicData>
    <statBases>
      <MarketValue>0.2</MarketValue>
    </statBases>
    <ammoClass>BuckShot</ammoClass>
    <cookOffProjectile>Bullet_Blunder_Buck</cookOffProjectile>
  </ThingDef>

  <!-- ================== Projectiles ================== -->

  <ThingDef Name="CODZP_BlunderBulletBase" ParentName="BaseBullet" Abstract="true">
    <projectile Class="CombatExtended.ProjectilePropertiesCE">
      <speed>83</speed>
      <dropsCasings>true</dropsCasings>
      <pelletCount>4</pelletCount>
      <spreadMult>15</spreadMult>
      <casingMoteDefname>Mote_ShotgunShell</casingMoteDefname>
    </projectile>
  </ThingDef>

  <ThingDef ParentName="CODZP_BlunderBulletBase">
    <defName>Bullet_Blunder_Buck</defName>
    <label>buckshot pellet (Punched)</label>
    <graphicData>
      <texPath>Things/Projectile/Shotgun_Pellet</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile Class="CombatExtended.ProjectilePropertiesCE">
      <damageAmountBase>11</damageAmountBase>
      <damageDef>Bullet</damageDef>
      <armorPenetrationSharp>2</armorPenetrationSharp>
      <armorPenetrationBlunt>4.52</armorPenetrationBlunt>
    </projectile>
  </ThingDef>

  <ThingDef ParentName="CODZP_BlunderBulletBase">
    <defName>Bullet_Acidgat_Buck</defName>
    <label>buckshot pellet (Punched)</label>
    <graphicData>
      <texPath>Things/Projectile/Shotgun_Pellet</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile Class="CombatExtended.ProjectilePropertiesCE">
      <damageAmountBase>11</damageAmountBase>
      <damageDef>CodZP_Toxic_Burn</damageDef>
      <armorPenetrationSharp>2</armorPenetrationSharp>
      <armorPenetrationBlunt>4.52</armorPenetrationBlunt>
    </projectile>
  </ThingDef>

  <ThingDef ParentName="CODZP_BlunderBulletBase">
    <defName>Bullet_Magmagat_Buck</defName>
    <label>buckshot pellet (Punched)</label>
    <graphicData>
      <texPath>Things/Projectile/Shotgun_Pellet</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile Class="CombatExtended.ProjectilePropertiesCE">
      <damageAmountBase>11</damageAmountBase>
      <damageDef>Bullet</damageDef>
      <armorPenetrationSharp>2</armorPenetrationSharp>
      <armorPenetrationBlunt>4.52</armorPenetrationBlunt>
      <secondaryDamage>
				<li>
			  	<def>Flame_Secondary</def>
			  	<amount>8</amount>
				</li>
		  </secondaryDamage>
    </projectile>
  </ThingDef>

  <!-- ==================== Recipes ========================== -->

  <RecipeDef ParentName="CODZP_AmmoRecipeWonder">
    <defName>MakeAmmo_Blunder_Buck</defName>
    <label>make Blundergat (Buck) shell  x200</label>
    <description>Craft 200 Blundergat (Buck) shells .</description>
    <jobString>Making Blundergat (Buck) shells.</jobString>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Steel</li>
          </thingDefs>
        </filter>
        <count>8</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Steel</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <Ammo_Blunder_Buck>200</Ammo_Blunder_Buck>
    </products>
    <workAmount>1000</workAmount>
  </RecipeDef>

  <RecipeDef ParentName="CODZP_AmmoRecipeAmmo">
    <defName>MakeAmmo_Acidgat_Buck</defName>
    <label>make Acidgat (Buck) shell  x200</label>
    <description>Craft 200 Acidgat (Buck) shells .</description>
    <jobString>Making Acidgat (Buck) shells.</jobString>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Ammo_Blunder_Buck</li>
          </thingDefs>
        </filter>
        <count>200</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Uranium</li>
          </thingDefs>
        </filter>
        <count>8</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Ammo_Blunder_Buck</li>
        <li>Uranium</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <Ammo_Acidgat_Buck>200</Ammo_Acidgat_Buck>
    </products>
    <workAmount>1000</workAmount>
  </RecipeDef>

  <RecipeDef ParentName="CODZP_AmmoRecipeAmmo">
    <defName>MakeAmmo_Magmagat_Buck</defName>
    <label>make Magmagat (Buck) shell  x200</label>
    <description>Craft 200 Magmagat (Buck) shells .</description>
    <jobString>Making Magmagat (Buck) shells.</jobString>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Ammo_Blunder_Buck</li>
          </thingDefs>
        </filter>
        <count>200</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Prometheum</li>
          </thingDefs>
        </filter>
        <count>3</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Ammo_Blunder_Buck</li>
        <li>Prometheum</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <Ammo_Magmagat_Buck>200</Ammo_Magmagat_Buck>
    </products>
    <workAmount>1000</workAmount>
  </RecipeDef>

			</value>
			</li>

			</operations>
		</match>
	</Operation>

</Patch>
<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Call of Duty: Zombies Pack</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>

		<li Class="PatchOperationAdd">
			<xpath>Defs</xpath>
			<value>

  <ThingCategoryDef>
    <defName>AmmoAcidgat_Punched</defName>
    <label>Acidgat</label>
    <parent>AmmoWonders_Punched</parent>
    <iconPath>UI/Icons/ThingCategories/CaliberShotgun</iconPath>
  </ThingCategoryDef>

  <!-- ==================== AmmoSet ========================== -->

  <CombatExtended.AmmoSetDef>
    <defName>AmmoSet_Acidgat_Punched</defName>
    <label>Acidgat</label>
    <ammoTypes>
      <Ammo_Acidgat_Buck_Punched>Bullet_Acidgat_Buck_Punched</Ammo_Acidgat_Buck_Punched>
      <Ammo_Acidgat_Slug_Punched>Bullet_Acidgat_Slug_Punched</Ammo_Acidgat_Slug_Punched>
    </ammoTypes>
    <similarTo>AmmoSet_Blundergat_Punched</similarTo>
  </CombatExtended.AmmoSetDef>

  <!-- ==================== Ammo ========================== -->

  <ThingDef Class="CombatExtended.AmmoDef" Name="AcidgatPunched" ParentName="SmallAmmoBase" Abstract="True">
    <description>A Modified Blundergat Ammunition to work only within the Acidgat weapon</description>
    <statBases>
      <Mass>0.023</Mass>
      <Bulk>0.06</Bulk>
    </statBases>
    <tradeTags>
      <li>CE_AutoEnableCrafting</li>
    </tradeTags>
    <thingCategories>
      <li>AmmoAcidgat_Punched</li>
    </thingCategories>
    <stackLimit>5000</stackLimit>
  </ThingDef>

  <ThingDef Class="CombatExtended.AmmoDef" ParentName="AcidgatPunched">
    <defName>Ammo_Acidgat_Buck_Punched</defName>
    <label>Punched Acidgat shell (Buck)</label>
    <graphicData>
      <texPath>Things/Ammo/Shotgun/Shot</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
      <color>(200,255,200)</color>
    </graphicData>
    <statBases>
      <MarketValue>0.2</MarketValue>
    </statBases>
    <ammoClass>BuckShot</ammoClass>
    <cookOffProjectile>Bullet_Acidgat_Buck_Punched</cookOffProjectile>
  </ThingDef>

  <ThingDef Class="CombatExtended.AmmoDef" ParentName="AcidgatPunched">
    <defName>Ammo_Acidgat_Slug_Punched</defName>
    <label>Punched Acidgat shell (Slug)</label>
    <graphicData>
      <texPath>Things/Ammo/Shotgun/Slug</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
      <color>(200,255,200)</color>
    </graphicData>
    <statBases>
      <Mass>0.048</Mass>
      <MarketValue>0.4</MarketValue>
    </statBases>
    <ammoClass>Slug</ammoClass>
    <cookOffProjectile>Bullet_Acidgat_Slug_Punched</cookOffProjectile>
  </ThingDef>

  <!-- ==================== Recipes ========================== -->

  <RecipeDef ParentName="AmmoRecipePunched">
    <defName>MakeAmmo_Acidgat_Buck_Punched</defName>
    <label>make Acidgat (Buck) shell  x200</label>
    <description>Craft 200 Acidgat (Buck) shells .</description>
    <jobString>Making Acidgat (Buck) shells.</jobString>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Steel</li>
          </thingDefs>
        </filter>
        <count>20</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Uranium</li>
          </thingDefs>
        </filter>
        <count>3</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Steel</li>
        <li>Uranium</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <Ammo_Acidgat_Buck_Punched>20</Ammo_Acidgat_Buck_Punched>
    </products>
    <workAmount>1000</workAmount>
  </RecipeDef>

  <RecipeDef ParentName="AmmoRecipePunched">
    <defName>MakeAmmo_Acidgat_Slug_Punched</defName>
    <label>make Acidgat (Slug) shell x20</label>
    <description>Craft 20 Acidgat (Slug) shells .</description>
    <jobString>Making Acidgat (Slug) shells.</jobString>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Ammo_Acidgat_Buck_Punched</li>
          </thingDefs>
        </filter>
        <count>20</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Ammo_Acidgat_Buck_Punched</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <Ammo_Acidgat_Slug_Punched>20</Ammo_Acidgat_Slug_Punched>
    </products>
    <workAmount>1000</workAmount>
  </RecipeDef>

			</value>
			</li>

			</operations>
		</match>
	</Operation>

</Patch>
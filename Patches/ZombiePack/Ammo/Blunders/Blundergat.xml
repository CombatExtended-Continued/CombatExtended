<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Call of Duty: Wonder Weapons</li>
			<li>Call of Duty: Zombies Pack</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>

		<li Class="PatchOperationAdd">
			<xpath>Defs</xpath>
			<value>

  <ThingCategoryDef>
    <defName>AmmoBlundergat</defName>
    <label>Blundergat</label>
    <parent>AmmoWonders</parent>
    <iconPath>UI/Icons/ThingCategories/CaliberShotgun</iconPath>
  </ThingCategoryDef>

  <!-- ==================== AmmoSet ========================== -->

  <CombatExtended.AmmoSetDef>
    <defName>AmmoSet_Blundergat</defName>
    <label>Blundergat</label>
    <ammoTypes>
      <Ammo_Blundergat_Buck>Bullet_Blunder_Buck</Ammo_Blundergat_Buck>
      <Ammo_Blundergat_Slug>Bullet_Blunder_Slug</Ammo_Blundergat_Slug>
    </ammoTypes>
  </CombatExtended.AmmoSetDef>

  <!-- ==================== Ammo ========================== -->

  <ThingDef Class="CombatExtended.AmmoDef" Name="BlundergatBase" ParentName="SmallAmmoBase" Abstract="True">
    <description>Extremely common shotgun caliber used in almost every application, from hunting over riot control to military firearms.</description>
    <statBases>
      <Mass>0.023</Mass>
      <Bulk>0.06</Bulk>
    </statBases>
    <tradeTags>
      <li>CE_AutoEnableCrafting</li>
    </tradeTags>
    <thingCategories>
      <li>AmmoBlundergat</li>
    </thingCategories>
    <stackLimit>5000</stackLimit>
  </ThingDef>

  <ThingDef Class="CombatExtended.AmmoDef" ParentName="BlundergatBase">
    <defName>Ammo_Blundergat_Buck</defName>
    <label>12 gauge shell (Buck)</label>
    <graphicData>
      <texPath>Things/Ammo/Shotgun/Shot</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>0.2</MarketValue>
    </statBases>
    <ammoClass>BuckShot</ammoClass>
    <cookOffProjectile>Bullet_Blundergat_Buck</cookOffProjectile>
  </ThingDef>

  <ThingDef Class="CombatExtended.AmmoDef" ParentName="BlundergatBase">
    <defName>Ammo_Blundergat_Slug</defName>
    <label>12 gauge shell (Slug)</label>
    <graphicData>
      <texPath>Things/Ammo/Shotgun/Slug</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <statBases>
      <Mass>0.048</Mass>
      <MarketValue>0.4</MarketValue>
    </statBases>
    <ammoClass>Slug</ammoClass>
    <cookOffProjectile>Bullet_Blundergat_Slug</cookOffProjectile>
  </ThingDef>

  <!-- ==================== Recipes ========================== -->

  <RecipeDef ParentName="CODZP_AmmoRecipeWonder">
    <defName>MakeAmmo_Blundergat_Buck</defName>
    <label>make Blundergat (Buck) shell x20</label>
    <description>Craft 20 Blundergat (Buck) shells .</description>
    <jobString>Making Blundergat (Buck) shells.</jobString>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Steel</li>
          </thingDefs>
        </filter>
        <count>20</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Prometheum</li>
          </thingDefs>
        </filter>
        <count>3</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Steel</li>
        <li>Prometheum</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <Ammo_Blundergat_Buck>20</Ammo_Blundergat_Buck>
    </products>
    <workAmount>1000</workAmount>
  </RecipeDef>

  <RecipeDef ParentName="CODZP_AmmoRecipeWonder">
    <defName>MakeAmmo_Blundergat_Slug</defName>
    <label>make Blundergat (Slug) shell x20</label>
    <description>Craft 20 Blundergat (Slug) shells .</description>
    <jobString>Making Blundergat (Slug) shells.</jobString>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Steel</li>
          </thingDefs>
        </filter>
        <count>20</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Steel</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <Ammo_Blundergat_Slug>20</Ammo_Blundergat_Slug>
    </products>
    <workAmount>1000</workAmount>
  </RecipeDef>

			</value>
			</li>

			</operations>
		</match>
	</Operation>

</Patch>
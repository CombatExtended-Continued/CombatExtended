            <StuffEffectMultiplierArmor>2.0</StuffEffectMultiplierArmor>
          </value>
        </li>

        <!-- === Knight Helmet === -->
        <li Class="PatchOperationAdd">
          <xpath>Defs/ThingDef[defName="DevDesigner_HighElves_ShadowWarriorHelmet" or defName="DevDesigner_HighElves_WhiteLionHelmet" or defName="DevDesigner_HighElves_DragonPrinceHelmet" or defName="DevDesigner_HighElves_AlarielleHelmet" or defName="DevDesigner_HighElves_LordHelmet"]/statBases</xpath>

<?xml version="1.0" encoding="utf-8"?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>‚ÜÅ Elves</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>

				<!-- ===== Dark Elves ===== -->
				<!-- === Deadspear Helmet === -->
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="DevDesigner_DarkElves_DreadspearHelmet"]/statBases</xpath>
					<value>
						<Bulk>4</Bulk>
						<WornBulk>1</WornBulk>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="DevDesigner_DarkElves_DreadspearHelmet"]/statBases/StuffEffectMultiplierArmor</xpath>
					<value>
						<StuffEffectMultiplierArmor>2.0</StuffEffectMultiplierArmor>
					</value>
				</li>

				<!-- === Hood === -->
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="DevDesigner_DarkElves_MaskedHoodA" or defName="DevDesigner_DarkElves_MaskedHoodB"]/statBases</xpath>
					<value>
						<Bulk>2</Bulk>
						<WornBulk>1</WornBulk>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="DevDesigner_DarkElves_MaskedHoodA" or defName="DevDesigner_DarkElves_MaskedHoodB"]/statBases/StuffEffectMultiplierArmor</xpath>
					<value>
						<StuffEffectMultiplierArmor>3</StuffEffectMultiplierArmor>
					</value>
				</li>

				<!-- === Knight Helmet === -->
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="DevDesigner_DarkElves_ColdOneKnightHelmet" or defName="DevDesigner_DarkElves_BlackGuardHelmet" or defName="DevDesigner_DarkElves_MorathiHelmet" or defName="DevDesigner_DarkElves_WitchHelmet" or defName="DevDesigner_DarkElves_SorceressHelmet"]/statBases</xpath>
					<value>
						<Bulk>6</Bulk>
						<WornBulk>1</WornBulk>
					</value>
				</li>

				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="DevDesigner_DarkElves_ColdOneKnightHelmet"]/equippedStatOffsets</xpath>
					<value>
						<AimingAccuracy>-0.3</AimingAccuracy>
						<MeleeHitChance>-1.5</MeleeHitChance>
						<Suppressability>-0.15</Suppressability>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="DevDesigner_DarkElves_ColdOneKnightHelmet"]/statBases/StuffEffectMultiplierArmor</xpath>
					<value>
						<StuffEffectMultiplierArmor>2.7</StuffEffectMultiplierArmor>
					</value>
				</li>

				<!-- ===== High Elves ===== -->
				<!-- === Spearman Helmet === -->
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="DevDesigner_HighElves_SpearmanHelmet"]/statBases</xpath>

            <Bulk>6</Bulk>
            <WornBulk>1</WornBulk>
          </value>
        </li>

        <li Class="PatchOperationAdd">
          <xpath>Defs/ThingDef[defName="DevDesigner_DarkElves_ColdOneKnightHelmet"]/equippedStatOffsets</xpath>
          <value>
            <AimingAccuracy>-0.3</AimingAccuracy>
            <MeleeHitChance>-1.5</MeleeHitChance>
            <Suppressability>-0.15</Suppressability>
          </value>
        </li>

        <li Class="PatchOperationReplace">
          <xpath>Defs/ThingDef[defName="DevDesigner_DarkElves_ColdOneKnightHelmet"]/statBases/StuffEffectMultiplierArmor</xpath>

				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="DevDesigner_WoodElves_BladeDancerHelmetA"]/statBases/StuffEffectMultiplierArmor</xpath>
					<value>
						<StuffEffectMultiplierArmor>1.55</StuffEffectMultiplierArmor>
					</value>
				</li>

			</operations>
		</match>
	</Operation>

</Patch>
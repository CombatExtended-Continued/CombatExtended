<?xml version="1.0" encoding="utf-8" ?>
<Patch>

  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>‚ÜÅ Elves</li>
    </mods>
    <match Class="PatchOperationSequence">
      <operations>

        <!-- ===== Dark Elves ===== -->
        <!-- === Deadspear Helmet === -->
        <li Class="PatchOperationAdd">
          <xpath>Defs/ThingDef[defName="DevDesigner_DarkElves_DreadspearHelmet"]/statBases</xpath>
          <value>
            <Bulk>4</Bulk>
            <WornBulk>1</WornBulk>
          </value>
        </li>

        <li Class="PatchOperationReplace">
          <xpath>Defs/ThingDef[defName="DevDesigner_DarkElves_DreadspearHelmet"]/statBases/StuffEffectMultiplierArmor</xpath>
          <value>
            <StuffEffectMultiplierArmor>2.0</StuffEffectMultiplierArmor>
          </value>
        </li>

        <!-- === Hood === -->
        <li Class="PatchOperationAdd">
          <xpath>Defs/ThingDef[defName="DevDesigner_DarkElves_MaskedHoodA" or defName="DevDesigner_DarkElves_MaskedHoodB"]/statBases</xpath>
          <value>
            <Bulk>2</Bulk>
            <WornBulk>1</WornBulk>
          </value>

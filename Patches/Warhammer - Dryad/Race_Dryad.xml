        <li Class="PatchOperationReplace">
          <xpath>Defs/ThingDef[defName="DryadOakAspect"]/tools</xpath>
          <value>
            <tools>
              <li Class="CombatExtended.ToolCE">
                <label>left branch</label>
                <capacities>

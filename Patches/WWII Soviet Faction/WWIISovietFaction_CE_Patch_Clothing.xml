<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
		<li>WWII Soviet Faction</li>
		</mods>
		<match Class="PatchOperationSequence">
		<operations>

			<!-- ========== M73 Uniform ========== -->

			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="Apparel_M73_Uniform"]/statBases</xpath>
				<value>
					<Bulk>8</Bulk>
					<WornBulk>3</WornBulk>
				</value>
			</li>

			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="Apparel_M73_Uniform"]/statBases/ArmorRating_Sharp</xpath>
				<value>
					<ArmorRating_Sharp>0.05</ArmorRating_Sharp>
				</value>
			</li>

			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="Apparel_M73_Uniform"]/statBases/ArmorRating_Blunt</xpath>
				<value>
					<ArmorRating_Blunt>0.075</ArmorRating_Blunt>
				</value>
			</li>	

			<!-- ========== Harness ========== -->

			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="Apparel_M73_Harness"]/statBases</xpath>
				<value>
					<Bulk>3</Bulk>
					<WornBulk>3</WornBulk>
				</value>
			</li>

			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="Apparel_M73_Harness"]/equippedStatOffsets</xpath>
				<value>
					<CarryBulk>18</CarryBulk>
				</value>
			</li>

			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="Apparel_M73_Harness"]/apparel</xpath>
				<value>
					<apparel>
						<bodyPartGroups>
							<li>Shoulders</li>
						</bodyPartGroups>
						<layers>
							<li>Webbing</li>
						</layers>
						<tags>
							<li>WWII_Soviet_Harness</li>
						</tags>
						<wornGraphicPath>Things/Apparel/Belts/M73Harness</wornGraphicPath>
					</apparel>
				</value>
			</li>

			<!-- ========== M35 Uniform ========== -->

			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="Apparel_M35_Uniform"]/statBases</xpath>
				<value>
					<Bulk>8</Bulk>
					<WornBulk>4</WornBulk>
				</value>
			</li>

			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="Apparel_M35_Uniform"]/statBases/ArmorRating_Sharp</xpath>
				<value>
					<ArmorRating_Sharp>0.05</ArmorRating_Sharp>
				</value>
			</li>

			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="Apparel_M35_Uniform"]/statBases/ArmorRating_Blunt</xpath>
				<value>
					<ArmorRating_Blunt>0.075</ArmorRating_Blunt>
				</value>
			</li>

			<!-- ========== Vest ========== -->			

			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="Apparel_SN-42Armor"]/statBases</xpath>
				<value>
					<Bulk>8</Bulk>
					<WornBulk>5.5</WornBulk>
				</value>
			</li>

			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="Apparel_SN-42Armor"]/statBases/ArmorRating_Sharp</xpath>
				<value>
					<ArmorRating_Sharp>2</ArmorRating_Sharp>
				</value>
			</li>

			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="Apparel_SN-42Armor"]/statBases/ArmorRating_Blunt</xpath>
				<value>
					<ArmorRating_Blunt>3</ArmorRating_Blunt>
				</value>
			</li>

			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="Apparel_SN-42Armor"]/apparel/layers</xpath>
				<value>
					<layers>
						<li>Middle</li>
					</layers>					  
				</value>
			</li>				

			<!-- ========== Coat ========== -->

			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="Apparel_SovietCoat"]/statBases</xpath>
				<value>
					<Bulk>8</Bulk>
					<WornBulk>3</WornBulk>
				</value>
			</li>

			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="Apparel_SovietCoat"]/statBases/ArmorRating_Sharp</xpath>
				<value>
					<ArmorRating_Sharp>0.05</ArmorRating_Sharp>
				</value>
			</li>

			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="Apparel_SovietCoat"]/statBases/ArmorRating_Blunt</xpath>
				<value>
					<ArmorRating_Blunt>0.6</ArmorRating_Blunt>
				</value>
			</li>

		</operations>
		</match>
	</Operation>
</Patch>
<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
		<li>WWII Soviet Faction</li>
		</mods>
		<match Class="PatchOperationSequence">
		<operations>

			<!-- ========== M73Cap =========== -->	

			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="Apparel_M73Cap"]/statBases</xpath>
				<value>
					<Bulk>1</Bulk>
					<WornBulk>0.75</WornBulk>
				</value>
			</li>

			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="Apparel_M73Cap"]/statBases/ArmorRating_Sharp</xpath>
				<value>
					<ArmorRating_Sharp>0.05</ArmorRating_Sharp>
				</value>
			</li>

			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="Apparel_M73Cap"]/statBases/ArmorRating_Blunt</xpath>
				<value>
					<ArmorRating_Blunt>0.08</ArmorRating_Blunt>
				</value>
			</li>

			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="Apparel_M73Cap"]/costList</xpath>
				<value>
					<costList>
						<Steel>5</Steel>
						<Cloth>40</Cloth>
					</costList>
				</value>
			</li>

			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="Apparel_M73Cap"]/apparel/bodyPartGroups</xpath>
				<value>
					<bodyPartGroups>
						<li>UpperHead</li>
					</bodyPartGroups>
				</value>
			</li>

			<li Class="PatchOperationRemove">
				<xpath>Defs/ThingDef[defName="Apparel_M73Cap"]/apparel/useDeflectMetalEffect</xpath>
			</li>

			<!-- ========== SSh40Helmet =========== -->

			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="Apparel_SSh40Helmet"]/statBases</xpath>
				<value>
					<Bulk>3</Bulk>
					<WornBulk>1</WornBulk>
				</value>
			</li>

			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="Apparel_SSh40Helmet"]/statBases/StuffEffectMultiplierArmor</xpath>
				<value>
					<StuffEffectMultiplierArmor>1.2</StuffEffectMultiplierArmor>
				</value>
			</li>

			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="Apparel_SSh40Helmet"]/stuffCategories/li[.="Metallic"]</xpath>
				<value>
					<li>Steeled</li>
				</value>
			</li>

			<!-- ========== Officer M35Cap =========== -->

			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="Apparel_M35_Cap"]/statBases</xpath>
				<value>
					<Bulk>2</Bulk>
					<WornBulk>1</WornBulk>
				</value>
			</li>

			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="Apparel_M35_Cap"]/statBases/ArmorRating_Sharp</xpath>
				<value>
					<ArmorRating_Sharp>0.05</ArmorRating_Sharp>
				</value>
			</li>

			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="Apparel_M35_Cap"]/statBases/ArmorRating_Blunt</xpath>
				<value>
					<ArmorRating_Blunt>0.08</ArmorRating_Blunt>
				</value>
			</li>

			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="Apparel_M35_Cap"]/costList</xpath>
				<value>
					<costList>
						<Steel>5</Steel>
						<Cloth>60</Cloth>
					</costList>
				</value>
			</li>

			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="Apparel_M35_Cap"]/apparel/bodyPartGroups</xpath>
				<value>
					<bodyPartGroups>
						<li>UpperHead</li>
					</bodyPartGroups>
				</value>
			</li>

			<li Class="PatchOperationRemove">
				<xpath>Defs/ThingDef[defName="Apparel_M35_Cap"]/apparel/useDeflectMetalEffect</xpath>
			</li>

			<!-- ========== Ushanka =========== -->

			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="Apparel_Ushanka"]/statBases</xpath>
				<value>
					<Bulk>2.5</Bulk>
					<WornBulk>1.5</WornBulk>
				</value>
			</li>

			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="Apparel_Ushanka"]/statBases/ArmorRating_Sharp</xpath>
				<value>
					<ArmorRating_Sharp>0.06</ArmorRating_Sharp>
				</value>
			</li>

			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="Apparel_Ushanka"]/statBases/ArmorRating_Blunt</xpath>
				<value>
					<ArmorRating_Blunt>0.10</ArmorRating_Blunt>
				</value>
			</li>

			<li Class="PatchOperationRemove">
				<xpath>Defs/ThingDef[defName="Apparel_Ushanka"]/apparel/useDeflectMetalEffect</xpath>
			</li>


		</operations>
		</match>
	</Operation>
</Patch>
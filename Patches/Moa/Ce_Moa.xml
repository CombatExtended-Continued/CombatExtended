<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
		<li>Moa</li>
		</mods>

		<match Class="PatchOperationSequence">
			<operations>

			<li Class="PatchOperationAddModExtension">
				<xpath>/Defs/ThingDef[defName="Moa"]</xpath>
				<value>
					<li Class="CombatExtended.RacePropertiesExtensionCE">
						<bodyShape>Birdlike</bodyShape>
					</li>
				</value>
			</li>

			<li Class="PatchOperationAdd">
				<xpath>/Defs/ThingDef[defName="Moa"]/statBases</xpath>
				<value>
					<MeleeDodgeChance>0.33</MeleeDodgeChance>
					<MeleeCritChance>0.12</MeleeCritChance>
					<MeleeParryChance>0.1</MeleeParryChance>
				</value>
			</li>

			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="Moa"]/statBases/MoveSpeed</xpath>
				<value>
					<MoveSpeed>5</MoveSpeed>
				</value>
			</li>

			<li Class="PatchOperationReplace">
				<xpath>/Defs/ThingDef[defName="Moa"]/tools</xpath>
				<value>
					<tools>
						<li Class="CombatExtended.ToolCE">
							<label>claws</label>
							<capacities>
								<li>Scratch</li>
							</capacities>
							<power>12</power>
							<cooldownTime>1.4</cooldownTime>
							<surpriseAttack>
								<extraMeleeDamages>
									<li>
										<def>Stun</def>
										<amount>13</amount>
									</li>
								</extraMeleeDamages>
							</surpriseAttack>
							<linkedBodyPartsGroup>Feet</linkedBodyPartsGroup>
							<armorPenetrationSharp>0.24</armorPenetrationSharp>
							<armorPenetrationBlunt>0.45</armorPenetrationBlunt>
						</li>
						<li Class="CombatExtended.ToolCE">
							<capacities>
								<li>Bite</li>
							</capacities>
							<power>15</power>
							<cooldownTime>1.88</cooldownTime>
							<linkedBodyPartsGroup>Beak</linkedBodyPartsGroup>
							<surpriseAttack>
								<extraMeleeDamages>
									<li>
										<def>Stun</def>
										<amount>13</amount>
									</li>
								</extraMeleeDamages>
							</surpriseAttack>
							<armorPenetrationSharp>0.55</armorPenetrationSharp>
							<armorPenetrationBlunt>1.5</armorPenetrationBlunt>
						</li>
						<li Class="CombatExtended.ToolCE">
							<label>head</label>
							<capacities>
								<li>Blunt</li>
							</capacities>
							<power>4</power>
							<cooldownTime>2</cooldownTime>
							<linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
							<armorPenetrationBlunt>1</armorPenetrationBlunt>
							<chanceFactor>0.2</chanceFactor>
						</li>
					</tools>
				</value>
			</li>

				<li Class="PatchOperationReplace">
					<xpath>/Defs/ThingDef[defName="Moa"]/race/baseBodySize</xpath>
					<value>
						<baseBodySize>1.15</baseBodySize>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>/Defs/ThingDef[defName="Moa"]/race/baseHealthScale</xpath>
					<value>
						<baseHealthScale>0.9</baseHealthScale>
					</value>
				</li>
			
			</operations>
		</match>
	</Operation>
</Patch>

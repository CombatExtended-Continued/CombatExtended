<?xml version="1.0" encoding="utf-8" ?>
<Patch>

    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Vanilla Psycasts Expanded - Hemosage</li>
        </mods>

        <match Class="PatchOperationSequence">
            <operations>

                <li Class="PatchOperationAdd">
                    <xpath>Defs/ThingDef[defName="VPEH_BloodShard"]/projectile</xpath>
                    <value>
                        <armorPenetrationBase>3</armorPenetrationBase>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>Defs/ThingDef[defName="VPEH_BloodShard"]/projectile/damageAmountBase</xpath>
                    <value>
                        <damageAmountBase>6</damageAmountBase>
                    </value>
                </li>

                <li Class="PatchOperationAdd">
                    <xpath>Defs/ThingDef[defName="VPEH_SanguineSpear"]/projectile</xpath>
                    <value>
                        <armorPenetrationBase>6</armorPenetrationBase>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>Defs/ThingDef[defName="VPEH_SanguineSpear"]/projectile/speed</xpath>
                    <value>
                        <speed>30</speed>
                    </value>
                </li>

            </operations>
        </match>
    </Operation>

</Patch>

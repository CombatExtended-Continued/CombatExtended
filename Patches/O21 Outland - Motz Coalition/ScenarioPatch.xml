<?xml version="1.0" encoding="utf-8"?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Outland - Motz Coalition</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>

				<li Class="PatchOperationAdd">
					<xpath>Defs/ScenarioDef[defName="Outland_MotzTraders"]/scenario/parts</xpath>
					<value>
						<li Class="ScenPart_StartingThing_Defined">
							<def>StartingThing_Defined</def>
							<thingDef>Ammo_CrossbowBolt_Steel</thingDef>
							<count>50</count>
						</li>
					</value>
				</li>

				<li Class="PatchOperationAdd">
					<xpath>Defs/ScenarioDef[defName="Outland_MotzTraders"]/scenario/parts</xpath>
					<value>
						<li Class="ScenPart_StartingThing_Defined">
							<def>StartingThing_Defined</def>
							<thingDef>Ammo_CrossbowBolt_Flame</thingDef>
							<count>25</count>
						</li>
					</value>
				</li>

			</operations>
		</match>
	</Operation>
</Patch>
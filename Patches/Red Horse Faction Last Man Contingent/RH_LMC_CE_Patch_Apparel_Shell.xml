<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
		<li>[RH] Faction: Last Man Contingent</li>
		</mods>
		<match Class="PatchOperationSequence">
		<operations>

			<!-- ========== Parka Fishtail M81 ========== -->

			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="RNApparel_Parka_M81LMM"]/statBases</xpath>
				<value>
					<Bulk>10</Bulk>
					<WornBulk>5</WornBulk>
				</value>
			</li>

			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="RNApparel_Parka_M81LMM"]/statBases/StuffEffectMultiplierArmor</xpath>
				<value>
					<StuffEffectMultiplierArmor>10</StuffEffectMultiplierArmor>
				</value>
			</li>

			<!-- ========== Tactical Jacket LMMC ========== -->

			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="RNApparel_TacticalJacket_LMM"]/statBases</xpath>
				<value>
					<Bulk>5</Bulk>
					<WornBulk>1.5</WornBulk>
				</value>
			</li>

			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="RNApparel_TacticalJacket_LMM"]/statBases/StuffEffectMultiplierArmor</xpath>
				<value>
					<StuffEffectMultiplierArmor>5</StuffEffectMultiplierArmor>
				</value>
			</li>
			
			<!-- ========== Furr Coat ========== -->

			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="RNApparel_FurrJacket_plain"]/statBases</xpath>
				<value>
					<Bulk>10</Bulk>
					<WornBulk>5</WornBulk>
				</value>
			</li>

			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="RNApparel_FurrJacket_plain"]/statBases/StuffEffectMultiplierArmor</xpath>
				<value>
					<StuffEffectMultiplierArmor>10</StuffEffectMultiplierArmor>
				</value>
			</li>

		</operations>
		</match>
	</Operation>
</Patch>
<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
		<li>[RH] Faction: Last Man Contingent</li>
		</mods>
		<match Class="PatchOperationSequence">
		<operations>

			<!-- ========== Balaclava LMCT ========== -->

			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="RNApparel_Balaclava_LMM"]/statBases</xpath>
				<value>
					<Bulk>1</Bulk>
					<WornBulk>1</WornBulk>
				</value>
			</li>

			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="RNApparel_Balaclava_LMM"]/statBases/StuffEffectMultiplierArmor</xpath>
				<value>
					<!-- Equivalent to vanilla tuque -->
					<StuffEffectMultiplierArmor>2</StuffEffectMultiplierArmor>
				</value>
			</li>

		</operations>
		</match>
	</Operation>
</Patch>
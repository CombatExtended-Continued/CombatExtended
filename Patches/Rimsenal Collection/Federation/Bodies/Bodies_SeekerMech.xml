<?xml version="1.0" encoding="utf-8" ?>

<Patch>
	<Operation Class="PatchOperationFindMod">
			<mods>
				<li>Rimsenal - Federation Faction Pack</li>
			</mods>
		<match Class="PatchOperationSequence">
		<operations>
		
				<!--Mechsuit-->
				<li Class="PatchOperationAdd">
					<xpath>Defs/BodyDef[defName="Biodrone"]/corePart</xpath>
					<value>
						<groups>
							<li>CoveredByNaturalArmor</li>
						</groups>
					</value>
				</li>
				
				<!--Neck Parts-->
				
				<li Class="PatchOperationAdd">
					<xpath>Defs/BodyDef[defName="Biodrone"]/corePart/parts/li[def = "MechNeck"]</xpath>
					<value>
						<groups>
							<li>CoveredByNaturalArmor</li>
						</groups>
					</value>
				</li>
				
				<li Class="PatchOperationAdd">
					<xpath>Defs/BodyDef[defName="Biodrone"]/corePart/parts/li[def = "MechNeck"]/parts/li[def = "MechHead"]/groups</xpath>
					<value>
						<li>CoveredByNaturalArmor</li>
					</value>
				</li>
				
				<!--Arm Parts-->
				
				<li Class="PatchOperationAdd">
					<xpath>Defs/BodyDef[defName="Biodrone"]/corePart/parts/li[def = "MechShoulder"]</xpath>
					<value>
						<groups>
							<li>CoveredByNaturalArmor</li>
						</groups>
					</value>
				</li>
				
				<li Class="PatchOperationAdd">
					<xpath>Defs/BodyDef[defName="Biodrone"]/corePart/parts/li[def = "MechShoulder"]/parts/li[def = "MechArm"]</xpath>
					<value>
						<groups>
							<li>CoveredByNaturalArmor</li>
						</groups>
					</value>
				</li>
				
				<li Class="PatchOperationAdd">
					<xpath>Defs/BodyDef[defName="Biodrone"]/corePart/parts/li[def = "MechShoulder"]/parts/li[def = "MechArm"]/parts/li[def="MechHand"]</xpath>
					<value>
						<groups>
							<li>CoveredByNaturalArmor</li>
						</groups>
					</value>
				</li>
				
				<li Class="PatchOperationAdd">
					<xpath>Defs/BodyDef[defName="Biodrone"]/corePart/parts/li[def = "MechShoulder"]/parts/li[def = "MechArm"]/parts/li[def="MechHand"]/parts/li[def="MechFinger"]/groups</xpath>
					<value>
						<li>CoveredByNaturalArmor</li>
					</value>
				</li>
				
				<!--Leg Parts-->
				
				<li Class="PatchOperationAdd">
					<xpath>Defs/BodyDef[defName="Biodrone"]/corePart/parts/li[def = "MechEngine"]</xpath>
					<value>
						<groups>
							<li>CoveredByNaturalArmor</li>
						</groups>
					</value>
				</li>
				
				<li Class="PatchOperationAdd">
					<xpath>Defs/BodyDef[defName="Biodrone"]/corePart/parts/li[def = "MechEngine"]/parts/li[def="MechThruster"]</xpath>
					<value>
						<groups>
							<li>CoveredByNaturalArmor</li>
						</groups>
					</value>
				</li>
					
		</operations>
		</match>
	</Operation>
</Patch>  
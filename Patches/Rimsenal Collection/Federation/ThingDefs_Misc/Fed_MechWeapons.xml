<?xml version="1.0" encoding="utf-8"?>

<Patch>
	<Operation Class="PatchOperationFindMod">
			<mods>
				<li>Rimsenal - Federation Faction Pack</li>
			</mods>
		<match Class="PatchOperationSequence">
		<operations>
			
			<!-- ==========  AD Plasma Bombard  =========== -->
			<li Class="CombatExtended.PatchOperationMakeGunCECompatible">
			<defName>AD_PlasmaBombard</defName>
				<statBases>
					<SightsEfficiency>1.0</SightsEfficiency>
					<ShotSpread>0.10</ShotSpread>
					<SwayFactor>0.91</SwayFactor>
					<Bulk>30</Bulk>
					<Mass>25</Mass>
					<RangedWeapon_Cooldown>5</RangedWeapon_Cooldown>
				</statBases>
				<Properties>
					<verbClass>CombatExtended.Verb_ShootCE</verbClass>
					<hasStandardCommand>true</hasStandardCommand>
					<defaultProjectile>Bullet_PlasmaMechBombard</defaultProjectile>
					<warmupTime>4</warmupTime>
					<range>56</range>
					<soundCast>RS_ShotHarmonizer</soundCast>
					<muzzleFlashScale>17</muzzleFlashScale>
					<soundCastTail>GunTail_Heavy</soundCastTail>
				</Properties>

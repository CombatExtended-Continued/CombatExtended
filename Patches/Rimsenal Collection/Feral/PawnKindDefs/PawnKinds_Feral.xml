<?xml version="1.0" encoding="utf-8" ?>

<Patch>
	<Operation Class="PatchOperationFindMod">
			<mods>
				<li>Rimsenal - Feral Faction Pack</li>
			</mods>
		<match Class="PatchOperationSequence">
		<operations>

			<!-- ========== Husker ========== -->
		   <li Class="PatchOperationAddModExtension">
			<xpath>/Defs/PawnKindDef[defName="FeralHusker"]</xpath>
			<value>
			  <li Class="CombatExtended.LoadoutPropertiesExtension">
				<primaryMagazineCount>
				  <min>5</min>
				  <max>8</max>
				</primaryMagazineCount>
			  </li>
			</value>
		  </li>

			<!-- ========== Mangler ========== -->
		   <li Class="PatchOperationAddModExtension">
			<xpath>/Defs/PawnKindDef[defName="FeralMangler"]</xpath>
			<value>
			  <li Class="CombatExtended.LoadoutPropertiesExtension">
				<primaryMagazineCount>
				  <min>4</min>
				  <max>6</max>
				</primaryMagazineCount>
			  </li>
			</value>
		  </li>

			<!-- ========== Scorcher ========== -->
		   <li Class="PatchOperationAddModExtension">
			<xpath>/Defs/PawnKindDef[defName="FeralScorcher"]</xpath>
			<value>
			  <li Class="CombatExtended.LoadoutPropertiesExtension">
				<primaryMagazineCount>
				  <min>4</min>
				  <max>6</max>
				</primaryMagazineCount>
				<sidearms>
				  <li>
				  <magazineCount>
					<min>1</min>
					<max>5</max>
				  </magazineCount>			  
					<generateChance>0.7</generateChance>
					<sidearmMoney>
					  <min>75</min>
					  <max>325</max>
					</sidearmMoney>
					<weaponTags>
					  <li>FeralPistol</li>
					  <li>FeralMelee</li>			  
					</weaponTags>				
				  </li>
				</sidearms>				
			  </li>
			</value>
		  </li>

			<!-- ========== Boomer ========== -->
		   <li Class="PatchOperationAddModExtension">
			<xpath>/Defs/PawnKindDef[defName="FeralBoomer"]</xpath>
			<value>
			  <li Class="CombatExtended.LoadoutPropertiesExtension">
				<primaryMagazineCount>
				  <min>6</min>
				  <max>12</max>
				</primaryMagazineCount>
				<sidearms>
				  <li>
				  <magazineCount>
					<min>2</min>
					<max>5</max>
				  </magazineCount>			  
					<generateChance>0.7</generateChance>
					<sidearmMoney>
					  <min>100</min>
					  <max>450</max>
					</sidearmMoney>
					<weaponTags>
					  <li>FeralPistol</li>
					  <li>FeralMelee</li>			  
					</weaponTags>				
				  </li>
				</sidearms>				
			  </li>
			</value>
		  </li>

			<!-- ========== Thumper ========== -->
		   <li Class="PatchOperationAddModExtension">
			<xpath>/Defs/PawnKindDef[defName="FeralThumper"]</xpath>
			<value>
			  <li Class="CombatExtended.LoadoutPropertiesExtension">
				<primaryMagazineCount>
				  <min>4</min>
				  <max>6</max>
				</primaryMagazineCount>
				<sidearms>
				  <li>
				  <magazineCount>
					<min>1</min>
					<max>5</max>
				  </magazineCount>			  
					<generateChance>0.7</generateChance>
					<sidearmMoney>
					  <min>200</min>
					  <max>550</max>
					</sidearmMoney>
					<weaponTags>
					  <li>FeralPistol</li>
					  <li>FeralMelee</li>			  
					</weaponTags>				
				  </li>
				</sidearms>				
			  </li>
			</value>
		  </li>

			<!-- ========== Skulker ========== -->
		   <li Class="PatchOperationAddModExtension">
			<xpath>/Defs/PawnKindDef[defName="FeralSkulker"]</xpath>
			<value>
			  <li Class="CombatExtended.LoadoutPropertiesExtension">
				<primaryMagazineCount>
				  <min>4</min>
				  <max>6</max>
				</primaryMagazineCount>
				<sidearms>
				  <li>
				  <magazineCount>
					<min>2</min>
					<max>5</max>
				  </magazineCount>			  
					<generateChance>0.7</generateChance>
					<sidearmMoney>
					  <min>200</min>
					  <max>550</max>
					</sidearmMoney>
					<weaponTags>
					  <li>FeralPistol</li>
					  <li>FeralMelee</li>			  
					</weaponTags>				
				  </li>
				</sidearms>				
			  </li>
			</value>
		  </li>

			<!-- ========== Elite Base ========== -->
		   <li Class="PatchOperationAddModExtension">
			<xpath>/Defs/PawnKindDef[@Name="FeralEliteBase"]</xpath>
			<value>
			  <li Class="CombatExtended.LoadoutPropertiesExtension">
				<primaryMagazineCount>
				  <min>4</min>
				  <max>6</max>
				</primaryMagazineCount>
				<sidearms>
				  <li>
				  <magazineCount>
					<min>2</min>
					<max>5</max>
				  </magazineCount>			  
					<generateChance>0.7</generateChance>
					<sidearmMoney>
					  <min>1800</min>
					  <max>2500</max>
					</sidearmMoney>
					<weaponTags>
					  <li>FeralPistol</li>
					  <li>FeralMelee</li>			  
					</weaponTags>				
				  </li>
				</sidearms>				
			  </li>
			</value>
		  </li>
		
			<!-- ========== Ogrenaut ========== -->
		   <li Class="PatchOperationAddModExtension">
			<xpath>/Defs/PawnKindDef[defName="FeralOgrenaut"]</xpath>
			<value>
			  <li Class="CombatExtended.LoadoutPropertiesExtension">
				<primaryMagazineCount>
				  <min>5</min>
				  <max>10</max>
				</primaryMagazineCount>
			  </li>
			</value>
		  </li>		

			<!-- ========== Hellmaker ========== -->
		   <li Class="PatchOperationAddModExtension">
			<xpath>/Defs/PawnKindDef[defName="FeralHellmaker"]</xpath>
			<value>
			  <li Class="CombatExtended.LoadoutPropertiesExtension">
				<primaryMagazineCount>
				  <min>5</min>
				  <max>10</max>
				</primaryMagazineCount>
			  </li>
			</value>
		  </li>	
		  
			<!-- ========== Backpacks ========== -->
		   <li Class="PatchOperationAdd">
			<xpath>/Defs/PawnKindDef[
			defName="FeralHusker" or
			defName="FeralMangler" or
			defName="FeralScorcher" or
			defName="FeralBoomer"
			]/apparelRequired</xpath>
			<value>
			  <li>Apparel_TribalBackpack</li>
			</value>
		  </li>
		  
		  <li Class="PatchOperationAdd">
			<xpath>/Defs/PawnKindDef[
			@Name="FeralEliteBase" or
			defName="FeralSkulker" or
			defName="FeralThumper"
			]/apparelRequired</xpath>
			<value>
			  <li>Apparel_Backpack</li>
			</value>
		  </li>
	
		</operations>
		</match>
	</Operation>
</Patch>  

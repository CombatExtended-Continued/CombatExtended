<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Animal Equipment</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				<!-- Flak Armor -->
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName="AnimalFlakArmorBase"]/statBases</xpath>
					<value>
						<Bulk>5</Bulk>
						<WornBulk>3</WornBulk>
					</value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>/Defs/ThingDef[defName="AnimalFlakArmorBase"]/statBases/ArmorRating_Sharp</xpath>
					<value>
						<ArmorRating_Sharp>8</ArmorRating_Sharp>
					</value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>/Defs/ThingDef[defName="AnimalFlakArmorBase"]/statBases/ArmorRating_Blunt</xpath>
					<value>
						<ArmorRating_Blunt>10</ArmorRating_Blunt>
					</value>
				</li>
				<!-- Flak Helmet -->
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName="AnimalFlakHelmBase"]/statBases</xpath>
					<value>
						<Bulk>4</Bulk>
						<WornBulk>1</WornBulk>
					</value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>/Defs/ThingDef[defName="AnimalFlakHelmBase"]/statBases/StuffEffectMultiplierArmor</xpath>
					<value>
						<StuffEffectMultiplierArmor>8</StuffEffectMultiplierArmor>
					</value>
				</li>
			</operations>
		</match>
	</Operation>
</Patch>
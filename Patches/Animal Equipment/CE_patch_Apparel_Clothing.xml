<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Animal Equipment</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				<!-- Clothes -->
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName="AnimalClothesBase"]/statBases</xpath>
					<value>
						<Bulk>6</Bulk>
						<WornBulk>4</WornBulk>
					</value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>/Defs/ThingDef[defName="AnimalClothesBase"]/statBases/StuffEffectMultiplierArmor</xpath>
					<value>
						<StuffEffectMultiplierArmor>12</StuffEffectMultiplierArmor>
					</value>
				</li>
			</operations>
		</match>
	</Operation>
</Patch>
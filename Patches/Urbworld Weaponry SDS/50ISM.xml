    </statBases>
    <tradeTags>
      <li>CE_AutoEnableTrade</li>
      <li>CE_AutoEnableCrafting</li>
    </tradeTags>
    <thingCategories>
      <li>Ammo50ISM</li>
    </thingCategories>
    <stackLimit>5000</stackLimit>
  </ThingDef>


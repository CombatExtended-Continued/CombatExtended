  <ThingDef Class="CombatExtended.AmmoDef" Name="Ammo50ISMBase" ParentName="SmallAmmoBase" Abstract="True">
    <description>Large caliber guided rocket used by precision smartrifles and heavy emplacements.</description>
    <statBases>
      <Mass>0.036</Mass>

  <!-- Reload sounds, Night vision -->

  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[defName="Gun_SemiSmart_Carbine"]/soundInteract</xpath>
      <value>
    	  <soundInteract>SSR_Warden_Int</soundInteract>
      </value>
  </Operation>


<?xml version="1.0" encoding="utf-8" ?>
<Patch>

    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Infusion 2</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>

                <!-- ========== Legendary tier ========== -->

                <!-- ======= Apparel =======-->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/Infusion.InfusionDef[defName="Protective"]/stats/li[1]/value/offset</xpath>
                    <value>
                        <offset>4.15</offset>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>/Defs/Infusion.InfusionDef[defName="Protective"]/stats/li[2]/value/offset</xpath>
                    <value>
                        <offset>4.15</offset>
                    </value>
                </li>

                <!-- ======= Melee Weapon =======-->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/Infusion.InfusionDef[defName="Accelerated"]/stats/li[3]/value/offset</xpath>
                    <value>
                        <offset>0.25</offset>
                    </value>
                </li>

                <!-- ======= Ranged Weapon ======= -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/Infusion.InfusionDef[defName="Homing"]/stats</xpath>
                    <value>
                        <stats>
                            <li>
                                <key>SightsEfficiency</key>
                                <value>
                                    <offset>0.16</offset>
                                </value>
                            </li>
                        </stats>
                    </value>
                </li>

                <!-- ======= Weapons Infusion =======-->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/Infusion.InfusionDef[defName="Guardian"]/stats/li[2]/value/offset</xpath>
                    <value>
                        <offset>2.75</offset>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>/Defs/Infusion.InfusionDef[defName="Guardian"]/stats/li[3]/value/offset</xpath>
                    <value>
                        <offset>2.75</offset>
                    </value>
                </li>

            </operations>
        </match>
    </Operation>
</Patch>
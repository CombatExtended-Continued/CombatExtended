<?xml version="1.0" encoding="utf-8" ?>
<Patch>

    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Infusion 2</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>

                <!-- ========== Uncommon tier ========== -->

                <!-- ======= Apparel ======= -->
                <li Class="PatchOperationReplace">
                    <xpath>Defs/Infusion.InfusionDef[defName="Padded"]/stats/li[1]/value/offset</xpath>
                    <value>
                        <offset>1.45</offset>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>Defs/Infusion.InfusionDef[defName="Plated"]/stats/li[1]/value/offset</xpath>
                    <value>
                        <offset>1.45</offset>
                    </value>
                </li>

                <!-- ======= Melee Weapon ======= -->
                <li Class="PatchOperationReplace">
                    <xpath>Defs/Infusion.InfusionDef[defName="Nimble"]/stats/li[1]/value/offset</xpath>
                    <value>
                        <offset>0.15</offset>
                    </value>
                </li>

            </operations>
        </match>
    </Operation>
</Patch>
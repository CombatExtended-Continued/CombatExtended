<?xml version="1.0" encoding="utf-8"?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>pphhyy's Demigryphs</li>
		</mods>
		<match Class="PatchOperationFindMod">
			<mods>
				<li>Animal Gear</li>
			</mods>
			<match Class="PatchOperationSequence">
				<operations>

					<!-- Gryphon Leather -->
					<li Class="PatchOperationAdd">
						<xpath>Defs/ThingDef[defName="pphhyy_Demigryph_leatherArmor" or defName="pphhyy_Demigryph_leatherArmorFront"]/statBases</xpath>
						<value>
							<Bulk>3</Bulk>
							<WornBulk>1</WornBulk>
						</value>
					</li>

					<li Class="PatchOperationReplace">
						<xpath>Defs/ThingDef[defName="pphhyy_Demigryph_leatherArmor" or defName="pphhyy_Demigryph_leatherArmorFront"]/statBases/StuffEffectMultiplierArmor</xpath>
						<value>
							<StuffEffectMultiplierArmor>8</StuffEffectMultiplierArmor>
						</value>
					</li>

					<!-- Gryphon Plate -->
					<li Class="PatchOperationReplace">
						<xpath>Defs/ThingDef[defName="pphhyy_Demigryph_PlateArmor" or defName="pphhyy_Demigryph_PlateArmorFront"]/statBases/StuffEffectMultiplierArmor</xpath>
						<value>
							<StuffEffectMultiplierArmor>4.5</StuffEffectMultiplierArmor>
						</value>
					</li>

					<li Class="PatchOperationReplace">
						<xpath>Defs/ThingDef[defName="pphhyy_Demigryph_PlateArmor" or defName="pphhyy_Demigryph_PlateArmorFront"]/equippedStatOffsets</xpath>
						<value>
							<equippedStatOffsets>
								<MeleeDodgeChance>-0.05</MeleeDodgeChance>
							</equippedStatOffsets>
						</value>
					</li>

					<li Class="PatchOperationAdd">
						<xpath>Defs/ThingDef[defName="pphhyy_Demigryph_PlateArmor" or defName="pphhyy_Demigryph_PlateArmorFront"]/statBases</xpath>
						<value>
							<Bulk>17.5</Bulk>
							<WornBulk>3.5</WornBulk>
						</value>
					</li>

					<!-- Gryphon Plate -->
					<li Class="PatchOperationReplace">
						<xpath>Defs/ThingDef[defName="pphhyy_Demigryph_NoblePlateArmor" or defName="pphhyy_Demigryph_NoblePlateArmorFront" or defName="pphhyy_Demigryph_RaiderPlateArmor" or defName="pphhyy_Demigryph_RaiderPlateArmorFront"]/statBases/StuffEffectMultiplierArmor</xpath>
						<value>
							<StuffEffectMultiplierArmor>5</StuffEffectMultiplierArmor>
						</value>
					</li>

					<li Class="PatchOperationReplace">
						<xpath>Defs/ThingDef[defName="pphhyy_Demigryph_NoblePlateArmor" or defName="pphhyy_Demigryph_NoblePlateArmorFront" or defName="pphhyy_Demigryph_RaiderPlateArmor" or defName="pphhyy_Demigryph_RaiderPlateArmorFront"]/equippedStatOffsets</xpath>
						<value>
							<equippedStatOffsets>
								<MeleeDodgeChance>-0.05</MeleeDodgeChance>
							</equippedStatOffsets>
						</value>
					</li>

					<li Class="PatchOperationAdd">
						<xpath>Defs/ThingDef[defName="pphhyy_Demigryph_NoblePlateArmor" or defName="pphhyy_Demigryph_NoblePlateArmorFront" or defName="pphhyy_Demigryph_RaiderPlateArmor" or defName="pphhyy_Demigryph_RaiderPlateArmorFront"]/statBases</xpath>
						<value>
							<Bulk>17.5</Bulk>
							<WornBulk>3.5</WornBulk>
						</value>
					</li>

				</operations>
			</match>
		</match>
	</Operation>

</Patch>
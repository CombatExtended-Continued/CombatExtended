<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>pphhyy's Demigryphs</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>

				<!-- Demigryph leather -->
				<!-- Warmleather Demigryph -->
				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="pphhyy_WarmLeather_Demigryph" or defName="pphhyy_coldLeather_Demigryph" or defName="pphhyy_Leather_Demigryph"]/statBases/StuffPower_Armor_Sharp</xpath>
					<value>
						<StuffPower_Armor_Sharp>0.05</StuffPower_Armor_Sharp>
					</value>
				</li>

				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="pphhyy_WarmLeather_Demigryph" or defName="pphhyy_coldLeather_Demigryph" or defName="pphhyy_Leather_Demigryph"]/statBases</xpath>
					<value>
						<StuffPower_Armor_Blunt>0.04</StuffPower_Armor_Blunt>
					</value>
				</li>

			</operations>
		</match>
	</Operation>

</Patch>
<?xml version="1.0" encoding="utf-8"?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Medievel Tailor</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>

				<!-- Shirt -->
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="AMT_Apparel_SimpleShirt" or defName="AMT_Apparel_OldShirt" or defName="AMT_Apparel_Doublet" or defName="AMT_Apparel_PaddedLeatherVest" or defName="AMT_Apparel_Jerkin" or defName="AMT_Apparel_CommonerTunic" or defName="AMT_Apparel_FancyTunic" or defName="AMT_Apparel_RoyalTunic" or defName="AMT_Apparel_BarMaidDress"]/statBases</xpath>

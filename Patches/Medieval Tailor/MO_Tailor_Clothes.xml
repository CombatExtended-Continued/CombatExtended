						<Bulk>2</Bulk>
						<WornBulk>1</WornBulk>
					</value>
				</li>

				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="AMT_Apparel_SimpleShirt" or defName="AMT_Apparel_OldShirt" or defName="AMT_Apparel_Doublet" or defName="AMT_Apparel_PaddedLeatherVest" or defName="AMT_Apparel_CommonerTunic" or defName="AMT_Apparel_FancyTunic" or defName="AMT_Apparel_RoyalTunic" or defName="AMT_Apparel_BarMaidDress"]/apparel/bodyPartGroups</xpath>
					<value>
						<li>Arms</li>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="AMT_Apparel_SimpleShirt" or defName="AMT_Apparel_OldShirt" or defName="AMT_Apparel_Doublet" or defName="AMT_Apparel_PaddedLeatherVest" or defName="AMT_Apparel_Jerkin" or defName="AMT_Apparel_CommonerTunic" or defName="AMT_Apparel_FancyTunic" or defName="AMT_Apparel_RoyalTunic" or defName="AMT_Apparel_BarMaidDress"]/statBases/StuffEffectMultiplierArmor</xpath>
					<value>
						<StuffEffectMultiplierArmor>3</StuffEffectMultiplierArmor>
					</value>
				</li>

				<!-- Short Coat -->
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="AMT_Apparel_ShortCoat"]/statBases</xpath>
					<value>
						<Bulk>6</Bulk>
						<WornBulk>3</WornBulk>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="AMT_Apparel_ShortCoat"]/statBases/Mass</xpath>

					<value>
						<StuffEffectMultiplierArmor>5</StuffEffectMultiplierArmor>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="AMT_Handwear_VambraceLeather" or defName="AMT_Handwear_VambraceSplinted"]/statBases/StuffEffectMultiplierArmor</xpath>
					<value>
						<StuffEffectMultiplierArmor>8</StuffEffectMultiplierArmor>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="AMT_Handwear_VambraceSplinted"]/statBases/StuffEffectMultiplierArmor</xpath>

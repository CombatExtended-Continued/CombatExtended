					</value>
				</li>

				<!-- Rags -->
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="AMT_Apparel_Rags"]/statBases</xpath>
					<value>
						<Bulk>1</Bulk>
						<WornBulk>0.5</WornBulk>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="AMT_Apparel_Rags"]/statBases/StuffEffectMultiplierArmor</xpath>

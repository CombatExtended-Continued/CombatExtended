					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="AMT_Handwear_VambraceSplinted"]/statBases/StuffEffectMultiplierArmor</xpath>
					<value>
						<StuffEffectMultiplierArmor>0.2</StuffEffectMultiplierArmor>
					</value>
				</li>

				<!-- Shoes and Boots -->
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="AMT_Footwear_Peasantshoes" or defName="AMT_Footwear_Nobleshoes" or defName="AMT_Footwear_Townboots" or defName="AMT_Footwear_Travelboots" or defName="AMT_Footwear_Nobleboots" or defName="AMT_Footwear_Shackles"]/statBases</xpath>
					<value>
						<Bulk>3</Bulk>
						<WornBulk>0.5</WornBulk>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="AMT_Footwear_Peasantshoes" or defName="AMT_Footwear_Nobleshoes"]/statBases/StuffEffectMultiplierArmor</xpath>
					<value>
						<StuffEffectMultiplierArmor>3</StuffEffectMultiplierArmor>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="AMT_Footwear_Townboots" or defName="AMT_Footwear_Travelboots" or defName="AMT_Footwear_Nobleboots"]/statBases/StuffEffectMultiplierArmor</xpath>
					<value>
						<StuffEffectMultiplierArmor>5</StuffEffectMultiplierArmor>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="AMT_Footwear_Shackles"]/statBases/StuffEffectMultiplierArmor</xpath>
					<value>
						<StuffEffectMultiplierArmor>0.2</StuffEffectMultiplierArmor>
					</value>
				</li>

			</operations>
		</match>
	</Operation>
</Patch>
					</value>
				</li>

				<!-- Pants -->
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="AMT_Apparel_Trousers" or defName="AMT_Apparel_RoyalHose"]/statBases</xpath>
					<value>
						<Bulk>2</Bulk>
						<WornBulk>1</WornBulk>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="AMT_Apparel_Trousers" or defName="AMT_Apparel_RoyalHose"]/statBases/StuffEffectMultiplierArmor</xpath>
					<value>
						<StuffEffectMultiplierArmor>3</StuffEffectMultiplierArmor>
					</value>
				</li>

				<!-- Hats -->
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="AMT_Headgear_Chaperon" or defName="AMT_Headgear_ForesterHat" or defName="AMT_Headgear_ForesterHatF" or defName="Df_Headgear_MerchantHat" or defName="AMT_Headgear_Cap" or defName="AMT_Headgear_PiousCap"]/statBases</xpath>
					<value>
						<Bulk>3</Bulk>
						<WornBulk>0.5</WornBulk>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="AMT_Headgear_Chaperon" or defName="AMT_Headgear_ForesterHat" or defName="AMT_Headgear_ForesterHatF" or defName="Df_Headgear_MerchantHat" or defName="AMT_Headgear_Cap" or defName="AMT_Headgear_PiousCap"]/statBases/StuffEffectMultiplierArmor</xpath>
					<value>
						<StuffEffectMultiplierArmor>5</StuffEffectMultiplierArmor>
					</value>
				</li>

				<li Class="PatchOperationRemove">
					<xpath>Defs/ThingDef[defName="AMT_Headgear_Chaperon" or defName="AMT_Headgear_ForesterHat" or defName="AMT_Headgear_Cap"]/equippedStatOffsets/PainShockThreshold</xpath>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="AMT_Headgear_ForesterHatF"]/equippedStatOffsets</xpath>
					<value>
						<equippedStatOffsets>
							<AimingAccuracy>.1</AimingAccuracy>
						</equippedStatOffsets>
					</value>
				</li>

				<!-- Shoes and Boots -->

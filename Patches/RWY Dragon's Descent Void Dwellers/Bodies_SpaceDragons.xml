<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>[RWY]Dragon's Descent: Void Dwellers</li>
		</mods>

		<match Class="PatchOperationSequence">
			<operations>

      <!-- Natural Armor -->

      <li Class="PatchOperationAdd">
        <xpath>
            Defs/BodyDef[defName="BipedAnimalWithoutWingsDragon"]//*[
            def="Body" or
           def="MiddleBodySegment"]
          </xpath>
        <value>
          <groups />
        </value>
      </li>

      <li Class="PatchOperationAdd">
        <xpath>
          Defs/BodyDef[defName="BipedAnimalWithoutWingsDragon"]//*[
          def="Body" or 
          def="Tail" or 
          def="Neck" or 
          def="Head" or 
          def="Ear" or 
          def="Nose" or 
          def="Horn" or 
          def="Shoulder" or 
          def="AnimalJaw" or 
          def="Arm" or
          def="MiddleBodySegment" or
          def="FrontClaw" or 
          def="Paw"]/groups
        </xpath>
        <value>
          <li>CoveredByNaturalArmor</li>
        </value>
      </li>


      <li Class="PatchOperationAdd">
        <xpath>
            Defs/BodyDef[defName="BipedAnimalWithWingsDragon"]//*[
            def="Body" or
           def="MiddleBodySegment"]
          </xpath>
        <value>
          <groups />
        </value>
      </li>

      <li Class="PatchOperationAdd">
        <xpath>
          Defs/BodyDef[defName="BipedAnimalWithWingsDragon"]//*[
          def="Body" or 
          def="Wing" or 
          def="Tail" or 
          def="Neck" or 
          def="Head" or 
          def="Ear" or 
          def="Nose" or 
          def="Horn" or 
          def="Shoulder" or 
          def="AnimalJaw" or 
          def="Arm" or
          def="MiddleBodySegment" or
          def="FrontClaw" or 
          def="Paw"]/groups
        </xpath>
        <value>
          <li>CoveredByNaturalArmor</li>
        </value>
      </li>
			</operations>
		</match>
	</Operation>

</Patch>
<?xml version="1.0" encoding="utf-8" ?>

<Patch>
	<Operation Class="PatchOperationFindMod">
    <mods>
		<li>Black Widows (Continued)</li>
    </mods>
		<match Class="PatchOperationSequence">
		 <operations>

			<!-- ==== Turret_BWWebcannon ==== -->
			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName = "Turret_BWWebcannon"]/statBases</xpath>
				<value>
					<Bulk>200</Bulk>
				</value>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName = "Turret_BWWebcannon"]</xpath>
				<value>
					<tradeTags>
						<li>CE_Turret</li>
					</tradeTags>
				</value>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName = "Turret_BWWebcannon"]/researchPrerequisites</xpath>
				<value>
					<researchPrerequisites>
						<li>GunTurrets</li>
					</researchPrerequisites>
				</value>
			</li>

     </operations>
    </match>
  </Operation>
</Patch>			  

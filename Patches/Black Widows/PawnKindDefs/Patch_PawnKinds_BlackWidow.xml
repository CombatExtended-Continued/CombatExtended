<?xml version="1.0" encoding="utf-8" ?>

<Patch>
	<Operation Class="PatchOperationFindMod">
    <mods>
		<li>Black Widows (Continued)</li>
    </mods>
		<match Class="PatchOperationSequence">
		 <operations>

			<!-- ======== Black Widow faction. ======== -->
			<!-- ==== BlackWidowMatron ==== -->
			<li Class="PatchOperationAddModExtension">
				<xpath>/Defs/PawnKindDef[defName="BlackWidowMatron"]</xpath>
				<value>
					<li Class="CombatExtended.LoadoutPropertiesExtension">
						<shieldMoney>
							<min>999999</min>
							<max>3000000</max>
						</shieldMoney>
						<shieldTags>
							<li>OutlanderShield</li>
						</shieldTags>

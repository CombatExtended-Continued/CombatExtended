<?xml version="1.0" encoding="utf-8" ?>

<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Black Widows 2.0</li>
		</mods>
		<match Class="PatchOperationSequence">
		<operations>

			<!-- ==== BionicPedipalp ==== -->
			<li Class="PatchOperationReplace">
				<xpath>Defs/HediffDef[defName = "BionicRightPedipalp" or defName = "BionicLeftPedipalp"]/comps/li[@Class="HediffCompProperties_VerbGiver"]/tools</xpath>
				<success>Always</success>
				<value>
					<tools>
						<li Class="CombatExtended.ToolCE">
							<label>bionic pedipalp</label>
							<capacities>
								<li>Stab</li>
							</capacities>
							<power>7</power>
							<cooldownTime>1.29</cooldownTime>
							<chanceFactor>0.5</chanceFactor>
							<armorPenetrationSharp>0.05</armorPenetrationSharp>
							<armorPenetrationBlunt>0.484</armorPenetrationBlunt>
						</li>	
					</tools>
				</value>
			</li>

			<!-- ==== BlackWidowShredderLeg ==== -->
			<li Class="PatchOperationReplace">
				<xpath>Defs/HediffDef[defName = "BlackWidowShredderLeg"]/comps/li[@Class="HediffCompProperties_VerbGiver"]/tools</xpath>
				<success>Always</success>
				<value>
					<tools>
						<li Class="CombatExtended.ToolCE">
							<label>shredder leg</label>
							<capacities>
								<li>Scratch</li>
							</capacities>
							<power>33</power>
							<cooldownTime>2.13</cooldownTime>
							<armorPenetrationSharp>3.63</armorPenetrationSharp>
							<armorPenetrationBlunt>3.63</armorPenetrationBlunt>
						</li>	
					</tools>
				</value>
			</li>

			<!-- ==== BlackWidowSleipnirArm ==== -->
			<li Class="PatchOperationReplace">
				<xpath>Defs/HediffDef[defName = "BlackWidowSleipnirArm"]/comps/li[@Class="HediffCompProperties_VerbGiver"]/tools</xpath>
				<success>Always</success>
				<value>
					<tools>
						<li Class="CombatExtended.ToolCE">
							<label>fist</label>
							<capacities>
								<li>Blunt</li>
							</capacities>
							<power>8</power>
							<cooldownTime>1.08</cooldownTime>
							<armorPenetrationBlunt>2.723</armorPenetrationBlunt>
						</li>	
					</tools>
				</value>
			</li>
		</operations>
		</match>
	</Operation>
</Patch>
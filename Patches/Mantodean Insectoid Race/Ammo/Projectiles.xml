<?xml version="1.0" encoding="utf-8" ?>
<Patch>
  <Operation Class="PatchOperationSequence">
	<operations>
	  <li Class="PatchOperationFindMod">
			
		<mods><li>The Mantodean insectoid race</li></mods>
			
		<match Class="PatchOperationSequence">
		<operations>
			
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="Bullet_MantoLauncher"]</xpath>
				<value>
					<ThingDef ParentName="BaseGreatArrowProjectile">
						<defName>Bullet_MantoLauncher</defName>
						<label>incendiary slime</label>
						<graphicData>
							<texPath>Things/Weapon/MantoCannonShot</texPath>
							<graphicClass>Graphic_Single</graphicClass>
							<shaderType>TransparentPostLight</shaderType>
						</graphicData>
						<thingClass>CombatExtended.ProjectileCE_Explosive</thingClass>
						<projectile Class="CombatExtended.ProjectilePropertiesCE">
							<speed>35</speed>
							<damageDef>MantoPoison</damageDef>
							<damageAmountBase>7</damageAmountBase>
							<armorPenetrationSharp>0</armorPenetrationSharp>
							<armorPenetrationBlunt>0</armorPenetrationBlunt>
							<preExplosionSpawnThingDef>Filth_Slime</preExplosionSpawnThingDef>
							<preExplosionSpawnChance>0.6</preExplosionSpawnChance>
							<explosionRadius>1</explosionRadius>
							<gravityFactor>4</gravityFactor>
						</projectile>
					</ThingDef>
				</value>
			</li>
			
			<li Class="PatchOperationReplace">
				<xpath>Defs/DamageDef[defName="MantoPoison"]/additionalHediffs/li[hediff="ToxicBuildup"]/severityPerDamageDealt</xpath>
				<value>
					<severityPerDamageDealt>0.02</severityPerDamageDealt>
				</value>
			</li>
			
			<li Class="PatchOperationAdd">
				<xpath>Defs</xpath>
				<value>
					<!-- ==================== AmmoSets ========================== -->

					<CombatExtended.AmmoSetDef>
						<defName>AmmoSet_MantoPoison</defName>
						<label>mantodean toxic gel</label>
						<ammoTypes>
							<Ammo_Mantogel>Bullet_MantoLauncher</Ammo_Mantogel>
						</ammoTypes>
					</CombatExtended.AmmoSetDef>
					
					<CombatExtended.AmmoCategoryDef>
						<defName>MantoPoisonAmmo</defName>
						<label>incendiary slime</label>
						<description>incendiary slime</description>
					</CombatExtended.AmmoCategoryDef>

					<!-- ==================== Ammo ========================== -->

					<ThingDef Class="CombatExtended.AmmoDef" ParentName="SpacerSmallAmmoBase">
						<defName>Ammo_Mantogel</defName>
						<label>mantodean toxic gel</label>
						<description>Toxic thermal compound used in mantodean bio-launchers</description>
						<statBases>
							<Mass>0.50</Mass>
							<Bulk>0.50</Bulk>
							<MarketValue>0.9</MarketValue>
						</statBases>
						<tradeTags>
						</tradeTags>
						<thingCategories>
							<li>AmmoAdvanced</li>
						</thingCategories>
						<stackLimit>100</stackLimit>
						<graphicData>
							<texPath>Things/Ammo/FuelCell/Incendiary</texPath>
							<graphicClass>Graphic_StackCount</graphicClass>
						</graphicData>
						<ammoClass>MantoPoisonAmmo</ammoClass>
					</ThingDef>

					<!-- ==================== Recipes ========================== -->

					<RecipeDef ParentName="AmmoRecipeNeolithicBase">
						<defName>MakeAmmo_Mantogel</defName>
						<label>make mantodean toxic gel x100</label>
						<description>Craft 100 mantodean toxic gel.</description>
						<jobString>Making mantodean toxic gel.</jobString>
						<workAmount>8000</workAmount>
						<ingredients>
							<li>
								<filter>
									<thingDefs>
										<li>Chemfuel</li>
									</thingDefs>
								</filter>
								<count>10</count>
							</li>
							<li>
								<filter>
									<thingDefs>
										<li>Prometheum</li>
									</thingDefs>
								</filter>
								<count>10</count>
							</li>
						</ingredients>
						<fixedIngredientFilter>
							<thingDefs>
								<li>Chemfuel</li>
								<li>Prometheum</li>
							</thingDefs>
						</fixedIngredientFilter>
						<recipeUsers Inherit="False">
							<li>RefineryManto</li>
						</recipeUsers>	
						<products>
							<Ammo_Mantogel>100</Ammo_Mantogel>
						</products>
					</RecipeDef>
				</value>
			</li>
			
		</operations>
		</match>	
	  </li>
	</operations>	
  </Operation>
</Patch>
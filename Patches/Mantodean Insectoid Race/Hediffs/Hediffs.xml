					<tools>
						<li Class="CombatExtended.ToolCE">
							<label>pincer</label>
							<capacities>
								<li>Stab</li>
							</capacities>
							<power>24</power>
							<cooldownTime>1.33</cooldownTime>
							<armorPenetrationSharp>40</armorPenetrationSharp>
							<armorPenetrationBlunt>20</armorPenetrationBlunt>

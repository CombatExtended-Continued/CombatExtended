<?xml version="1.0" encoding="utf-8"?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Biotech Prestige Mechlord Armor 1.4</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>

				<!-- ========== Prestige Mechlord Suit ========== -->
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="Apparel_PrestigeMechlordSuit"]/statBases</xpath>
					<value>
						<Bulk>90</Bulk>
						<WornBulk>13</WornBulk>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="Apparel_PrestigeMechlordSuit"]/statBases/ArmorRating_Sharp</xpath>
					<value>
						<ArmorRating_Sharp>16</ArmorRating_Sharp>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="Apparel_PrestigeMechlordSuit"]/statBases/ArmorRating_Blunt</xpath>
					<value>
						<ArmorRating_Blunt>34</ArmorRating_Blunt>
					</value>
				</li>

				<!-- ========== Prestige Mechlord Helmet ========== -->
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="Apparel_ArmorHelmetPrestigeMechlordHelmet"]/statBases</xpath>
					<value>
						<Bulk>4</Bulk>
						<WornBulk>1</WornBulk>
					</value>
				</li>

				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="Apparel_ArmorHelmetPrestigeMechlordHelmet"]/statBases</xpath>
					<value>
						<ArmorRating_Sharp>12</ArmorRating_Sharp>
					</value>
				</li>

				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="Apparel_ArmorHelmetPrestigeMechlordHelmet"]/statBases</xpath>
					<value>
						<ArmorRating_Blunt>26</ArmorRating_Blunt>
					</value>
				</li>

				<!-- ========== Prestige Mechcommander Helmet ========== -->
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="Apparel_ArmorHelmetPrestigeMechCommander"]/statBases</xpath>
					<value>
						<Bulk>4</Bulk>
						<WornBulk>1</WornBulk>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="Apparel_ArmorHelmetPrestigeMechCommander"]/statBases/ArmorRating_Sharp</xpath>
					<value>
						<ArmorRating_Sharp>8</ArmorRating_Sharp>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="Apparel_ArmorHelmetPrestigeMechCommander"]/statBases/ArmorRating_Blunt</xpath>
					<value>
						<ArmorRating_Blunt>16</ArmorRating_Blunt>
					</value>
				</li>

			</operations>
		</match>
	</Operation>
</Patch>
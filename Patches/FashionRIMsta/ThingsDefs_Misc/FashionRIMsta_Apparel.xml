<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>FashionRIMsta</li>
		</mods>
		<match Class="PatchOperationSequence">
		<operations>

			<!-- Coats -->

			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="Apparel_FSFurCoat"]/statBases</xpath>
				<value>
					<Bulk>12</Bulk>
					<WornBulk>6</WornBulk>
				</value>
			</li>

			<li Class="PatchOperationRemove">
				<xpath>Defs/ThingDef[defName="Apparel_FSFurCoat"]/equippedStatOffsets/MoveSpeed</xpath>
			</li>

			<li Class="PatchOperationRemove">
				<xpath>Defs/ThingDef[defName="Apparel_FSFurCoat"]/equippedStatOffsets/WorkSpeedGlobal</xpath>
			</li>

			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="Apparel_FSDesertRobe"]/statBases</xpath>
				<value>
					<Bulk>8</Bulk>
					<WornBulk>2</WornBulk>
				</value>
			</li>

			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="Apparel_FSGardeningVest"]/statBases</xpath>
				<value>
					<Bulk>5</Bulk>
					<WornBulk>1</WornBulk>
				</value>
			</li>

			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="Apparel_FSGardeningVest"]/equippedStatOffsets</xpath>
				<value>
					<CarryBulk>5</CarryBulk>
				</value>
			</li>

			<!-- Pants -->

			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="Apparel_FSThermalPants"]/statBases</xpath>
				<value>
					<Bulk>3</Bulk>
					<WornBulk>1</WornBulk>
				</value>
			</li>

			<li Class="PatchOperationRemove">
				<xpath>Defs/ThingDef[defName="Apparel_FSCargoShorts"]/equippedStatOffsets/MoveSpeed</xpath>
			</li>

			<li Class="PatchOperationRemove">
				<xpath>Defs/ThingDef[defName="Apparel_FSCargoShorts"]/equippedStatOffsets/WorkSpeedGlobal</xpath>
			</li>

			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="Apparel_FSCargoShorts"]/equippedStatOffsets</xpath>
				<value>
					<CarryBulk>5</CarryBulk>
				</value>
			</li>

			<!-- Middle -->

			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="Apparel_FSOveralls"]/statBases</xpath>
				<value>
					<Bulk>4</Bulk>
					<WornBulk>1</WornBulk>
				</value>
			</li>

			<li Class="PatchOperationRemove">
				<xpath>Defs/ThingDef[defName="Apparel_FSOveralls"]/equippedStatOffsets/MoveSpeed</xpath>
			</li>

			<li Class="PatchOperationRemove">
				<xpath>Defs/ThingDef[defName="Apparel_FSOveralls"]/equippedStatOffsets/WorkSpeedGlobal</xpath>
			</li>

			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="Apparel_FSOveralls"]/equippedStatOffsets</xpath>
				<value>
					<CarryBulk>5</CarryBulk>
				</value>
			</li>

			<!-- Hats -->

			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="Apparel_FSFurHat"]/statBases</xpath>
				<value>
					<Bulk>4</Bulk>
					<WornBulk>1</WornBulk>
				</value>
			</li>

			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="Apparel_FSDesertWrap"]/statBases</xpath>
				<value>
					<Bulk>3</Bulk>
					<WornBulk>1</WornBulk>
				</value>
			</li>

			<!-- Stuff-less Apparel -->

			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="Apparel_FSChefJacket"]/statBases</xpath>
				<value>
					<Bulk>4</Bulk>
					<WornBulk>1</WornBulk>
				</value>
			</li>

			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="Apparel_FSScrubs"]/statBases</xpath>
				<value>
					<Bulk>4</Bulk>
					<WornBulk>1</WornBulk>
				</value>
			</li>

			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="Apparel_FSConstructionJacket"]/statBases</xpath>
				<value>
					<Bulk>5</Bulk>
					<WornBulk>1</WornBulk>

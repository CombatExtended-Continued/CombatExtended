<?xml version="1.0" encoding="utf-8" ?>

<Patch>
	<Operation Class="PatchOperationFindMod">
			<mods>
				<li>Alpha Biomes</li>
			</mods>
		<match Class="PatchOperationSequence">
		<operations>
			
			<!-- === Poison dart === -->		
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="AB_WeaponPoisonDartProjectile"]</xpath>
				<value>
					  <ThingDef ParentName="BaseGrenadeProjectile">
						<defName>AB_WeaponPoisonDartProjectile</defName>
						<label>Poison Dart</label>
						<graphicData>
						  <texPath>Things/Item/Resource/AB_PoisonDart</texPath>
						  <graphicClass>Graphic_Single</graphicClass>
						</graphicData>
							<projectile Class="CombatExtended.ProjectilePropertiesCE">
							  <damageDef>AB_ParalysingSting</damageDef>
							  <damageAmountBase>10</damageAmountBase>
							</projectile>
					  </ThingDef>
				</value>
			</li>	
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="AB_WeaponPoisonDartProjectile"]</xpath>
				<value>
					<ThingDef Class="CombatExtended.AmmoDef" ParentName="BaseGrenadeEquipment">
						<defName>AB_WeaponPoisonDartProjectile</defName>
						<label>Poison dart</label>
						<description>Poison dart which paralyses the target.</description>
						<graphicData>
							<texPath>Things/Item/Resource/AB_PoisonDart</texPath>
							<graphicClass>Graphic_Single</graphicClass>
						</graphicData>
		<soundInteract>Interact_Grenade</soundInteract>
						<statBases>
							<MarketValue>10</MarketValue>
							<SightsEfficiency>0.45</SightsEfficiency>
							<ShotSpread>1.5</ShotSpread>
							<SwayFactor>2.5</SwayFactor>
							<Bulk>0.2</Bulk>
							<Mass>0.1</Mass>
							<RangedWeapon_Cooldown>0.8</RangedWeapon_Cooldown>
						</statBases>
						<altitudeLayer>Item</altitudeLayer>
						<alwaysHaulable>True</alwaysHaulable>
						<tickerType>Normal</tickerType>
						<techLevel>Neolithic</techLevel>		
						<stackLimit>150</stackLimit>
						<weaponTags>
						  <li>GrenadeDestructive</li>
						</weaponTags>
						<verbs>
							<li Class="CombatExtended.VerbPropertiesCE">
								<verbClass>CombatExtended.Verb_ShootCEOneUse</verbClass>
								<hasStandardCommand>true</hasStandardCommand>
								<defaultProjectile>AB_WeaponPoisonDartProjectile</defaultProjectile>
								<warmupTime>0.7</warmupTime>
								<range>12</range>
								<soundCast>Interact_BeatFire</soundCast>
							</li>
						</verbs>
						<tools>
						<li Class="CombatExtended.ToolCE">
							<label>point</label>
							<capacities>
								<li>Stab</li>
							</capacities>
							<power>3</power>
							<cooldownTime>1</cooldownTime>
							<chanceFactor>1.5</chanceFactor>
							<armorPenetrationBlunt>0.25</armorPenetrationBlunt>
							<armorPenetrationSharp>0.2</armorPenetrationSharp>
							<linkedBodyPartsGroup>Point</linkedBodyPartsGroup>
						</li>
						</tools>
					</ThingDef>
				</value>
			</li>
			
		</operations>
		</match>
	</Operation>
</Patch>
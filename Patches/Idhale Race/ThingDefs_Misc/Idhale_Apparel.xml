<?xml version="1.0" encoding="utf-8" ?>
<Patch>
  <Operation Class="PatchOperationSequence">
	<operations>
	  <li Class="PatchOperationFindMod">
			
		<mods><li>[1.3]Idhale Race</li></mods>
			
		<match Class="PatchOperationSequence">
		<operations>
		
			<!--========= Stuffable =========-->
			
			<!--Skin Layer minimum protection-->
			
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[
				defName="HAR_IH_AO_a"
				]/statBases/StuffEffectMultiplierArmor</xpath>
				<value>
					<StuffEffectMultiplierArmor>0.25</StuffEffectMultiplierArmor>
					<Bulk>0.5</Bulk>
					<WornBulk>0.25</WornBulk>
				</value>
			</li>
			
			<!--Middle Mid-->
			
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[
				defName="HAR_IH_AT_a" or
				defName="HAR_IH_AT_b" or
				defName="HAR_IH_AT_c" or
				defName="HAR_IH_AT_d" or
				defName="HAR_IH_AT_e"
				]/statBases/StuffEffectMultiplierArmor</xpath>
				<value>
					<StuffEffectMultiplierArmor>3</StuffEffectMultiplierArmor>
					<Bulk>3</Bulk>
					<WornBulk>1</WornBulk>
				</value>
			</li>
			
			<!--Shell-->
			
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[
				defName="HAR_IH_AS_a"
				]/statBases/StuffEffectMultiplierArmor</xpath>
				<value>
					<StuffEffectMultiplierArmor>10</StuffEffectMultiplierArmor>
					<Bulk>10</Bulk>
					<WornBulk>5</WornBulk>
				</value>
			</li>
			
		</operations>
		</match>	
	  </li>
	</operations>	
  </Operation>
</Patch>

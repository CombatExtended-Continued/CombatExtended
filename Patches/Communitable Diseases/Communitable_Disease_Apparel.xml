<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<Operation Class="PatchOperationFindMod">
    <mods>
        <li>Communicable Diseases [1.3]</li>
    </mods>
		<match Class="PatchOperationSequence">
		<operations>
		
			<!-- ====================== Dust Mask ===================== -->

			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="Apparel_DustMask"]/apparel/layers</xpath>
				<value>
					<layers>
						<li>Overhead</li>
					</layers>
				</value>
			</li>
			
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="Apparel_DustMask"]/apparel/bodyPartGroups</xpath>
				<value>
					<bodyPartGroups>
						<li>Teeth</li>
					</bodyPartGroups>
				</value>
			</li>
			
			<!-- ====================== Respirator ===================== -->

			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="Apparel_Respirator"]/apparel/layers</xpath>
				<value>
					<layers>
						<li>Overhead</li>
					</layers>
				</value>
			</li>
			
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="Apparel_Respirator"]/apparel/bodyPartGroups</xpath>
				<value>
					<bodyPartGroups>
						<li>Teeth</li>
					</bodyPartGroups>
				</value>
			</li>
			
		</operations>
		
		</match>
	</Operation>
</Patch>

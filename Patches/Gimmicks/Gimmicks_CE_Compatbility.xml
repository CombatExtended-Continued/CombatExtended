                <linkedBodyPartsGroup>Point</linkedBodyPartsGroup>
              </li>
            </tools>
          </value>
        </li>
        <li Class="PatchOperationAdd">
          <xpath>Defs/ThingDef[defName="Tool_Chefs_Knife"]/statBases</xpath>
          <value>
            <Bulk>4</Bulk>
            <MeleeCounterParryBonus>1.0</MeleeCounterParryBonus>

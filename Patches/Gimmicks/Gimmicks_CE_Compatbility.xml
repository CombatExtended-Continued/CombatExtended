        <!-- Chef's Knife -->
        <li Class="PatchOperationReplace">
          <xpath>Defs/ThingDef[defName="Tool_Chefs_Knife"]/tools</xpath>
          <value>
            <tools>
              <li Class="CombatExtended.ToolCE">
                <label>handle</label>

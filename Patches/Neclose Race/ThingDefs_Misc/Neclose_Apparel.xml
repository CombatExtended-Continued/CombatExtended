<?xml version="1.0" encoding="utf-8" ?>
<Patch>
  <Operation Class="PatchOperationSequence">
	<operations>
	  <li Class="PatchOperationFindMod">
			
		<mods><li>[1.4]Neclose Race</li></mods>
			
		<match Class="PatchOperationSequence">
		<operations>
		
			<!--========= Stuffable =========-->
			
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[
				defName="HAR_NC_Tops_a" or
				defName="HAR_NC_Tops_b" or
				defName="HAR_NC_Tops_c"
				]/statBases/StuffEffectMultiplierArmor</xpath>
				<value>
					<StuffEffectMultiplierArmor>3</StuffEffectMultiplierArmor>
					<Bulk>3</Bulk>
					<WornBulk>1</WornBulk>
				</value>
			</li>
			
			<!--Middle PA-->
			
			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[@Name="HAR_NC_Armor_Base"]/apparel/bodyPartGroups</xpath>
				<value>
					<li>Hands</li>
					<li>Feet</li>
				</value>
			</li>
			
			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[@Name="HAR_NC_Armor_Base"]/costList</xpath>
				<value>
					<DevilstrandCloth>50</DevilstrandCloth>
				</value>
			</li>
			
			<!--Regular-->
			
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[
				defName="HAR_NC_Armor_a"
				]/statBases/ArmorRating_Sharp</xpath>
				<value>
					<ArmorRating_Sharp>15</ArmorRating_Sharp>
					<Bulk>80</Bulk>
					<WornBulk>10</WornBulk>
				</value>
			</li>
			
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[
				defName="HAR_NC_Armor_a"
				]/statBases/ArmorRating_Blunt</xpath>
				<value>
					<ArmorRating_Blunt>37.5</ArmorRating_Blunt>
				</value>
			</li>
			
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[
				defName="HAR_NC_Armor_a"
				]/statBases/Mass</xpath>
				<value>
					<Mass>60</Mass>
				</value>
			</li>
			
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[
				defName="HAR_NC_Armor_a"
				]/equippedStatOffsets/MoveSpeed</xpath>
				<value>
					<CarryWeight>60</CarryWeight>
					<CarryBulk>10</CarryBulk>
					<MoveSpeed>-0.5</MoveSpeed>
					<ShootingAccuracyPawn>0.15</ShootingAccuracyPawn>
					<ToxicEnvironmentResistance>0.50</ToxicEnvironmentResistance>
				</value>
			</li>
			
			<!--Light-->
			
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[
				defName="HAR_NC_Armor_b"
				]/statBases/ArmorRating_Sharp</xpath>
				<value>
					<ArmorRating_Sharp>10</ArmorRating_Sharp>
					<Bulk>80</Bulk>
					<WornBulk>10</WornBulk>
				</value>
			</li>
			
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[
				defName="HAR_NC_Armor_b"
				]/statBases/ArmorRating_Blunt</xpath>
				<value>
					<ArmorRating_Blunt>25</ArmorRating_Blunt>
				</value>
			</li>
			
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[
				defName="HAR_NC_Armor_b"
				]/statBases/Mass</xpath>
				<value>
					<Mass>50</Mass>
				</value>
			</li>
			
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[
				defName="HAR_NC_Armor_b"
				]/equippedStatOffsets/MeleeDodgeChance</xpath>
				<value>
					<CarryWeight>70</CarryWeight>
					<CarryBulk>10</CarryBulk>
					<MeleeDodgeChance>1</MeleeDodgeChance>
					<ToxicEnvironmentResistance>0.50</ToxicEnvironmentResistance>
				</value>
			</li>
			
			<!--Mid-->
			
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[
				defName="HAR_NC_Armor_c"
				]/statBases/ArmorRating_Sharp</xpath>
				<value>
					<ArmorRating_Sharp>13</ArmorRating_Sharp>
					<Bulk>80</Bulk>
					<WornBulk>10</WornBulk>
				</value>
			</li>
			
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[
				defName="HAR_NC_Armor_c"
				]/statBases/ArmorRating_Blunt</xpath>
				<value>
					<ArmorRating_Blunt>32.5</ArmorRating_Blunt>
				</value>
			</li>
			
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[
				defName="HAR_NC_Armor_c"
				]/statBases/Mass</xpath>
				<value>
					<Mass>60</Mass>
				</value>
			</li>
			
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[
				defName="HAR_NC_Armor_c"
				]/equippedStatOffsets/MeleeDodgeChance</xpath>
				<value>
					<CarryWeight>70</CarryWeight>
					<CarryBulk>10</CarryBulk>
					<MeleeDodgeChance>0.5</MeleeDodgeChance>
					<ToxicEnvironmentResistance>0.50</ToxicEnvironmentResistance>
				</value>
			</li>
			
			<li Class="PatchOperationRemove">
				<xpath>Defs/ThingDef[
				defName="HAR_NC_Armor_c"
				]/equippedStatOffsets/MoveSpeed</xpath>
			</li>
			
			
			<!--Shell-->
			
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[
				defName="HAR_NC_Shell_a" or
				defName="HAR_NC_Shell_b" or
				defName="HAR_NC_Shell_c"
				]/statBases/StuffEffectMultiplierArmor</xpath>
				<value>
					<StuffEffectMultiplierArmor>4</StuffEffectMultiplierArmor>
					<Bulk>10</Bulk>
					<WornBulk>5</WornBulk>
				</value>
			</li>
			
			
			<!--Overhead-->
			
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[
				defName="HAR_NC_Heads_a"
				]/statBases/StuffEffectMultiplierArmor</xpath>
				<value>
					<StuffEffectMultiplierArmor>2.5</StuffEffectMultiplierArmor>
					<Bulk>1</Bulk>
					<WornBulk>1</WornBulk>
				</value>
			</li>
			
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[
				defName="HAR_NC_Heads_c" or
				defName="HAR_NC_Heads_d" or
				defName="HAR_NC_Heads_e"
				]/statBases/StuffEffectMultiplierArmor</xpath>
				<value>
					<StuffEffectMultiplierArmor>3</StuffEffectMultiplierArmor>
					<Bulk>1</Bulk>
					<WornBulk>0</WornBulk>
				</value>
			</li>
			
			<!--Overhead Armor-->
			
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[
				defName="HAR_NC_Heads_b"
				]/statBases/ArmorRating_Sharp</xpath>
				<value>
					<ArmorRating_Sharp>15</ArmorRating_Sharp>
					<Bulk>5</Bulk>
					<WornBulk>1</WornBulk>
				</value>
			</li>
			
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[
				defName="HAR_NC_Heads_b"
				]/statBases/ArmorRating_Blunt</xpath>
				<value>
					<ArmorRating_Blunt>37.5</ArmorRating_Blunt>
				</value>
			</li>

			<li Class="PatchOperationConditional">
				<xpath>Defs/ThingDef[defName="HAR_NC_Heads_b"]/apparel/immuneToToxGasExposure</xpath>
				<nomatch Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="HAR_NC_Heads_b"]/apparel</xpath>
					<value>
						<immuneToToxGasExposure>true</immuneToToxGasExposure>
					</value>
				</nomatch>
			</li>

			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[
				defName="HAR_NC_Heads_b"
				]/equippedStatOffsets/MoveSpeed</xpath>
				<value>
					<AimingAccuracy>0.15</AimingAccuracy>
					<ToxicEnvironmentResistance>0.50</ToxicEnvironmentResistance>
					<SmokeSensitivity>-1</SmokeSensitivity>
				</value>
			</li>
			
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="HAR_NC_Heads_b"]/costList/Plasteel</xpath>
				<value>
					<Plasteel>60</Plasteel>
					<DevilstrandCloth>20</DevilstrandCloth>
				</value>
			</li>
			
		</operations>
		</match>	
	  </li>
	</operations>	
  </Operation>
</Patch>

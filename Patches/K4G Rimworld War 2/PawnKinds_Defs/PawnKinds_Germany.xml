<?xml version="1.0" encoding="utf-8"?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>[K4G] RimWorld War 2</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				<!-- === Private & Medic === -->
				<li Class="PatchOperationAddModExtension">
					<xpath>Defs/PawnKindDef[defName="K4G_WW2GermanPrivate" or defName="K4G_WW2GermanMedic"]</xpath>
					<value>
						<li Class="CombatExtended.LoadoutPropertiesExtension">
							<primaryMagazineCount>
								<min>4</min>
								<max>6</max>
							</primaryMagazineCount>
						</li>
					</value>
				</li>

				<!-- === Rifleman & Infantry === -->
				<li Class="PatchOperationAddModExtension">
					<xpath>Defs/PawnKindDef[
						defName="K4G_WW2GermanRifleman" or
						defName="K4G_WW2GermanRiflemanShared" or
						defName="K4G_WW2GermanInfantry"
						]</xpath>
					<value>
						<li Class="CombatExtended.LoadoutPropertiesExtension">
							<primaryMagazineCount>
								<min>6</min>
								<max>8</max>
							</primaryMagazineCount>
							<sidearms>
								<li>
									<generateChance>0.25</generateChance>
									<sidearmMoney>
										<min>75</min>
										<max>185</max>
									</sidearmMoney>
									<weaponTags>
										<li>K4GWW2GermanyMelee</li>
									</weaponTags>
								</li>
							</sidearms>
						</li>
					</value>
				</li>

				<!-- === Machine Gunner === -->
				<li Class="PatchOperationAddModExtension">
					<xpath>Defs/PawnKindDef[
						defName="K4G_WW2GermanMachineGunner" or
						defName="K4G_WW2GermanMachineGunnerShared"
						]</xpath>
					<value>
						<li Class="CombatExtended.LoadoutPropertiesExtension">
							<primaryMagazineCount>
								<min>6</min>
								<max>8</max>
							</primaryMagazineCount>
							<sidearms>
								<li>
									<generateChance>0.5</generateChance>
									<sidearmMoney>
										<min>85</min>
										<max>195</max>
									</sidearmMoney>
									<weaponTags>
										<li>K4GWW2GermanyMelee</li>
									</weaponTags>
								</li>
							</sidearms>
						</li>
					</value>
				</li>

				<!-- === Sniper === -->
				<li Class="PatchOperationAddModExtension">
					<xpath>Defs/PawnKindDef[defName="K4G_WW2GermanSniper"]</xpath>
					<value>
						<li Class="CombatExtended.LoadoutPropertiesExtension">
							<primaryMagazineCount>
								<min>6</min>
								<max>8</max>
							</primaryMagazineCount>
							<sidearms>
								<li>
									<generateChance>0.75</generateChance>
									<sidearmMoney>
										<min>95</min>
										<max>195</max>
									</sidearmMoney>
									<weaponTags>
										<li>K4GWW2GermanyMelee</li>
									</weaponTags>
								</li>
							</sidearms>
						</li>
					</value>
				</li>

				<!-- === Grenadier === -->
				<li Class="PatchOperationAddModExtension">
					<xpath>Defs/PawnKindDef[defName="K4G_WW2GermanGrenadier"]</xpath>
					<value>
						<li Class="CombatExtended.LoadoutPropertiesExtension">
							<primaryMagazineCount>
								<min>8</min>
								<max>14</max>
							</primaryMagazineCount>
							<sidearms>
								<li>
									<generateChance>0.75</generateChance>
									<sidearmMoney>
										<min>25</min>
										<max>100</max>
									</sidearmMoney>
									<weaponTags>
										<li>K4GWW2GermanyPistol</li>
									</weaponTags>
									<magazineCount>
										<min>3</min>
										<max>5</max>
									</magazineCount>
								</li>
							</sidearms>
						</li>
					</value>
				</li>

				<!-- === Anti-Tank === -->
				<li Class="PatchOperationAddModExtension">
					<xpath>Defs/PawnKindDef[defName="K4G_WW2GermanAntiTank" or defName="K4G_WW2GermanAntiTankShared"]</xpath>
					<value>
						<li Class="CombatExtended.LoadoutPropertiesExtension">
							<primaryMagazineCount>
								<min>6</min>
								<max>8</max>
							</primaryMagazineCount>
							<sidearms>
								<li>
									<generateChance>0.75</generateChance>
									<sidearmMoney>
										<min>25</min>
										<max>100</max>
									</sidearmMoney>
									<weaponTags>
										<li>K4GWW2GermanyPistol</li>
									</weaponTags>
									<magazineCount>
										<min>3</min>
										<max>5</max>
									</magazineCount>
								</li>
							</sidearms>
						</li>
					</value>
				</li>

				<!-- === Officers === -->
				<li Class="PatchOperationAddModExtension">
					<xpath>Defs/PawnKindDef[
						defName="K4G_WW2GermanOfficer" or
						defName="K4G_WW2GermanOfficerB" or
						defName="K4G_WW2GermanLogisticsOfficer" or
						defName="K4G_WW2GermanLogisticsOfficerB" or
						defName="K4G_WW2GermanLeader" or
						defName="K4G_WW2GermanLeaderB"
						]</xpath>
					<value>
						<li Class="CombatExtended.LoadoutPropertiesExtension">
							<primaryMagazineCount>
								<min>6</min>
								<max>7</max>
							</primaryMagazineCount>
							<sidearms>
								<li>
									<generateChance>0.25</generateChance>
									<sidearmMoney>
										<min>20</min>
										<max>120</max>
									</sidearmMoney>
									<weaponTags>
										<li>K4GWW2GermanyMelee</li>
									</weaponTags>
								</li>
								<li>
									<generateChance>0.075</generateChance>
									<sidearmMoney>
										<min>10</min>
										<max>100</max>
									</sidearmMoney>
									<weaponTags>
										<li>CE_FlareLauncher</li>
									</weaponTags>
									<magazineCount>
										<min>1</min>
										<max>3</max>
									</magazineCount>
								</li>
							</sidearms>
						</li>
					</value>
				</li>

			</operations>
		</match>
	</Operation>

</Patch>
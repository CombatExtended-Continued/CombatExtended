<?xml version="1.0" encoding="utf-8"?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>[K4G] RimWorld War 2</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>

				<!-- === Private & Medic === -->
				<li Class="PatchOperationAddModExtension">
					<xpath>Defs/PawnKindDef[defName="K4G_WW2RussianPrivateCoBelligerentGermany" or defName="K4G_WW2RussianMedicCoBelligerentGermany"]</xpath>
					<value>
						<li Class="CombatExtended.LoadoutPropertiesExtension">
							<primaryMagazineCount>
								<min>4</min>
								<max>6</max>
							</primaryMagazineCount>
						</li>
					</value>
				</li>

				<!-- === Rifleman & Infantry === -->
				<li Class="PatchOperationAddModExtension">
					<xpath>Defs/PawnKindDef[
						defName="K4G_WW2RussianRiflemanCoBelligerentGermany" or
						defName="K4G_WW2RussianRiflemanSharedCoBelligerentGermany" or
						defName="K4G_WW2RussianInfantryCoBelligerentGermany"
						]</xpath>
					<value>
						<li Class="CombatExtended.LoadoutPropertiesExtension">
							<primaryMagazineCount>
								<min>6</min>
								<max>8</max>
							</primaryMagazineCount>
							<sidearms>
								<li>
									<generateChance>0.25</generateChance>
									<sidearmMoney>
										<min>75</min>
										<max>185</max>
									</sidearmMoney>
									<weaponTags>
										<li>K4GWW2RussiaMelee</li>
									</weaponTags>
								</li>
							</sidearms>
						</li>
					</value>
				</li>

				<!-- === Machine Gunner === -->
				<li Class="PatchOperationAddModExtension">
					<xpath>Defs/PawnKindDef[
						defName="K4G_WW2RussianMachineGunnerCoBelligerentGermany" or
						defName="K4G_WW2RussianMachineGunnerSharedCoBelligerentGermany"
						]</xpath>
					<value>
						<li Class="CombatExtended.LoadoutPropertiesExtension">
							<primaryMagazineCount>
								<min>6</min>
								<max>8</max>
							</primaryMagazineCount>
							<sidearms>
								<li>
									<generateChance>0.5</generateChance>
									<sidearmMoney>
										<min>85</min>
										<max>195</max>
									</sidearmMoney>
									<weaponTags>
										<li>K4GWW2RussiaMelee</li>
									</weaponTags>
								</li>
							</sidearms>
						</li>
					</value>
				</li>

				<!-- === Sniper === -->
				<li Class="PatchOperationAddModExtension">
					<xpath>Defs/PawnKindDef[defName="K4G_WW2RussianSniperCoBelligerentGermany"]</xpath>
					<value>
						<li Class="CombatExtended.LoadoutPropertiesExtension">
							<primaryMagazineCount>
								<min>6</min>
								<max>8</max>
							</primaryMagazineCount>
							<sidearms>
								<li>
									<generateChance>0.75</generateChance>
									<sidearmMoney>
										<min>95</min>
										<max>195</max>
									</sidearmMoney>
									<weaponTags>
										<li>K4GWW2RussiaMelee</li>
									</weaponTags>
								</li>
							</sidearms>
						</li>
					</value>
				</li>

				<!-- === Grenadier === -->
				<li Class="PatchOperationAddModExtension">
					<xpath>Defs/PawnKindDef[defName="K4G_WW2RussianGrenadierCoBelligerentGermany"]</xpath>
					<value>
						<li Class="CombatExtended.LoadoutPropertiesExtension">
							<primaryMagazineCount>
								<min>8</min>
								<max>14</max>
							</primaryMagazineCount>
							<sidearms>
								<li>
									<generateChance>0.75</generateChance>
									<sidearmMoney>
										<min>25</min>
										<max>100</max>
									</sidearmMoney>
									<weaponTags>
										<li>K4GWW2RussiaPistol</li>
									</weaponTags>
									<magazineCount>
										<min>3</min>
										<max>5</max>
									</magazineCount>
								</li>
							</sidearms>
						</li>
					</value>
				</li>

				<!-- === Anti-Tank === -->
				<li Class="PatchOperationAddModExtension">
					<xpath>Defs/PawnKindDef[defName="K4G_WW2RussianAntiTankCoBelligerentGermany" or defName="K4G_WW2RussianAntiTankSharedCoBelligerentGermany"]</xpath>
					<value>
						<li Class="CombatExtended.LoadoutPropertiesExtension">
							<primaryMagazineCount>
								<min>6</min>
								<max>8</max>
							</primaryMagazineCount>
							<sidearms>
								<li>
									<generateChance>0.75</generateChance>
									<sidearmMoney>
										<min>25</min>
										<max>100</max>
									</sidearmMoney>
									<weaponTags>
										<li>K4GWW2RussiaPistol</li>
									</weaponTags>
									<magazineCount>
										<min>3</min>
										<max>5</max>
									</magazineCount>
								</li>
							</sidearms>
						</li>
					</value>
				</li>

				<!-- === Officers === -->
				<li Class="PatchOperationAddModExtension">
					<xpath>Defs/PawnKindDef[
						defName="K4G_WW2RussianOfficerCoBelligerentGermany" or
						defName="K4G_WW2RussianOfficerBCoBelligerentGermany" or
						defName="K4G_WW2RussianOfficerCCoBelligerentGermany" or
						defName="K4G_WW2RussianLogisticsOfficerCoBelligerentGermany" or
						defName="K4G_WW2RussianLogisticsOfficerBCoBelligerentGermany" or
						defName="K4G_WW2RussianLogisticsOfficerCCoBelligerentGermany" or
						defName="K4G_WW2RussianLeaderCoBelligerentGermany" or
						defName="K4G_WW2RussianLeaderBCoBelligerentGermany" or
						defName="K4G_WW2RussianLeaderCCoBelligerentGermany"
						]</xpath>
					<value>
						<li Class="CombatExtended.LoadoutPropertiesExtension">
							<primaryMagazineCount>
								<min>5</min>
								<max>6</max>
							</primaryMagazineCount>
							<sidearms>
								<li>
									<generateChance>0.33</generateChance>
									<sidearmMoney>
										<min>20</min>
										<max>120</max>
									</sidearmMoney>
									<weaponTags>
										<li>K4GWW2RussiaMelee</li>
									</weaponTags>
								</li>
								<li>
									<generateChance>0.1</generateChance>
									<sidearmMoney>
										<min>100</min>
										<max>300</max>
									</sidearmMoney>
									<weaponTags>
										<li>CE_FlareLauncher</li>
									</weaponTags>
									<magazineCount>
										<min>2</min>
										<max>4</max>
									</magazineCount>
								</li>
							</sidearms>
						</li>
					</value>
				</li>

			</operations>
		</match>
	</Operation>

</Patch>
<?xml version="1.0" encoding="utf-8" ?>
<Patch>

   <Operation Class="PatchOperationFindMod">
      <mods>
         <li>[K4G] RimWorld War 2</li>
      </mods>
      <match Class="PatchOperationSequence">
         <operations>

            <!-- ======= WW2 Soldier Base Weapon Money Increase ======= -->
            <li Class="PatchOperationReplace">
               <xpath>Defs/PawnKindDef[ @Name="WW2SoldierBase"]/weaponMoney</xpath>
               <value>
                  <weaponMoney>800~1000</weaponMoney>
               </value>
            </li>

         </operations>
      </match>
   </Operation>

</Patch>
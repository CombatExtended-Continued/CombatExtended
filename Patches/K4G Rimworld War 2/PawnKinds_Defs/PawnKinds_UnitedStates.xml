<?xml version="1.0" encoding="utf-8"?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>[K4G] RimWorld War 2</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>

			<!-- === Private & Medic === -->
			<li Class="PatchOperationAddModExtension">
				<xpath>Defs/PawnKindDef[defName="K4G_WW2AmericanPrivate" or defName="K4G_WW2AmericanMedic"]</xpath>
				<value>
					<li Class="CombatExtended.LoadoutPropertiesExtension">
						<primaryMagazineCount>
							<min>4</min>
							<max>6</max>
						</primaryMagazineCount>
					</li>
				</value>
			</li>

			<!-- === Rifleman & Infantry === -->
			<li Class="PatchOperationAddModExtension">
				<xpath>Defs/PawnKindDef[
				defName="K4G_WW2AmericanRifleman" or
				defName="K4G_WW2AmericanRiflemanShared" or
				defName="K4G_WW2AmericanInfantry"
				]</xpath>
				<value>
					<li Class="CombatExtended.LoadoutPropertiesExtension">
						<primaryMagazineCount>
							<min>6</min>
							<max>8</max>
						</primaryMagazineCount>
						<sidearms>
							<li>
								<generateChance>0.25</generateChance>
								<sidearmMoney>
									<min>75</min>
									<max>185</max>
								</sidearmMoney>
								<weaponTags>
									<li>K4GWW2UnitedStatesMelee</li>
								</weaponTags>
							</li>
						</sidearms>
					</li>
				</value>
			</li>

			<!-- === Machine Gunner === -->
			<li Class="PatchOperationAddModExtension">
				<xpath>Defs/PawnKindDef[
				defName="K4G_WW2AmericanMachineGunner" or
				defName="K4G_WW2AmericanMachineGunnerShared"
				]</xpath>
				<value>
					<li Class="CombatExtended.LoadoutPropertiesExtension">
						<primaryMagazineCount>
							<min>6</min>
							<max>8</max>
						</primaryMagazineCount>
						<sidearms>
							<li>
								<generateChance>0.5</generateChance>
								<sidearmMoney>
									<min>85</min>
									<max>195</max>
								</sidearmMoney>
								<weaponTags>
									<li>K4GWW2UnitedStatesMelee</li>
								</weaponTags>
							</li>
						</sidearms>
					</li>
				</value>
			</li>

			<!-- === Sniper === -->
			<li Class="PatchOperationAddModExtension">
				<xpath>Defs/PawnKindDef[defName="K4G_WW2AmericanSniper"]</xpath>
				<value>
					<li Class="CombatExtended.LoadoutPropertiesExtension">
						<primaryMagazineCount>
							<min>6</min>
							<max>8</max>
						</primaryMagazineCount>
						<sidearms>
							<li>
								<generateChance>0.75</generateChance>
								<sidearmMoney>
									<min>95</min>
									<max>195</max>
								</sidearmMoney>
								<weaponTags>
									<li>K4GWW2UnitedStatesMelee</li>
								</weaponTags>
							</li>
						</sidearms>
					</li>
				</value>
			</li>

			<!-- === Grenadier === -->
			<li Class="PatchOperationAddModExtension">
				<xpath>Defs/PawnKindDef[defName="K4G_WW2AmericanGrenadier"]</xpath>
				<value>
					<li Class="CombatExtended.LoadoutPropertiesExtension">
						<primaryMagazineCount>
							<min>8</min>
							<max>14</max>
						</primaryMagazineCount>
						<sidearms>
							<li>
								<generateChance>0.75</generateChance>
								<sidearmMoney>
									<min>25</min>
									<max>100</max>
								</sidearmMoney>
								<weaponTags>
									<li>K4GWW2UnitedStatesPistol</li>
								</weaponTags>
								<magazineCount>
									<min>3</min>
									<max>5</max>
								</magazineCount>
							</li>
						</sidearms>
					</li>
				</value>
			</li>

			<!-- === Anti-Tank === -->
			<li Class="PatchOperationAddModExtension">
				<xpath>Defs/PawnKindDef[defName="K4G_WW2AmericanAntiTank" or defName="K4G_WW2AmericanAntiTankShared"]</xpath>
				<value>
					<li Class="CombatExtended.LoadoutPropertiesExtension">
						<primaryMagazineCount>
							<min>6</min>
							<max>8</max>
						</primaryMagazineCount>
						<sidearms>
							<li>
								<generateChance>0.75</generateChance>
								<sidearmMoney>
									<min>25</min>
									<max>100</max>
								</sidearmMoney>
								<weaponTags>
									<li>K4GWW2UnitedStatesPistol</li>
								</weaponTags>
								<magazineCount>
									<min>3</min>
									<max>5</max>
								</magazineCount>
							</li>
						</sidearms>
					</li>
				</value>
			</li>

			<!-- === Officers === -->
			<li Class="PatchOperationAddModExtension">
				<xpath>Defs/PawnKindDef[
				defName="K4G_WW2AmericanOfficer" or
				defName="K4G_WW2AmericanOfficerB" or
				defName="K4G_WW2AmericanLogisticsOfficer" or
				defName="K4G_WW2AmericanLogisticsOfficerB" or
				defName="K4G_WW2AmericanLeader" or
				defName="K4G_WW2AmericanLeaderB"								
				]</xpath>
				<value>
					<li Class="CombatExtended.LoadoutPropertiesExtension">
						<primaryMagazineCount>
							<min>5</min>
							<max>6</max>
						</primaryMagazineCount>
						<sidearms>
							<li>
								<generateChance>0.33</generateChance>
								<sidearmMoney>
									<min>20</min>
									<max>120</max>
								</sidearmMoney>
								<weaponTags>
									<li>K4GWW2UnitedStatesMelee</li>
								</weaponTags>
							</li>
							<li>
								<generateChance>0.1</generateChance>
								<sidearmMoney>
									<min>100</min>
									<max>300</max>
								</sidearmMoney>
								<weaponTags>
									<li>CE_FlareLauncher</li>
								</weaponTags>
								<magazineCount>
									<min>2</min>
									<max>4</max>
								</magazineCount>
							</li>
						</sidearms>
					</li>
				</value>
			</li>

			</operations>
		</match>
	</Operation>

</Patch>
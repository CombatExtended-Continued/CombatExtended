<?xml version="1.0" encoding="utf-8"?>
<Patch>
	<Operation Class="PatchOperationSequence">
		<operations>
			<li Class="PatchOperationFindMod">

				<mods>
					<li>Polarisbloc - Security Force</li>
				</mods>

				<match Class="PatchOperationSequence">
					<operations>
						<li Class="PatchOperationAddModExtension">
							<xpath>Defs/PawnKindDef[defName="Polarisbloc_SFSoldier" or
								defName="Polarisbloc_SFCaptain" or
								defName="Polarisbloc_SFCommander"
								] </xpath>
							<value>
								<li Class="CombatExtended.LoadoutPropertiesExtension">
									<primaryMagazineCount>
										<min>6</min>
										<max>8</max>
									</primaryMagazineCount>
									<sidearms>
										<li>
											<generateChance>1</generateChance>
											<sidearmMoney>
												<min>200</min>
												<max>400</max>
											</sidearmMoney>
											<weaponTags>
												<li>CE_Sidearm_Melee</li>
											</weaponTags>
										</li>
									</sidearms>
								</li>
							</value>
						</li>

						<li Class="PatchOperationReplace">
							<xpath>Defs/PawnKindDef[defName="Polarisbloc_SFSoldier"]/combatPower</xpath>
							<value>
								<combatPower>185</combatPower>
							</value>
						</li>

						<li Class="PatchOperationReplace">
							<xpath>Defs/PawnKindDef[defName="Polarisbloc_SFSoldier"]/combatPower</xpath>
							<value>
								<combatPower>256</combatPower>
							</value>
						</li>

						<li Class="PatchOperationReplace">
							<xpath>Defs/PawnKindDef[defName="Polarisbloc_SFSoldier"]/combatPower</xpath>
							<value>
								<combatPower>270</combatPower>
							</value>
						</li>

					</operations>
				</match>
			</li>
		</operations>
	</Operation>
</Patch>
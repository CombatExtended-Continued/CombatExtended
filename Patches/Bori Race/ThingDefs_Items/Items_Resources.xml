<?xml version="1.0" encoding="utf-8"?>
<Patch>
	<Operation Class="PatchOperationSequence">

		<operations>
			<li Class="PatchOperationFindMod">
				<mods>
					<li>Bori race</li>
				</mods>
				<match Class="PatchOperationSequence">
					<operations>

						<!-- ==========  Chiffron Wool  =========== -->

						<li Class="PatchOperationReplace">
							<xpath>Defs/ThingDef[defName="SP_Weave"]/statBases/StuffPower_Armor_Sharp</xpath>
							<value>
								<StuffPower_Armor_Sharp>0.05</StuffPower_Armor_Sharp>
							</value>
						</li>

						<li Class="PatchOperationReplace">
							<xpath>Defs/ThingDef[defName="SP_Weave"]/statBases/StuffPower_Armor_Blunt</xpath>
							<value>
								<StuffPower_Armor_Blunt>0.08</StuffPower_Armor_Blunt>
							</value>
						</li>

						<li Class="PatchOperationReplace">
							<xpath>Defs/ThingDef[defName="SP_Weave"]/statBases/StuffPower_Armor_Heat</xpath>
							<value>
								<StuffPower_Armor_Heat>0.10</StuffPower_Armor_Heat>
								<StuffPower_Armor_Electric>0.05</StuffPower_Armor_Electric>
							</value>
						</li>

						<!-- ==========  Orion  =========== -->

						<li Class="PatchOperationReplace">
							<xpath>Defs/ThingDef[defName="SPBD_Orion"]/statBases/StuffPower_Armor_Sharp</xpath>
							<value>
								<StuffPower_Armor_Sharp>2.50</StuffPower_Armor_Sharp>
							</value>
						</li>

						<li Class="PatchOperationReplace">
							<xpath>Defs/ThingDef[defName="SPBD_Orion"]/statBases/StuffPower_Armor_Blunt</xpath>
							<value>
								<StuffPower_Armor_Blunt>3</StuffPower_Armor_Blunt>
							</value>
						</li>

						<li Class="PatchOperationReplace">
							<xpath>Defs/ThingDef[defName="SPBD_Orion"]/statBases/StuffPower_Armor_Heat</xpath>
							<value>
								<StuffPower_Armor_Heat>0.15</StuffPower_Armor_Heat>
								<StuffPower_Armor_Electric>0.05</StuffPower_Armor_Electric>
							</value>
						</li>

						<li Class="PatchOperationAdd">
							<xpath>Defs/ThingDef[defName="SPBD_Orion"]/stuffProps/statFactors</xpath>
							<value>
								<Mass>0.65</Mass>
								<MeleePenetrationFactor>1.2</MeleePenetrationFactor>
							</value>
						</li>

						<li Class="PatchOperationAdd">
							<xpath>Defs/ThingDef[defName="SPBD_Orion"]/stuffProps/categories</xpath>
							<value>
								<li>Metallic_Weapon</li>
								<li>Steeled</li>
							</value>
						</li>

						<li Class="PatchOperationAdd">
							<xpath>Defs/ThingDef[
								defName="SPBD_Orion"
								]/statBases </xpath>
							<value>
								<Bulk>0.03</Bulk>
							</value>
						</li>

						<li Class="PatchOperationAdd">
							<xpath>Defs/ThingDef[
								defName="SP_Weave"
								]/statBases </xpath>
							<value>
								<Bulk>0.04</Bulk>
								<WornBulk>0.0</WornBulk>
							</value>
						</li>

					</operations>
				</match>
			</li>
		</operations>
	</Operation>
</Patch>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/Vehicles.VehicleDef[defName="VVE_Marshal"]/components/li[key="Roof"]/armor/ArmorRating_Sharp</xpath>
					<value>
						<ArmorRating_Sharp>16</ArmorRating_Sharp>
					</value>
				</li>

			</operations>
		</match>
	</Operation>

</Patch>

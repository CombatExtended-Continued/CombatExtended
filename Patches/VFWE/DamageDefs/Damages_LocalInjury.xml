<?xml version="1.0" encoding="UTF-8"?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>[XND] Vanilla-Friendly Weapon Expansion</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>

			<!-- Radioactive Explosion -->
			<li Class="PatchOperationReplace">
				<xpath>Defs/DamageDef[defName="ExplosionRadioactive"]/additionalHediffs/li/severityPerDamageDealt</xpath>
				<value>
					<severityPerDamageDealt>0.02</severityPerDamageDealt>
				</value>
			</li>

			</operations>		
		</match>
	</Operation>

</Patch>
				<!-- statBases -->
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="VAE_Apparel_Chainmail"]/statBases</xpath>
					<value>
						<Bulk>10</Bulk>
						<WornBulk>5</WornBulk>

<?xml version="1.0" encoding="utf-8" ?>
<Patch>
  <Operation Class="PatchOperationSequence">
	<operations>
	  <li Class="PatchOperationFindMod">
			
		<mods><li>[1.3]Littluna Race</li></mods>
			
		<match Class="PatchOperationSequence">
		<operations>
		
			<!--========= Stuffable =========-->
			
			<!--Skin Layer minimum protection-->
			
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[
				defName="HAR_LL_O_a"
				]/statBases/StuffEffectMultiplierArmor</xpath>
				<value>
					<StuffEffectMultiplierArmor>0.25</StuffEffectMultiplierArmor>
					<Bulk>0.5</Bulk>
					<WornBulk>0</WornBulk>
				</value>
			</li>
			
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[
				defName="HAR_LL_T_a" or
				defName="HAR_LL_T_b" or
				defName="HAR_LL_T_c" or
				defName="HAR_LL_T_e"
				]/statBases/StuffEffectMultiplierArmor</xpath>
				<value>
					<StuffEffectMultiplierArmor>2</StuffEffectMultiplierArmor>
					<Bulk>2</Bulk>
					<WornBulk>0</WornBulk>
				</value>
			</li>
			
			<!--Shell-->
			
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[
				defName="HAR_LL_S_a" or
				defName="HAR_LL_S_b" or
				defName="HAR_LL_S_c" or
				defName="HAR_LL_S_e"
				]/statBases/StuffEffectMultiplierArmor</xpath>
				<value>
					<StuffEffectMultiplierArmor>10</StuffEffectMultiplierArmor>
					<Bulk>10</Bulk>
					<WornBulk>5</WornBulk>
				</value>
			</li>
			
			<!--Overhead-->
			
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[
				defName="HAR_LL_H_a" or
				defName="HAR_LL_H_b" or
				defName="HAR_LL_H_e"
				]/statBases/StuffEffectMultiplierArmor</xpath>
				<value>
					<StuffEffectMultiplierArmor>2.5</StuffEffectMultiplierArmor>
					<Bulk>1</Bulk>
					<WornBulk>0</WornBulk>
				</value>
			</li>
			
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[
				defName="HAR_LL_H_c"
				]/statBases/StuffEffectMultiplierArmor</xpath>
				<value>
					<StuffEffectMultiplierArmor>3</StuffEffectMultiplierArmor>
					<Bulk>1</Bulk>
					<WornBulk>1</WornBulk>
				</value>
			</li>
			
		</operations>
		</match>	
	  </li>
	</operations>	
  </Operation>
</Patch>

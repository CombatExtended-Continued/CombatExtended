<?xml version="1.0" encoding="utf-8" ?>
<Patch>

   <Operation Class="PatchOperationFindMod">
      <mods>
         <li>RimFantasy - House Doyle</li>
      </mods>
      <match Class="PatchOperationSequence">
         <operations>

            <!-- ======= House Doyle Armor ======= -->

            <!-- ===== Heavy Hauberk ===== -->
            <li Class="PatchOperationAdd">
               <xpath>Defs/ThingDef[defName="RF_Apparel_HeraldicHeavyHauberk_Doyle"]/statBases</xpath>
               <value>
                  <Bulk>30</Bulk>
                  <WornBulk>12</WornBulk>
               </value>
            </li>

            <li Class="PatchOperationReplace">
               <xpath>Defs/ThingDef[defName="RF_Apparel_HeraldicHeavyHauberk_Doyle"]/statBases/Mass</xpath>
               <value>
                  <Mass>9</Mass>
               </value>
            </li>

            <li Class="PatchOperationReplace">
               <xpath>Defs/ThingDef[defName="RF_Apparel_HeraldicHeavyHauberk_Doyle"]/statBases/StuffEffectMultiplierArmor</xpath>
               <value>
                  <StuffEffectMultiplierArmor>2.2</StuffEffectMultiplierArmor>
               </value>
            </li>

            <li Class="PatchOperationReplace">
               <xpath>Defs/ThingDef[defName="RF_Apparel_HeraldicHeavyHauberk_Doyle"]/equippedStatOffsets/MoveSpeed</xpath>
               <value>
                  <MeleeDodgeChance>-0.10</MeleeDodgeChance>
               </value>
            </li>

            <!-- ===== Full-Plate Gilded ===== -->
            <li Class="PatchOperationAdd">
               <xpath>Defs/ThingDef[defName="RF_Apparel_HeraldicGildedFullPlate_Doyle"]/statBases</xpath>
               <value>
                  <Bulk>100</Bulk>
                  <WornBulk>10</WornBulk>
               </value>
            </li>

            <li Class="PatchOperationReplace">
               <xpath>Defs/ThingDef[defName="RF_Apparel_HeraldicGildedFullPlate_Doyle"]/statBases/StuffEffectMultiplierArmor</xpath>
               <value>
                  <StuffEffectMultiplierArmor>3</StuffEffectMultiplierArmor>
               </value>
            </li>

            <li Class="PatchOperationReplace">
               <xpath>Defs/ThingDef[defName="RF_Apparel_HeraldicGildedFullPlate_Doyle"]/statBases/Mass</xpath>
               <value>
                  <Mass>15</Mass>
               </value>
            </li>

            <li Class="PatchOperationReplace">
               <xpath>Defs/ThingDef[defName="RF_Apparel_HeraldicGildedFullPlate_Doyle"]/equippedStatOffsets/MoveSpeed</xpath>
               <value>
                  <MeleeDodgeChance>-0.15</MeleeDodgeChance>
               </value>
            </li>

            <li Class="PatchOperationAddModExtension">
               <xpath>Defs/ThingDef[defName="RF_Apparel_HeraldicGildedFullPlate_Doyle"]</xpath>
               <value>
                  <li Class="CombatExtended.PartialArmorExt">
                     <stats>
                        <li>
                           <ArmorRating_Sharp>0.70</ArmorRating_Sharp>
                           <parts>
                              <li>Neck</li>
                           </parts>
                        </li>
                        <li>
                           <ArmorRating_Blunt>0.70</ArmorRating_Blunt>
                           <parts>
                              <li>Neck</li>
                           </parts>
                        </li>
                        <li>
                           <ArmorRating_Sharp>0.90</ArmorRating_Sharp>
                           <parts>
                              <li>Leg</li>
                           </parts>
                        </li>
                        <li>
                           <ArmorRating_Blunt>0.90</ArmorRating_Blunt>
                           <parts>
                              <li>Leg</li>
                           </parts>
                        </li>
                        <li>
                           <ArmorRating_Sharp>0.80</ArmorRating_Sharp>
                           <parts>
                              <li>Arm</li>
                           </parts>
                        </li>
                        <li>
                           <ArmorRating_Blunt>0.80</ArmorRating_Blunt>
                           <parts>
                              <li>Arm</li>
                           </parts>
                        </li>
                        <li>
                           <ArmorRating_Sharp>0.60</ArmorRating_Sharp>
                           <parts>
                              <li>Hand</li>
                           </parts>
                        </li>
                        <li>
                           <ArmorRating_Blunt>0.60</ArmorRating_Blunt>
                           <parts>
                              <li>Hand</li>
                           </parts>
                        </li>
                     </stats>
                  </li>
               </value>
            </li>

            <!-- ===== Heraldic Great Helm ===== -->
            <li Class="PatchOperationAdd">
               <xpath>Defs/ThingDef[defName="RF_Apparel_HeraldicGreatHelm_Doyle"]/statBases</xpath>
               <value>
                  <Bulk>6</Bulk>
                  <WornBulk>1</WornBulk>
               </value>
            </li>

            <li Class="PatchOperationRemove">
               <xpath>Defs/ThingDef[defName="RF_Apparel_HeraldicGreatHelm_Doyle"]/equippedStatOffsets/ShootingAccuracyPawn</xpath>
            </li>

            <li Class="PatchOperationAdd">
               <xpath>Defs/ThingDef[defName="RF_Apparel_HeraldicGreatHelm_Doyle"]/equippedStatOffsets</xpath>
               <value>
                  <AimingAccuracy>-0.4</AimingAccuracy>
                  <MeleeHitChance>-2</MeleeHitChance>
                  <Suppressability>-0.20</Suppressability>
               </value>
            </li>

            <li Class="PatchOperationReplace">
               <xpath>Defs/ThingDef[defName="RF_Apparel_HeraldicGreatHelm_Doyle"]/statBases/StuffEffectMultiplierArmor</xpath>
               <value>
                  <StuffEffectMultiplierArmor>3.75</StuffEffectMultiplierArmor>
               </value>
            </li>

         </operations>
      </match>
   </Operation>

</Patch>
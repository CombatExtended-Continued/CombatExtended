<?xml version="1.0" encoding="utf-8" ?>
<Patch>

   <Operation Class="PatchOperationFindMod">
      <mods>
         <li>RimFantasy - House Doyle</li>
      </mods>
      <match Class="PatchOperationSequence">
         <operations>

            <!-- ======= House Doyle Jewelry ======= -->

            <!-- ===== Necklace ===== -->
            <li Class="PatchOperationAdd">
               <xpath>Defs/ThingDef[defName="RF_Apparel_Necklace_Amethyst"]/statBases</xpath>
               <value>
                  <Bulk>0.25</Bulk>
                  <WornBulk>0</WornBulk>
               </value>
            </li>

            <!-- ===== Ring ===== -->
            <li Class="PatchOperationAdd">
               <xpath>Defs/ThingDef[defName="RF_Apparel_Ring_Amethyst"]/statBases</xpath>
               <value>
                  <Bulk>0.25</Bulk>
                  <WornBulk>0</WornBulk>
               </value>
            </li>

         </operations>
      </match>
   </Operation>

</Patch>
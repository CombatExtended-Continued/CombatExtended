<?xml version="1.0" encoding="UTF-8"?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Geth</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>

		<!-- ========== ML-77 Missile Launcher Rocket ========== -->

		<li Class="CombatExtended.PatchOperationMakeGunCECompatible">
			<defName>Gun_ML77MissileLauncher</defName>
			<statBases>
				<Mass>7</Mass>
				<RangedWeapon_Cooldown>0.72</RangedWeapon_Cooldown>
				<SightsEfficiency>2</SightsEfficiency>
				<ShotSpread>0.15</ShotSpread>
				<SwayFactor>1.3</SwayFactor>
				<Bulk>9</Bulk>
				<WorkToMake>12500</WorkToMake>
			</statBases>
			<costList>
				<Steel>120</Steel>
				<ComponentSpacer>2</ComponentSpacer>
			</costList>
			<Properties>
				<verbClass>CombatExtended.Verb_ShootCE</verbClass>
				<hasStandardCommand>true</hasStandardCommand>
				<defaultProjectile>Bullet_ML77CE</defaultProjectile>
				<warmupTime>2</warmupTime>
				<range>45</range>
				<minRange>5</minRange>
				<targetParams>
					<canTargetLocations>true</canTargetLocations>
				</targetParams>
				<soundCast>Shot_ML77</soundCast>
				<soundCastTail>GunTail_Heavy</soundCastTail>
				<muzzleFlashScale>14</muzzleFlashScale>
				<ignorePartialLoSBlocker>true</ignorePartialLoSBlocker>
			</Properties>
			<AmmoUser>
				<magazineSize>1</magazineSize>
				<reloadTime>4.9</reloadTime>
				<ammoSet>AmmoSet_ML77CE</ammoSet>
			</AmmoUser>
			<FireModes>
				<aiUseBurstMode>FALSE</aiUseBurstMode>
				<aiAimMode>AimedShot</aiAimMode>
			</FireModes>
			<weaponTags>
				<li>ML77MissileLauncher</li>
			</weaponTags>
			<AllowWithRunAndGun>false</AllowWithRunAndGun>
		</li>

		<!-- ========== Fire Storm ========== -->

		<li Class="CombatExtended.PatchOperationMakeGunCECompatible">
			<defName>Gun_Firestorm</defName>
			<statBases>
				<Mass>4</Mass>
				<RangedWeapon_Cooldown>0.39</RangedWeapon_Cooldown>
				<SightsEfficiency>1.00</SightsEfficiency>
				<ShotSpread>0.12</ShotSpread>
				<SwayFactor>1.3</SwayFactor>
				<Bulk>7.03</Bulk>
				<WorkToMake>12500</WorkToMake>
			</statBases>
			<costList>
				<Steel>100</Steel>
				<ComponentSpacer>2</ComponentSpacer>
			</costList>
			<Properties>
				<recoilAmount>0.6</recoilAmount>
				<verbClass>CombatExtended.Verb_ShootCE</verbClass>
				<hasStandardCommand>true</hasStandardCommand>
				<defaultProjectile>Bullet_Flamethrower_Napalm</defaultProjectile>
				<warmupTime>0.75</warmupTime>
				<range>14</range>
				<minRange>2</minRange>
				<targetParams>
					<canTargetLocations>true</canTargetLocations>
				</targetParams>
				<burstShotCount>20</burstShotCount>
				<ticksBetweenBurstShots>2</ticksBetweenBurstShots>
				<soundCast>Shot_Firestorm</soundCast>
				<soundCastTail>GunTail_Light</soundCastTail>
				<muzzleFlashScale>0</muzzleFlashScale>
			</Properties>
			<AmmoUser>
				<magazineSize>60</magazineSize>
				<reloadTime>5.9</reloadTime>
				<ammoSet>AmmoSet_Flamethrower</ammoSet>
			</AmmoUser>
			<FireModes>
				<aiUseBurstMode>False</aiUseBurstMode>
				<aiAimMode>SuppressFire</aiAimMode>
				<aimedBurstShotCount>10</aimedBurstShotCount>
			</FireModes>
			<weaponTags>
				<li>GethFirestorm</li>
			</weaponTags>
		</li>		

		<!-- == Shared patches for firearm melee tools == -->

		<li Class="PatchOperationReplace">
			<xpath>Defs/ThingDef[
				defName="Gun_ML77MissileLauncher" or
				defName="Gun_Firestorm"
			]/tools</xpath>
			<value>
				<tools>
					<li Class="CombatExtended.ToolCE">
						<label>stock</label>
						<capacities>
							<li>Blunt</li>
						</capacities>
						<power>8</power>
						<cooldownTime>1.55</cooldownTime>
						<chanceFactor>1.5</chanceFactor>
						<armorPenetrationBlunt>2.755</armorPenetrationBlunt>
						<linkedBodyPartsGroup>Stock</linkedBodyPartsGroup>
					</li>
					<li Class="CombatExtended.ToolCE">
						<label>barrel</label>
						<capacities>
							<li>Blunt</li>
						</capacities>
						<power>5</power>
						<cooldownTime>2.02</cooldownTime>
						<armorPenetrationBlunt>1.630</armorPenetrationBlunt>
						<linkedBodyPartsGroup>Barrel</linkedBodyPartsGroup>
					</li>
					<li Class="CombatExtended.ToolCE">
						<label>muzzle</label>
						<capacities>
							<li>Poke</li>
						</capacities>
						<power>8</power>
						<cooldownTime>1.55</cooldownTime>
						<armorPenetrationBlunt>2.755</armorPenetrationBlunt>
						<linkedBodyPartsGroup>Muzzle</linkedBodyPartsGroup>
					</li>
				</tools>
			</value>
		</li>




			</operations>
		</match>
	</Operation>
</Patch>

<?xml version="1.0" encoding="utf-8"?>
<Patch>
	<Operation Class="PatchOperationSequence">
		<success></success>
		<operations>
			<li Class="PatchOperationFindMod">
			<mods><li>Geth</li></mods>
			<match Class="PatchOperationSequence">
			<operations>
			
			<li Class="PatchOperationAddModExtension">
				<xpath>Defs/PawnKindDef[
					defName="BaseTraderGeth" or
					defName="GethTrooper" or
					defName="GethHunter" or
					defName="GethPrime" or
					defName="GethHeretic" or
					defName="GethHereticTrooper" or
					defName="GethHereticHunter" or
					defName="GethHereticPrime" or
					defName="GethHereticPyro" or
					defName="GethPyro"
					]</xpath>
				<value>	
					<li Class="CombatExtended.LoadoutPropertiesExtension">	
						<primaryMagazineCount>
							<min>1</min>
							<max>3</max>
						</primaryMagazineCount>
					</li>
				</value>
			</li>
			
			<li Class="PatchOperationAddModExtension">
				<xpath>Defs/PawnKindDef[
					defName="GethInfiltrator" or
					defName="GethHereticInfiltrator"
					]</xpath>
				<value>	
					<li Class="CombatExtended.LoadoutPropertiesExtension">	
						<primaryMagazineCount>
							<min>14</min>
							<max>20</max>
						</primaryMagazineCount>
					</li>
				</value>
			</li>

			<li Class="PatchOperationAddModExtension">
				<xpath>Defs/PawnKindDef[
					defName="GethRocketTrooper" or
					defName="GethHereticRocketTrooper"
					]</xpath>
				<value>	
					<li Class="CombatExtended.LoadoutPropertiesExtension">	
						<primaryMagazineCount>
							<min>3</min>
							<max>5</max>
						</primaryMagazineCount>
					</li>
				</value>
			</li>

            <!-- ======= Combat Power ======= -->

            <!-- Trooper -->
            <li Class="PatchOperationReplace">
			<xpath>/Defs/PawnKindDef[
            defName="GethTrooper" or
            defName="GethHereticTrooper" or
            defName="GethHunter" or
            defName="GethHereticHunter"
            ]/combatPower</xpath>
				<value>
					<combatPower>100</combatPower>
				</value>
			</li>

            <!-- Infiltrator -->
            <li Class="PatchOperationReplace">
			<xpath>/Defs/PawnKindDef[
            defName="GethInfiltrator" or
            defName="GethHereticInfiltrator"
            ]/combatPower</xpath>
				<value>
					<combatPower>120</combatPower>
				</value>
			</li>


            <!-- Special -->
            <li Class="PatchOperationReplace">
			<xpath>/Defs/PawnKindDef[
            defName="GethHereticPyro" or
            defName="GethPyro" or
            defName="GethRocketTrooper" or
            defName="GethHereticRocketTrooper"
            ]/combatPower</xpath>
				<value>
					<combatPower>120</combatPower>
				</value>
			</li>

            <!-- Prime -->
            <li Class="PatchOperationReplace">
			<xpath>/Defs/PawnKindDef[
            defName="GethPrime" or
            defName="GethHereticPrime"
            ]/combatPower</xpath>
				<value>
					<combatPower>200</combatPower>
				</value>
			</li>

            <!-- Defender Series -->
            <li Class="PatchOperationReplace">
			<xpath>/Defs/PawnKindDef[
            defName="BaseGethColossus" or
            defName="BaseGethColossusHeretic"
            ]/combatPower</xpath>
				<value>
					<combatPower>450</combatPower>
				</value>
			</li>
			
			</operations>
			</match>
			</li>
		</operations>
	</Operation>
</Patch>
<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<Operation Class="PatchOperationFindMod">
    <mods>
		<li>A RimWorld of Magic</li>
    </mods>
		<match Class="PatchOperationSequence">
		<operations>
			
			<!-- Looks like an alpha animals needle roll so I gave it the same body shape -->
			<li Class="PatchOperationAddModExtension">
				<xpath>Defs/ThingDef[
				defName="TM_MinionR" or
				defName="TM_GreaterMinionR"
				]</xpath>
				<value>
					<li Class="CombatExtended.RacePropertiesExtensionCE">
						<bodyShape>QuadrupedLow</bodyShape>
					</li>
				</value>
			</li>
			
			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[
				defName="TM_MinionR"
				]/statBases</xpath>
				<value>
					<CarryWeight>30</CarryWeight>
					<CarryBulk>20</CarryBulk>
					<AimingAccuracy>1.0</AimingAccuracy>
					<ShootingAccuracyPawn>1</ShootingAccuracyPawn>
					<MeleeDodgeChance>0.19</MeleeDodgeChance>
					<MeleeCritChance>0.22</MeleeCritChance>
					<MeleeParryChance>0.09</MeleeParryChance>
					<MaxHitPoints>200</MaxHitPoints>
					<SmokeSensitivity>0.5</SmokeSensitivity>
				</value>
			</li>
			
			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[
				defName="TM_GreaterMinionR"
				]/statBases</xpath>
				<value>
					<CarryWeight>50</CarryWeight>
					<CarryBulk>30</CarryBulk>
					<AimingAccuracy>1.0</AimingAccuracy>
					<ShootingAccuracyPawn>1</ShootingAccuracyPawn>
					<MeleeDodgeChance>0.19</MeleeDodgeChance>
					<MeleeCritChance>0.22</MeleeCritChance>
					<MeleeParryChance>0.09</MeleeParryChance>
					<MaxHitPoints>200</MaxHitPoints>
					<SmokeSensitivity>0.5</SmokeSensitivity>
				</value>
			</li>
			
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[
				defName="TM_MinionR"
				]/statBases/ArmorRating_Blunt</xpath>
				<value>
					<ArmorRating_Blunt>1.1</ArmorRating_Blunt>
				</value>
			</li>
			
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[
				defName="TM_MinionR"
				]/statBases/ArmorRating_Sharp</xpath>
				<value>
					<ArmorRating_Sharp>0.8</ArmorRating_Sharp>
				</value>
			</li>
			
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[
				defName="TM_GreaterMinionR"
				]/statBases/ArmorRating_Blunt</xpath>
				<value>
					<ArmorRating_Blunt>1.5</ArmorRating_Blunt>
				</value>
			</li>
			
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[
				defName="TM_GreaterMinionR"
				]/statBases/ArmorRating_Sharp</xpath>
				<value>
					<ArmorRating_Sharp>1</ArmorRating_Sharp>
				</value>
			</li>
			
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="TM_MinionR"]/tools</xpath>
				<value>
					<tools>
					  <li Class="CombatExtended.ToolCE">
						<label>horns</label>
						<capacities>
						  <li>Stab</li>
						</capacities>
						<power>6</power>
						<cooldownTime>1.8</cooldownTime>
						<armorPenetrationSharp>4</armorPenetrationSharp>
						<armorPenetrationBlunt>9.2</armorPenetrationBlunt>
						<linkedBodyPartsGroup>Minion_Horns</linkedBodyPartsGroup>
					  </li>
					  <li Class="CombatExtended.ToolCE">
						<label>bite</label>
						<capacities>
						  <li>Bite</li>
						</capacities>
						<power>8</power>
						<cooldownTime>2.2</cooldownTime>
						<armorPenetrationSharp>2</armorPenetrationSharp>
						<armorPenetrationBlunt>18.4</armorPenetrationBlunt>
						<linkedBodyPartsGroup>Minion_Teeth</linkedBodyPartsGroup>
					  </li>
					</tools>
				</value>
			</li>
			
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="TM_GreaterMinionR"]/tools</xpath>
				<value>
					<tools>
					  <li Class="CombatExtended.ToolCE">
						<label>horns</label>
						<capacities>
						  <li>Stab</li>
						</capacities>
						<power>7</power>
						<cooldownTime>1.8</cooldownTime>
						<armorPenetrationSharp>4</armorPenetrationSharp>
						<armorPenetrationBlunt>9.2</armorPenetrationBlunt>
						<linkedBodyPartsGroup>Minion_Horns</linkedBodyPartsGroup>
					  </li>
					  <li Class="CombatExtended.ToolCE">
						<label>bite</label>
						<capacities>
						  <li>Bite</li>
						</capacities>
						<power>9</power>
						<cooldownTime>2.2</cooldownTime>
						<armorPenetrationSharp>2</armorPenetrationSharp>
						<armorPenetrationBlunt>18.4</armorPenetrationBlunt>
						<linkedBodyPartsGroup>Minion_Teeth</linkedBodyPartsGroup>
					  </li>
					</tools>
				</value>
			</li>
			
			
			
		</operations>
		</match>
	</Operation>
	
</Patch>
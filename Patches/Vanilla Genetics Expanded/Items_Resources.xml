<?xml version="1.0" encoding="utf-8" ?>
<Patch>
  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Vanilla Genetics Expanded</li>
    </mods>
    <match Class="PatchOperationSequence">
      <operations>

      <!-- Compressed Chemfuel -->

      <li Class="PatchOperationAdd">
        <xpath>Defs/ThingDef[defName="GR_CompressedChemfuel"]/statBases</xpath>
        <value>
          <Bulk>0.05</Bulk>
        </value>
      </li>

      <!-- Thick Hybrid Wool -->

      <li Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[defName="GR_ThickHybridWool"]/statBases/StuffPower_Armor_Sharp</xpath>
        <value>
          <StuffPower_Armor_Sharp>0.015</StuffPower_Armor_Sharp>
        </value>
      </li>

      <li Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[defName="GR_ThickHybridWool"]/statBases/StuffPower_Armor_Blunt</xpath>
        <value>
          <StuffPower_Armor_Blunt>0.065</StuffPower_Armor_Blunt>
        </value>
      </li>

      <li Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[defName="GR_ThickHybridWool"]/statBases/StuffPower_Armor_Heat</xpath>
        <value>
          <StuffPower_Armor_Heat>0.055</StuffPower_Armor_Heat>
        </value>
      </li>

      <!-- Luxriant Hybrid Wool -->
    
      <li Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[defName="GR_LuxuriantHybridWool"]/statBases/StuffPower_Armor_Sharp</xpath>
        <value>
          <StuffPower_Armor_Sharp>0.0185</StuffPower_Armor_Sharp>
        </value>
      </li>

      <li Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[defName="GR_LuxuriantHybridWool"]/statBases/StuffPower_Armor_Blunt</xpath>
        <value>
          <StuffPower_Armor_Blunt>0.12</StuffPower_Armor_Blunt>
        </value>
      </li>

      <li Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[defName="GR_LuxuriantHybridWool"]/statBases/StuffPower_Armor_Heat</xpath>
        <value>
          <StuffPower_Armor_Heat>0.06</StuffPower_Armor_Heat>
        </value>
      </li>

      <!-- Hybrid Silk -->

      <li Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[defName="GR_HybridSilk"]/statBases/StuffPower_Armor_Sharp</xpath>
        <value>
          <StuffPower_Armor_Sharp>0.4</StuffPower_Armor_Sharp>
        </value>
      </li>

      <li Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[defName="GR_HybridSilk"]/statBases/StuffPower_Armor_Blunt</xpath>
        <value>
          <StuffPower_Armor_Blunt>0.08</StuffPower_Armor_Blunt>
        </value>
      </li>

      <li Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[defName="GR_HybridSilk"]/statBases/StuffPower_Armor_Heat</xpath>
        <value>
          <StuffPower_Armor_Heat>0.03</StuffPower_Armor_Heat>
        </value>
      </li>

      <li Class="PatchOperationAdd">
        <xpath>Defs/ThingDef[defName="GR_HybridSilk"]/stuffProps/categories</xpath>
        <value>
          <li>SoftArmor</li>
        </value>
      </li>

      <!-- Hybrid Chitin -->

      <li Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[defName="GR_HybridChitin"]/statBases/StuffPower_Armor_Sharp</xpath>
        <value>
          <StuffPower_Armor_Sharp>0.5</StuffPower_Armor_Sharp>
        </value>
      </li>

      <li Class="PatchOperationAdd">
        <xpath>Defs/ThingDef[defName="GR_HybridChitin"]/statBases</xpath>
        <value>
          <StuffPower_Armor_Blunt>0.05</StuffPower_Armor_Blunt>
        </value>
      </li>

      <li Class="PatchOperationAdd">
        <xpath>Defs/ThingDef[defName="GR_HybridChitin"]/stuffProps</xpath>
        <value>
          <categories>
            <li>SoftArmor</li>
          </categories>          
        </value>
      </li>

      <!-- Hybrid Scales -->

      <li Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[defName="GR_HybridScales"]/statBases/StuffPower_Armor_Heat</xpath>
        <value>
          <StuffPower_Armor_Heat>0.01</StuffPower_Armor_Heat>
        </value>
      </li>

      </operations>
    </match>
  </Operation>
</Patch>    

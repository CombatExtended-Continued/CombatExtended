						<SmokeSensitivity>0</SmokeSensitivity>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[
						defName="SL_Runner" or
						defName="SL_Peon" or
						defName="SL_Archer"
						]/tools </xpath>
					<value>
						<tools>
							<li Class="CombatExtended.ToolCE">
								<label>left fist</label>

<?xml version="1.0" encoding="utf-8" ?>
<Patch>

   <Operation Class="PatchOperationFindMod">
      <mods>
         <li>T's Conversion Staff</li>
      </mods>
      <match Class="PatchOperationSequence">
         <operations>

            <li Class="PatchOperationReplace">
               <xpath>Defs/ThingDef[defName="TCS_ConversionStaff"]/tools</xpath>
               <value>
                  <tools>
                     <li Class="CombatExtended.ToolCE">
                        <label>handle</label>
                        <capacities>
                           <li>Poke</li>
                        </capacities>
                        <power>5</power>
                        <cooldownTime>1.69</cooldownTime>
                        <armorPenetrationBlunt>0.8</armorPenetrationBlunt>
                        <linkedBodyPartsGroup>Handle</linkedBodyPartsGroup>
                     </li>
                  </tools>
                  <tools>
                     <li Class="CombatExtended.ToolCE">
                        <label>head</label>
                        <capacities>
                           <li>Blunt</li>
                        </capacities>
                        <power>5</power>
                        <cooldownTime>2.85</cooldownTime>
                        <armorPenetrationBlunt>1.69</armorPenetrationBlunt>
                        <linkedBodyPartsGroup>Head</linkedBodyPartsGroup>
                     </li>
                  </tools>
               </value>
            </li>

            <li Class="PatchOperationAdd">
               <xpath>Defs/ThingDef[defName="TCS_ConversionStaff"]/statBases</xpath>
               <value>
                  <Bulk>6</Bulk>
                  <MeleeCounterParryBonus>0.93</MeleeCounterParryBonus>
               </value>
            </li>

            <li Class="PatchOperationAdd">
               <xpath>Defs/ThingDef[defName="TCS_ConversionStaff"]/equippedStatOffsets</xpath>
               <value>
                  <MeleeCritChance>1.00</MeleeCritChance>
                  <MeleeParryChance>0.70</MeleeParryChance>
                  <MeleeDodgeChance>0.47</MeleeDodgeChance>
               </value>
            </li>

         </operations>
      </match>
   </Operation>

</Patch>
<?xml version="1.0" encoding="utf-8" ?>
<Patch>

  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>VFE - Mechanoids : Drones</li>
    </mods>

    <match Class="PatchOperationSequence">
      <operations>


    <li Class="PatchOperationAddModExtension">
      <xpath>Defs/ThingDef[defName="VFEMA_Mechanoids_Farmer" or defName="VFEMA_Mechanoids_Kitchen"]</xpath>
      <value>
        <li Class="CombatExtended.RacePropertiesExtensionCE">
          <bodyShape>Humanoid</bodyShape>
        </li>
      </value>
    </li>

    <li Class="PatchOperationAdd">
      <xpath>Defs/ThingDef[defName="VFEMA_Mechanoids_Farmer" or defName="VFEMA_Mechanoids_Kitchen"]/statBases</xpath>
      <value>
        <CarryWeight>50</CarryWeight>
        <CarryBulk>20</CarryBulk>
        <MeleeDodgeChance>0</MeleeDodgeChance>
        <MeleeCritChance>0.01</MeleeCritChance>
        <MeleeParryChance>0</MeleeParryChance>
      </value>
    </li>

    <li Class="PatchOperationReplace">
      <xpath>Defs/ThingDef[defName="VFEMA_Mechanoids_Farmer" or defName="VFEMA_Mechanoids_Kitchen"]/statBases/ArmorRating_Sharp</xpath>
      <value>
        <ArmorRating_Sharp>4</ArmorRating_Sharp>
      </value>
    </li>
	
	<li Class="PatchOperationReplace">
      <xpath>Defs/ThingDef[defName="VFEMA_Mechanoids_Farmer" or defName="VFEMA_Mechanoids_Kitchen"]/statBases/ArmorRating_Blunt</xpath>
      <value>
        <ArmorRating_Blunt>6</ArmorRating_Blunt>
      </value>
    </li>

    <li Class="PatchOperationReplace">
      <xpath>Defs/ThingDef[defName="VFEMA_Mechanoids_Farmer" or defName="VFEMA_Mechanoids_Kitchen"]/tools</xpath>
      <value>
        <tools>
			<li Class="CombatExtended.ToolCE">
				<label>left fist</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>2</power>
				<cooldownTime>1.26</cooldownTime>
				<linkedBodyPartsGroup>LeftHand</linkedBodyPartsGroup>
				<armorPenetrationBlunt>0.450</armorPenetrationBlunt>
			</li>
			<li Class="CombatExtended.ToolCE">
				<label>right fist</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>2</power>
				<cooldownTime>1.26</cooldownTime>
				<linkedBodyPartsGroup>RightHand</linkedBodyPartsGroup>
				<armorPenetrationBlunt>0.450</armorPenetrationBlunt>
			</li>
			<li Class="CombatExtended.ToolCE">
				<label>head</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>3</power>
				<cooldownTime>4.49</cooldownTime>
				<linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
				<chanceFactor>0.2</chanceFactor>
				<armorPenetrationBlunt>0.825</armorPenetrationBlunt>
			</li>
        </tools>
      </value>
    </li>

      </operations>
    </match>
  </Operation>

</Patch>
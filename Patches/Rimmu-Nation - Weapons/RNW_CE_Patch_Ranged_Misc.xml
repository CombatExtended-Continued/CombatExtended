<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationSequence">
		<success>Always</success>
		<operations>

			<li Class="CombatExtended.PatchOperationFindMod">
				<modName>[CP] Rimmu-Nation - Weapons (1.0)</modName>
			</li>

			<!-- ========== Ballistic Knife ========== -->

			<li Class="CombatExtended.PatchOperationMakeGunCECompatible">
				<defName>RN_BallisticKnife</defName>
				<statBases>
					<Mass>0.560</Mass>
					<RangedWeapon_Cooldown>0.85</RangedWeapon_Cooldown>
					<SightsEfficiency>0.70</SightsEfficiency>
					<ShotSpread>0.2</ShotSpread>
					<SwayFactor>0.85</SwayFactor>
					<Bulk>1.00</Bulk>
					<WorkToMake>7000</WorkToMake>
				</statBases>
				<costList>
					<Steel>25</Steel>
					<ComponentIndustrial>3</ComponentIndustrial>
				</costList>
				<Properties>
					<recoilAmount>0.32</recoilAmount>
					<verbClass>CombatExtended.Verb_ShootCEOneUse</verbClass>
					<hasStandardCommand>true</hasStandardCommand>
					<defaultProjectile>Projectile_BallisticKnifeBlade</defaultProjectile>
					<warmupTime>0.6</warmupTime>
					<range>3</range>
					<burstShotCount>1</burstShotCount>
					<ticksBetweenBurstShots>0</ticksBetweenBurstShots>
					<soundCast>RNShotBallistic</soundCast>
					<muzzleFlashScale>0</muzzleFlashScale>
					<recoilPattern>Regular</recoilPattern>
				</Properties>

				<FireModes>
					<aiUseBurstMode>FALSE</aiUseBurstMode>
					<aiAimMode>AimedShot</aiAimMode>
				</FireModes>

				<!-- No additional CE weaponTags needed -->

				<AllowWithRunAndGun>false</AllowWithRunAndGun>
			</li>

			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="RN_BallisticKnife"]/tools</xpath>
				<value>
					<tools>
						<li Class="CombatExtended.ToolCE">
							<label>handle</label>
							<capacities>
								<li>Blunt</li>
							</capacities>
							<power>6</power>
							<cooldownTime>2.5</cooldownTime>
							<armorPenetration>0.1</armorPenetration>
							<linkedBodyPartsGroup>Handle</linkedBodyPartsGroup>
						</li>
						<li Class="CombatExtended.ToolCE">
							<label>point</label>
							<capacities>
								<li>Stab</li>
							</capacities>
							<power>17</power>
							<cooldownTime>2.5</cooldownTime>
							<armorPenetration>0.18</armorPenetration>
							<linkedBodyPartsGroup>Blade</linkedBodyPartsGroup>
						</li>
						<li Class="CombatExtended.ToolCE">
							<label>edge</label>
							<capacities>
								<li>Cut</li>
							</capacities>
							<power>9</power>
							<cooldownTime>0.95</cooldownTime>
							<armorPenetration>0.22</armorPenetration>
							<linkedBodyPartsGroup>Edge</linkedBodyPartsGroup>
						</li>
					</tools>
				</value>
			</li>

			<!-- ========== Compound Bow ========== -->

			<li Class="CombatExtended.PatchOperationMakeGunCECompatible">
				<defName>RN_CompoundBow</defName>
				<statBases>
					<SightsEfficiency>0.95</SightsEfficiency>
					<ShotSpread>1</ShotSpread>
					<SwayFactor>2</SwayFactor>
					<Bulk>3</Bulk>
				</statBases>
				<Properties>
					<verbClass>CombatExtended.Verb_ShootCE</verbClass>
					<hasStandardCommand>true</hasStandardCommand>
					<defaultProjectile>Projectile_Arrow_Steel</defaultProjectile>
					<warmupTime>1.25</warmupTime>
					<range>27</range>
					<soundCast>Bow_Recurve</soundCast>
					<recoilPattern>Regular</recoilPattern>
				</Properties>
				<AmmoUser>
					<ammoSet>AmmoSet_Arrow</ammoSet>
				</AmmoUser>
				<FireModes>
					<aiAimMode>AimedShot</aiAimMode>
				</FireModes>

				<!-- No additional CE weaponTags needed -->

				<AllowWithRunAndGun>false</AllowWithRunAndGun>
			</li>

			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="RN_CompoundBow"]/tools</xpath>
				<value>
					<tools>
						<li Class="CombatExtended.ToolCE">
							<capacities>
								<li>Blunt</li>
								<li>Poke</li>
							</capacities>
							<power>8</power>
							<cooldownTime>1.6</cooldownTime>
							<armorPenetration>0.1</armorPenetration>
							<linkedBodyPartsGroup>Stock</linkedBodyPartsGroup>
						</li>
					</tools>
				</value>
			</li>

			<!-- ========== Compound Crossbow ========== -->

			<li Class="CombatExtended.PatchOperationMakeGunCECompatible">
				<defName>RN_CompoundCrossbow</defName>
				<statBases>
					<SightsEfficiency>0.95</SightsEfficiency>
					<ShotSpread>1</ShotSpread>
					<SwayFactor>2</SwayFactor>
					<Bulk>3</Bulk>
				</statBases>
				<Properties>
					<verbClass>CombatExtended.Verb_ShootCE</verbClass>
					<hasStandardCommand>true</hasStandardCommand>
					<defaultProjectile>Projectile_CrossbowBolt_Steel</defaultProjectile>
					<warmupTime>1</warmupTime>
					<range>30</range>
					<soundCast>RNCrossbow</soundCast>
					<recoilPattern>Regular</recoilPattern>
				</Properties>
				<AmmoUser>
					<ammoSet>AmmoSet_CrossbowBolt</ammoSet>
				</AmmoUser>
				<FireModes>
					<aiAimMode>AimedShot</aiAimMode>
				</FireModes>

				<!-- No additional CE weaponTags needed -->

				<AllowWithRunAndGun>false</AllowWithRunAndGun>
			</li>

			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="RN_CompoundCrossbow"]/tools</xpath>
				<value>
					<tools>
						<li Class="CombatExtended.ToolCE">
							<capacities>
								<li>Blunt</li>
								<li>Poke</li>
							</capacities>
							<power>8</power>
							<cooldownTime>1.6</cooldownTime>
							<armorPenetration>0.1</armorPenetration>
							<linkedBodyPartsGroup>Stock</linkedBodyPartsGroup>
						</li>
					</tools>
				</value>
			</li>

		</operations>
	</Operation>
</Patch>
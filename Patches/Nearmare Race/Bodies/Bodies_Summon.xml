<?xml version="1.0" encoding="utf-8" ?>
<Patch>

  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>[1.3]Nearmare Race</li>
    </mods>

    <match Class="PatchOperationSequence">
      <operations>
        <!-- === Nearmare Summon === -->
        <li Class="PatchOperationAdd">
          <xpath>
            /Defs/BodyDef[defName="HAR_NM_M_Body"]//*[
            def="Body" or
            def="Tail" or
            def="Neck" or
            def="Nose" or
            def="Leg" or
			customLabel="rear left paw" or
			customLabel="rear right paw"]
          </xpath>

          <value>
            <groups/>
          </value>
        </li>

        <li Class="PatchOperationAdd">
          <xpath>
            /Defs/BodyDef[defName="HAR_NM_M_Body"]//*[
            def="Body" or
            def="Tail" or
            def="Neck" or
            def="Head" or
            def="Leg" or
            def="Paw"]/groups
          </xpath>

          <value>
            <li>CoveredByNaturalArmor</li>
          </value>
        </li>
      </operations>
    </match>
  </Operation>

</Patch>
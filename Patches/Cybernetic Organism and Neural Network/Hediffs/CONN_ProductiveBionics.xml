<?xml version="1.0" encoding="utf-8"?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Cybernetic Organism and Neural Network</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				<!-- Black pearl -->
				<li Class="PatchOperationAdd">
					<xpath>Defs/HediffDef[defName="CONN_hediff_BlackPearl"]</xpath>
					<value>
						<stages>
							<li>
								<statOffsets>
									<NightVisionEfficiency_Implant>0.4</NightVisionEfficiency_Implant> <!-- With both eyes, the same night vision as mechanoids -->
								</statOffsets>
							</li>
						</stages>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="CONN_BlackPearl"]/statBases</xpath>
					<value>
						<NightVisionEfficiency_Implant>0.4</NightVisionEfficiency_Implant>
					</value>
				</li>
			</operations>
		</match>
	</Operation>
</Patch>
<?xml version="1.0" encoding="utf-8" ?>
<Patch>

  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Kenshi Armory</li>
    </mods>
    <match Class="PatchOperationSequence">
      <operations>

		<!-- Iron Hat -->

		<li Class="PatchOperationAdd">
			<xpath>Defs/ThingDef[defName = "Kenshi_IronHat"]/statBases</xpath>
			<value>
				<Bulk>5</Bulk>
				<WornBulk>1</WornBulk>
			</value>
		</li>

		<li Class="PatchOperationReplace">
			<xpath>Defs/ThingDef[defName = "Kenshi_IronHat"]/statBases/ArmorRating_Sharp</xpath>
			<value>
				<ArmorRating_Sharp>1.5</ArmorRating_Sharp>
			</value>
		</li>	

		<li Class="PatchOperationReplace">
			<xpath>Defs/ThingDef[defName = "Kenshi_IronHat"]/statBases/ArmorRating_Blunt</xpath>
			<value>
				<ArmorRating_Blunt>2.25</ArmorRating_Blunt>
			</value>
		</li>
		
		<!-- Ninja Mask -->

		<li Class="PatchOperationAdd">
			<xpath>Defs/ThingDef[defName = "Kenshi_NinjaMask"]/statBases</xpath>
			<value>
				<Bulk>2</Bulk>
				<WornBulk>1</WornBulk>
			</value>
		</li>

		<li Class="PatchOperationReplace">
			<xpath>Defs/ThingDef[defName = "Kenshi_NinjaMask"]/statBases/StuffEffectMultiplierArmor</xpath>
			<value>
				<StuffEffectMultiplierArmor>1.8</StuffEffectMultiplierArmor>
			</value>
		</li>
		
		<!-- Kusari Zukin -->

		<li Class="PatchOperationAdd">
			<xpath>Defs/ThingDef[defName = "Kenshi_KusariZukin"]/statBases</xpath>
			<value>
				<Bulk>2</Bulk>
				<WornBulk>1</WornBulk>
			</value>
		</li>

		<li Class="PatchOperationReplace">
			<xpath>Defs/ThingDef[defName = "Kenshi_KusariZukin"]/statBases/StuffEffectMultiplierArmor</xpath>
			<value>
				<StuffEffectMultiplierArmor>2.5</StuffEffectMultiplierArmor>
			</value>
		</li>
		
		<!-- Armored Hood -->

		<li Class="PatchOperationAdd">
			<xpath>Defs/ThingDef[defName = "Kenshi_ArmouredHood"]/statBases</xpath>
			<value>
				<Bulk>2</Bulk>
				<WornBulk>1</WornBulk>
			</value>
		</li>

		<li Class="PatchOperationReplace">
			<xpath>Defs/ThingDef[defName = "Kenshi_ArmouredHood"]/statBases/StuffEffectMultiplierArmor</xpath>
			<value>
				<StuffEffectMultiplierArmor>2.7</StuffEffectMultiplierArmor>
			</value>
		</li>
		
		<!-- Basket Hat -->

		<li Class="PatchOperationAdd">
			<xpath>Defs/ThingDef[defName = "Kenshi_BasketHat"]/statBases</xpath>
			<value>
				<Bulk>2</Bulk>
				<WornBulk>1</WornBulk>
			</value>
		</li>

		<li Class="PatchOperationReplace">
			<xpath>Defs/ThingDef[defName = "Kenshi_BasketHat"]/statBases/StuffEffectMultiplierArmor</xpath>
			<value>
				<StuffEffectMultiplierArmor>1</StuffEffectMultiplierArmor>
			</value>
		</li>

		</operations>
		</match>
	</Operation>

</Patch>


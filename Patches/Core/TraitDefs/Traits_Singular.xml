<?xml version="1.0" encoding="utf-8"?>
<Patch>

	<!-- Brawler -->

	<Operation Class="PatchOperationAdd">
		<xpath>Defs/TraitDef[defName="Brawler"]/degreeDatas/li/statOffsets</xpath>
		<value>
			<MeleeCritChance>0.25</MeleeCritChance>
			<MeleeParryChance>0.25</MeleeParryChance>
		</value>
	</Operation>

	<!-- Nimble -->

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/TraitDef[defName="Nimble"]/degreeDatas/li/statOffsets/MeleeDodgeChance</xpath>
		<value>
			<MeleeDodgeChance>0.5</MeleeDodgeChance>
		</value>
	</Operation>

	<!-- Tough -->

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/TraitDef[defName="Tough"]/degreeDatas/li/statFactors/IncomingDamageFactor</xpath>
		<value>
			<IncomingDamageFactor>0.66</IncomingDamageFactor>
		</value>
	</Operation>

</Patch>
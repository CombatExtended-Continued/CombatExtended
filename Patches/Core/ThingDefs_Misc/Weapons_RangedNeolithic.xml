      	</value>
    	</li>
  	</operations>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<xpath>*/ThingDef[defName="Bow_Great"]/comps</xpath>
		<value>
			<li Class="CombatExtended.CompProperties_AmmoUser">

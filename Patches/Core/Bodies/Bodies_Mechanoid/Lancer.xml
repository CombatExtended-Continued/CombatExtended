<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	
	<!-- ==================== Lancer ==================== -->
	
	<!-- ========== Modify coverage ========== -->
	
	<!-- ========== Changes result in: Head 5% Torso 40% Arms 20% Legs 35%  ========== -->

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/BodyDef[defName="Lancer"]/corePart/parts/li[def="MechanicalNeck"]/coverage</xpath>
		<value>
		<coverage>0.05</coverage>	<!-- ========== 0.1 mech /// 0.055 human ========== -->
		</value>
	</Operation>
	
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/BodyDef[defName="Lancer"]/corePart/parts/li[def="MechanicalNeck"]/parts/li[def="MechanicalHead"]/parts/li[def="ArtificialBrain"]/coverage</xpath>
		<value>
		<coverage>0.20</coverage>	<!-- ========== maintain brainshot chance after neck cov reduction (0.1) ========== -->    
		</value>
	</Operation>
	
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/BodyDef[defName="Lancer"]/corePart/parts/li[def="MechanicalShoulder"]/coverage</xpath>
		<value>
		<coverage>0.1</coverage>	<!-- ========== 0.17 mech /// 0.085 human ========== -->
		</value>
	</Operation>
	
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/BodyDef[defName="Lancer"]/corePart/parts/li[def="MechanicalShoulder"]/parts/li[def="MechanicalArm"]/parts/li[def="MechanicalHand"]/coverage</xpath>
		<value>
		<coverage>0.15</coverage>	<!-- ========== 0.2 mech /// 0.14 human ========== -->
		</value>
	</Operation>
	
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/BodyDef[defName="Lancer"]/corePart/parts/li[def="MechanicalShoulder"]/parts/li[def="MechanicalArm"]/parts/li[def="MechanicalHand"]/parts/li[def="MechanicalFinger"]/coverage</xpath>
		<value>
		<coverage>0.10</coverage>	<!-- ========== 0.15 mech /// 0.06/0.07/0.08 human ========== -->
		</value>
	</Operation>
	
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/BodyDef[defName="Lancer"]/corePart/parts/li[def="MechanicalLeg"]/coverage</xpath>
		<value>
		<coverage>0.175</coverage>	<!-- ========== 0.20 mech /// 0.14 human ========== -->
		</value>
	</Operation>
	
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/BodyDef[defName="Lancer"]/corePart/parts/li[def="MechanicalLeg"]/parts/li[def="MechanicalFoot"]/coverage</xpath>
		<value>
		<coverage>0.15</coverage>	<!-- ========== 0.20 mech /// 0.10 human ========== -->
		</value>
	</Operation>
	
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/BodyDef[defName="Lancer"]/corePart/parts/li[def="FluidReprocessor"]/coverage</xpath>
		<value>
		<coverage>0.05</coverage>	<!-- ========== (0.04) Standardizing Fluid Reprocessor to be 5% cov ========== -->
		</value>
	</Operation>

</Patch>
<?xml version="1.0" encoding="UTF-8"?>
<Patch>
  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Apex: Rimworld Legends (Continued)</li>
    </mods>
    <match Class="PatchOperationAdd">
      <xpath>Defs</xpath>
      <value>

        <ThingCategoryDef>
          <defName>AmmoARL127x39mmCharged</defName>
          <label>127x39mm HE Charged Cartridge</label>
          <parent>AmmoAdvanced</parent>
          <iconPath>UI/Icons/ThingCategories/CaliberChargeLarge</iconPath>
        </ThingCategoryDef>

        <!-- Ammo Set -->
        <CombatExtended.AmmoSetDef>
          <defName>AmmoSet_ARL_127x39mmCharged</defName>
          <label>127x39mm HE Charged Cartridge</label>
          <ammoTypes>
            <Ammo_ARL_127x39mmCharged_HE>Bullet_ARL_127x39mmCharged_HE</Ammo_ARL_127x39mmCharged_HE>
          </ammoTypes>
        </CombatExtended.AmmoSetDef>

        <!-- Ammo -->
        <ThingDef Class="CombatExtended.AmmoDef" Name="40mmChargeMinigunBase" ParentName="AmmoBase" Abstract="True">
          <description>Specialized 127x39mm HE charged cartridge</description>
          <statBases>
            <Mass>0.172</Mass>
            <Bulk>0.16</Bulk>
          </statBases>
          <tradeTags>
            <li>CE_AutoEnableTrade</li>
            <li>CE_AutoEnableCrafting_TableMachining</li>
          </tradeTags>
          <thingCategories>
            <li>AmmoARL127x39mmCharged</li>
          </thingCategories>
        </ThingDef>

        <ThingDef Class="CombatExtended.AmmoDEf" ParentName="40mmChargeMinigunBase">
          <defName>Ammo_ARL_127x39mmCharged_HE</defName>
          <label>127x39mm HE Charged Cartridge</label>
          <graphicData>
            <texPath>Things/Ammo/Charged/LargeIon</texPath>
            <graphicClass>Graphic_StackCount</graphicClass>
          </graphicData>
          <ammoClass>GrenadeHE</ammoClass>
          <cookOffProjectile>Bullet_ARL_127x39mmCharged_HE</cookOffProjectile>
          <comps />
        </ThingDef>

        <!-- Projectile -->
        <ThingDef ParentName="BaseExplosiveBullet">
          <defName>Bullet_ARL_127x39mmCharged_HE</defName>
          <graphicData>
            <texPath>Things/Projectile/Charge_Explosive</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <shaderType>TransparentPostLight</shaderType>
          </graphicData>
          <thingClass>CombatExtended.ProjectileCE_Explosive</thingClass>
          <projectile Class="CombatExtended.ProjectilePropertiesCE">
            <damageDef>ARL_Bomb_ChargeMinigun</damageDef>
            <damageAmountBase>10</damageAmountBase>
            <explosionRadius>1.4</explosionRadius>
            <speed>70</speed>
            <flyOverhead>false</flyOverhead>
            <dropsCasings>true</dropsCasings>
          </projectile>
        </ThingDef>

        <!-- Recipes -->
        <RecipeDef ParentName="ChargeAmmoRecipeBase">
          <defName>MakeAmmo_ARL_127x39mmCharged_HE</defName>
          <label>make 127x39mm HE charged cartridge x100</label>
          <description>Craft 100 127x39mm HE charged cartridges.</description>
          <jobString>Making 127x39mm HE charged cartridges.</jobString>
          <ingredients>
            <li>
              <filter>
                <thingDefs>
                  <li>Plasteel</li>
                </thingDefs>
              </filter>
              <count>3</count>
            </li>
            <li>
              <filter>
                <thingDefs>
                  <li>ComponentIndustrial</li>
                </thingDefs>
              </filter>
              <count>3</count>
            </li>
            <li>
              <filter>
                <thingDefs>
                  <li>Chemfuel</li>
                </thingDefs>
              </filter>
              <count>3</count>
            </li>
          </ingredients>
          <fixedIngredientFilter>
            <thingDefs>
              <li>Plasteel</li>
              <li>ComponentIndustrial</li>
              <li>Chemfuel</li>
            </thingDefs>
          </fixedIngredientFilter>
          <products>
            <Ammo_ARL_127x39mmCharged_HE>100</Ammo_ARL_127x39mmCharged_HE>
          </products>
        </RecipeDef>

        <ThingDef ParentName="BaseGrenadeProjectile">
          <defName>Proj_ARL_ChargeGrenade</defName>
          <graphicData>
            <texPath>Things/Projectile/arcstar</texPath>
            <graphicClass>Graphic_Single</graphicClass>
          </graphicData>
          <projectile Class="CombatExtended.ProjectilePropertiesCE">
            <damageDef>ARL_Bomb_ChargeGrenade</damageDef>
            <damageAmountBase>40</damageAmountBase>
            <explosionRadius>1.6</explosionRadius>
            <explosionDelay>30</explosionDelay>
            <speed>40</speed>
            <ai_IsIncendiary>false</ai_IsIncendiary>
            <flyOverhead>false</flyOverhead>
            <applyDamageToExplosionCellsNeighbors>true</applyDamageToExplosionCellsNeighbors>
          </projectile>
        </ThingDef>

        <RecipeDef ParentName="AmmoRecipeBase">
          <defName>MakeARLArcStar</defName>
          <label>make arc stars</label>
          <description>Craft 50 Arc Stars.</description>
          <jobString>Making Arc Stars.</jobString>
          <ingredients>
            <li>
              <filter>
                <thingDefs>
                  <li>Plasteel</li>
                </thingDefs>
              </filter>
              <count>13</count>
            </li>
            <li>
              <filter>
                <thingDefs>
                  <li>Chemfuel</li>
                </thingDefs>
              </filter>
              <count>3</count>
            </li>
            <li>
              <filter>
                <thingDefs>
                  <li>ComponentIndustrial</li>
                </thingDefs>
              </filter>
              <count>1</count>
            </li>
          </ingredients>
          <fixedIngredientFilter>
            <thingDefs>
              <li>Plasteel</li>
              <li>Chemfuel</li>
              <li>ComponentIndustrial</li>
            </thingDefs>
          </fixedIngredientFilter>
          <products>
            <Proj_ARL_ChargeGrenade>50</Proj_ARL_ChargeGrenade>
          </products>
        </RecipeDef>
        
      </value>
    </match>
  </Operation>
</Patch>

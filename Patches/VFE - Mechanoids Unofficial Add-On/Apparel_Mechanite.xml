<?xml version="1.0" encoding="utf-8" ?>
<Patch>

  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>VFE - Mechanoids : Unoffical Add-On</li>
    </mods>

    <match Class="PatchOperationSequence">
      <operations>

	<li Class="PatchOperationReplace">
	  <xpath>Defs/ThingDef[defName="MAO_MechaniteUnderArmor"]/statBases/ArmorRating_Sharp</xpath>
	  <value>
		<ArmorRating_Sharp>7</ArmorRating_Sharp>
	  </value>
	</li>
	
	<li Class="PatchOperationReplace">
	  <xpath>Defs/ThingDef[defName="MAO_MechaniteUnderArmor"]/statBases/ArmorRating_Blunt</xpath>
	  <value>
		<ArmorRating_Blunt>10</ArmorRating_Blunt>
	  </value>
	</li>

      </operations>
    </match>
  </Operation>

</Patch>
<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
		<li>EvolvedOrgansRedux</li>
		</mods>
		
		<match Class="PatchOperationSequence">
			<operations>

    			<li Class="PatchOperationReplace">
				<xpath>Defs/HediffDef[defName="EVOR_Hediff_Protection_Skull_CranialPlating"]/stages/li[1]/statOffsets</xpath>
			<value>
				<statOffsets>
					<ArmorRating_Sharp>0.5</ArmorRating_Sharp>
					<ArmorRating_Heat>0.10</ArmorRating_Heat>
				</statOffsets>
			</value>
			</li>

    			<li Class="PatchOperationReplace">
				<xpath>Defs/HediffDef[defName="EVOR_Hediff_Protection_Torso_MultilayeredDermalPlating"]/stages/li[1]/statOffsets</xpath>
			<value>
				<statOffsets>
                    					<ArmorRating_Blunt>0.60</ArmorRating_Blunt>
					<ArmorRating_Sharp>2.5</ArmorRating_Sharp>
					<ArmorRating_Heat>0.20</ArmorRating_Heat>
					<ComfyTemperatureMin>-5</ComfyTemperatureMin>

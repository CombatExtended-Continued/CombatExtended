<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>PsiTech</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				<!-- == PTAthenium == -->
				<!-- statBases -->
				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="PTAthenium"]/statBases/StuffPower_Armor_Sharp</xpath>
					<value>
						<StuffPower_Armor_Sharp>0.8</StuffPower_Armor_Sharp>
						<Bulk>0.05</Bulk>
					</value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="PTAthenium"]/statBases/StuffPower_Armor_Blunt</xpath>
					<value>
						<StuffPower_Armor_Blunt>1.2</StuffPower_Armor_Blunt>
					</value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="PTAthenium"]/statBases/StuffPower_Armor_Heat</xpath>
					<value>
						<StuffPower_Armor_Heat>0</StuffPower_Armor_Heat>
					</value>
				</li>
				<!-- stuffProps -->
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="PTAthenium"]/stuffProps/categories</xpath>
					<value>
						<li>Metallic_Weapon</li>
						<li>Steeled</li>
					</value>
				</li>
			</operations>
		</match>
	</Operation>
</Patch>
<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>PsiTech</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				<!-- ==== Psion_Penitent ==== -->
				<li Class="PatchOperationReplace">
					<xpath>Defs/PawnKindDef[defName="Psion_Penitent"]/combatPower</xpath>
					<value>
						<combatPower>20</combatPower>
					</value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>Defs/PawnKindDef[defName="Psion_Penitent"]/weaponMoney</xpath>
					<value>
						<weaponMoney>80~150</weaponMoney>
					</value>
				</li>

				<!-- ==== Psion_Uninitiated ==== -->
				<li Class="PatchOperationAddModExtension">
					<xpath>Defs/PawnKindDef[defName="Psion_Uninitiated"]</xpath>
					<value>
						<li Class="CombatExtended.LoadoutPropertiesExtension">
							<primaryMagazineCount>
								<min>1</min>
								<max>3</max>
							</primaryMagazineCount>
							<sidearms>
								<li>
									<generateChance>0.5</generateChance>
									<sidearmMoney>
										<min>10</min>
										<max>120</max>
									</sidearmMoney>
									<weaponTags>
										<li>CE_Sidearm_Melee</li>
									</weaponTags>
								</li>
							</sidearms>
						</li>
					</value>
				</li>

				<!-- ==== Psion_Initiate ==== -->
				<li Class="PatchOperationAddModExtension">
					<xpath>Defs/PawnKindDef[defName="Psion_Initiate"]</xpath>
					<value>
						<li Class="CombatExtended.LoadoutPropertiesExtension">
							<primaryMagazineCount>
								<min>2</min>
								<max>4</max>
							</primaryMagazineCount>
							<sidearms>
								<li>
									<generateChance>0.6</generateChance>
									<sidearmMoney>
										<min>20</min>
										<max>180</max>
									</sidearmMoney>
									<weaponTags>
										<li>CE_Sidearm_Melee</li>
									</weaponTags>
								</li>
							</sidearms>
						</li>
					</value>
				</li>

				<!-- ==== Psion_Acolyte ==== -->
				<li Class="PatchOperationAddModExtension">
					<xpath>Defs/PawnKindDef[defName="Psion_Acolyte"]</xpath>
					<value>
						<li Class="CombatExtended.LoadoutPropertiesExtension">
							<primaryMagazineCount>
								<min>2</min>
								<max>4</max>
							</primaryMagazineCount>
							<sidearms>
								<li>
									<generateChance>0.6</generateChance>
									<sidearmMoney>
										<min>20</min>
										<max>180</max>
									</sidearmMoney>
									<weaponTags>
										<li>CE_Sidearm_Melee</li>
									</weaponTags>
								</li>
							</sidearms>
						</li>
					</value>
				</li>

				<!-- ==== Psion_Ascendant ==== -->
				<li Class="PatchOperationAddModExtension">
					<xpath>Defs/PawnKindDef[defName="Psion_Ascendant"]</xpath>
					<value>
						<li Class="CombatExtended.LoadoutPropertiesExtension">
							<primaryMagazineCount>
								<min>2</min>
								<max>5</max>
							</primaryMagazineCount>
							<sidearms>
								<li>
									<generateChance>0.6</generateChance>
									<sidearmMoney>
										<min>20</min>
										<max>180</max>
									</sidearmMoney>
									<weaponTags>
										<li>CE_Sidearm_Melee</li>
									</weaponTags>
								</li>
							</sidearms>
						</li>
					</value>
				</li>

				<!-- ==== Forcing every elite tier psion to have a tactical vest for bulk reasons ==== -->
				<li Class="PatchOperationAdd">
					<xpath>Defs/PawnKindDef[defName="Psion_Commando" or defName="Psion_Warrior" or defName="Psion_Conduit" or defName="Psion_Transcendent"]</xpath>
					<value>
						<specificApparelRequirements>
							<li>
								<bodyPartGroup>Shoulders</bodyPartGroup>
								<apparelLayer>Webbing</apparelLayer>
								<requiredTag>IndustrialMilitaryBasic</requiredTag>
							</li>
						</specificApparelRequirements>
					</value>
				</li>

				<!-- ==== Psion_Commando ==== -->
				<li Class="PatchOperationAddModExtension">
					<xpath>Defs/PawnKindDef[defName="Psion_Commando"]</xpath>
					<value>
						<li Class="CombatExtended.LoadoutPropertiesExtension">
							<primaryMagazineCount>
								<min>2</min>
								<max>6</max>
							</primaryMagazineCount>
							<shieldMoney>
								<min>200</min>
								<max>600</max>
							</shieldMoney>
							<shieldTags>
								<li>OutlanderShield</li>
							</shieldTags>
							<shieldChance>0.8</shieldChance>
							<sidearms>
								<li>
									<generateChance>0.8</generateChance>
									<sidearmMoney>
										<min>30</min>
										<max>360</max>
									</sidearmMoney>
									<weaponTags>
										<li>CE_Sidearm_Melee</li>
										<li>CE_Sidearm</li>
									</weaponTags>
									<magazineCount>
										<min>0</min>
										<max>2</max>
									</magazineCount>
								</li>
							</sidearms>
						</li>
					</value>
				</li>

				<!-- ==== Psion_Warrior ==== -->
				<li Class="PatchOperationAddModExtension">
					<xpath>Defs/PawnKindDef[defName="Psion_Warrior"]</xpath>
					<value>
						<li Class="CombatExtended.LoadoutPropertiesExtension">
							<primaryMagazineCount>
								<min>2</min>
								<max>6</max>
							</primaryMagazineCount>
							<sidearms>
								<li>
									<generateChance>0.8</generateChance>
									<sidearmMoney>
										<min>30</min>
										<max>720</max>
									</sidearmMoney>
									<weaponTags>
										<li>CE_Sidearm_Melee</li>
									</weaponTags>
								</li>
							</sidearms>
						</li>
					</value>
				</li>

				<!-- ==== Psion_Conduit ==== -->
				<li Class="PatchOperationAddModExtension">
					<xpath>Defs/PawnKindDef[defName="Psion_Conduit"]</xpath>
					<value>
						<li Class="CombatExtended.LoadoutPropertiesExtension">
							<primaryMagazineCount>
								<min>2</min>
								<max>6</max>
							</primaryMagazineCount>
							<sidearms>
								<li>
									<generateChance>0.8</generateChance>
									<sidearmMoney>
										<min>30</min>
										<max>180</max>
									</sidearmMoney>
									<weaponTags>
										<li>CE_Sidearm_Melee</li>
									</weaponTags>
								</li>
							</sidearms>
						</li>
					</value>
				</li>

				<!-- ==== Psion_Transcendent ==== -->
				<li Class="PatchOperationAddModExtension">
					<xpath>Defs/PawnKindDef[defName="Psion_Transcendent"]</xpath>
					<value>
						<li Class="CombatExtended.LoadoutPropertiesExtension">
							<primaryMagazineCount>
								<min>2</min>
								<max>6</max>
							</primaryMagazineCount>
							<shieldMoney>
								<min>999999</min>
								<max>999999</max>
							</shieldMoney>
							<shieldTags>
								<li>OutlanderShield</li>
							</shieldTags>
							<shieldChance>1</shieldChance>
							<forcedSidearm>
								<sidearmMoney>
									<min>999999</min>
									<max>999999</max>
								</sidearmMoney>
								<weaponTags>
									<li>CE_Sidearm_Melee</li>
									<li>CE_Sidearm</li>
								</weaponTags>
							</forcedSidearm>
						</li>
					</value>
				</li>
			</operations>
		</match>
	</Operation>
</Patch>
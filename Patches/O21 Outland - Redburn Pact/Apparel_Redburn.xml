<?xml version="1.0" encoding="utf-8"?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Outland - Redburn Pact</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				<!-- Pact Furs -->
				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="Outland_PactFurs"]/statBases/StuffEffectMultiplierArmor</xpath>
					<value>
						<StuffEffectMultiplierArmor>5</StuffEffectMultiplierArmor>
						<Bulk>2.5</Bulk>
						<WornBulk>1.5</WornBulk>
					</value>
				</li>

				<!-- Pact Harness -->
				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="Outland_PactHarness"]/statBases/StuffEffectMultiplierArmor</xpath>
					<value>
						<StuffEffectMultiplierArmor>6</StuffEffectMultiplierArmor>
						<Bulk>7</Bulk>
						<WornBulk>3.5</WornBulk>
					</value>
				</li>

				<!-- Pact Leather Helmet -->
				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="Outland_PactLeatherHelmet"]/statBases/StuffEffectMultiplierArmor</xpath>
					<value>
						<StuffEffectMultiplierArmor>5</StuffEffectMultiplierArmor>
						<Bulk>3</Bulk>
						<WornBulk>1</WornBulk>
					</value>
				</li>

				<!-- Pact Caster Mask -->
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="Outland_TribalMask_PactCaster"]</xpath>
					<value>
						<statBases>
							<StuffEffectMultiplierArmor>3</StuffEffectMultiplierArmor>
							<Bulk>1</Bulk>
							<WornBulk>0.5</WornBulk>
						</statBases>
					</value>
				</li>

				<!-- Pact Cap -->
				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="Outland_PactCap"]/statBases/StuffEffectMultiplierArmor</xpath>
					<value>
						<StuffEffectMultiplierArmor>2</StuffEffectMultiplierArmor>
						<Bulk>1</Bulk>
						<WornBulk>0.5</WornBulk>
					</value>
				</li>

				<!-- Pact Fur Helmet -->
				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="Outland_PactFurHelmet"]/statBases/StuffEffectMultiplierArmor</xpath>
					<value>
						<StuffEffectMultiplierArmor>2</StuffEffectMultiplierArmor>
						<Bulk>3</Bulk>
						<WornBulk>1</WornBulk>
					</value>
				</li>

				<!-- Pact Warlord Cuirass (has same stats as vanilla plate armor) -->
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="Outland_PactWarlordCuirass"]/statBases</xpath>
					<value>
						<Bulk>90</Bulk>
						<WornBulk>12.5</WornBulk>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="Outland_PactWarlordCuirass"]/statBases/StuffEffectMultiplierArmor</xpath>
					<value>
						<StuffEffectMultiplierArmor>2.5</StuffEffectMultiplierArmor>
					</value>
				</li>

				<!-- Pact Warlord Pauldrons -->
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="Outland_PactWarlordPauldrons"]/statBases</xpath>
					<value>
						<Bulk>10</Bulk>
						<WornBulk>2.5</WornBulk>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="Outland_PactWarlordPauldrons"]/statBases/StuffEffectMultiplierArmor</xpath>
					<value>
						<StuffEffectMultiplierArmor>2.5</StuffEffectMultiplierArmor>
					</value>
				</li>

				<!-- Pact Warlord Helmet -->
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="Outland_PactWarlordHelmet"]/statBases</xpath>
					<value>
						<Bulk>5</Bulk>
						<WornBulk>1</WornBulk>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="Outland_PactWarlordHelmet"]/statBases/StuffEffectMultiplierArmor</xpath>
					<value>
						<StuffEffectMultiplierArmor>2.75</StuffEffectMultiplierArmor>
					</value>
				</li>
			</operations>
		</match>
	</Operation>

</Patch>
<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	
	<Operation Class="PatchOperationFindMod">
    <mods>
		<li>[O21] Outer Rim Galaxies</li>
    </mods>
		<match Class="PatchOperationSequence">
		<operations>
		
			<li Class="PatchOperationConditional">
				<xpath>Defs/ThingDef[defName="O21_OR_AmbanSniperRifle"]</xpath>
				<match Class="PatchOperationSequence">
					<operations>
					
					<li Class="PatchOperationReplace">
						<xpath>Defs/ThingDef[@Name="MandalorianChestBase"]/statBases/StuffEffectMultiplierArmor</xpath>
						<value>
							<StuffEffectMultiplierArmor>14.5</StuffEffectMultiplierArmor>
						</value>
					</li>
					
					<li Class="PatchOperationAdd">
						<xpath>Defs/ThingDef[@Name="MandalorianChestBase"]/apparel/layers</xpath>
						<value>
						  <li>Shell</li>
						</value>
					</li>
					
					<li Class="PatchOperationReplace">
						<xpath>Defs/ThingDef[@Name="MandalorianChestBase"]/statBases/Mass</xpath>
						<value>
							<Mass>15</Mass>
							<Bulk>80</Bulk>
							<WornBulk>15</WornBulk>
						</value>
					</li>
					
					<li Class="PatchOperationAdd">
						<xpath>Defs/ThingDef[@Name="MandalorianChestBase"]</xpath>
						<value>
						<equippedStatOffsets>
							<ToxicEnvironmentResistance>0.40</ToxicEnvironmentResistance>
							<CarryBulk>25</CarryBulk>
						</equippedStatOffsets>
						</value>
					</li>
					
					
					
					<li Class="PatchOperationReplace">
						<xpath>Defs/ThingDef[@Name="MandalorianHelmetBase"]/statBases/StuffEffectMultiplierArmor</xpath>
						<value>
							<StuffEffectMultiplierArmor>13.8</StuffEffectMultiplierArmor>
						</value>
					</li>
					
					<li Class="PatchOperationAdd">
						<xpath>Defs/ThingDef[@Name="MandalorianHelmetBase"]/apparel/layers</xpath>
						<value>
						  <li>OnHead</li>
						  <li>StrappedHead</li>
						</value>
					</li>
					
					<li Class="PatchOperationReplace">
						<xpath>Defs/ThingDef[@Name="MandalorianHelmetBase"]/statBases/Mass</xpath>
						<value>
							<Mass>4</Mass>
							<Bulk>4</Bulk>
							<WornBulk>1</WornBulk>
						</value>
					</li>
					
					<li Class="PatchOperationAdd">
						<xpath>Defs/ThingDef[@Name="MandalorianHelmetBase"]</xpath>
						<value>
						<equippedStatOffsets>
							<ToxicEnvironmentResistance>0.40</ToxicEnvironmentResistance>
						</equippedStatOffsets>
						</value>
					</li>
					
					
					
					<li Class="PatchOperationReplace">
						<xpath>Defs/ThingDef[@Name="MandalorianPauldronsBase"]/statBases/StuffEffectMultiplierArmor</xpath>
						<value>
							<StuffEffectMultiplierArmor>14</StuffEffectMultiplierArmor>
						</value>
					</li>
					
					<li Class="PatchOperationReplace">
						<xpath>Defs/ThingDef[@Name="MandalorianPauldronsBase"]/statBases/Mass</xpath>
						<value>
							<Mass>4</Mass>
							<Bulk>10</Bulk>
							<WornBulk>1</WornBulk>
						</value>
					</li>
					
					
					</operations>
				</match>
			</li>
			
		</operations>
		</match>
	</Operation>
	
</Patch>
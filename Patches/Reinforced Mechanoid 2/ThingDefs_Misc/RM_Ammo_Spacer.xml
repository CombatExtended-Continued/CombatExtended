                              <def>Flame_Secondary</def>
                              <amount>30</amount>
                           </li>
                        </secondaryDamage>
                        <screenShakeFactor>0</screenShakeFactor>
                     </projectile>
                  </ThingDef>

                  <ThingDef ParentName="Base60mmMortarShell">
                     <defName>RM_Bullet_PlasmaCellHellgator</defName>

<?xml version="1.0" encoding="utf-8"?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Warhammer 40.000: Imperium Weaponry</li>
		</mods>

		<match Class="PatchOperationSequence">
			<operations>

				<!-- === Tools === -->
				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="GF40K_GalvanicRifle"]/tools</xpath>
					<value>
						<tools>
							<li Class="CombatExtended.ToolCE">
								<label>stock</label>
								<capacities>
									<li>Blunt</li>
								</capacities>
								<power>8</power>
								<cooldownTime>1.55</cooldownTime>
								<chanceFactor>1.5</chanceFactor>
								<armorPenetrationBlunt>2.755</armorPenetrationBlunt>
								<linkedBodyPartsGroup>Stock</linkedBodyPartsGroup>
							</li>
							<li Class="CombatExtended.ToolCE">
								<label>barrel</label>
								<capacities>
									<li>Blunt</li>
								</capacities>
								<power>5</power>
								<cooldownTime>2.02</cooldownTime>
								<armorPenetrationBlunt>1.630</armorPenetrationBlunt>
								<linkedBodyPartsGroup>Barrel</linkedBodyPartsGroup>
							</li>
							<li Class="CombatExtended.ToolCE">
								<label>muzzle</label>
								<capacities>
									<li>Poke</li>
								</capacities>
								<power>8</power>
								<cooldownTime>1.55</cooldownTime>
								<armorPenetrationBlunt>2.755</armorPenetrationBlunt>
								<linkedBodyPartsGroup>Muzzle</linkedBodyPartsGroup>
							</li>
						</tools>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="GF40K_RelicGalvanicRifle"]/tools</xpath>
					<value>
						<tools>
							<li Class="CombatExtended.ToolCE">
								<label>stock</label>
								<capacities>
									<li>Blunt</li>
								</capacities>
								<power>9</power>
								<cooldownTime>1.4</cooldownTime>
								<chanceFactor>1.5</chanceFactor>
								<armorPenetrationBlunt>2.95</armorPenetrationBlunt>
								<linkedBodyPartsGroup>Stock</linkedBodyPartsGroup>
							</li>
							<li Class="CombatExtended.ToolCE">
								<label>barrel</label>
								<capacities>
									<li>Blunt</li>
								</capacities>
								<power>6</power>
								<cooldownTime>1.9</cooldownTime>
								<armorPenetrationBlunt>1.75</armorPenetrationBlunt>
								<linkedBodyPartsGroup>Barrel</linkedBodyPartsGroup>
							</li>
							<li Class="CombatExtended.ToolCE">
								<label>muzzle</label>
								<capacities>
									<li>Poke</li>
								</capacities>
								<power>9</power>
								<cooldownTime>1.4</cooldownTime>
								<armorPenetrationBlunt>2.95</armorPenetrationBlunt>
								<linkedBodyPartsGroup>Muzzle</linkedBodyPartsGroup>
							</li>
						</tools>
					</value>
				</li>

				<!-- === Galvanic Rifle === -->
				<li Class="CombatExtended.PatchOperationMakeGunCECompatible">
					<defName>GF40K_GalvanicRifle</defName>
					<statBases>
						<Mass>10.0</Mass>
						<Bulk>12.0</Bulk>
						<SwayFactor>2.2</SwayFactor>
						<ShotSpread>0.05</ShotSpread>
						<SightsEfficiency>1.1</SightsEfficiency>
						<RangedWeapon_Cooldown>0.86</RangedWeapon_Cooldown>
					</statBases>
					<Properties>
						<recoilAmount>2.2</recoilAmount>
						<verbClass>CombatExtended.Verb_ShootCE</verbClass>
						<hasStandardCommand>True</hasStandardCommand>
						<defaultProjectile>Bullet_Gauss_Galvanic</defaultProjectile>
						<warmupTime>1.0</warmupTime>
						<range>75</range>
						<soundCast>ChargeLance_Fire</soundCast>
						<soundCastTail>GunTail_Light</soundCastTail>
						<muzzleFlashScale>9</muzzleFlashScale>
					</Properties>
					<AmmoUser>
						<magazineSize>12</magazineSize>
						<reloadOneAtATime>true</reloadOneAtATime>
						<reloadTime>0.85</reloadTime>
						<ammoSet>AmmoSet_8mmGauss_Galvanic</ammoSet>
					</AmmoUser>
					<FireModes>
						<aiAimMode>AimedShot</aiAimMode>
					</FireModes>
				</li>

				<!-- === Relic Galvanic Rifle === -->
				<li Class="CombatExtended.PatchOperationMakeGunCECompatible">
					<defName>GF40K_RelicGalvanicRifle</defName>
					<statBases>
						<Mass>10.0</Mass>
						<Bulk>12.0</Bulk>
						<SwayFactor>2</SwayFactor>
						<ShotSpread>0.04</ShotSpread>
						<SightsEfficiency>1.3</SightsEfficiency>
						<RangedWeapon_Cooldown>0.8</RangedWeapon_Cooldown>
					</statBases>
					<Properties>
						<recoilAmount>2</recoilAmount>
						<verbClass>CombatExtended.Verb_ShootCE</verbClass>
						<hasStandardCommand>True</hasStandardCommand>
						<defaultProjectile>Bullet_Gauss_Galvanic_Relic</defaultProjectile>
						<warmupTime>1.0</warmupTime>
						<range>75</range>
						<soundCast>ChargeLance_Fire</soundCast>
						<soundCastTail>GunTail_Light</soundCastTail>
						<muzzleFlashScale>9</muzzleFlashScale>
					</Properties>
					<AmmoUser>
						<magazineSize>12</magazineSize>
						<reloadOneAtATime>true</reloadOneAtATime>
						<reloadTime>0.85</reloadTime>
						<ammoSet>AmmoSet_8mmGauss_Galvanic_Relic</ammoSet>
					</AmmoUser>
					<FireModes>
						<aiAimMode>AimedShot</aiAimMode>
					</FireModes>
				</li>

			</operations>
		</match>
	</Operation>

</Patch>
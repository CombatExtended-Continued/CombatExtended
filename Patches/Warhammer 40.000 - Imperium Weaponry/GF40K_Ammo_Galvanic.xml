<?xml version="1.0" encoding="utf-8"?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Warhammer 40.000: Imperium Weaponry</li>
		</mods>
		<match Class="PatchOperationAdd">
			<xpath>Defs</xpath>
			<value>

				<!-- ==================== AmmoSet ========================== -->

				<CombatExtended.AmmoSetDef>
					<defName>AmmoSet_8mmGauss_Galvanic</defName>
					<label>8mm galvanic gauss</label>
					<ammoTypes>
						<Ammo_8mmRailgun_Sabot>Bullet_Gauss_Galvanic</Ammo_8mmRailgun_Sabot>
					</ammoTypes>
				</CombatExtended.AmmoSetDef>

				<CombatExtended.AmmoSetDef>
					<defName>AmmoSet_8mmGauss_Galvanic_Relic</defName>
					<label>8mm galvanic gauss</label>
					<ammoTypes>
						<Ammo_8mmRailgun_Sabot>Bullet_Gauss_Galvanic_Relic</Ammo_8mmRailgun_Sabot>
					</ammoTypes>
				</CombatExtended.AmmoSetDef>

				<!-- ================== Projectiles ================== -->

				<ThingDef Class="CombatExtended.Lasers.LaserBeamDefCE" ParentName="LaserBulletYellow">
					<defName>Bullet_Gauss_Galvanic</defName>
					<label>galvanic Gauss shot</label>
					<projectile Class="CombatExtended.ProjectilePropertiesCE">
						<isInstant>true</isInstant>
						<damageFalloff>False</damageFalloff>
						<damageDef>GF40K_Gauss</damageDef>
						<damageAmountBase>22</damageAmountBase>
						<armorPenetrationSharp>50</armorPenetrationSharp>
						<armorPenetrationBlunt>312</armorPenetrationBlunt>
						<extraDamages>
							<li>
								<def>EMP</def>
								<amount>45</amount>
								<chance>0.4</chance>
							</li>
						</extraDamages>
					</projectile>
				</ThingDef>

				<ThingDef Class="CombatExtended.Lasers.LaserBeamDefCE" ParentName="LaserBulletRed">
					<defName>Bullet_Gauss_Galvanic_Relic</defName>
					<label>galvanic Gauss shot</label>
					<projectile Class="CombatExtended.ProjectilePropertiesCE">
						<isInstant>true</isInstant>
						<damageFalloff>False</damageFalloff>
						<damageDef>GF40K_Gauss</damageDef>
						<damageAmountBase>26</damageAmountBase>
						<armorPenetrationSharp>58</armorPenetrationSharp>
						<armorPenetrationBlunt>322</armorPenetrationBlunt>
						<extraDamages>
							<li>
								<def>EMP</def>
								<amount>50</amount>
								<chance>0.5</chance>
							</li>
						</extraDamages>
					</projectile>
				</ThingDef>

			</value>
		</match>
	</Operation>
</Patch>
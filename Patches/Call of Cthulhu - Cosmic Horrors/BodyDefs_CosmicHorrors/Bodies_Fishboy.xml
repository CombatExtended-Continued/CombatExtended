<?xml version="1.0" encoding="UTF-8"?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Call of Cthulhu - Cosmic Horrors</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				<!-- Natural Armor -->
				<li Class="PatchOperationAdd">
					<xpath>/Defs/BodyDef[defName="ROM_DeepOneBody"]//*[
            							 def="Torso" or 
            							 def="Head" or 
           								 def="Shoulder" or 
           								 def="Neck" or 
           								 def="Arm" or 
           								 def="Leg"]/groups</xpath>
					<value>
						<li>CoveredByNaturalArmor</li>
					</value>
				</li>
			</operations>
		</match>
	</Operation>
</Patch>
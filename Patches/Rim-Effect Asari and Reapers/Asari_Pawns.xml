<?xml version="1.0" encoding="utf-8"?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
		<li>Rim-Effect: Asari and Reapers</li>
		</mods>

		<match Class="PatchOperationSequence">
			<operations>
			
			<li Class="PatchOperationAddModExtension">
				<xpath>Defs/PawnKindDef[
					defName="RE_AsariExplorer" or
					defName="RE_AsariDancer" or
					defName="RE_AsariOfficial" or
					defName="RE_AsariTrader" or
					defName="RE_Matriarch" or
					defName="RE_AsariScientist" or
					defName="RE_AsariTraveller"
					]</xpath>
				<value>	
				<li Class="CombatExtended.LoadoutPropertiesExtension">	
					<primaryMagazineCount>
						<min>2</min>
						<max>3</max>
					</primaryMagazineCount>
					<sidearms>
					<li>
						<generateChance>0.25</generateChance>
						<sidearmMoney>
							<min>20</min>
							<max>120</max>
						</sidearmMoney>
						<weaponTags>
							<li>CE_Sidearm_Melee</li>
						</weaponTags>
					</li>
					<li>
						<generateChance>0.075</generateChance>
						<sidearmMoney>
							<min>10</min>
							<max>100</max>
						</sidearmMoney>
						<weaponTags>
							<li>CE_FlareLauncher</li>
						</weaponTags>
						<magazineCount>
							<min>1</min>
							<max>1</max>
						</magazineCount>
					</li>
					</sidearms>
				</li>
				</value>
			</li>

			<li Class="PatchOperationAddModExtension">
				<xpath>Defs/PawnKindDef[
					defName="RE_AsariAdept" or
					defName="RE_AsariJusticar" or
					defName="RE_Alliance_AsariMarine" or
					defName="RE_AsariCommando" or
					defName="RE_AsariCommandoSpecialist" or
					defName="RE_ArdatYakshi"
					]</xpath>
				<value>	
				<li Class="CombatExtended.LoadoutPropertiesExtension">	
					<primaryMagazineCount>
						<min>4</min>
						<max>6</max>
					</primaryMagazineCount>
					<sidearms>
						<li>
							<generateChance>0.05</generateChance>
							<sidearmMoney>
								<min>100</min>
								<max>300</max>
							</sidearmMoney>
							<weaponTags>
								<li>CE_Sidearm_Melee</li>
							</weaponTags>
						</li>
						<li>
							<generateChance>0.125</generateChance>
							<sidearmMoney>
								<min>10</min>
								<max>100</max>
							</sidearmMoney>
							<weaponTags>
								<li>GrenadeSmoke</li>
								<li>GrenadeDestructive</li>
							</weaponTags>
							<magazineCount>
							<min>0</min>
							<max>1</max>
							</magazineCount>
						</li>
					</sidearms>
				</li>
				</value>
			</li>
			
			<li Class="PatchOperationAddModExtension">
				<xpath>Defs/PawnKindDef[defName="RE_AsariMarineSniper"]</xpath>
				<value>	
					<li Class="CombatExtended.LoadoutPropertiesExtension">	
						<primaryMagazineCount>
							<min>12</min>
							<max>21</max>
						</primaryMagazineCount>
					</li>
				</value>
			</li>

			</operations>
		</match>
	</Operation>
</Patch>
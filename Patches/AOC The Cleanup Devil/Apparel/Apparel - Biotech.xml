<?xml version="1.0" encoding="utf-8" ?>
<Patch>

  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>AOC The Cleanup Devil</li>
    </mods>
    <match Class="PatchOperationFindMod">
        <mods>
          <li>Biotech</li>
        </mods>
        <match Class="PatchOperationSequence">
          <operations>

          <!-- ========== Child Apparel ========== -->
          <li Class="PatchOperationReplace">
            <xpath>Defs/ThingDef[
            defName="AOCC_Kid_Apparel_Bori" or
            defName="AOCC_Kid_Apparel_Miho" or
            defName="AOCC_Kid_Apparel_AOC" or
            defName="AOCC_Kid_Apparel_sheepawn"
            ]/statBases/StuffEffectMultiplierArmor</xpath>
            <value>
              <StuffEffectMultiplierArmor>1.5</StuffEffectMultiplierArmor>
            </value>
          </li>

          <li Class="PatchOperationAdd">
            <xpath>Defs/ThingDef[
            defName="AOCC_Kid_Apparel_Bori" or
            defName="AOCC_Kid_Apparel_Miho" or
            defName="AOCC_Kid_Apparel_AOC" or
            defName="AOCC_Kid_Apparel_sheepawn"
            ]/statBases</xpath>
            <value>
              <Bulk>1.5</Bulk>
              <WornBulk>0.5</WornBulk>
            </value>
          </li>

          </operations>
        </match>
    </match>
  </Operation>

</Patch>
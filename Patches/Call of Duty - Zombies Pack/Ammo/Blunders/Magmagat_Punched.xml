							</ingredients>
							<fixedIngredientFilter>
								<thingDefs>
									<li>Ammo_Magmagat_Slug</li>
								</thingDefs>
							</fixedIngredientFilter>
							<products>
								<Ammo_Magmagat_Slug_Punched>20</Ammo_Magmagat_Slug_Punched>
							</products>

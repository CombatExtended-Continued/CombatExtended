										<thingDefs>
											<li>Steel</li>
										</thingDefs>
									</filter>
									<count>22</count>
								</li>
							</ingredients>
							<fixedIngredientFilter>
								<thingDefs>
									<li>Steel</li>
								</thingDefs>
							</fixedIngredientFilter>
							<products>
								<Ammo_Raygun_two_x_Punched>500</Ammo_Raygun_two_x_Punched>

								<texPath>ThirdParty/CoD Zombies Pack/Raygun/2/X</texPath>
								<graphicClass>Graphic_StackCount</graphicClass>
							</graphicData>
							<statBases>
								<MarketValue>0.09</MarketValue>
							</statBases>
							<ammoClass>FullMetalJacket</ammoClass>
							<cookOffProjectile>Bullet_Raygun_two_x_Punched</cookOffProjectile>
						</ThingDef>
						<!-- ==================== Projectiles ========================== -->
						<ThingDef ParentName="Raygun2BulletPunched">
							<defName>Bullet_Raygun_two_x_Punched</defName>
							<label>Porter's Raygun Mk.2 X Plasma</label>

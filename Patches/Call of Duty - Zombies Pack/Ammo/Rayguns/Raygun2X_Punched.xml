		<match Class="PatchOperationSequence">
			<operations>
				<li Class="PatchOperationAdd">
					<xpath>Defs</xpath>
					<value>
						<ThingCategoryDef>
							<defName>AmmoRaygun_two_x_Punched</defName>
							<label>Porter's Raygun Mk.2 X</label>

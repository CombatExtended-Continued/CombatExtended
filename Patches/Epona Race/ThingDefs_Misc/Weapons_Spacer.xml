				</statBases>
				<Properties>
					<verbClass>CombatExtended.Verb_ShootCE</verbClass>
					<recoilAmount>2.93</recoilAmount>
					<hasStandardCommand>true</hasStandardCommand>
					<defaultProjectile>Bullet_Epona_Molten</defaultProjectile>

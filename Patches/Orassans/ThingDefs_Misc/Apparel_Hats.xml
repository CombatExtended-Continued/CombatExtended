<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Orassans</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>

				<!-- ========== Orassan Power Helmet ========== -->
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="Apparel_OrassanPowerArmorHelmet"]/statBases</xpath>
					<value>
						<Bulk>5</Bulk>
						<WornBulk>1</WornBulk>
						<NightVisionEfficiency_Apparel>0.6</NightVisionEfficiency_Apparel>
					</value>
				</li>

				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="Apparel_OrassanPowerArmorHelmet"]/equippedStatOffsets</xpath>
					<value>
						<AimingAccuracy>0.15</AimingAccuracy>

					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="Apparel_OrassanPowerArmorHelmet"]/statBases/ArmorRating_Sharp</xpath>
					<value>
						<ArmorRating_Sharp>19.2</ArmorRating_Sharp>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="Apparel_OrassanPowerArmorHelmet"]/statBases/ArmorRating_Blunt</xpath>
					<value>
						<ArmorRating_Blunt>50</ArmorRating_Blunt>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="Apparel_OrassanPowerArmorHelmet"]/costList/Plasteel</xpath>
					<value>
						<Plasteel>45</Plasteel>
						<CatLavenderCloth>20</CatLavenderCloth>
					</value>
				</li>
				
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="Apparel_OrassanPowerArmorHelmet"]/apparel/layers</xpath>
					<value>
						<li>OnHead</li>
						<li>StrappedHead</li>
					</value>
				</li>

				<!-- ========== Orassan Sack Helmet ========== -->
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="Apparel_OrassanSacriArmorHelmet"]/statBases</xpath>
					<value>
						<Bulk>5</Bulk>
						<WornBulk>1</WornBulk>
						<NightVisionEfficiency_Apparel>0.8</NightVisionEfficiency_Apparel>
					</value>
				</li>

				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="Apparel_OrassanSacriArmorHelmet"]/equippedStatOffsets</xpath>
					<value>
						<AimingAccuracy>0.15</AimingAccuracy>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="Apparel_OrassanSacriArmorHelmet"]/statBases/ArmorRating_Sharp</xpath>
					<value>
						<ArmorRating_Sharp>4.8</ArmorRating_Sharp>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="Apparel_OrassanSacriArmorHelmet"]/statBases/ArmorRating_Blunt</xpath>
					<value>
						<ArmorRating_Blunt>25</ArmorRating_Blunt>
					</value>
				</li>
				
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="Apparel_OrassanSacriArmorHelmet"]/apparel/layers</xpath>
					<value>
						<li>OnHead</li>
						<li>StrappedHead</li>
					</value>
				</li>

			</operations>
		</match>
	</Operation>

</Patch>
<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
		<li>Alpha Animals</li>
		</mods>

		<match Class="PatchOperationSequence">
			<operations>

			<li Class="PatchOperationAddModExtension">
				<xpath>/Defs/ThingDef[defName="AA_Helixien"]</xpath>
				<value>
					<li Class="CombatExtended.RacePropertiesExtensionCE">
						<bodyShape>Serpentine</bodyShape>
					</li>
				</value>
			</li>

			<li Class="PatchOperationAdd">
				<xpath>/Defs/ThingDef[defName="AA_Helixien"]/statBases</xpath>
				<value>
					<MeleeDodgeChance>0.00</MeleeDodgeChance>
					<MeleeCritChance>0.5</MeleeCritChance>
					<MeleeParryChance>0.16</MeleeParryChance>
					<ArmorRating_Blunt>4</ArmorRating_Blunt>
				</value>
			</li>

			<li Class="PatchOperationReplace">
				<xpath>/Defs/ThingDef[defName="AA_Helixien"]/tools</xpath>
				<value>
					<tools>
						<li Class="CombatExtended.ToolCE">
							<label>slimy body</label>
							<capacities>
								<li>Blunt</li>
							</capacities>
							<power>24</power>
							<cooldownTime>3.5</cooldownTime>
							<linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
							<surpriseAttack>
								<extraMeleeDamages>
									<li>
										<def>Stun</def>
										<amount>28</amount>
									</li>
								</extraMeleeDamages>
							</surpriseAttack>
							<armorPenetrationBlunt>6</armorPenetrationBlunt>
						</li>
					</tools>
				</value>
			</li>
			</operations>
		</match>
	</Operation>
</Patch>

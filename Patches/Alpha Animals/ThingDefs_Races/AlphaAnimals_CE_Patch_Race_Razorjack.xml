<?xml version="1.0" encoding="utf-8"?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Alpha Animals</li>
		</mods>

		<match Class="PatchOperationSequence">
			<operations>

				<li Class="PatchOperationAddModExtension">
					<xpath>Defs/ThingDef[defName="AA_Razorjack"]</xpath>
					<value>
						<li Class="CombatExtended.RacePropertiesExtensionCE">
							<bodyShape>Quadruped</bodyShape>
						</li>
					</value>
				</li>

				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="AA_Razorjack"]/statBases</xpath>
					<value>
						<MeleeDodgeChance>0.03</MeleeDodgeChance>
						<MeleeCritChance>0.02</MeleeCritChance>
						<MeleeParryChance>0.08</MeleeParryChance>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="AA_Razorjack"]/tools</xpath>
					<value>
						<tools>
							<li Class="CombatExtended.ToolCE">
								<label>left claw</label>
								<capacities>
									<li>AA_InfectedClaws</li>
								</capacities>
								<power>8</power>
								<cooldownTime>1</cooldownTime>
								<linkedBodyPartsGroup>FrontLeftPaw</linkedBodyPartsGroup>
								<surpriseAttack>
									<extraMeleeDamages>
										<li>
											<def>Stun</def>
											<amount>14</amount>
										</li>
									</extraMeleeDamages>
								</surpriseAttack>
								<armorPenetrationBlunt>0.6</armorPenetrationBlunt>
								<armorPenetrationSharp>1.2</armorPenetrationSharp>
							</li>
							<li Class="CombatExtended.ToolCE">
								<label>right claw</label>
								<capacities>
									<li>AA_InfectedClaws</li>
								</capacities>
								<power>8</power>
								<cooldownTime>1</cooldownTime>
								<linkedBodyPartsGroup>FrontRightPaw</linkedBodyPartsGroup>
								<surpriseAttack>
									<extraMeleeDamages>
										<li>
											<def>Stun</def>
											<amount>14</amount>
										</li>
									</extraMeleeDamages>
								</surpriseAttack>
								<armorPenetrationBlunt>0.6</armorPenetrationBlunt>
								<armorPenetrationSharp>1.2</armorPenetrationSharp>
							</li>
							<li Class="CombatExtended.ToolCE">
								<label>razorfangs</label>
								<capacities>
									<li>Bite</li>
								</capacities>
								<power>16</power>
								<cooldownTime>1</cooldownTime>
								<linkedBodyPartsGroup>Teeth</linkedBodyPartsGroup>
								<chanceFactor>0.9</chanceFactor>
								<surpriseAttack>
									<extraMeleeDamages>
										<li>
											<def>Stun</def>
											<amount>14</amount>
										</li>
									</extraMeleeDamages>
								</surpriseAttack>
								<armorPenetrationSharp>1.5</armorPenetrationSharp>
								<armorPenetrationBlunt>5.225</armorPenetrationBlunt>
							</li>
							<li Class="CombatExtended.ToolCE">
								<label>head</label>
								<capacities>
									<li>Blunt</li>
								</capacities>
								<power>5</power>
								<cooldownTime>2</cooldownTime>
								<linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
								<ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
								<chanceFactor>0.2</chanceFactor>
								<armorPenetrationBlunt>0.350</armorPenetrationBlunt>
							</li>
						</tools>
					</value>
				</li>
			</operations>
		</match>
	</Operation>
</Patch>
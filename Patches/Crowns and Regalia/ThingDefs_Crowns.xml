<?xml version="1.0" encoding="utf-8"?>
<Patch>
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Crowns and Regalia</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>

                <!-- Byzantine Imperial Crown -->
                <li Class="PatchOperationAdd">
                    <xpath>Defs/ThingDef[defName="Canon_Crown_Byzantine"]/statBases</xpath>
                    <value>
                        <Bulk>2</Bulk>
                        <WornBulk>1</WornBulk>
                    </value>
                </li>

                <li Class="PatchOperationAdd">
                    <xpath>Defs/ThingDef[defName="Canon_Crown_Byzantine"]/statBases</xpath>
                    <value>
                        <ArmorRating_Sharp>1.8</ArmorRating_Sharp>
                        <ArmorRating_Blunt>2.4</ArmorRating_Blunt>
                    </value>
                </li>

                <!-- Byzantine Imperial Crown (Stuffable) -->
                <li Class="PatchOperationAdd">
                    <xpath>Defs/ThingDef[defName="Canon_Crown_Byzantine_Stuffable"]/statBases</xpath>
                    <value>
                        <Bulk>2</Bulk>
                        <WornBulk>1</WornBulk>
                    </value>
                </li>

                <li Class="PatchOperationAdd">
                    <xpath>Defs/ThingDef[defName="Canon_Crown_Byzantine_Stuffable"]/statBases</xpath>
                    <value>
                        <StuffEffectMultiplierArmor>2</StuffEffectMultiplierArmor>
                    </value>
                </li>


<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Antinium (Continued)</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				<!-- Antinium chitin -->
				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="Ant_AntiniumChitin"]/statBases/StuffPower_Armor_Sharp</xpath>
					<value>
						<StuffPower_Armor_Sharp>0.09</StuffPower_Armor_Sharp>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="Ant_AntiniumChitin"]/statBases</xpath>
					<value>
						<StuffPower_Armor_Blunt>0.035</StuffPower_Armor_Blunt>
					</value>
				</li>
			</operations>
		</match>
	</Operation>
</Patch>
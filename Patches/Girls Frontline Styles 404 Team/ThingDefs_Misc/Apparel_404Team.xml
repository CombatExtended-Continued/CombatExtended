<?xml version="1.0" encoding="utf-8" ?>
<Patch>
  <Operation Class="PatchOperationSequence">
	<operations>
	  <li Class="PatchOperationFindMod">
			
		<mods><li>[GF]Girls' Frontline Styles - 404 Team</li></mods>
			
		<match Class="PatchOperationSequence">
		<operations>
			
			<!--416 Hat-->
			
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="RFGirlsFrontline_HK416hat"]/statBases/ArmorRating_Sharp</xpath>
				<value>
					<ArmorRating_Sharp>9.5</ArmorRating_Sharp>
				</value>
			</li>
			
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="RFGirlsFrontline_HK416hat"]/equippedStatOffsets/ShootingAccuracyPawn</xpath>
				<value>
					<ShootingAccuracyPawn>0.05</ShootingAccuracyPawn>
					<AimingAccuracy>0.025</AimingAccuracy>
				</value>
			</li>
			
			<!--G11 Hat-->
			
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="RFGirlsFrontline_G11hat"]/statBases/ArmorRating_Sharp</xpath>
				<value>
					<ArmorRating_Sharp>6.5</ArmorRating_Sharp>
				</value>
			</li>
			
			<!--All Uniforms-->
			
			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="RFGirlsFrontline_HK416uni" or
				defName="RFGirlsFrontline_G11uni" or
				defName="RFGirlsFrontline_UMP9uni" or
				defName="RFGirlsFrontline_UMP45uni"
				]/statBases</xpath>
				<value>
					<Bulk>10</Bulk>
					<WornBulk>8</WornBulk>
				</value>
			</li>
			
			<!--416 Uniform-->
			
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="RFGirlsFrontline_HK416uni"]/statBases/ArmorRating_Sharp</xpath>
				<value>
					<ArmorRating_Sharp>8</ArmorRating_Sharp>
				</value>
			</li>
			
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="RFGirlsFrontline_HK416uni"]/statBases/ArmorRating_Blunt</xpath>
				<value>
					<ArmorRating_Blunt>0.696</ArmorRating_Blunt>
				</value>
			</li>
			
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="RFGirlsFrontline_HK416uni"]/equippedStatOffsets/ShootingAccuracyPawn</xpath>
				<value>
					<ShootingAccuracyPawn>0.15</ShootingAccuracyPawn>
					<AimingAccuracy>0.075</AimingAccuracy>
				</value>
			</li>
			
			<!--G11 Uniform-->
			
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="RFGirlsFrontline_G11uni"]/statBases/ArmorRating_Sharp</xpath>
				<value>
					<ArmorRating_Sharp>5.25</ArmorRating_Sharp>
				</value>
			</li>
			
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="RFGirlsFrontline_G11uni"]/statBases/ArmorRating_Blunt</xpath>
				<value>
					<ArmorRating_Blunt>0.168</ArmorRating_Blunt>
				</value>
			</li>
			
			<!--UMP9 Uniform-->
			
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="RFGirlsFrontline_UMP9uni"]/statBases/ArmorRating_Sharp</xpath>
				<value>
					<ArmorRating_Sharp>6.56</ArmorRating_Sharp>
				</value>
			</li>
			
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="RFGirlsFrontline_UMP9uni"]/statBases/ArmorRating_Blunt</xpath>
				<value>
					<ArmorRating_Blunt>0.36</ArmorRating_Blunt>
				</value>
			</li>
			
			<!--UMP45 Uniform-->
			
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="RFGirlsFrontline_UMP45uni"]/statBases/ArmorRating_Sharp</xpath>
				<value>
					<ArmorRating_Sharp>9.06</ArmorRating_Sharp>
				</value>
			</li>
			
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="RFGirlsFrontline_UMP45uni"]/statBases/ArmorRating_Blunt</xpath>
				<value>
					<ArmorRating_Blunt>0.48</ArmorRating_Blunt>
				</value>
			</li>
			
		</operations>
		</match>	
	  </li>
	</operations>	
  </Operation>
</Patch>
<?xml version="1.0" encoding="UTF-8"?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Royal Arsenal: Specialty Weapons</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				
			<!-- Ranged Weapon Melee Attacks -->
		
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="RA_RoyalRotaryChargeLance" or defName="RA_ZeusRifle"]/tools</xpath>
				<value>
					<tools>
						<li Class="CombatExtended.ToolCE">
							<label>stock</label>
							<capacities>
							<li>Blunt</li>
							</capacities>
							<power>8</power>
							<cooldownTime>1.55</cooldownTime>
							<chanceFactor>1.5</chanceFactor>
							<armorPenetrationBlunt>2.755</armorPenetrationBlunt>
							<linkedBodyPartsGroup>Stock</linkedBodyPartsGroup>
						</li>
						<li Class="CombatExtended.ToolCE">
							<label>barrel</label>
							<capacities>
							<li>Blunt</li>
							</capacities>
							<power>5</power>
							<cooldownTime>2.02</cooldownTime>
							<armorPenetrationBlunt>1.630</armorPenetrationBlunt>
							<linkedBodyPartsGroup>Barrel</linkedBodyPartsGroup>
						</li>
						<li Class="CombatExtended.ToolCE">
							<label>muzzle</label>
							<capacities>
							<li>Poke</li>
							</capacities>
							<power>8</power>
							<cooldownTime>1.55</cooldownTime>
							<armorPenetrationBlunt>2.755</armorPenetrationBlunt>
							<linkedBodyPartsGroup>Muzzle</linkedBodyPartsGroup>
						</li>
					</tools>
				</value>
			</li>

			<!-- Rotary Charge Lance -->
			
			<li Class="CombatExtended.PatchOperationMakeGunCECompatible">
				<defName>RA_RoyalRotaryChargeLance</defName>
				<statBases>
					<Mass>18</Mass>
					<RangedWeapon_Cooldown>2</RangedWeapon_Cooldown>
					<SightsEfficiency>1</SightsEfficiency>
					<ShotSpread>0.04</ShotSpread>
					<SwayFactor>1.5</SwayFactor>
					<Bulk>15.0</Bulk>
				</statBases>
				<costList>
					<Plasteel>140</Plasteel>
					<Gold>4</Gold>
					<ComponentSpacer>8</ComponentSpacer>
				</costList>
				<Properties>
					<recoilAmount>0.8</recoilAmount>
					<verbClass>CombatExtended.Verb_ShootCE</verbClass>
					<hasStandardCommand>true</hasStandardCommand>
					<defaultProjectile>Bullet_5x35mmRoyal</defaultProjectile>
					<warmupTime>4.8</warmupTime>
					<range>65</range>
					<burstShotCount>6</burstShotCount>
					<ticksBetweenBurstShots>7</ticksBetweenBurstShots>
					<soundCast>ChargeLance_Fire</soundCast>
					<soundCastTail>GunTail_Heavy</soundCastTail>
					<muzzleFlashScale>9</muzzleFlashScale>
				</Properties>
				<AmmoUser>
					<magazineSize>120</magazineSize>
					<reloadTime>9</reloadTime>
					<ammoSet>AmmoSet_5x35mmRoyal</ammoSet>
				</AmmoUser>
				<FireModes>
					<aimedBurstShotCount>6</aimedBurstShotCount>
					<aiUseBurstMode>TRUE</aiUseBurstMode>
					<aiAimMode>AimedShot</aiAimMode>
				</FireModes>
				<weaponTags />
				<researchPrerequisite>RA_ExperimentalRoyal</researchPrerequisite>
			</li>
			
			<li Class="PatchOperationAddModExtension">
				<xpath>Defs/ThingDef[defName="RA_RoyalRotaryChargeLance"]</xpath>
				<value>
					<li Class="CombatExtended.GunDrawExtension">
					<DrawSize>1,1</DrawSize>
					<DrawOffset>0.15,-0.05</DrawOffset>
					</li>
				</value>
			</li>
			
			<!-- Zeusrifle -->
			
			<li Class="CombatExtended.PatchOperationMakeGunCECompatible">
				<defName>RA_ZeusRifle</defName>
				<statBases>
					<Mass>7</Mass>
					<RangedWeapon_Cooldown>0.3</RangedWeapon_Cooldown>
					<SightsEfficiency>1.4</SightsEfficiency>
					<ShotSpread>0.02</ShotSpread>
					<SwayFactor>1</SwayFactor>
					<Bulk>10.0</Bulk>
				</statBases>
				<costList>
					<Plasteel>120</Plasteel>
					<Uranium>50</Uranium>
					<ComponentSpacer>8</ComponentSpacer>
				</costList>
				<Properties>
					<verbClass>CombatExtended.Verb_ShootCE</verbClass>
					<hasStandardCommand>true</hasStandardCommand>
					<defaultProjectile>Bullet_6x28mmSpark</defaultProjectile>
					<warmupTime>1.5</warmupTime>
					<range>75</range>
					<burstShotCount>3</burstShotCount>
					<ticksBetweenBurstShots>20</ticksBetweenBurstShots>
					<soundCast>Shot_ChargeRifle</soundCast>
					<soundCastTail>GunTail_Medium</soundCastTail>
					<muzzleFlashScale>9</muzzleFlashScale>
					<recoilAmount>1.0</recoilAmount>
				</Properties>
				<AmmoUser>
					<magazineSize>30</magazineSize>
					<reloadTime>4</reloadTime>
					<ammoSet>AmmoSet_6x28mmSpark</ammoSet>
				</AmmoUser>
				<FireModes>
					<aimedBurstShotCount>3</aimedBurstShotCount>
					<aiUseBurstMode>TRUE</aiUseBurstMode>
					<aiAimMode>AimedShot</aiAimMode>
				</FireModes>
				<weaponTags />
				<researchPrerequisite>RA_ExperimentalRoyal</researchPrerequisite>
			</li>
			
			<li Class="PatchOperationAddModExtension">
				<xpath>Defs/ThingDef[defName="RA_ZeusRifle"]</xpath>
				<value>
					<li Class="CombatExtended.GunDrawExtension">
					<DrawSize>1,1</DrawSize>
					<DrawOffset>0.15,-0.05</DrawOffset>
					</li>
				</value>
			</li>
			
			<!-- Sparksword, Persona Sparksword -->
			
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[
				defName="RA_SparkSword" or 
				defName="RA_SparkSwordBladelink"
				]/tools</xpath>
				<value>
					<tools>
						<li Class="CombatExtended.ToolCE">
						<label>handle</label>
						<capacities>
							<li>Poke</li>
						</capacities>
						<power>2</power>
						<cooldownTime>1.0</cooldownTime>
						<chanceFactor>0.2</chanceFactor>
						<armorPenetrationBlunt>0.5</armorPenetrationBlunt>
						<linkedBodyPartsGroup>Handle</linkedBodyPartsGroup>
						</li>
						<li Class="CombatExtended.ToolCE">
						<label>point</label>
						<capacities>
							<li>Stab</li>
						</capacities>
						<power>18</power>
						<extraMeleeDamages>
							<li>
								<def>EMP</def>
								<amount>9</amount>
							</li>
						</extraMeleeDamages>
						<cooldownTime>0.7</cooldownTime>
						<chanceFactor>1.0</chanceFactor>
						<armorPenetrationBlunt>1.28</armorPenetrationBlunt>
						<armorPenetrationSharp>25</armorPenetrationSharp>
						<linkedBodyPartsGroup>Point</linkedBodyPartsGroup>
						</li>
						<li Class="CombatExtended.ToolCE">
						<label>edge</label>
						<capacities>
							<li>Cut</li>
						</capacities>
						<power>35</power>
						<extraMeleeDamages>
							<li>
								<def>EMP</def>
								<amount>9</amount>
							</li>
						</extraMeleeDamages>
						<cooldownTime>0.9</cooldownTime>
						<chanceFactor>1</chanceFactor>
						<armorPenetrationBlunt>2.88</armorPenetrationBlunt>
						<armorPenetrationSharp>18</armorPenetrationSharp>
						<linkedBodyPartsGroup>Edge</linkedBodyPartsGroup>
						</li>
					</tools>
				</value>
			</li>
			
			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="RA_SparkSword"]/statBases</xpath>
				<value>
					<MeleeCounterParryBonus>0.10</MeleeCounterParryBonus>
				</value>
			</li>
			
			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="RA_SparkSword"]</xpath>
				<value>
					<equippedStatOffsets>
						<MeleeCritChance>1</MeleeCritChance>
						<MeleeParryChance>0.60</MeleeParryChance>
						<MeleeDodgeChance>0.25</MeleeDodgeChance>
					</equippedStatOffsets>
				</value>
			</li>
			
			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="RA_SparkSwordBladelink"]/statBases</xpath>
				<value>
					<MeleeCounterParryBonus>0.25</MeleeCounterParryBonus>
				</value>
			</li>
			
			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="RA_SparkSwordBladelink"]</xpath>
				<value>
					<equippedStatOffsets>
						<MeleeCritChance>1.20</MeleeCritChance>
						<MeleeParryChance>0.75</MeleeParryChance>
						<MeleeDodgeChance>0.35</MeleeDodgeChance>
					</equippedStatOffsets>
				</value>
			</li>
			
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[
				defName="RA_SparkSword" or 
				defName="RA_SparkSwordBladelink"
				]/statBases/Mass</xpath>
				<value>
					<Mass>5</Mass>
					<Bulk>7</Bulk>
				</value>
			</li>
			
			</operations>
		</match>
	</Operation>
	
</Patch>

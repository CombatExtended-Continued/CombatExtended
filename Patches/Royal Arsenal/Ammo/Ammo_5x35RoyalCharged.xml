<?xml version="1.0" encoding="utf-8"?>
<Patch>
<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Royal Arsenal</li>
      <li>Royal Arsenal: Specialty Weapons</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
			
				<li Class="PatchOperationAdd">
					<xpath>Defs</xpath>
					<value>

  <ThingCategoryDef>
    <defName>Ammo5x35mmRoyalCharged</defName>
    <label>5x35mm Royal charged</label>
    <parent>AmmoAdvanced</parent>
    <iconPath>UI/Icons/ThingCategories/CaliberCharge</iconPath>
  </ThingCategoryDef>

  <!-- ==================== AmmoSet ========================== -->

  <CombatExtended.AmmoSetDef>
    <defName>AmmoSet_5x35mmRoyal</defName>
    <label>5x35mm Royal charged</label>
    <ammoTypes>
      <Ammo_5x35mmRoyal>Bullet_5x35mmRoyal</Ammo_5x35mmRoyal>
    </ammoTypes>
  </CombatExtended.AmmoSetDef>

  <!-- ==================== Ammo ========================== -->

  <ThingDef Class="CombatExtended.AmmoDef" Name="5x35mmChargedBase" ParentName="SpacerSmallAmmoBase" Abstract="True">
    <description>Specialty royal charged ammo designed by the Empire during its prime. Can be used by royal charge lances.</description>
    <statBases>
      <Mass>0.013</Mass>
      <Bulk>0.01</Bulk>
    </statBases>
    <thingCategories>
      <li>Ammo5x35mmRoyalCharged</li>
    </thingCategories>
    <tradeTags>
      <li>CE_AutoEnableTrade_Sellable</li>
	    <li>CE_AutoEnableCrafting_FabricationBench</li>
    </tradeTags>
    <stackLimit>5000</stackLimit>	
  </ThingDef>

  <ThingDef Class="CombatExtended.AmmoDef" ParentName="5x35mmChargedBase">
    <defName>Ammo_5x35mmRoyal</defName>
    <label>5x35mm Royal charged cartridge</label>
    <graphicData>
      <texPath>Things/Ammo/Charged/MediumConc</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>1.5</MarketValue>
    </statBases>
    <ammoClass>Charged</ammoClass>
  </ThingDef>

  <!-- ================== Projectiles ================== -->

  <ThingDef Class="CombatExtended.AmmoDef" ParentName="BaseBulletCE">
    <defName>Bullet_5x35mmRoyal</defName>
    <label>5x35mm Royal charged bullet</label>
    <graphicData>
      <texPath>Things/Projectiles/RoyalLanceShot</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>TransparentPostLight</shaderType>
      <drawSize>(3,3)</drawSize>
    </graphicData>
    <projectile Class="CombatExtended.ProjectilePropertiesCE">
      <damageDef>Bullet</damageDef>
      <damageAmountBase>16</damageAmountBase>
      <speed>200</speed>
      <secondaryDamage>
        <li>
          <def>Bomb_Secondary</def>
          <amount>5</amount>
        </li>
      </secondaryDamage>
      <armorPenetrationSharp>40</armorPenetrationSharp>
      <armorPenetrationBlunt>50</armorPenetrationBlunt>
    </projectile>
  </ThingDef>

  <!-- ==================== Recipes ========================== -->

  <RecipeDef ParentName="AmmoRecipeBase">
    <defName>MakeAmmo_5x35mmRoyal</defName>
    <label>make 5x35mm Royal charged cartridge x500</label>
    <description>Craft 500 5x35mm Royal charged cartridges.</description>
	<researchPrerequisite>RA_RoyalChargedShot</researchPrerequisite>
    <jobString>Making 5x35mm Royal charged cartridges.</jobString>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Plasteel</li>
          </thingDefs>
        </filter>
        <count>10</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Steel</li>
          </thingDefs>
        </filter>
        <count>8</count>
      </li>	  
	  <li>
        <filter>
          <thingDefs>
            <li>Gold</li>
          </thingDefs>
        </filter>
        <count>2</count>
      </li>	  
      <li>
        <filter>
          <thingDefs>
            <li>ComponentIndustrial</li>
          </thingDefs>
        </filter>
        <count>10</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Plasteel</li>
        <li>Steel</li>	
		<li>Gold</li>			
        <li>ComponentIndustrial</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <Ammo_5x35mmRoyal>500</Ammo_5x35mmRoyal>
    </products>
    <workAmount>8600</workAmount>		
  </RecipeDef>
  
  </value>
</li>

</operations>
</match>
</Operation>
  
</Patch>

<?xml version="1.0" encoding="utf-8"?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Vanilla Persona Weapons Expanded</li>
		</mods>

		<match Class="PatchOperationSequence">
			<operations>

				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="VPWE_MeleeWeapon_PsyfocusStaffBladelink"]/tools</xpath>
					<value>
						<tools>
							<li Class="CombatExtended.ToolCE">
								<label>head</label>
								<capacities>
									<li>Blunt</li>
								</capacities>
								<power>6</power>
								<cooldownTime>1.8</cooldownTime>
								<armorPenetrationBlunt>1.75</armorPenetrationBlunt>
								<linkedBodyPartsGroup>Head</linkedBodyPartsGroup>
							</li>
						</tools>
					</value>
				</li>

				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="VPWE_MeleeWeapon_PsyfocusStaffBladelink"]/statBases</xpath>
					<value>
						<Bulk>6</Bulk>
						<MeleeCounterParryBonus>1.56</MeleeCounterParryBonus>
					</value>
				</li>

				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="VPWE_MeleeWeapon_PsyfocusStaffBladelink"]/equippedStatOffsets</xpath>
					<value>
						<MeleeCritChance>0.6</MeleeCritChance>
						<MeleeParryChance>1.17</MeleeParryChance>
						<MeleeDodgeChance>0.47</MeleeDodgeChance>
					</value>
				</li>

			</operations>
		</match>
	</Operation>

</Patch>
<?xml version="1.0" encoding="utf-8" ?>
<Patch>	
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Rim-Skeletons</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>

				<!-- SHEK Outlander-->

				<li Class="PatchOperationAddModExtension">
					<xpath>Defs/PawnKindDef[defName="Skeleton_Drifter" or defName="Town_Guard_Skele"]</xpath>
					<value>
						<li Class="CombatExtended.LoadoutPropertiesExtension">
							<primaryMagazineCount>
								<min>1</min>
								<max>3</max>
							</primaryMagazineCount>
							<sidearms>
								<li>
									<generateChance>0.35</generateChance>								
									<sidearmMoney>
										<min>40</min>
										<max>160</max>
									</sidearmMoney>
									<weaponTags>
										<li>CE_Sidearm_Melee</li>
									</weaponTags>
								</li>
							</sidearms>
						</li>
					</value>
				</li>

				<li Class="PatchOperationAddModExtension">
					<xpath>Defs/PawnKindDef[defName="Pirate_Skele"]</xpath>
					<value>
						<li Class="CombatExtended.LoadoutPropertiesExtension">
							<primaryMagazineCount>
								<min>2</min>
								<max>4</max>
							</primaryMagazineCount>
							<sidearms>
								<li>
									<generateChance>0.35</generateChance>								
									<sidearmMoney>
										<min>40</min>
										<max>160</max>
									</sidearmMoney>
									<weaponTags>
										<li>CE_Sidearm_Melee</li>
									</weaponTags>
								</li>
							</sidearms>
						</li>
					</value>
				</li>

  				<li Class="PatchOperationAddModExtension">
    					<xpath>Defs/PawnKindDef[defName="Tribal_Skeleton"]</xpath>
    					<value>
      					<li Class="CombatExtended.LoadoutPropertiesExtension">
							<primaryMagazineCount>
								<min>20</min>
								<max>30</max>
							</primaryMagazineCount>
							<sidearms>
								<li>
									<generateChance>0.35</generateChance>								
									<sidearmMoney>
										<min>40</min>
										<max>160</max>
									</sidearmMoney>
									<weaponTags>
										<li>CE_Sidearm_Melee</li>
									</weaponTags>
								</li>
							</sidearms>
        					<shieldMoney>
          						<min>120</min>
          						<max>160</max>
        					</shieldMoney>
        					<shieldTags>
          						<li>TribalShield</li>
        					</shieldTags>
        						<shieldChance>0.9</shieldChance>
      						</li>
    					</value>
				</li>

  				<li Class="PatchOperationReplace">
    					<xpath>Defs/PawnKindDef[defName="Tribal_Skeleton"]/combatPower</xpath>
    					<value>
      						<combatPower>60</combatPower>
    					</value>
				</li>


      <li Class="PatchOperationAdd">
        <xpath>Defs/PawnKindDef[defName="Tribal_Skeleton"]</xpath>
        <value>
    		<apparelRequired>
      			<li>CE_Apparel_TribalBackpack</li>
    		</apparelRequired>		
        </value>
      </li>


			</operations>
		</match>
	</Operation>
</Patch>
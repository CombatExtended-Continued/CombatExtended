<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Right Tool Rebalanced</li>
		</mods>
		<match Class="PatchOperationSequence">
		<operations>
			<!-- ========== Stone Pick ========== -->
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="RTFTJ_Neo_Pick"]/tools</xpath>
				<value>
					<tools>
						<li Class="CombatExtended.ToolCE">
							<label>handle</label>
								<capacities>
									<li>Blunt</li>
								</capacities>
							<power>4</power>
							<cooldownTime>0.83</cooldownTime>
							<armorPenetration>0.071</armorPenetration>
							<linkedBodyPartsGroup>Handle</linkedBodyPartsGroup>
						</li>
						<li Class="CombatExtended.ToolCE">
							<label>point</label>
								<capacities>
									<li>Stab</li>
								</capacities>
							<power>9</power>
							<cooldownTime>2.1</cooldownTime>
							<chanceFactor>1.5</chanceFactor>
							<armorPenetration>0.21</armorPenetration>
							<linkedBodyPartsGroup>Point</linkedBodyPartsGroup>
						</li>
					</tools>
				</value>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="RTFTJ_Neo_Pick"]/statBases</xpath>
				<value>
					<Bulk>3</Bulk>
				</value>
			</li>
			<li Class="PatchOperationSequence">
				<success>Always</success>
				<operations>
					<li Class="PatchOperationTest">
						<xpath>Defs/ThingDef[defName="RTFTJ_Neo_Pick"]/weaponTags</xpath>
						<success>Invert</success>
					</li>
					<li Class="PatchOperationAdd">
						<xpath>Defs/ThingDef[defName="RTFTJ_Neo_Pick"]</xpath>
						<value>
							<weaponTags />
						</value>
					</li>
				</operations>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="RTFTJ_Neo_Pick"]/weaponTags</xpath>
				<value>
					<li>CE_Sidearm_Melee</li>
					<li>CE_OneHandedWeapon</li>
				</value>
			</li>
			<!-- ========== Stone Shovel ========== -->
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="RTFTJ_Neo_Shovel"]/tools</xpath>
				<value>
					<tools>
						<li Class="CombatExtended.ToolCE">
							<label>handle</label>
								<capacities>
									<li>Blunt</li>
								</capacities>
							<power>4</power>
							<cooldownTime>0.83</cooldownTime>
							<armorPenetration>0.071</armorPenetration>
							<linkedBodyPartsGroup>Handle</linkedBodyPartsGroup>
						</li>
						<li Class="CombatExtended.ToolCE">
							<label>head</label>
								<capacities>
									<li>Blunt</li>
								</capacities>
							<power>6</power>
							<cooldownTime>2.1</cooldownTime>
							<chanceFactor>1.5</chanceFactor>
							<armorPenetration>0.21</armorPenetration>
							<linkedBodyPartsGroup>Head</linkedBodyPartsGroup>
						</li>
					</tools>
				</value>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="RTFTJ_Neo_Shovel"]/statBases</xpath>
				<value>
					<Bulk>3</Bulk>
				</value>
			</li>
			<li Class="PatchOperationSequence">
				<success>Always</success>
				<operations>
					<li Class="PatchOperationTest">
						<xpath>Defs/ThingDef[defName="RTFTJ_Neo_Shovel"]/weaponTags</xpath>
						<success>Invert</success>
					</li>
					<li Class="PatchOperationAdd">
						<xpath>Defs/ThingDef[defName="RTFTJ_Neo_Shovel"]</xpath>
						<value>
							<weaponTags />
						</value>
					</li>
				</operations>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="RTFTJ_Neo_Shovel"]/weaponTags</xpath>
				<value>
					<li>CE_Sidearm_Melee</li>
					<li>CE_OneHandedWeapon</li>
				</value>
			</li>
		</operations>
		</match>
	</Operation>
</Patch>
<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
		<li>[Ry]Rimcraft Animals</li>
		</mods>

		<match Class="PatchOperationSequence">
			<operations>

			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="WoW_Animal_Ram"]/statBases</xpath>
				<value>
					<MeleeDodgeChance>0.15</MeleeDodgeChance>
					<MeleeCritChance>0.38</MeleeCritChance>
					<MeleeParryChance>0.25</MeleeParryChance>
				</value>
			</li>

			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="WoW_Animal_Ram"]/tools</xpath>
				<value>
					<tools>
						<li Class="CombatExtended.ToolCE">
						<label>horn</label>
						<capacities>
						  	<li>Scratch</li>
							<li>Poke</li>
						</capacities>
						<power>24</power>
						<cooldownTime>1.64</cooldownTime>
						<linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
						<armorPenetrationBlunt>12</armorPenetrationBlunt>
						<armorPenetrationSharp>10</armorPenetrationSharp>
					  </li>
						<li Class="CombatExtended.ToolCE">
						<label>left hoof</label>
						<capacities>
						  <li>Blunt</li>
						  <li>Poke</li>
						</capacities>
						<power>15</power>
						<cooldownTime>1.5</cooldownTime>
						<linkedBodyPartsGroup>FrontLeftLeg</linkedBodyPartsGroup>
						<armorPenetrationBlunt>4</armorPenetrationBlunt>
					  </li>
						<li Class="CombatExtended.ToolCE">
						<label>right hoof</label>
						<capacities>
						  <li>Blunt</li>
						  <li>Poke</li>
						</capacities>
						<power>15</power>
						<cooldownTime>1.5</cooldownTime>
						<linkedBodyPartsGroup>FrontRightLeg</linkedBodyPartsGroup>
						<armorPenetrationBlunt>4</armorPenetrationBlunt>
					  </li>
						<li Class="CombatExtended.ToolCE">
						<capacities>
						  <li>Bite</li>
						</capacities>
						<power>10</power>
						<cooldownTime>2</cooldownTime>
						<linkedBodyPartsGroup>Teeth</linkedBodyPartsGroup>
						<chanceFactor>0.5</chanceFactor>
						<armorPenetrationBlunt>1</armorPenetrationBlunt>
						<armorPenetrationSharp>0.5</armorPenetrationSharp>
					  </li>
						<li Class="CombatExtended.ToolCE">
						<label>head</label>
						<capacities>
						  <li>Blunt</li>
						</capacities>
						<power>21</power>
						<cooldownTime>2</cooldownTime>
						<linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
						<ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
						<armorPenetrationBlunt>10</armorPenetrationBlunt>
					  </li>
					</tools>
				</value>
			</li>
			</operations>
		</match>
	</Operation>
</Patch>

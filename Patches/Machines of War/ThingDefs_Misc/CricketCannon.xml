<?xml version="1.0" encoding="utf-8"?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Machines of War</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>

				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="MOW_Gun_ShockaveCannon"]/tools</xpath>
					<value>
						<tools>
							<li Class="CombatExtended.ToolCE">
								<label>barrel</label>
								<capacities>
									<li>Blunt</li>
								</capacities>
								<power>10</power>
								<cooldownTime>3.0</cooldownTime>
								<armorPenetrationBlunt>3.5</armorPenetrationBlunt>
								<linkedBodyPartsGroup>Barrel</linkedBodyPartsGroup>
							</li>
						</tools>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="MOW_Gun_ShockaveCannon"]/statBases/RangedWeapon_Cooldown</xpath>
					<value>
						<RangedWeapon_Cooldown>1.5</RangedWeapon_Cooldown>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="MOW_Gun_ShockaveCannon"]/verbs/li/warmupTime</xpath>
					<value>
						<warmupTime>0.8</warmupTime>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="MOW_Gun_ShockaveCannon"]/verbs/li/range</xpath>
					<value>
						<range>35</range>
					</value>
				</li>

			</operations>
		</match>
	</Operation>

</Patch>
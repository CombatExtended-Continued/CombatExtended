<?xml version="1.0" encoding="utf-8"?>
<Patch>
	<Operation Class="PatchOperationSequence">
		<operations>
			<li Class="PatchOperationFindMod">

				<mods>
					<li>Marilyn the Mincho Worshipper Witch</li>
				</mods>

				<match Class="PatchOperationSequence">
					<operations>

						<li Class="PatchOperationReplace">
							<xpath>Defs/ThingDef[
								defName="MinchoWitch_Hat" or
								defName="MinchoWitch_Lingerie" or
								defName="MinchoWitch_Robe"
								]/statBases/ArmorRating_Sharp </xpath>
							<value>
								<ArmorRating_Sharp>0.05</ArmorRating_Sharp>
								<WornBulk>0.5</WornBulk>
							</value>
						</li>

						<li Class="PatchOperationReplace">
							<xpath>Defs/ThingDef[
								defName="MinchoWitch_Hat" or
								defName="MinchoWitch_Lingerie" or
								defName="MinchoWitch_Robe"
								]/statBases/ArmorRating_Blunt </xpath>
							<value>
								<ArmorRating_Blunt>0.08</ArmorRating_Blunt>
							</value>
						</li>

					</operations>
				</match>
			</li>
		</operations>
	</Operation>
</Patch>
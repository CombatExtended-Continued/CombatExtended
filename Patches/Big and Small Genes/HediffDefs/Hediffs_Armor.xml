<?xml version="1.0" encoding="utf-8"?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Big and Small Genes</li>
		</mods>

		<match Class="PatchOperationSequence">
			<operations>

				<li Class="PatchOperationReplace">
					<xpath>Defs/HediffDef[defName="BS_ToughSkin"]/stages/li/statOffsets</xpath>
					<value>
						<statOffsets>
							<ArmorRating_Blunt>1</ArmorRating_Blunt>
							<ArmorRating_Sharp>0.5</ArmorRating_Sharp>
						</statOffsets>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/HediffDef[defName="BS_NaturalArmor_Padded"]/stages/li/statOffsets</xpath>
					<value>
						<statOffsets>
							<ArmorRating_Blunt>1.5</ArmorRating_Blunt>
							<ArmorRating_Sharp>1</ArmorRating_Sharp>
						</statOffsets>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/HediffDef[defName="BS_NaturalArmor_Riot"]/stages/li/statOffsets</xpath>
					<value>
						<statOffsets>
							<ArmorRating_Blunt>2</ArmorRating_Blunt>
							<ArmorRating_Sharp>1.5</ArmorRating_Sharp>
						</statOffsets>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/HediffDef[defName="BS_PsychicArmor_Stage1"]/stages/li/statOffsets</xpath>
					<value>
						<statOffsets>
							<ArmorRating_Blunt>1</ArmorRating_Blunt>
							<ArmorRating_Sharp>0.5</ArmorRating_Sharp>
						</statOffsets>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/HediffDef[defName="BS_PsychicArmor_Stage2"]/stages/li/statOffsets</xpath>
					<value>
						<statOffsets>
							<ArmorRating_Blunt>2</ArmorRating_Blunt>
							<ArmorRating_Sharp>1.5</ArmorRating_Sharp>
						</statOffsets>
					</value>
				</li>

			</operations>
		</match>
	</Operation>

</Patch>
					<li Class="CompProperties_Explosive">
						<explosiveRadius>4</explosiveRadius>
						<explosiveDamageType>BombSuper</explosiveDamageType>
						<explosiveExpandPerStackcount>0.4</explosiveExpandPerStackcount>
						<startWickHitPointsPercent>0.7</startWickHitPointsPercent>
						<chanceToStartFire>0</chanceToStartFire>
						<damageFalloff>true</damageFalloff>
						<explosionEffect>GiantExplosion</explosionEffect>
						<explosionSound>Explosion_GiantBomb</explosionSound>
						<wickTicks>
						<min>60</min>
						<max>120</max>
						</wickTicks>
					</li>
				</comps>
			</ThingDef>

			<RecipeDef ParentName="AmmoRecipeBase">
				<defName>MakeAmmo_FusionBomb</defName>
				<label>make a fusion shell</label>
				<description>Craft a fusion shell.</description>
				<jobString>Making a fusion shell.</jobString>
				<ingredients>
				<li>
					<filter>
					<thingDefs>
						<li>Steel</li>
					</thingDefs>
					</filter>
					<count>200</count>
				</li>
				<li>
					<filter>
					<thingDefs>
						<li>Uranium</li>
					</thingDefs>
					</filter>
					<count>400</count>
				</li>
				<li>
					<filter>
					<thingDefs>
						<li>Plasteel</li>
					</thingDefs>
					</filter>
					<count>40</count>
				</li>
				<li>
					<filter>
					<thingDefs>
						<li>ComponentIndustrial</li>
					</thingDefs>
					</filter>
					<count>10</count>
				</li>
				<li>
					<filter>
					<thingDefs>
						<li>ComponentSpacer</li>
					</thingDefs>
					</filter>
					<count>2</count>
				</li>
				<li>
					<filter>
					<thingDefs>
						<li>Shell_AntigrainWarhead</li>
					</thingDefs>
					</filter>
					<count>1</count>
				</li>																	
				</ingredients>
				<fixedIngredientFilter>
				<thingDefs>
					<li>Steel</li>
					<li>Uranium</li>
					<li>Plasteel</li>
					<li>ComponentIndustrial</li>
					<li>ComponentSpacer</li>
					<li>Shell_AntigrainWarhead</li>
				</thingDefs>
				</fixedIngredientFilter>
				<products>
					<Ammo_FusionBomb>1</Ammo_FusionBomb>
				</products>
				<workAmount>7500</workAmount>
				<researchPrerequisite>FusionWeaponsResearch</researchPrerequisite>
				<skillRequirements>
					<Crafting>15</Crafting>
				</skillRequirements>				
			</RecipeDef>

			<RecipeDef ParentName="AmmoRecipeBase">
				<defName>MakeAmmo_LargeNuclearBomb</defName>
				<label>make a large nuclear shell</label>
				<description>Craft a large nuclear shell.</description>
				<jobString>Making a large nuclear shell.</jobString>
				<ingredients>
				<li>
					<filter>
					<thingDefs>
						<li>Steel</li>
					</thingDefs>
					</filter>
					<count>150</count>
				</li>
				<li>
					<filter>
					<thingDefs>
						<li>Uranium</li>
					</thingDefs>
					</filter>
					<count>200</count>
				</li>
				<li>
					<filter>
					<thingDefs>
						<li>Plasteel</li>
					</thingDefs>
					</filter>
					<count>40</count>
				</li>
				<li>
					<filter>
					<thingDefs>
						<li>ComponentIndustrial</li>
					</thingDefs>
					</filter>
					<count>10</count>
				</li>																
				</ingredients>
				<fixedIngredientFilter>
				<thingDefs>
					<li>Steel</li>
					<li>Uranium</li>
					<li>Plasteel</li>
					<li>ComponentIndustrial</li>
				</thingDefs>
				</fixedIngredientFilter>
				<products>
					<Ammo_LargeNuclearBomb>1</Ammo_LargeNuclearBomb>
				</products>
				<workAmount>7000</workAmount>
				<researchPrerequisite>LargeNuclearWeaponsResearch</researchPrerequisite>
				<skillRequirements>
					<Crafting>12</Crafting>
				</skillRequirements>					
			</RecipeDef>

			<RecipeDef ParentName="AmmoRecipeBase">
				<defName>MakeAmmo_SmallNuclearBomb</defName>
				<label>make a small nuclear shell</label>
				<description>Craft a small nuclear shell.</description>
				<jobString>Making a small nuclear shell.</jobString>
				<ingredients>
				<li>
					<filter>
					<thingDefs>
						<li>Steel</li>
					</thingDefs>
					</filter>
					<count>60</count>
				</li>
				<li>
					<filter>
					<thingDefs>
						<li>Uranium</li>
					</thingDefs>

<?xml version="1.0" encoding="utf-8"?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Biomes! Caverns</li>
		</mods>

		<match Class="PatchOperationSequence">
			<operations>

				<li Class="PatchOperationAddModExtension">
					<xpath>Defs/ThingDef[defName="BMT_GlowSlug"]</xpath>
					<value>
						<li Class="CombatExtended.RacePropertiesExtensionCE">
							<bodyShape>Serpentine</bodyShape>
						</li>
					</value>
				</li>

				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="BMT_GlowSlug"]/statBases</xpath>
					<value>
						<MeleeDodgeChance>0.00</MeleeDodgeChance>
						<MeleeCritChance>0.5</MeleeCritChance>
						<MeleeParryChance>0.16</MeleeParryChance>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="BMT_GlowSlug"]/tools</xpath>
					<value>
						<tools>
							<li Class="CombatExtended.ToolCE">
								<label>head</label>
								<capacities>
									<li>Blunt</li>
								</capacities>
								<power>12</power>
								<cooldownTime>3.5</cooldownTime>
								<linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
								<surpriseAttack>
									<extraMeleeDamages>
										<li>
											<def>Stun</def>
											<amount>12</amount>
										</li>
									</extraMeleeDamages>
								</surpriseAttack>
								<armorPenetrationBlunt>5</armorPenetrationBlunt>
							</li>
						</tools>
					</value>
				</li>
			</operations>
		</match>
	</Operation>
</Patch>
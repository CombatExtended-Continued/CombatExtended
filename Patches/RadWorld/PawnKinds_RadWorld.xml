      <li Class="PatchOperationAddModExtension">
        <xpath>Defs/PawnKindDef[@Name = "MercenaryEliteTierBase" or defName="RW_Vault_Mercenary_Elite" or defName="RW_Vault_Mercenary_Elite_Acidifier"]</xpath>

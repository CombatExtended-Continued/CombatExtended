<?xml version="1.0" encoding="utf-8" ?>
<Patch>

  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>RadWorld</li>
    </mods>
    <match Class="PatchOperationSequence">
      <operations>

      <!-- ========== Give ammo to Mutant ranged PawnKinds. ========== -->
      <li Class="PatchOperationAddModExtension">
        <xpath>/Defs/PawnKindDef[
              defName="Mutant_Archer" or
              defName="Mutant_Hunter" or
              defName="Mutant_HeavyArcher" or
              defName="Mutant_ChiefRanged"]
        </xpath>
        <value>
          <li Class="CombatExtended.LoadoutPropertiesExtension">
            <primaryMagazineCount>
              <min>14</min>
              <max>26</max>
            </primaryMagazineCount>
            <forcedSidearm>
              <sidearmMoney>
                <min>150</min>
                <max>350</max>
              </sidearmMoney>
              <weaponTags>
                <li>NeolithicMeleeBasic</li>
              </weaponTags>
            </forcedSidearm>
          </li>
        </value>
      </li>

      <!-- ========== Vaulter ========== -->

      <li Class="PatchOperationAddModExtension">
        <xpath>Defs/PawnKindDef[defName="RW_Vault_Villager" or defName="RW_Vault_Town_Trader" or defName="RW_Vault_Town_Councilman"]</xpath>
        <value>
          <li Class="CombatExtended.LoadoutPropertiesExtension">
            <primaryMagazineCount>
              <min>1</min>
              <max>2</max>
            </primaryMagazineCount>
            <sidearms>
              <li>
                <generateChance>0.5</generateChance>
                <sidearmMoney>
                  <min>20</min>
                  <max>120</max>
                </sidearmMoney>
                <weaponTags>
                  <li>CE_Sidearm_Melee</li>
                </weaponTags>
              </li>
            </sidearms>
          </li>
        </value>
      </li>

      <li Class="PatchOperationAddModExtension">
        <xpath>Defs/PawnKindDef[defName="RW_Vault_Town_Guard"]</xpath>
        <value>
          <li Class="CombatExtended.LoadoutPropertiesExtension">
            <primaryMagazineCount>
              <min>3</min>
              <max>5</max>
            </primaryMagazineCount>
            <sidearms>
              <li>
                <generateChance>0.5</generateChance>
                <sidearmMoney>
                  <min>20</min>
                  <max>120</max>
                </sidearmMoney>
                <weaponTags>
                  <li>CE_Sidearm_Melee</li>
                </weaponTags>
              </li>
            </sidearms>
          </li>
        </value>
      </li>

      <!-- ========== Vaulter Mercenary ========== -->

      <li Class="PatchOperationAddModExtension">
        <xpath>Defs/PawnKindDef[defName="RW_Vault_Grenadier_Destructive"]</xpath>
        <value>
          <li Class="CombatExtended.LoadoutPropertiesExtension">
            <primaryMagazineCount>
              <min>10</min>
              <max>30</max>
            </primaryMagazineCount>
            <shieldMoney>
              <min>200</min>
              <max>600</max>
            </shieldMoney>
            <shieldTags>
              <li>OutlanderShield</li>
            </shieldTags>
            <shieldChance>0.5</shieldChance>
            <forcedSidearm>
              <sidearmMoney>
                <min>150</min>
                <max>350</max>
              </sidearmMoney>
              <weaponTags>
                <li>CE_Sidearm_Melee</li>
              </weaponTags>
            </forcedSidearm>
          </li>
        </value>
      </li>

      <li Class="PatchOperationAddModExtension">
        <xpath>Defs/PawnKindDef[defName="RW_Vault_Grenadier_EMP"]</xpath>
        <value>
          <li Class="CombatExtended.LoadoutPropertiesExtension">
            <primaryMagazineCount>
              <min>10</min>
              <max>30</max>
            </primaryMagazineCount>
            <forcedSidearm>
              <sidearmMoney>
                <min>100</min>
                <max>250</max>
              </sidearmMoney>
              <weaponTags>
                <li>CE_Sidearm</li>
              </weaponTags>
            <magazineCount>
              <min>2</min>
              <max>5</max>
            </magazineCount>          
            </forcedSidearm>
          </li>
        </value>
      </li>

      <li Class="PatchOperationReplace">
        <xpath>Defs/PawnKindDef[defName="RW_Vault_Grenadier_EMP"]/label</xpath>
        <value>
          <label>vault advanced grenadier</label>
        </value>
      </li>

      <li Class="PatchOperationAdd">
        <xpath>Defs/PawnKindDef[defName="RW_Vault_Grenadier_EMP"]/weaponTags</xpath>
        <value>
          <li>CE_GrenadeFlashbang</li>
          <li>GrenadeSmoke</li>
          <li>GrenadeDestructive</li>	
        </value>
      </li>

      <li Class="PatchOperationAddModExtension">

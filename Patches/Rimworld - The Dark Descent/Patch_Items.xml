<?xml version="1.0" encoding="utf-8" ?>

<Patch>
	<Operation Class="PatchOperationFindMod">
			<mods>
				<li>RimWorld - The Dark Descent</li>
			</mods>
		<match Class="PatchOperationSequence">
		<operations>
		
		<li Class="PatchOperationAdd">
			<xpath>Defs/ThingDef[defName = "DarkDescent_Orb"]/statBases</xpath>
			<value>
				<Bulk>1.5</Bulk>
			</value>
		</li>

		<li Class="PatchOperationAdd">
			<xpath>Defs/ThingDef[defName = "DarkDescent_Vitae" or defName = "DarkDescent_Orgone"]/statBases</xpath>
			<value>
				<Bulk>0.5</Bulk>
			</value>
		</li>

		<li Class="PatchOperationAdd">
			<xpath>Defs/ThingDef[@Name = "DarkDescent_InactiveBase"]/statBases</xpath>
			<value>
				<Bulk>10</Bulk>
			</value>
		</li>

		</operations>
		</match>
	</Operation>
</Patch>

      <description>Craft 500 6.5x21mm caseless (FMJ) cartridges.</description>
      <jobString>Making 6.5x21mm caseless (FMJ) cartridges.</jobString>
      <ingredients>
        <li>
          <filter>
            <thingDefs>
              <li>Steel</li>
            </thingDefs>
          </filter>
          <count>8</count>
        </li>
      </ingredients>
      <fixedIngredientFilter>
        <thingDefs>
          <li>Steel</li>
        </thingDefs>
      </fixedIngredientFilter>
      <products>
        <Ammo_65x21mmCaseless_FMJ>500</Ammo_65x21mmCaseless_FMJ>

<?xml version="1.0" encoding="utf-8"?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Lemolim Race</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				<!-- Tribal Pawns-->
				<li Class="PatchOperationAdd">
					<xpath>Defs/PawnKindDef[ @Name="LemolimTribalBase" or defName="LemolimTribal"]</xpath>
					<value>
						<apparelRequired>
							<li>CE_Apparel_TribalBackpack</li>
						</apparelRequired>
					</value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>Defs/PawnKindDef[ @Name="LemolimTribalBase"]/invNutrition</xpath>
					<value>
						<invNutrition>1.8</invNutrition>
					</value>
				</li>
				<li Class="PatchOperationAddModExtension">
					<xpath>Defs/PawnKindDef[ defName="LemolimTribal_Archer" or defName="LemolimTribal_Hunter" or defName="LemolimTribal_HeavyArcher" or defName="LemolimTribal_ChiefRanged"]</xpath>
					<value>
						<li Class="CombatExtended.LoadoutPropertiesExtension">
							<primaryMagazineCount>
								<min>15</min>
								<max>30</max>
							</primaryMagazineCount>
							<forcedSidearm>
								<sidearmMoney>
									<min>500</min>
									<max>700</max>
								</sidearmMoney>
								<weaponTags>
									<li>CE_Sidearm_Tribal</li>
								</weaponTags>
							</forcedSidearm>
						</li>
					</value>
				</li>

				<!-- Pirate Pawns -->
				<li Class="PatchOperationAdd">
					<xpath>Defs/PawnKindDef[ @Name="LemolimPirateBase" or @Name="LemolimMercenaryBase" or defName="LemolimColonist"]</xpath>
					<value>
						<apparelRequired>
							<li>CE_Apparel_Backpack</li>
						</apparelRequired>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/PawnKindDef[defName="LemolimPirate_Renegade"]/weaponMoney</xpath>
					<value>
						<weaponMoney>
							<min>147</min>
							<max>250</max>
						</weaponMoney>
					</value>
				</li>

				<li Class="PatchOperationAddModExtension">
					<xpath>Defs/PawnKindDef[ defName="LemolimPirate_Scavenger" or defName="LemolimPirate_Conscript"]</xpath>
					<value>
						<li Class="CombatExtended.LoadoutPropertiesExtension">
							<primaryMagazineCount>
								<min>2</min>
								<max>3</max>
							</primaryMagazineCount>
							<forcedSidearm>
								<sidearmMoney>
									<min>50</min>
									<max>120</max>
								</sidearmMoney>
								<weaponTags>
									<li>MedievalMeleeBasic</li>
								</weaponTags>
							</forcedSidearm>
						</li>
					</value>
				</li>

				<li Class="PatchOperationAddModExtension">
					<xpath>Defs/PawnKindDef[ defName="LemolimPirate_Scavenger" or defName="LemolimPirate_Conscript"]</xpath>
					<value>
						<li Class="CombatExtended.LoadoutPropertiesExtension">
							<primaryMagazineCount>
								<min>2</min>
								<max>3</max>
							</primaryMagazineCount>
							<forcedSidearm>
								<sidearmMoney>
									<min>50</min>
									<max>120</max>
								</sidearmMoney>
								<weaponTags>
									<li>MedievalMeleeBasic</li>
								</weaponTags>
							</forcedSidearm>
						</li>
					</value>
				</li>

				<li Class="PatchOperationAdd">
					<xpath>Defs/PawnKindDef[defName="LemolimPirate_Captain"]/weaponTags</xpath>
					<value>
						<li>SpacerGun</li>
					</value>
				</li>
				<li Class="PatchOperationAddModExtension">
					<xpath>Defs/PawnKindDef[ defName="LemolimPirate_Captain"]</xpath>
					<value>
						<li Class="CombatExtended.LoadoutPropertiesExtension">
							<primaryMagazineCount>
								<min>3</min>
								<max>4</max>
							</primaryMagazineCount>
							<forcedSidearm>
								<sidearmMoney>
									<min>150</min>
									<max>320</max>
								</sidearmMoney>
								<weaponTags>
									<li>CE_Sidearm_Melee</li>
								</weaponTags>
							</forcedSidearm>
						</li>
					</value>
				</li>

				<!-- Mercenaries Pawnkinds -->

				<li Class="PatchOperationAddModExtension">
					<xpath>Defs/PawnKindDef[ defName="LemolimMercenary_Zapper"]</xpath>
					<value>
						<li Class="CombatExtended.LoadoutPropertiesExtension">
							<primaryMagazineCount>
								<min>10</min>
								<max>15</max>
							</primaryMagazineCount>
							<forcedSidearm>
								<sidearmMoney>
									<min>150</min>
									<max>320</max>
								</sidearmMoney>
								<weaponTags>
									<li>CE_Sidearm_Melee</li>
								</weaponTags>
							</forcedSidearm>
						</li>
					</value>
				</li>

				<li Class="PatchOperationAddModExtension">
					<xpath>Defs/PawnKindDef[ defName="LemolimMercenary_ZapperEmp"]</xpath>
					<value>
						<li Class="CombatExtended.LoadoutPropertiesExtension">
							<primaryMagazineCount>
								<min>10</min>
								<max>15</max>
							</primaryMagazineCount>
							<forcedSidearm>
								<sidearmMoney>
									<min>100</min>
									<max>250</max>
								</sidearmMoney>
								<weaponTags>
									<li>CE_Sidearm</li>
								</weaponTags>
								<magazineCount>
									<min>2</min>
									<max>5</max>
								</magazineCount>
							</forcedSidearm>
						</li>
					</value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>Defs/PawnKindDef[defName="LemolimMercenary_ZapperEmp"]/label</xpath>
					<value>
						<label>advanced grenadier</label>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>Defs/PawnKindDef[defName="LemolimMercenary_ZapperEmp"]/weaponTags</xpath>
					<value>
						<li>CE_GrenadeFlashbang</li>
						<li>GrenadeSmoke</li>
						<li>GrenadeDestructive</li>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/PawnKindDef[defName="LemolimMercenary_ZapperEmp"]/combatPower</xpath>
					<value>
						<combatPower>85</combatPower>
					</value>
				</li>

				<li Class="PatchOperationAddModExtension">
					<xpath>Defs/PawnKindDef[ defName="LemolimMercenary_Hitman" or defName="LemolimMercenary_Shocktrooper"]</xpath>
					<value>
						<li Class="CombatExtended.LoadoutPropertiesExtension">
							<primaryMagazineCount>
								<min>3</min>
								<max>4</max>
							</primaryMagazineCount>
							<forcedSidearm>
								<sidearmMoney>
									<min>250</min>
									<max>420</max>
								</sidearmMoney>
								<weaponTags>
									<li>CE_Sidearm_Melee</li>
								</weaponTags>
							</forcedSidearm>
						</li>
					</value>
				</li>

				<li Class="PatchOperationAddModExtension">
					<xpath>Defs/PawnKindDef[ defName="LemolimMercenary_Headhunter"]</xpath>
					<value>
						<li Class="CombatExtended.LoadoutPropertiesExtension">
							<primaryMagazineCount>
								<min>1</min>
								<max>3</max>
							</primaryMagazineCount>
							<forcedSidearm>
								<sidearmMoney>
									<min>200</min>
									<max>450</max>
								</sidearmMoney>
								<weaponTags>
									<li>CE_Sidearm</li>
								</weaponTags>
								<magazineCount>
									<min>2</min>
									<max>4</max>
								</magazineCount>
							</forcedSidearm>
						</li>
					</value>
				</li>
			</operations>
		</match>
	</Operation>
</Patch>
				  </li>
				</value>
			</li>
			<li Class="PatchOperationAddModExtension">
				<xpath>/Defs/PawnKindDef[defName="O21_ElfBaseTribalPawnKind"]</xpath>
				<value>
				  <li Class="CombatExtended.LoadoutPropertiesExtension">
					<primaryMagazineCount>
					  <min>3</min>
					  <max>5</max>
					</primaryMagazineCount>
				  </li>
				</value>
			</li>
		</operations>

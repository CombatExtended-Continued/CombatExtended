<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Simple Ogre Race</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>

				<!--Bahlrin -->
				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="FP_OGRE_Leather"]/statBases/StuffPower_Armor_Sharp</xpath>
					<value>
						<StuffPower_Armor_Sharp>0.08</StuffPower_Armor_Sharp>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="FP_OGRE_Leather"]/statBases/StuffPower_Armor_Blunt</xpath>
					<value>
						<StuffPower_Armor_Blunt>0.04</StuffPower_Armor_Blunt>
					</value>
				</li>
				
				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="FP_OGRE_Leather"]/statBases/StuffPower_Armor_Heat</xpath>
					<value>
						<StuffPower_Armor_Heat>0.01</StuffPower_Armor_Heat>
					</value>
				</li>

			</operations>
		</match>
	</Operation>
</Patch>

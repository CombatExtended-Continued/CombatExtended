<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
		<li>MorrowRim</li>
		</mods>

		<match Class="PatchOperationSequence">
			<operations>

<li Class="PatchOperationAddModExtension">
<xpath>/Defs/ThingDef[defName="Apparel_GasMask"]</xpath>
<value>
<li Class="MorrowRim.ExtendedRaceProperties">
<ashResistant>Resistant</ashResistant>
</li>
</value>
</li>

<li Class="PatchOperationAddModExtension">
<xpath>/Defs/ThingDef[defName="Apparel_ImprovGasMask"]</xpath>
<value>
<li Class="MorrowRim.ExtendedRaceProperties">
<ashResistant>Resistant</ashResistant>
</li>
</value>
</li>

				<li Class="PatchOperationReplace">
					<xpath>/Defs/HediffDef[defName="MorrowRim_AshInEyes"]/stages/li/partEfficiencyOffset</xpath>
					<value>
							<partEfficiencyOffset>-0.5</partEfficiencyOffset>
					</value>
				</li>

			</operations>
		</match>
	</Operation>
</Patch>

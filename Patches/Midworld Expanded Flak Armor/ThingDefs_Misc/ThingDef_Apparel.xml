<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <Operation Class="PatchOperationSequence">
	<operations>
	  <li Class="PatchOperationFindMod">
			
		<mods><li>Midworld Expanded: Flak Armor</li></mods>
			
		<match Class="PatchOperationSequence">
		<operations>
		
			<!--Bulk/Mass-->
			
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="Apparel_FlakGloves" or
				defName="Apparel_FlakBoots" or
				defName="Apparel_FlakMask"
				]/statBases/Mass</xpath>
				<value>
					<Mass>0.50</Mass>
					<Bulk>3</Bulk>
					<WornBulk>2</WornBulk>
				</value>
			</li>
			
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[
				defName="FlakShirt"
				]/statBases/Mass</xpath>
				<value>
					<Mass>1.2</Mass>
					<Bulk>5</Bulk>
					<WornBulk>3</WornBulk>
				</value>
			</li>
			
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[
				defName="LightFlakVest"
				]/statBases/Mass</xpath>
				<value>
					<Mass>6.25</Mass>
					<Bulk>5</Bulk>
					<WornBulk>3</WornBulk>
				</value>
			</li>
			
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[
				defName="LightFlakVest"
				]/statBases/MaxHitPoints</xpath>
				<value>
					<MaxHitPoints>100</MaxHitPoints>
				</value>
			</li>
			
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[
				defName="HeavyFlakSuit"
				]/statBases/Mass</xpath>
				<value>
					<Mass>17.5</Mass>
					<Bulk>60</Bulk>
					<WornBulk>14</WornBulk>
				</value>
			</li>
			
			<!--Armor Values-->
			
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="Apparel_FlakGloves" or
				defName="Apparel_FlakBoots" or
				defName="Apparel_FlakMask"
				]/statBases/ArmorRating_Sharp</xpath>
				<value>
					<StuffEffectMultiplierArmor>4</StuffEffectMultiplierArmor>
					<ArmorRating_Sharp>2</ArmorRating_Sharp>
				</value>
			</li>
			
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[
				defName="FlakShirt"
				]/statBases/ArmorRating_Sharp</xpath>
				<value>
					<StuffEffectMultiplierArmor>1</StuffEffectMultiplierArmor>
					<ArmorRating_Sharp>0.5</ArmorRating_Sharp>
				</value>
			</li>
			
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="LightFlakVest"
				]/statBases/ArmorRating_Sharp</xpath>
				<value>
					<StuffEffectMultiplierArmor>4</StuffEffectMultiplierArmor>
				</value>
			</li>
			
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="HeavyFlakSuit"
				]/statBases/ArmorRating_Sharp</xpath>
				<value>
					<StuffEffectMultiplierArmor>7</StuffEffectMultiplierArmor>
					<ArmorRating_Sharp>5</ArmorRating_Sharp>
				</value>
			</li>
			
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="Apparel_FlakGloves" or
				defName="Apparel_FlakBoots" or
				defName="Apparel_FlakMask" or
				defName="FlakShirt"
				]/statBases/ArmorRating_Blunt</xpath>
				<value>
					<ArmorRating_Blunt>1</ArmorRating_Blunt>
				</value>
			</li>
			
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="HeavyFlakSuit"
				]/statBases/ArmorRating_Blunt</xpath>
				<value>
					<ArmorRating_Blunt>7.5</ArmorRating_Blunt>
				</value>
			</li>
			
			<li Class="PatchOperationRemove">
				<xpath>Defs/ThingDef[defName="LightFlakVest"
				]/statBases/ArmorRating_Blunt</xpath>
			</li>
			
			<li Class="PatchOperationRemove">
				<xpath>Defs/ThingDef[defName="Apparel_FlakGloves" or
				defName="Apparel_FlakBoots" or
				defName="Apparel_FlakMask" or
				defName="FlakShirt" or
				defName="LightFlakVest" or
				defName="HeavyFlakSuit"
				]/statBases/ArmorRating_Heat</xpath>
			</li>
			
			<!--Costs-->
			
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="Apparel_FlakGloves" or
				defName="Apparel_FlakBoots" or
				defName="FlakShirt"
				]/costList</xpath>
				<value>
					<costList>
						<Steel>15</Steel>
					</costList>
					<stuffCategories>
						<li>Fabric</li>
					</stuffCategories>
					<costStuffCount>35</costStuffCount>
				</value>
			</li>
			
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[
				defName="Apparel_FlakMask"
				]/costList</xpath>
				<value>
					<costList>
						<Plasteel>15</Plasteel>
					</costList>
					<stuffCategories>
						<li>Fabric</li>
					</stuffCategories>
					<costStuffCount>35</costStuffCount>
				</value>
			</li>
			
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="LightFlakVest"
				]/costList</xpath>
				<value>
					<costList>
						<Cloth>20</Cloth>
					</costList>
					<stuffCategories>
						<li>Steeled</li>
					</stuffCategories>
					<costStuffCount>45</costStuffCount>
				</value>
			</li>
			
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="HeavyFlakSuit"
				]/costList</xpath>
				<value>
					<costList>
						<Steel>120</Steel>
					</costList>
					<stuffCategories>
						<li>Fabric</li>
					</stuffCategories>
					<costStuffCount>100</costStuffCount>
				</value>
			</li>
			
			<!--Layer-->
			
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="Apparel_FlakMask"
				]/apparel/layers/li[.="Overhead"]</xpath>
				<value>
					<li>MiddleHead</li>
				</value>
			</li>
			
		</operations>
		</match>	
	  </li>
	</operations>	
  </Operation>
</Patch>
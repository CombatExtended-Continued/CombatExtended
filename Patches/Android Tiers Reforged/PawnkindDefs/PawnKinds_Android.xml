										<min>2</min>
										<max>3</max>
									</primaryMagazineCount>
									<sidearms>
										<li>
											<generateChance>0.5</generateChance>
											<sidearmMoney>
												<min>20</min>
												<max>120</max>
											</sidearmMoney>
											<weaponTags>
												<li>CE_Sidearm_Melee</li>

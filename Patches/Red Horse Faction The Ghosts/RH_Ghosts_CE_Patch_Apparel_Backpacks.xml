<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
		<li>[RH] Faction: The Ghosts</li>
		</mods>
		<match Class="PatchOperationSequence">
		<operations>

			<!-- ========== Backpack tactical sling black ========== -->

			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="RNApparel_Backpack_Tactical_SlingBlack"]/statBases</xpath>
				<value>
					<Bulk>3</Bulk>
				</value>
			</li>

			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="RNApparel_Backpack_Tactical_SlingBlack"]/equippedStatOffsets</xpath>
				<value>
					<CarryBulk>15</CarryBulk>
				</value>
			</li>

			<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="RNApparel_Backpack_Tactical_SlingBlack"]/apparel
					</xpath>
					<value>
						<apparel>
							<careIfWornByCorpse>false</careIfWornByCorpse>
							<bodyPartGroups>
								<li>Shoulders</li>
							</bodyPartGroups>
							<layers>
								<li>Backpack</li>
							</layers>
							<tags>
								<li>RH_Backpack_SlingBlack</li>
							</tags>
							<defaultOutfitTags>
								<li>Soldier</li>
							</defaultOutfitTags>
							<wornGraphicPath>Things/Apparel/Belt/Tactical_SlingBackpack_Black</wornGraphicPath>
						</apparel>
					</value>
				</li>

		</operations>
		</match>
	</Operation>
</Patch>